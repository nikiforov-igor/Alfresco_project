    </bean>

    <bean name="arm.filters.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.filters.shared.cache"/>
    </bean>

    <bean name="arm.filters.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.filters.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.filters"/>
    </bean>

    <bean name="arm.accordions.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.accordions.shared.cache"/>
    </bean>

    <bean name="arm.accordions.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.accordions.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.accordions"/>
    </bean>

    <bean name="arm.properties.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.properties.shared.cache"/>
    </bean>

    <bean name="arm.properties.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.properties.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.properties"/>
    </bean>

    <bean name="arm.parents.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
