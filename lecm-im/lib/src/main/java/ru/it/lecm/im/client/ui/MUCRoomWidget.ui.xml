<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:iJab="urn:import:ru.it.lecm.im.client.ui">
	<g:FlowPanel styleName="ijab-mainwidget" ui:field="mainWidget">
		<g:HTMLPanel ui:field="info"><span ui:field="disText">Disconnected</span></g:HTMLPanel>
		<iJab:FocusFlowPanel styleName="ijab-roomlist-widget" ui:field="listWidget"></iJab:FocusFlowPanel>
		<g:FlowPanel ui:field="toolBar" styleName="ijab-mainwidget-toolbar ijab-mucroomwidget-toolbar">
			<g:Anchor ui:field="refreshButton" styleName="ijab-toolbutton ijab-muctoolbar-button" title="Refresh">
				<span class="button_icon ui-icon-refresh">r</span>
				<span ui:field="refreshButtonText">Refresh</span>
			</g:Anchor>
			<g:Anchor ui:field="createButton" styleName="ijab-toolbutton ijab-muctoolbar-button" title="Create Room">
				<span class="button_icon ui-icon-plusthick">+</span>
				<span ui:field="createButtonText">Create Room</span>
			</g:Anchor>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 