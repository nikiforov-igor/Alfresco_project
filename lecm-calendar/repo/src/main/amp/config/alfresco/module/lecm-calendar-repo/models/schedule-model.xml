<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-sched:schedule-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Calendar Data Model</description>
	<author>Vsevolod Levin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Import Org Structure Model Definitions -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/work-calendar/schedule/1.0" prefix="lecm-sched"/>
	</namespaces>

	<types>
		<!--  График работы сотрудника или подразделения -->
		<type name="lecm-sched:schedule">
			<title>Schedule for employee or structure</title>
			<parent>cm:folder</parent>
			<properties>
				<!-- Атрибуты для поиска и сортировки -->
				<property name="lecm-sched:sched-employee-link-assoc-text-content">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-sched:sched-employee-link-assoc-assoc-ref">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>

				<!-- Тип расписания: обычный или особый. Обычный - согласно трудовому календарю. Все остальное - особый. -->
				<property name="lecm-sched:type">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<default>COMMON</default>
					<constraints>
						<constraint name="lecm-sched:schedule-types-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>COMMON</value>
									<value>SPECIAL</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<!-- Начало работы по обычному графику. -->
				<property name="lecm-sched:std-begin">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- Конец работы по обычному графику. -->
				<property name="lecm-sched:std-end">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- Срок действия для особого расписания. -->
				<property name="lecm-sched:time-limit-start">
					<type>d:date</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-sched:time-limit-end">
					<type>d:date</type>
					<mandatory>false</mandatory>
				</property>
			</properties>
			<associations>
				<!-- Сотрудник/подразделение, работающий по данному графику. -->
				<association name="lecm-sched:sched-employee-link-assoc">
					<!-- Сотрудник/подразделение может работать только по одному графику. -->
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<!-- График может "висеть в воздухе", если он помечен как удаленный. -->
					<target>
						<class>cm:cmobject</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
		<type name="lecm-sched:special-sched-element">
			<title>Elements for non-standart schedule</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-sched:begin">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-sched:end">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-sched:comment">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
	</types>
</model>