<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config evaluator="model-type" condition="lecmWorkflowRoutes:route">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:title"/>
					<show id="cm:description"/>
					<show id="lecmApproveAspects:approvalState"/>
				</field-visibility>
			</form>
			<form id="selectRouteForm">
				<field-visibility>
					<show id="lecmWorkflowRoutes:selectRouteAssocFake" force="true"/>
					<show id="lecmWorkflowRoutes:hackSelectRouteAssocFake" force="true"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:selectRouteAssocFake" label="Маршрут">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_маршрутов</control-param>
							<control-param name="nameSubstituteString">{cm:title}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="employeeAbsenceMarker">false</control-param>
							<control-param name="endpointMany">false</control-param>
							<control-param name="itemType">lecmWorkflowRoutes:route</control-param>
							<control-param name="showAssocViewForm">true</control-param>
							<control-param name="lazyLoading">true</control-param>
						</control>
					</field>
					<field id="lecmWorkflowRoutes:hackSelectRouteAssocFake">
						<control template="/ru/it/lecm/workflow/routes/controls/hack-routes-select-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecmWorkflowRoutes:route">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:title"/>
					<show id="cm:description"/>
					<show id="lecmWorkflowRoutes:routeOrganizationUnitAssoc" for-mode="edit"/>
					<show id="lecmWorkflowRoutes:routeAvailabilityCondition" for-mode="edit"/>
					<show id="lecmWorkflowRoutes:routeInterruptAfterReject"/>
					<show id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision"/>
					<show id="lecmWorkflowRoutes:routeEditable"/>
					<show id="lecmWorkflowRoutes:stagesControlFake" force="true" />
				</field-visibility>
				<appearance>
					<set id="availability" appearance="bordered-panel" label="Доступность для выбора"/>
					<set id="params" appearance="bordered-panel" label="Параметры обработки маршрута"/>
					<set id="stages" appearance="bordered-panel" label="Этапы"/>
					<field id="cm:title" mandatory="true">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="cm:description">
						<control template="/ru/it/lecm/base-share/components/controls/textarea.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeOrganizationUnitAssoc" set="availability">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="plane">false</control-param>
							<control-param name="showSearch">false</control-param>
							<control-param name="showSelectedItemsPath">false</control-param>
							<control-param name="treeItemType">lecm-orgstr:organization-unit</control-param>
							<control-param name="checkType">false</control-param>
						</control>
					</field>
					<field id="lecmWorkflowRoutes:routeAvailabilityCondition" set="availability">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeInterruptAfterReject" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeEditable" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:stagesControlFake" set="stages">
						<control template="/ru/it/lecm/workflow/routes/controls/stages-control.ftl"/>
					</field>
				</appearance>
			</form>
			<form id="editIterationProperties">
				<field-visibility>
					<show id="lecmWorkflowRoutes:routeInterruptAfterReject"/>
					<show id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:routeInterruptAfterReject">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
				</appearance>
			</form>
			<form id="createNewRouteForm">
				<field-visibility>
					<show id="cm:title"/>
					<show id="cm:description"/>
					<show id="lecmWorkflowRoutes:routeOrganizationUnitAssoc"/>
					<show id="lecmWorkflowRoutes:routeAvailabilityCondition"/>
					<show id="lecmWorkflowRoutes:routeInterruptAfterReject"/>
					<show id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision"/>
					<show id="lecmWorkflowRoutes:routeEditable"/>
					<show id="lecmWorkflowRoutes:stagesControlFake" force="true"/>
				</field-visibility>
				<appearance>
					<set id="availability" appearance="bordered-panel" label="Доступность для выбора"/>
					<set id="params" appearance="bordered-panel" label="Параметры обработки маршрута"/>
					<set id="stages" appearance="bordered-panel" label="Этапы"/>
					<field id="cm:title" mandatory="true">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="cm:description">
						<control template="/ru/it/lecm/base-share/components/controls/textarea.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeOrganizationUnitAssoc" set="availability">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="plane">false</control-param>
							<control-param name="showSearch">false</control-param>
							<control-param name="showSelectedItemsPath">false</control-param>
							<control-param name="treeItemType">lecm-orgstr:organization-unit</control-param>
							<control-param name="checkType">false</control-param>
						</control>
					</field>
					<field id="lecmWorkflowRoutes:routeAvailabilityCondition" set="availability">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeInterruptAfterReject" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeNotifyAboutEveryDecision" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:routeEditable" set="params">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:stagesControlFake" set="stages">
						<control template="/ru/it/lecm/workflow/routes/controls/stages-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecmWorkflowRoutes:stage">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecmWorkflowRoutes:stageWorkflowType"/>
					<show id="lecmApproveAspects:approvalState"/>
					<show id="lecmWorkflowRoutes:stageWorkflowTerm"/>
				</field-visibility>
				<appearance>
					<field id="cm:title" label="Этап"/>
					<field id="lecmApproveAspects:approvalState" label="Статус"/>
				</appearance>
			</form>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecmWorkflowRoutes:stage">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:title" force="true"/>
					<show id="lecmWorkflowRoutes:stageWorkflowType"/>
					<show id="lecmWorkflowRoutes:stageWorkflowTerm"/>
				</field-visibility>
				<appearance>
					<field id="cm:title" mandatory="true" label="Название этапа">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:stageWorkflowType">
						<control template="/ru/it/lecm/base-share/components/controls/selectone.ftl"/>
					</field>
					<field id="lecmWorkflowRoutes:stageWorkflowTerm">
						<control template="/ru/it/lecm/base-share/components/controls/textfield-with-default-value.ftl">
							<control-param name="defaultValueDataSource">/lecm/approval/defaultTerm</control-param>
							<control-param name="allowInNonCreateMode">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecmWorkflowRoutes:stageItem">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="lecmWorkflowRoutes:stageItemEmployeeOrMacrosAssocFake" force="true"/>
					<show id="lecmWorkflowRoutes:stageItemEmployeePositionFake" force="true"/>
					<show id="lecmWorkflowRoutes:stageItemTerm"/>
					<show id="lecmApproveAspects:approvalState"/>
					<show id="lecmApproveAspects:approvalDecision"/>
					<show id="lecmApproveAspects:hasComment"/>
					<show id="lecmWorkflowRoutes:stageItemEmployeeAssoc"/>
					<show id="lecmWorkflowRoutes:stageItemMacrosAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:stageItemEmployeeOrMacrosAssocFake" label="Участник"
						   substituteString="{lecmWorkflowRoutes:stageItemEmployeeAssoc/lecm-orgstr:employee-short-name} {lecmWorkflowRoutes:stageItemMacrosAssoc/cm:name}"/>
					<field id="lecmWorkflowRoutes:stageItemEmployeePositionFake" label="Должность"
						   substituteString="{lecmWorkflowRoutes:stageItemEmployeeAssoc/..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name}"/>
					<field id="lecmApproveAspects:approvalState" label="Статус"/>
				</appearance>
			</form>
			<form id="createNewStageItemForEmployee">
				<field-visibility>
					<show id="lecmWorkflowRoutes:stageItemEmployeeAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:stageItemEmployeeAssoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
							<control-param name="endpointMany">true</control-param>
							<control-param name="useStrictFilterByOrg">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="createNewStageItemForMacros">
				<field-visibility>
					<show id="lecmWorkflowRoutes:stageItemMacrosAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:stageItemMacrosAssoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Макросы_x0020_участников_x0020_маршрута</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="employeeAbsenceMarker">false</control-param>
							<control-param name="endpointMany">true</control-param>
							<control-param name="useStrictFilterByOrg">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecmWorkflowRoutes:stageItem">
		<forms>
			<form>
				<field-visibility>
					<show id="lecmWorkflowRoutes:stageItemEmployeeOrMacrosAssocFake" force="true"/>
					<show id="lecmWorkflowRoutes:stageItemTerm"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutes:stageItemEmployeeOrMacrosAssocFake" label="Сотрудник">
						<control template="/ru/it/lecm/base-share/components/controls/substitude-control.ftl">
							<control-param name="formatString">{lecmWorkflowRoutes:stageItemEmployeeAssoc/lecm-orgstr:employee-short-name}{lecmWorkflowRoutes:stageItemMacrosAssoc/cm:name}</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="viewApprovalResult">
				<field-visibility>
					<show id="lecmWorkflowRoutes:stageItemEmployeeAssoc"/>
					<show id="lecmWorkflowRoutes:stageItemCompleteDate"/>
					<show id="lecmApproveAspects:approvalDecision"/>
					<show id="lecmWorkflowRoutes:stageItemComment"/>
					<show id="cm:contains" force="true"/>
				</field-visibility>
				<appearance>
					<field id="lecmApproveAspects:approvalDecision">
						<control template="/ru/it/lecm/base-share/components/controls/selectone.ftl"/>

					</field>
					<field id="lecmWorkflowRoutes:stageItemComment">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
					<field id="cm:contains" label="Файл с примечаниями">
						<control template="/ru/it/lecm/base-share/components/controls/view-file-link.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
