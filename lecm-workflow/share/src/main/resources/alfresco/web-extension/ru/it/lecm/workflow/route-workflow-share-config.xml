<alfresco-config>
	<config evaluator="string-compare" condition="activiti$lecmRoute">
		<forms>
			<form>
				<field-visibility>
					<show id="message" force="true"/>
					<show id="assoc_lecmRoute_routeRef" force="true"/>
					<show id="packageItems"/>
				</field-visibility>
				<appearance>
					<field id="message">
						<control template="/ru/it/lecm/base-share/components/controls/message-control.ftl">
							<control-param name="msg">ru.it.lecm.workflow.route.message</control-param>
						</control>
					</field>
					<field id="assoc_lecmRoute_routeRef" label-id="ru.it.lecm.workflow.route.label">
						<control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Бизнес_x0020_процессов</control-param>
							<!--<control-param name="nameSubstituteString">{lecm-absence:code} - {cm:name}</control-param>-->
							<control-param name="notSelectedOptionShow">true</control-param>
							<control-param name="notSelectedOptionLabel"> </control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="endpointType">lecm-workflow:route</control-param>
						</control>
					</field>
					<field id="packageItems">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>