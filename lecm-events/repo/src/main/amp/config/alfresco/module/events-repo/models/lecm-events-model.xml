<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-events:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Мероприятия</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <import uri="http://www.it.ru/logicECM/events/dictionaries/1.0" prefix="lecm-events-dic"/>
        <import uri="http://www.it.ru/logicECM/events/table-structure/1.0" prefix="lecm-events-ts"/>
        <import uri="http://www.it.ru/lecm/contractors/model/representative/1.0" prefix="lecm-representative"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/1.0" prefix="lecm-doc-dic"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/events/1.0" prefix="lecm-events"/>
    </namespaces>

    <constraints>
        <constraint name="lecm-events:present-string-constraint" type="ru.it.lecm.documents.constraints.PresentStringConstraint">
            <parameter name="presentString">
                <value><![CDATA[{lecm-events:title}]]></value>
            </parameter>
        </constraint>
        <constraint name="lecm-events:attachment-categories" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Вложения|ATTACHMENTS</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="lecm-events:author-property-constraint" type="ru.it.lecm.documents.constraints.AuthorPropertyConstraint">
            <parameter name="authorProperty">
                <value>lecm-document:creator-ref</value>
            </parameter>
        </constraint>
        <constraint name="lecm-events:arm-url-constraint" type="ru.it.lecm.documents.constraints.ArmUrlConstraint">
            <parameter name="armUrl">
                <value>arm?code=SED</value>
            </parameter>
        </constraint>
        <constraint name="lecm-events:document-url-constraint" type="ru.it.lecm.documents.constraints.DocumentUrlConstraint">
            <parameter name="createUrl">
                <value>event-create</value>
            </parameter>
            <parameter name="viewUrl">
                <value>event</value>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="lecm-events:document">
            <title>Logic Ecm Events Document</title>
            <parent>lecm-document:base</parent>
            <properties>
                <!-- Заголовок -->
                <property name="lecm-events:title">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!-- Дата начала мероприятия -->
                <property name="lecm-events:from-date">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Дата окончания мероприятия-->
                <property name="lecm-events:to-date">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Весмь день-->
                <property name="lecm-events:all-day">
                    <type>d:boolean</type>
                </property>
                <!-- Описание -->
                <property name="lecm-events:description">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Повторяется-->
                <property name="lecm-events:repeatable">
                    <type>d:boolean</type>
                </property>
                <!-- Дата начала периода -->
                <property name="lecm-events:repeatable-start-period">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!-- Дата окончания периода -->
                <property name="lecm-events:repeatable-end-period">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!-- Правила -->
                <property name="lecm-events:repeatable-rule">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Является повторным-->
                <property name="lecm-events:is-repeated">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>

                <!--На подтверждение ресурсов-->
                <property name="lecm-events:on-resource-confirmation">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>

                <!--Не рассылать приглашения-->
                <property name="lecm-events:not-send-invitation">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>

                <property name="lecm-events:temp-members-assoc-json">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>

                <property name="lecm-events:location-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:location-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:subject-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:subject-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:invited-members-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:invited-members-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:temp-members-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:temp-members-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:old-members-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:old-members-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:repeated-events-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:repeated-events-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:removed">
                    <type>d:boolean</type>
                    <default>false</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:initiator-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-events:initiator-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events:temp-resources-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
				
                <property name="lecm-events:send-notifications">
                    <type>d:boolean</type>
					<default>true</default>
                </property>
                <property name="lecm-events:show-in-calendar">
                    <type>d:boolean</type>
					<default>true</default>
                </property>
                <property name="lecm-events:ical-next-sequence">
                    <type>d:int</type>
					<default>1</default>
                </property>
            </properties>
            <associations>
                <!--Место проведения-->
                <association name="lecm-events:location-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-events-dic:locations</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Приглашенные -->
                <association name="lecm-events:invited-members-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-representative:representative-type</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <!--Инициатор-->
                <association name="lecm-events:initiator-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Тематика -->
                <association name="lecm-events:subject-assoc">
                    <title>Тематика</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-dic:subjects</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>

                <!--Участники на форме создания-->
                <association name="lecm-events:temp-members-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <!--Ресурсы на форме создания-->
                <association name="lecm-events:temp-resources-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-events-dic:resources</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <!--Старые участники-->
                <association name="lecm-events:old-members-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>

                <!--Следующее повторное мероприятие-->
                <association name="lecm-events:next-repeated-event-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-events:document</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!--Созданные мероприятия, на основе данного-->
                <association name="lecm-events:repeated-events-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-events:document</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
            <mandatory-aspects>
                <aspect>lecm-events-ts:members-table-aspect</aspect>
                <aspect>lecm-events-ts:resources-table-aspect</aspect>
            </mandatory-aspects>
        </type>
    </types>
</model>