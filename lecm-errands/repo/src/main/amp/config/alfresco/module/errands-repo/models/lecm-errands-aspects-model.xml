<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-errands-aspect:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Logic ECM errands aspects model</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/errands-aspects/1.0" prefix="lecm-errands-aspect"/>
    </namespaces>

    <aspects>
        <aspect name="lecm-errands-aspect:isCancelRequestedAspect">
            <properties>
                <property name="lecm-errands-aspect:isCancelRequested">
                    <type>d:boolean</type>
                </property>
            </properties>
        </aspect>
        <aspect name="lecm-errands-aspect:isDueDateChangeRequestedAspect">
            <properties>
                <property name="lecm-errands-aspect:isDueDateChangeRequested">
                    <type>d:boolean</type>
                </property>
            </properties>
        </aspect>
        <aspect name="lecm-errands-aspect:alreadyOnApprovalAspect">
            <properties>
                <property name="lecm-errands-aspect:alreadyOnApproval">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
            </properties>
            <associations>
                <association name="lecm-errands-aspect:approver-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
        <aspect name="lecm-errands-aspect:changeDueDateSignal">
            <properties>
                <property name="lecm-errands-aspect:duedate-shift-size">
                    <type>d:long</type>
                    <default>0</default>
                </property>
                <property name="lecm-errands-aspect:duedate-limitless">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <property name="lecm-errands-aspect:new-limitation-date">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <property name="lecm-errands-aspect:change-duedate-reason">
                    <type>d:text</type>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>