<beans>

    <bean id="${groupId}.${artifactId}.contractors-dictionary-bootstrap"
          parent="lecmDictionaryBootstrap"
          depends-on="${groupId}.${artifactId}.contractors-model-bootstrap,
                      businessJournalLogEventsPolicy,
                      contractorsPolicy,
                      contractorsSpecializationPolicy,
                      contractorsLegalFormPolicy,
                      contractorsLinkPolicy,
                      ru.it.lecm.business-journal.business-journal-repo.businessJournalDictionaryBootstrap" >
        <property name="dictionaries">
            <list>
                <value>alfresco/module/${artifactId}/models/dictionaries/contractor-dictionary.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/physical-person-dictionary.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/legalform-dictionary.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/representative-dictionary.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/specialization-dictionary.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/legalform-dictionary-items.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/lecm-contractors-roles-items.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/lecm-bussiness-journal-objectType-items.xml</value>
                <value>alfresco/module/${artifactId}/models/dictionaries/regions-dictionary.xml</value>
            </list>
        </property>
    </bean>

    <!-- Registration of contractor models -->
    <bean id="${groupId}.${artifactId}.contractors-model-bootstrap" parent="dictionaryModelBootstrap"
          depends-on="dictionaryBootstrap,
                      ru.it.lecm.dictionary.dictionary-repo.dictionary,
                      ru.it.lecm.orgstructure.orgstructure-repo.orgDictionaryBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/${artifactId}/models/contractor-model.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco/module/${artifactId}/messages/contractor</value>
            </list>
        </property>
    </bean>

    <bean id="contractorsBean" class="ru.it.lecm.contractors.ContractorsBean" parent="baseBean">
        <property name="dictionaryService" ref="serviceDictionary"/>
    </bean>

    <bean id="contractorsJavascriptExtension" class="ru.it.lecm.contractors.ContractorsJavascriptExtension" parent="baseScript">
        <property name="extensionName" value="contractorsRootObject"/>
        <property name="contractors" ref="contractorsBean"/>
    </bean>

    <bean id="contractorsSpecializationPolicy" class="ru.it.lecm.contractors.policies.ContractorsSpecializationPolicy" init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
    </bean>

    <bean id="contractorsLegalFormPolicy" class="ru.it.lecm.contractors.policies.ContractorsLegalFormPolicy" init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
    </bean>

    <bean id="contractorsLinkPolicy" class="ru.it.lecm.contractors.policies.ContractorsLinkPolicy" init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
    </bean>

    <bean id="physicalPersonPolicy" class="ru.it.lecm.contractors.policies.PhysicalPersonPolicy" parent="logicEcmAssociationPolicy" init-method="init">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
    </bean>

    <bean id="contractors.exportSettingsInitializer" parent="dictionary.exportSettingsInitializer" class="ru.it.lecm.dictionary.beans.ExportSettingsInitializerBean">
        <constructor-arg>
            <map>
                <entry key="lecm-contractor:link-representative-and-contractor">
                    <list>
                        <value>lecm-contractor:link-to-representative-association-is-primary</value>
                        <value>lecm-contractor:link-to-representative-association</value>
                    </list>
                </entry>
                <entry key="lecm-contractor:contractor-type">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-contractor:contractor-code</value>
                        <value>lecm-contractor:transactional-account</value>
                        <value>lecm-contractor:bankname</value>
                        <value>lecm-contractor:BIK</value>
                        <value>lecm-contractor:OGRN</value>
                        <value>lecm-contractor:OKVED</value>
                        <value>lecm-contractor:physical-address</value>
                        <value>lecm-contractor:OKOGU</value>
                        <value>lecm-contractor:comment</value>
                        <value>lecm-contractor:OKPO</value>
                        <value>lecm-contractor:fullname</value>
                        <value>lecm-contractor:bank-location</value>
                        <value>lecm-contractor:correspondent-account</value>
                        <value>lecm-contractor:email</value>
                        <value>lecm-contractor:INN</value>
                        <value>lecm-contractor:shortname</value>
                        <value>lecm-contractor:KPP</value>
                        <value>lecm-contractor:legal-address</value>
                        <value>lecm-contractor:phone</value>
                        <value>lecm-contractor:fax</value>
                        <value>lecm-contractor:contractor-to-link-association</value>
                        <value>lecm-contractor:contractor-to-specialization-association</value>
                        <value>lecm-contractor:contractor-to-legalform-association</value>
                    </list>
                </entry>
                <entry key="lecm-legalform:legalform-type">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-legalform:short-title</value>
                        <value>lecm-legalform:full-title</value>
                        <value>lecm-legalform:comment</value>
                    </list>
                </entry>
                <entry key="lecm-representative:representative-type">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-representative:commments</value>
                        <value>lecm-representative:firstname</value>
                        <value>lecm-representative:surname</value>
                        <value>lecm-representative:location</value>
                        <value>lecm-representative:rank</value>
                        <value>lecm-representative:fax</value>
                        <value>lecm-representative:email</value>
                        <value>lecm-representative:work-phone</value>
                        <value>lecm-representative:mobile-phone</value>
                        <value>lecm-representative:contacts</value>
                        <value>lecm-representative:middlename</value>
                    </list>
                </entry>
                <entry key="lecm-specialization:specialization-type">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-specialization:title</value>
                        <value>lecm-specialization:description</value>
                    </list>
                </entry>
                <entry key="lecm-contractor:region-type">
                    <list>
                        <value>cm:title</value>
                    </list>
                </entry>
            </map>
        </constructor-arg>
    </bean>

	<bean id="contractorsOnCreateAssocsPolicy" class="ru.it.lecm.contractors.policies.ContractorsOnCreateAssocsPolicy"
	      init-method="init" parent="logicEcmAssociationPolicy"/>

    <bean id="listOfUsedContractorsTypes" parent="listOfUsedTypes">
        <property name="types">
            <map>
                <entry key="lecm-contractor:contractor-type" value="Контрагент"/>
                <entry key="lecm-representative:representative-type" value="Адресант"/>
                <entry key="lecm-specialization:specialization-type" value="Специализация контрагента"/>
                <entry key="lecm-legalform:legalform-type" value="Организационно-правовая форма контрагента"/>
            </map>
        </property>
    </bean>

    <bean id="contractorsPolicy" class="ru.it.lecm.contractors.policies.ContractorsPolicy" init-method="init" depends-on="${groupId}.${artifactId}.contractors-model-bootstrap">
        <property name="propertiesService" ref="propertiesService"/>
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
        <property name="orgstructureBean" ref="serviceOrgstructure"/>
    </bean>


    <bean id="contractors.ConfigToRepositoryLoader" parent="configsToRepositoryLoader">
        <property name="configs">
            <list>
                <value>alfresco/module/lecm-contractors-repo/reports/configs/contractors.properties</value>
            </list>
        </property>
    </bean>

    <bean id="${groupId}.${artifactId}.serviceContractorsDictionariesPermissions" parent="ServiceFolderPermissionHelper"
	      depends-on="serviceDictionary" >
		<property name="serviceBean" ref="serviceDictionary"/>
		<property name="permissionsList">
			<list>
				<value>alfresco/module/${artifactId}/permissions/dictionaries-permissions.xml</value>
			</list>
		</property>
	</bean>

	<bean parent="lecmDictionaryBootstrap" depends-on="arm.settings.LogicEcmBootstrap">
		<property name="rootPath" value="/Business platform/LECM/Сервис АРМ"/>
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/arm/contractors-settings-arm.xml</value>
			</list>
		</property>
	</bean>

    <bean id="contractorsUpdateSearchPropsPolicy" class="ru.it.lecm.contractors.policies.ContractorUpdateSearchPropsPolicy" init-method="init" depends-on="${groupId}.${artifactId}.contractors-model-bootstrap">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
        <property name="contractorsBean" ref="contractorsBean" />
    </bean>

</beans>
