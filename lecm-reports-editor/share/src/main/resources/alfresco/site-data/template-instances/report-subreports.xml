<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>ru/it/lecm/reports-editor/report-edit</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.lecm.reports-subreports</title>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>reports-editor-toolbar</region-id>
            <url>/lecm/reports-editor/toolbar</url>
            <properties>
                <itemType>lecm-rpeditor:reportDescriptor</itemType>
                <bubblingLabel>subReports</bubblingLabel>
                <showSearch>false</showSearch>
                <showCreateBtn>true</showCreateBtn>
                <newRowLabel>label.new-subreport.btn</newRowLabel>
                <newRowDialogTitle>label.create-subreport.title</newRowDialogTitle>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/reports-editor/menu</url>
            <properties>
                <selected>subReports</selected>
            </properties>
        </component>
        <component>
            <region-id>content</region-id>
            <url>/lecm/reports-editor/subreports</url>
        </component>
    </components>
</template-instance>