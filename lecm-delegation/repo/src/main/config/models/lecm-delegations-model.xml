<?xml version="1.0" encoding="UTF-8"?>

<!-- lecm-ba == lecm Business Authority -->
<model name="lecm-ba:delegations" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<!-- Optional meta-data about the model -->
	<description>Business Authority Delegation Model</description>
	<author>RAA</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Import User Model Definitions -->
		<import uri="http://www.alfresco.org/model/user/1.0" prefix="usr"/>
		<!-- Import Org Structure Model Definitions -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>


	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="http://www.it.ru/lecm/model/business/authority/delegations/structure/1.0" prefix="lecm-ba"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-ba:statusList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>New</value>
					<value>Active</value>
					<value>Revoked</value>
					<value>Closed</value>
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>

		<!-- TODO: Бизнес-роль (пока тут) -->
		<type name="lecm-ba:businessRoles">
			<title>Бизнес Роль</title>
			<parent>cm:content</parent>

			<properties>
				<property name="lecm-ba:role">
					<title>Название</title>
					<type>d:datetime</type>
					<mandatory>true</mandatory>
				</property>

				<!-- Теневая security-группа -->
				<property name="lecm-ba:secureGroupName">
					<title>Shadow security group</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
			</properties>

			<associations>
				<!-- TODO: Список пользователей и групп (1-M) -->
				<association name="lecm-ba:roleGroup">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:person</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>

		</type>

		<!-- Доверенность -->
		<type name="lecm-ba:procuracy">
			<title>Доверенность по делегированию прав</title>
			<parent>cm:content</parent>

			<properties>

				<!-- Дата начала действия -->
				<property name="lecm-ba:dateUTCBegin">
					<title>Дата начала действия</title>
					<type>d:datetime</type>
					<mandatory>true</mandatory>
				</property>

				<!-- Дата окончания действия -->
				<property name="lecm-ba:dateUTCEnd">
					<title>Дата окончания действия</title>
					<type>d:datetime</type>
					<mandatory>false</mandatory>
				</property>

				<!-- Все функции -->
				<!-- Признак того, что делегируются все функции Доверителя. -->
				<property name="lecm-ba:allFunctions">
					<title>Все функции</title>
					<type>d:boolean</type>
					<default>false</default>
				</property>

				<!-- Комментарий -->
				<property name="lecm-ba:comment">
					<title>Комментарий и детали</title>
					<type>d:text</type>
					<default></default>
					<constraints>
						<constraint type="LENGTH">
							<parameter name="minLength"><value>0</value></parameter>
							<parameter name="maxLength"><value>4096</value></parameter>
						</constraint>
					</constraints>
				</property>

				<!-- Признак того что доверенность может быть передоверена -->
				<!-- Значение «по-умолчанию» = False -->
				<property name="lecm-ba:canpropogate">
					<title>Флаг возможности передачи доверенности</title>
					<type>d:boolean</type>
					<default>false</default>
				</property>

				<!-- Дата и время аннулирования -->
				<!-- Заполняется системой автоматически при аннулировании доверенности -->
				<property name="lecm-ba:dateUTCRevoke">
					<title>Время прекращения</title>
					<type>d:datetime</type>
					<mandatory>false</mandatory>
				</property>

				<!-- Статус -->
				<!-- Заполняется системой автоматически. -->
				<property name="lecm-ba:status">
					<title>Состояние Доверенности</title>
					<type>d:text</type>
					<default>new</default>
					<constraints>
						<constraint ref="lecm-ba:statusList"/>
					</constraints>
				</property>

			</properties>

			<associations>
				<!-- Кто делегирует полномочия (делегирующий) -->
				<!-- Ссылочная запись на сотрудника, являющимся доверителем -->
				<!-- Ссылка "От кого" (1-1) -->
				<association name="lecm-ba:fromEmployee">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- Кому делегируются полномочия (доверенное лицо) -->
				<!-- Ссылочная запись на сотрудника, являющимся доверенным лицом -->
				<!-- Ссылки "Кому" (1-1) -->
				<association name="lecm-ba:toEmployee">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- Состав делегируемых функций -->
				<!-- Содержит список делегируемых функций -->
				<!-- Список делегируемых бизнес-ролей -->
				<association name="lecm-ba:delegateRoles">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-ba:businessRoles</class>
						<mandatory>true</mandatory>
						<many>true</many>
					</target>
				</association>

				<!--
				 | TODO: Возможно, для упрощения реализации требования о передаче
				 | делегирований не более двух уровней, понадобится денормализующая
				 | ссылка на доверенность второго уровня (из доверенности третьего уровня)
				 | ...
				-->
				<!-- Документ-основание  -->
				<!-- Не редактируемый атрибут. Используется при вторичном делегировании -->
				<!-- Ссылка на основную родительскую доверенность (для доверенностей второго уровня) -->
				<association name="lecm-ba:parentProcuracy">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-ba:procuracy</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>


			</associations>

			<!-- Информация о создателе (авторе) -->
			<!--
			 | Ссылочная запись на сотрудника,  оформившего доверенность на делегирование.
			 | Составителем может является Доверитель или Технолог.
			-->
			<mandatory-aspects>
				<aspect>cm:author</aspect>
			</mandatory-aspects>

		</type>

	</types>

</model>