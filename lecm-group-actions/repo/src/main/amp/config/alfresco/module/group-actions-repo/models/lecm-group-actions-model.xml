<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-group-actions:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Forms Editor Model</description>
	<author>AIvkin</author>
	<published>2013-11-18</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/group-actions/1.0" prefix="lecm-group-actions"/>
	</namespaces>

	<types>
        <type name="lecm-group-actions:base-action">
            <parent>cm:folder</parent>
            <properties>
                <property name="lecm-group-actions:expression">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                </property>
                <property name="lecm-group-actions:type">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <multiple>true</multiple>
                </property>
                <property name="lecm-group-actions:statuses">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                </property>
                <property name="lecm-group-actions:order">
                    <type>d:long</type>
                    <mandatory>false</mandatory>
                    <default>0</default>
                </property>
            </properties>
        </type>

		<!--Описание Действия-->
        <type name="lecm-group-actions:action">
            <parent>cm:folder</parent>
        </type>

		<type name="lecm-group-actions:script-action">
			<parent>lecm-group-actions:base-action</parent>
			<properties>
                <property name="lecm-group-actions:forCollection">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                </property>
                <property name="lecm-group-actions:script">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
			</properties>
            <mandatory-aspects>
                <aspect>lecm-group-actions:group-aspect</aspect>
            </mandatory-aspects>
		</type>

        <type name="lecm-group-actions:workflow-action">
            <parent>lecm-group-actions:base-action</parent>
            <properties>
                <property name="lecm-group-actions:workflow">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
            <mandatory-aspects>
                <aspect>lecm-group-actions:group-aspect</aspect>
            </mandatory-aspects>
        </type>

        <type name="lecm-group-actions:document-action">
            <parent>lecm-group-actions:base-action</parent>
            <properties>
                <property name="lecm-group-actions:document-type">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-group-actions:document-connection">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-group-actions:document-connection-system">
                    <type>d:boolean</type>
                </property>
                <property name="lecm-group-actions:document-autofill-enabled">
                    <type>d:boolean</type>
                </property>
            </properties>
        </type>

		<!--Описание аттрибута формы-->
		<type name="lecm-group-actions:form-field">
			<parent>cm:cmobject</parent>
            <properties>
                <property name="lecm-group-actions:field-id">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-group-actions:field-type">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-group-actions:field-priority">
                    <type>d:long</type>
                    <default>0</default>
                </property>
                <property name="lecm-group-actions:field-default-value">
                    <type>d:text</type>
                    <default></default>
                </property>
                <property name="lecm-group-actions:field-is-mandatory">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
            </properties>
		</type>
	</types>

    <aspects>
        <aspect name="lecm-group-actions:group-aspect">
            <properties>
                <property name="lecm-group-actions:isGroup">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                </property>
            </properties>
        </aspect>
    </aspects>

</model>