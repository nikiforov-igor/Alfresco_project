<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-connect:dictionary-connection" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Connection Dictionary</description>
	<author>AIvkin</author>
	<published>2013-02-15</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
		<import uri="http://www.it.ru/lecm/org/connection/types/1.0" prefix="lecm-connect-types"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/org/connection/1.0" prefix="lecm-connect"/>
	</namespaces>

	<types>
		<type name="lecm-connect:connection">
			<title>Connection</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-connect:is-system">
					<title>Is system connection</title>
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<default>false</default>
				</property>
				<property name="lecm-connect:primary-document-assoc-ref">
					<title>Primary Document Ref</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-connect:connected-document-assoc-ref">
					<title>Connected Document Ref</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- в будущем у объекта типа связь будут эти свойства -->
				<!--
				<property name="lecm-connect:primary-document-removed">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-connect:connected-document-removed">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				-->
			</properties>
			<associations>
				<association name="lecm-connect:primary-document-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-document:base</class>
						<mandatory>true</mandatory><!-- <mandatory>false</mandatory> -->
						<many>false</many>
					</target>
				</association>
				<association name="lecm-connect:connected-document-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-document:base</class>
						<mandatory>true</mandatory><!-- <mandatory>false</mandatory> -->
						<many>false</many>
					</target>
				</association>
				<association name="lecm-connect:connection-type-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-connect-types:connection-type</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>