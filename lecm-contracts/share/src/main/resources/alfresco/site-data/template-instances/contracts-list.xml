<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/documents/documents-list</template-type>
    <properties>
        <rolesPrefix>CONTRACT</rolesPrefix>
        <settingsScript>/lecm/contracts/settings</settingsScript>
    </properties>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.contracts</title>
                <filteredLabel>page.contracts.filter</filteredLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/documents/documents-list-toolbar</url>
            <properties>
                <itemType>lecm-contract:document</itemType>
                <showCreateBtn>true</showCreateBtn>
                <bubblingLabel>contracts</bubblingLabel>
                <showExSearchBtn>true</showExSearchBtn>
                <newRowLabel>button.new-contract</newRowLabel>
                <newRowDialogTitle>button.new-contract</newRowDialogTitle>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/contracts/menu</url>
            <properties>
                <selected>list</selected>
            </properties>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>documents-grid</region-id>
            <url>/lecm/documents/documents-list-grid</url>
            <properties>
                <itemType>lecm-contract:document</itemType>
                <bubblingLabel>contracts</bubblingLabel>
                <advSearchFormId>contracts-search</advSearchFormId>
                <attributeForShow>lecm-contract:regNumProject</attributeForShow>
                <excludedColumns>lecm-document:creator-ref,lecm-contract:currency-assoc</excludedColumns>
                <filterProperty>lecm-statemachine:status</filterProperty>
            </properties>
        </component>
        <!-- Filter -->
        <component>
            <region-id>documents-filter</region-id>
            <url>/lecm/documents/documents-list-filter</url>
            <properties>
                <itemType>lecm-contract:document</itemType>
                <filterLabel>label.contracts</filterLabel>
                <linkPage>contracts-list</linkPage>
                <draftRoot>Contracts</draftRoot>
            </properties>
        </component>
        <!-- Forbidden -->
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
    </components>
</template-instance>