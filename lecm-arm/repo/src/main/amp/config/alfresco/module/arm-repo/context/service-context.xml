                    </list>
                </entry>
                <entry key="lecm-arm:script-child-rule">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:script-child-rule-root</value>
                    </list>
                </entry>
                <entry key="lecm-arm:filter">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:filter-code</value>
                        <value>lecm-arm:filter-multiple-select</value>
                        <value>lecm-arm:filter-query</value>
                        <value>lecm-arm:filter-class</value>
                        <value>lecm-arm:lecm-arm:filter-values</value>
                    </list>
                </entry>
                <entry key="lecm-arm:html-node">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:html-url</value>
                        <value>lecm-arm:order</value>
                        <value>lecm-arm:node-child-rule-assoc</value>
                        <value>lecm-arm:expression</value>
                    </list>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean name="arm.columns.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.columns.shared.cache"/>
    </bean>

    <bean name="arm.columns.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.columns.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.columns"/>
    </bean>

    <bean name="arm.nodes.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.nodes.shared.cache"/>
    </bean>

    <bean name="arm.nodes.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.nodes.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.nodes"/>
    </bean>

    <bean name="arm.nodes.types.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.nodes.types.shared.cache"/>
    </bean>

    <bean name="arm.nodes.types.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.nodes.types.shared.cache"/>
