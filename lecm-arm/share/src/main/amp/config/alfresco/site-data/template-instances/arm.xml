<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/arm/arm</template-type>
    <properties>
        <preferenceKey>ru.it.lecm.arm</preferenceKey>
    </properties>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/arm/documents/title</url>
            <properties>
                <code>{code}</code>
                <filteredLabel> </filteredLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/arm/documents-toolbar</url>
        </component>
	    <component>
            <region-id>accordion-toolbar</region-id>
            <url>/lecm/arm/accordion-toolbar</url>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>documents-grid</region-id>
            <url>/lecm/arm/documents-grid</url>
            <properties>
                <itemType>lecm-document:base</itemType>
            </properties>
        </component>
        <component>
            <region-id>reports</region-id>
            <url>/lecm/arm/reports</url>
        </component>
	    <component>
            <region-id>arm-html-node</region-id>
            <url>/lecm/arm/htmlNode</url>
        </component>
	    <component>
            <region-id>documents-tree</region-id>
            <url>/lecm/arm/documents-tree-menu</url>
        </component>

        <component>
            <region-id>calendar-toolbar</region-id>
            <url>/lecm/events/toolbar</url>
        </component>
        <component>
            <region-id>calendar-view</region-id>
            <url>/lecm/events/view</url>
        </component>
        <component>
            <region-id>mini-calendar</region-id>
            <url>/lecm/events/mycalendar</url>
        </component>
        <!-- Forbidden -->
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
    </components>
</template-instance>