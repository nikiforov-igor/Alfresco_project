<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
	<bean id="meetings.custom.config" class="org.springframework.extensions.config.ConfigBootstrap" init-method="register">
		<property name="configService" ref="web.config" />
		<property name="configs">
			<list>
				<value>classpath:alfresco/web-extension/ru/it/lecm/meetings/meetings-share-config-custom.xml</value>
				<value>classpath:alfresco/web-extension/ru/it/lecm/meetings/protocol-share-config-custom.xml</value>
				<value>classpath:alfresco/web-extension/ru/it/lecm/meetings/controls.xml</value>
			</list>
		</property>
	</bean>

    <bean id="meetingsResourceBundlesWebApp" class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent">
        <property name="resourceBundles">
            <list>
                <value>alfresco.web-extension.ru.it.lecm.meetings.form</value>
            </list>
        </property>
    </bean>

	<bean id="meetings.defaultFormConfig" parent="defaultFormConfigs">
		<property name="modelName" value="lecm-meetings:document" />
		<property name="path" value="alfresco/web-extension/ru/it/lecm/meetings/lecm-meetings-document-forms-config.xml"/>
	</bean>

	<bean id="protocol.defaultFormConfig" parent="defaultFormConfigs">
		<property name="modelName" value="lecm-protocol:document" />
		<property name="path" value="alfresco/web-extension/ru/it/lecm/meetings/lecm-protocol-document-forms-config.xml"/>
	</bean>

</beans>
