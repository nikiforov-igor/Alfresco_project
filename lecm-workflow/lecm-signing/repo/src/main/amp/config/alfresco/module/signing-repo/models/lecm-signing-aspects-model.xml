<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmSignAspects:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model additional signing attributes</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/signing/aspects/1.0" prefix="lecmSignAspects"/>
	</namespaces>

	<aspects>
		<aspect name="lecmSignAspects:signingDetailsAspect">
			<properties>
				<property name="lecmSignAspects:isSigned">
					<type>d:boolean</type>
					<default>false</default>
				</property>
				<property name="lecmSignAspects:signingDate">
					<type>d:datetime</type>
				</property>
				<property name="lecmSignAspects:signingState">
					<type>d:text</type>
					<default>NEW</default>
					<constraints>
						<constraint name="lecmSignAspects:signingStateConstraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>NEW</value>
									<value>ACTIVE</value>
									<value>COMPLETE</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<property name="lecmSignAspects:signerEmployeeAssoc-ref">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
				<property name="lecmSignAspects:signerEmployeeAssoc-text-content">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<association name="lecmSignAspects:signerEmployeeAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</aspect>
	</aspects>
</model>
