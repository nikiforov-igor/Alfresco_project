<alfresco-config>

    <config evaluator="node-type" condition="lecm-internal:document">
        <forms>
            <!-- Форма редатирования-->
            <form>
                <field-visibility>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-document-aspects:organization-unit-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                </field-visibility>
	            <appearance>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-document-aspects:organization-unit-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/double-association-tree-picker.ftl">
                            <control-param name="firstItemType">lecm-orgstr:employee</control-param>
                            <control-param name="firstRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="firstNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
                            <control-param name="firstPlane">true</control-param>
                            <control-param name="firstShowSearch">true</control-param>
                            <control-param name="firstPickerButtonLabel"><![CDATA[<i class='icon-male'></i>]]></control-param>
                            <control-param name="firstPickerButtonTitleCode">title.employee.select</control-param>

                            <control-param name="secondItemType">lecm-orgstr:organization-unit</control-param>
                            <control-param name="secondRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="secondNameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeTitleSubstituteString">{cm:name}</control-param>
                            <control-param name="secondPlane">false</control-param>
                            <control-param name="secondShowSearch">true</control-param>
                            <control-param name="secondPickerButtonLabel"><![CDATA[<i class='icon-building'></i>]]></control-param>
                            <control-param name="secondPickerButtonTitleCode">title.organizationUnit.select</control-param>

                            <control-param name="selectedItemsFormArgs">recipient</control-param>
                        </control>
                    </show>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="plane">false</control-param>
                            <control-param name="showSearch">false</control-param>
                            <control-param name="showSelectedItemsPath">false</control-param>
                            <control-param name="treeItemType">lecm-orgstr:organization-unit</control-param>
                        </control>
                    </show>
	            </appearance>
            </form>
            <!-- Форма с набором полей для правой области (Общие сведения) на карточке документа-->
            <form id="document">
                <field-visibility>
                </field-visibility>
                <appearance>
                </appearance>
            </form>
            <!-- Форма с набором полей для дашлета Общие сведения на карточке документа-->
            <form id="document-dashlet">
                <field-visibility>
	                <show id="lecm-statemachine:status"/>
                    <show id="lecm-document:subject-assoc"/>
                </field-visibility>
	            <appearance>
		            <field id="lecm-statemachine:status">
			            <control template="/ru/it/lecm/documents/controls/history/status-history.ftl"/>
		            </field>
	            </appearance>
            </form>
            <!-- Форма с набором дашлетов на главной странице-->
            <form id="main-page-dashlets">
                <field-visibility>
                    <show id="line1"/>
                </field-visibility>
                <appearance>
                    <field id="line1">
                        <control template="/ru/it/lecm/documents/controls/document-dashlet-control.ftl">
                            <control-param name="first">/lecm/components/dashlets/document-main;/lecm/components/dashlets/document-members</control-param>
                            <control-param name="second">/lecm/components/dashlets/document-attachments;/lecm/components/dashlets/document-my-tasks</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-internal:document">
        <forms>
            <!-- Форма создания (по умолчанию) -->
            <form>
                <field-visibility>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-document-aspects:organization-unit-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                </field-visibility>
                <appearance>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-document-aspects:organization-unit-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/double-association-tree-picker.ftl">
                            <control-param name="firstItemType">lecm-orgstr:employee</control-param>
                            <control-param name="firstRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="firstNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
                            <control-param name="firstPlane">true</control-param>
                            <control-param name="firstShowSearch">true</control-param>
                            <control-param name="firstPickerButtonLabel"><![CDATA[<i class='icon-male'></i>]]></control-param>
                            <control-param name="firstPickerButtonTitleCode">title.employee.select</control-param>

                            <control-param name="secondItemType">lecm-orgstr:organization-unit</control-param>
                            <control-param name="secondRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="secondNameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeTitleSubstituteString">{cm:name}</control-param>
                            <control-param name="secondPlane">false</control-param>
                            <control-param name="secondShowSearch">true</control-param>
                            <control-param name="secondPickerButtonLabel"><![CDATA[<i class='icon-building'></i>]]></control-param>
                            <control-param name="secondPickerButtonTitleCode">title.organizationUnit.select</control-param>

                            <control-param name="selectedItemsFormArgs">recipient</control-param>
                        </control>
                    </show>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="plane">false</control-param>
                            <control-param name="showSearch">false</control-param>
                            <control-param name="showSelectedItemsPath">false</control-param>
                            <control-param name="treeItemType">lecm-orgstr:organization-unit</control-param>
                        </control>
                    </show>
                </appearance>
            </form>
            <!-- Форма для табличного представления (набор столбцов)-->
            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="lecm-document:subject-assoc"/>
                </field-visibility>
            </form>
            <!-- Форма для базового журнала документов-->
            <form id="document-journal">
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="cm:image"/>
                    <show id="lecm-document:present-string"/>
                    <show id="lecm-document:list-present-string"/>
                </field-visibility>
                <appearance>
                    <field id="cm:image" label=" "/>
                    <field id="cm:name" label=" "/>
                    <field id="lecm-document:present-string" label=" "/>
                </appearance>
            </form>
            <!-- Форма атрибутивного поиска-->
            <form id="search">
                <field-visibility>

                </field-visibility>
            </form>
            <!-- Форма с набором полей, редактируемых в машине состояний-->
            <form id="statemachine-editable-fields">
                <field-visibility>
	                <show id="lecm-document-aspects:is-shared-folder"/>
                </field-visibility>
            </form>
        </forms>
    </config>

</alfresco-config>