<alfresco-config>
    <config>
        <forms>
            <dependencies>
                <js src="/scripts/lecm-nd/nd-date-validator.js" />
            </dependencies>
            <default-controls>
                <type name="association:lecm-nd-dic:documentType" template="/ru/it/lecm/base-share/components/controls/association-control.ftl">
                    <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                    <control-param name="plane">true</control-param>
                </type>
            </default-controls>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-nd-dic:documentType">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-doc-dic-dt:documentType-code" force="true"/>
                    <show id="cm:name" force="true"/>
                    <show id="lecm-doc-dic-dt:registration-required" force="true"/>
                    <show id="lecm-doc-dic-dt:auto-registration" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-doc-dic-dt:registration-required">
                        <control>
                            <control-param name="disabledFieldsIfNotSelect">lecm-doc-dic-dt:auto-registration</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-nd-dic:documentType">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-doc-dic-dt:documentType-code" force="true"/>
                    <show id="cm:name" force="true"/>
                    <show id="lecm-doc-dic-dt:registration-required"/>
                    <show id="lecm-doc-dic-dt:auto-registration"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-doc-dic-dt:registration-required">
                        <control>
                            <control-param name="disabledFieldsIfNotSelect">lecm-doc-dic-dt:auto-registration</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-doc-dic-dt:documentType-code"/>
                    <show id="cm:name"/>
                    <show id="lecm-doc-dic-dt:registration-required"/>
                    <show id="lecm-doc-dic-dt:auto-registration"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-doc-dic-dt:registration-required" label-id="label.eds.document_type_dictionary.datagrid.registration_setting.registered"/>
                    <field id="lecm-doc-dic-dt:auto-registration" label-id="label.eds.document_type_dictionary.datagrid.registration_setting.automatically"/>
                </appearance>
            </form>
            <form id="search">
                <field-visibility>
                    <show id="cm:name" force="true"/>
                    <show id="lecm-doc-dic-dt:documentType-code" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="cm:name" mandatory="false">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
                    <field id="lecm-doc-dic-dt:documentType-code" mandatory="false">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="string-compare" condition="Workflow">
        <hidden-workflows>
            <workflow name="activiti$lecm-nd_document"/>
        </hidden-workflows>
    </config>

    <config evaluator="string-compare" condition="LECMStatemachineWorkflow">
        <hidden-workflows>
            <workflow name="activiti$lecm-nd_document"/>
        </hidden-workflows>
    </config>
</alfresco-config>
