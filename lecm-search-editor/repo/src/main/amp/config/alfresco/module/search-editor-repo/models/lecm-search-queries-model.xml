<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-search-queries:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Поисковые запросы</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/lecm/search-queries/1.0" prefix="lecm-search-queries"/>
    </namespaces>

    <types>
        <type name="lecm-search-queries:dic">
            <parent>lecm-dic:plane_dictionary_values</parent>
            <properties>
                <property name="lecm-search-queries:name">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-search-queries:query">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-search-queries:query-setting">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-search-queries:employee-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-search-queries:employee-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
            </properties>
            <associations>
                <association name="lecm-search-queries:employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
    </types>
</model>