<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-connect-types:dictionary-connection-types" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Connection Types Dictionary</description>
	<author>AIvkin</author>
	<published>2013-02-15</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/org/connection/types/1.0" prefix="lecm-connect-types"/>
	</namespaces>

	<types>
		<type name="lecm-connect-types:connection-type">
			<title>Connection Type</title>
			<parent>lecm-dic:plane_dictionary_values</parent>
			<properties>
				<property name="lecm-connect-types:reverse-name">
					<title>Reverse name</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-connect-types:code">
					<title>Code</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-connect-types:for-auto-create">
					<title>Is auto link</title>
					<type>d:boolean</type>
					<default>false</default>
				</property>
			</properties>
			<mandatory-aspects>
				<aspect>lecm-dic:aspect_active</aspect>
			</mandatory-aspects>
		</type>

		<type name="lecm-connect-types:available-connection-type">
			<title>Connection Type</title>
			<parent>lecm-dic:plane_dictionary_values</parent>
			<properties>
				<property name="lecm-connect-types:primary-document-type">
					<title>Primary document type</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-connect-types:connected-document-type">
					<title>Connected document type</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<association name="lecm-connect-types:not-available-connection-types-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-connect-types:connection-type</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<association name="lecm-connect-types:recommended-connection-types-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-connect-types:connection-type</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<association name="lecm-connect-types:default-connection-type-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-connect-types:connection-type</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
			<mandatory-aspects>
				<aspect>lecm-dic:aspect_active</aspect>
			</mandatory-aspects>
		</type>
	</types>
</model>