<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean id="searchEditor.LogicEcmModelsBootstrap" parent="modelsToRepositoryLoader"
		  depends-on="dictionaryBootstrap,
		  ru.it.lecm.orgstructure.orgstructure-repo.orgStructureBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/search-editor-repo/models/lecm-search-queries-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/search-editor-repo/messages/lecm-search-queries-model</value>
			</list>
		</property>
	</bean>

	<bean id="lecm.searchQueries.LogicEcmBootstrap" parent="lecmDictionaryBootstrap"
		  depends-on="searchEditorService">
		<property name="rootPath" value="/Business platform/LECM/Сервис поисковые запросы"/>
		<property name="dictionaries">
			<list>
				<value>alfresco/module/search-editor-repo/dictionaries/lecm-search-queries-dic.xml</value>
			</list>
		</property>
	</bean>

	<bean id="lecm.searchQueries.dictionaryBootstrap"
		  parent="lecmDictionaryBootstrap"
		  depends-on="ru.it.lecm.orgstructure.orgstructure-repo.orgBootstrap,
	                  ru.it.lecm.business-journal.business-journal-repo.businessJournalBootstrap,
                      businessJournalLogEventsPolicy, regNumbers.regNumbersTemplatesDicBootstrap,
                      documents.LogicEcmConnectionTypesBootstrap">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/search-editor-repo/dictionaries/lecm-search-queries-bj-objectType-items.xml</value>
			</list>
		</property>
	</bean>

	<util:constant id="LECM_SEARCH_QUERIES_ROOT_ID" static-field="ru.it.lecm.search.beans.SearchEditorService.LECM_SEARCH_QUERIES_ROOT_ID"/>

	<bean id="searchEditorService" class="ru.it.lecm.search.beans.SearchEditorService" parent="baseBean"
		  depends-on="searchEditor.LogicEcmModelsBootstrap">
		<property name="orgstructureBean" ref="serviceOrgstructure"/>
		<property name="folders">
			<map>
				<entry key="#{LECM_SEARCH_QUERIES_ROOT_ID}" value="Сервис поисковые запросы"/>
			</map>
		</property>
	</bean>

	<bean id="lecm.searchQueriesScript" parent="baseScript" class="ru.it.lecm.search.scripts.SearchEditorWebScript">
		<property name="extensionName">
			<value>searchQueries</value>
		</property>
		<property name="searchQueriesService">
			<ref bean="searchEditorService"/>
		</property>
	</bean>

	<bean init-method="init"
		  class="ru.it.lecm.search.policies.SearchQueriesPolicy"
		  parent="logicEcmAssociationPolicy" depends-on="searchEditor.LogicEcmModelsBootstrap">
		<property name="searchQueriesService">
			<ref bean="searchEditorService"/>
		</property>
	</bean>

	<bean id="searchQueries.permissions" parent="ServiceFolderPermissionHelper"
		  depends-on="searchEditor.LogicEcmModelsBootstrap" >
		<property name="serviceBean" ref="searchEditorService"/>
		<property name="permissionsList">
			<list>
				<value>alfresco/module/search-editor-repo/permissions/directories-permissions.xml</value>
			</list>
		</property>
	</bean>

	<bean id="webscript.ru.it.lecm.search-editor.getSearchByConfig.post" class="ru.it.lecm.search.scripts.GetQueryByConfig" parent="webscript">
		<property name="searchEditorService" ref="searchEditorService" />
	</bean>

</beans>
