<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmApprove3:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model for parallel and sequential approvement</description>
	<author>Logic ECM</author>
	<version>3.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
		<import uri="http://www.it.ru/logicECM/model/approval/workflow/decision/1.0" prefix="lecmApproveDecision"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval/workflow/3.0" prefix="lecmApprove3"/>
	</namespaces>

	<types>
		<type name="lecmApprove3:startTask">
			<parent>bpm:startTask</parent>
		</type>
		<type name="lecmApprove3:approveTask">
			<parent>bpm:activitiOutcomeTask</parent>
			<properties>
				<property name="lecmApprove3:decision">
					<type>d:text</type>
					<default>NO_DECISION</default>
					<constraints>
						<constraint ref="lecmApproveDecision:decisionConstraint"/>
					</constraints>
				</property>
			</properties>
			<associations>
				<association name="lecmApprove3:commentAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
			<overrides>
				<property name="bpm:reassignable">
					<default>false</default>
				</property>
				<property name="bpm:packageItemActionGroup">
					<default>edit_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://www.it.ru/logicECM/model/approval/workflow/3.0}decision</default>
					<constraints>
						<constraint ref="lecmApproveDecision:decisionConstraint"/>
					</constraints>
				</property>
			</overrides>
		</type>
	</types>
</model>
