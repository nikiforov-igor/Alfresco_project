<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-doc-members:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM document member model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/document/member/1.0" prefix="lecm-doc-members"/>
	</namespaces>

	<types>
		<type name="lecm-doc-members:member">
			<title>Logic ECM Document Member</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-doc-members:group">
					<type>d:text</type>
				</property>
			</properties>
            <associations>
                <association name="lecm-doc-members:employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
		</type>

        <type name="lecm-doc-members:unit">
            <title>Logic ECM Documents Members Unit</title>
            <parent>cm:cmobject</parent>
            <associations>
                <association name="lecm-doc-members:unit-employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </type>
	</types>
</model>