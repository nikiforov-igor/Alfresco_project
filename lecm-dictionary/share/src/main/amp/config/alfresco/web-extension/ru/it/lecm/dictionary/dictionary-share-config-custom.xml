<alfresco-config>
	<config>
        <forms>
            <default-controls>
                <type name="association:lecm-dic:dictionary" template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
                    <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники</control-param>
                    <control-param name="nameSubstituteString">{cm:name}</control-param>
                    <control-param name="showCreateNewLink">false</control-param>
                    <control-param name="showCreateNewButton">false</control-param>
                </type>
            </default-controls>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
                    <show id="lecm-dic:attributeForShow" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
					<show id="lecm-dic:attributeForShow" force="true"/>
					<show id="lecm-dic:plane" force="true"/>
				</field-visibility>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
					<show id="lecm-dic:description" />
					<show id="lecm-dic:plane"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>

            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" />
                </field-visibility>
            </form>
		</forms>
	</config>

    <config evaluator="node-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>

            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" />
                </field-visibility>
            </form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>