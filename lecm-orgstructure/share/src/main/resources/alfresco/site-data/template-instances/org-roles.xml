<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/org-roles</template-type>
    <components>
        <component>
            <region-id>roles-grid</region-id>
            <url>/lecm/orgstructure/roles-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>workRole</bubblingLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>true</showExSearchBtn>
                <bubblingLabel>workRole</bubblingLabel>
	            <newRowLabel>button.new-role</newRowLabel>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.org-roles</title>
                <filteredLabel>page.orgstructure.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
            <properties>
                <selected>roles</selected>
            </properties>
        </component>
    </components>
</template-instance>
        