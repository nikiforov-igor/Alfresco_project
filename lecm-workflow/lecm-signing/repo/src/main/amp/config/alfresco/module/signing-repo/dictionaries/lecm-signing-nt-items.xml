<?xml version='1.0' encoding='UTF-8'?>
<items>
    <item name="lecm-dic:Шаблоны уведомлений" type="lecm-dic:dictionary">
        <property name="cm:name"><![CDATA[Шаблоны уведомлений]]></property>
        <property name="lecm-dic:attributeForShow"><![CDATA[cm:name]]></property>
        <property name="lecm-dic:type"><![CDATA[lecm-notification-template:template]]></property>
        <property name="lecm-dic:plane"><![CDATA[true]]></property>
        <property name="lecm-dic:description"><![CDATA[Шаблоны уведомлений]]></property>
        <items>
            <item name="cm:SIGNING_DIRECT" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[SIGNING_DIRECT]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[{#mainObject.wrapAsLink(#mainObject.attribute("lecm-document:ext-present-string"))} направлен Вам на подписание.]]></property>
                <property name="lecm-notification-template:description"><![CDATA[Подписание. Направить]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
            </item>
            <item name="cm:SIGNING_RESOLUTION" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[SIGNING_RESOLUTION]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[Сотрудник {#signer.wrapAsLink(#signer.attribute("lecm-orgstr:employee-short-name"))} {#isSigned ? "подписал документ" : #wrapTitle("отклонил подписание", #comment) + " документа"} {#mainObject.wrapAsLink(#mainObject.attribute("lecm-document:ext-present-string"))}]]></property>
                <property name="lecm-notification-template:description"><![CDATA[Подписание. Решение]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
            </item>
        </items>
    </item>
</items>