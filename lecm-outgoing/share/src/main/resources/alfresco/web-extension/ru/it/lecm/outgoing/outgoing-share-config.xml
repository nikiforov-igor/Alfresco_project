<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config evaluator="node-type" condition="lecm-outgoing:document">
		<forms></forms>
	</config>

	<config evaluator="model-type" condition="lecm-outgoing:document">
		<forms>
			<!-- Форма создания (по умолчанию) -->
			<form>
				<field-visibility>
					<show id="lecm-document-aspects:attachments-temp-assoc"/>											<!-- Файл документа -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-outgoing:contractor-assoc" force="true"/>											<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Адресат -->
					<show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
				</field-visibility>
				<appearance>
					<set id="outgoing0" template="/ru/it/lecm/base-share/components/preview-set.ftl"/>

					<set id="outgoing1" parent="outgoing0" />
					<set id="outgoing2" parent="outgoing0" />

					<set id="outgoing3" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing4" parent="outgoing2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
					<set id="outgoing5" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing6" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing7" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing8" parent="outgoing2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
					<set id="outgoing9" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>

					<field id="lecm-document-aspects:attachments-temp-assoc" set="outgoing1">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-uploader-with-preview-control.ftl">
							<control-param name="directoryName">Вложения</control-param>
							<control-param name="uploadDirectoryPath">{usertemp}</control-param>
						</control>
					</field>

					<!-- outgoing3:full-width-set -->
					<field id="lecm-document:title" set="outgoing3"/>
					
					<!-- outgoing4:2-columns-set-with-nested -->
					<field id="lecm-eds-document:document-type-assoc" set="outgoing4"/>
					<field id="lecm-outgoing:delivery-method-assoc" set="outgoing4"/>

					<!-- outgoing5:full-width-set -->
					<field id="lecm-outgoing:contractor-assoc" set="outgoing5">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="changeItemsFireAction">lecm-outgoing-addressee-assoc</control-param>
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Контрагенты</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">true</control-param>
							<control-param name="showCreateNewButton">true</control-param>
						</control>
					</field>

					<!-- outgoing5:full-width-set -->
					<field id="lecm-outgoing:recipient-assoc" set="outgoing5">
						<control template="/ru/it/lecm/contractors/contractors-select-representative.ftl">
							<control-param name="updateOnAction">lecm-outgoing-addressee-assoc</control-param>
						</control>
					</field>

					<!-- outgoing6:full-width-set -->
					<field id="lecm-document-aspects:response-to-assoc" set="outgoing6">
						<control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
							<control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
							<control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
							<control-param name="itemType">lecm-document:base</control-param>
						</control>
					</field>

					<!-- outgoing7:full-width-set -->
					<field id="lecm-eds-document:summaryContent" set="outgoing7">
						<control template="/org/alfresco/components/form/controls/textarea.ftl"/>
					</field>

					<!-- outgoing8:2-columns-set-with-nested -->
					<field id="lecm-document:subject-assoc" set="outgoing8"/>
					<field id="lecm-eds-document:file-register-assoc" set="outgoing8"/>

					<!-- outgoing9:full-width-set -->
					<field id="lecm-eds-document:note" set="outgoing9">
						<control template="/org/alfresco/components/form/controls/textarea.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
