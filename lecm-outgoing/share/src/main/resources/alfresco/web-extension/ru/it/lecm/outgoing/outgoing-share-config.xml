<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<css src="/css/lecm-base/base-styles.css" />
				<css src="/css/font-awesome.css" />
			</dependencies>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecm-outgoing:document">
		<forms>
			<!-- Форма редактирования -->
			<form>
				<view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
				<field-visibility>
					<show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
					<show id="lecm-document:doc-date"/>																	<!-- Дата регистрации -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-outgoing:contractor-assoc" force="true"/>											<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-outgoing:approval-list" force="true" for-mode="view"/>								<!-- Листы согласования-->
					<show id="lecm-outgoing:signing-list" force="true" for-mode="view"/>								<!-- Листы подписания-->
					<show id="lecm-outgoing:outgoing-view-form" force="true" for-mode="view"/>							<!-- Костыль, обходящий странное поведение base-form-tabs.ftl и жутких стилей для формы просмотра-->
					<show id="lecm-document-aspects:is-shared-folder"/>													<!-- Общая область хранения -->
				</field-visibility>
				<appearance>
					<set id="common" appearance="" label="Сведения" /> <!-- tab1 -->
					<set id="approval-and-signing" appearance="" label="Согласование/подписание" /> <!-- tab2 -->

					<set id="outgoing1" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
					<set id="outgoing2" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing3" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
					<set id="outgoing4" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing5" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing6" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing7" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing8" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing9" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>

					<!-- outgoing1:full-width-set -->
					<field id="lecm-document:regnum" set="outgoing1"/>
					<field id="lecm-document:doc-date" set="outgoing1"/>

					<!-- outgoing2:full-width-set -->
					<field id="lecm-document:title" set="outgoing2"/>

					<!-- outgoing3:2-columns-set-with-nested -->
					<field id="lecm-eds-document:document-type-assoc" set="outgoing3"/>
					<field id="lecm-outgoing:delivery-method-assoc" set="outgoing3"/>

					<!-- outgoing4:2-columns-set-with-nested -->
					<field id="lecm-outgoing:contractor-assoc" set="outgoing4">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="changeItemsFireAction">lecm-outgoing-addressee-assoc</control-param>
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Контрагенты</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">true</control-param>
							<control-param name="showCreateNewButton">true</control-param>
							<control-param name="createNewMessageId">label.new-contractor</control-param>
						</control>
					</field>
					<field id="lecm-outgoing:recipient-assoc" set="outgoing4">
						<control template="/ru/it/lecm/contractors/contractors-select-representative.ftl">
							<control-param name="updateOnAction">lecm-outgoing-addressee-assoc</control-param>
							<control-param name="createNewMessage">Новый Получатель</control-param>
							<control-param name="emptyMessage">Без получателя...</control-param>
						</control>
					</field>

					<!-- outgoing5:full-width-set -->
					<field id="lecm-eds-document:summaryContent" set="outgoing5">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<!-- outgoing6:full-width-set -->
					<field id="lecm-document:subject-assoc" set="outgoing6"/>

					<!-- outgoing7:full-width-set -->
					<field id="lecm-eds-document:note" set="outgoing7">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<!-- outgoing8:full-width-set -->
					<field id="lecm-eds-document:file-register-assoc" set="outgoing8"/>

					<!-- outgoing9:full-width-set -->
					<field id="lecm-document:creator" set="outgoing9">
						<control template="/org/alfresco/components/form/controls/info.ftl"/>
					</field>

					<field id="lecm-document-aspects:is-shared-folder" set="outgoing9"/>

					<field id="lecm-outgoing:approval-list" set="approval-and-signing" label="Согласование">
						<control template="/ru/it/lecm/workflow/approval/controls/approval-list-datagrid-control.ftl"/>
					</field>
					<field id="lecm-outgoing:signing-list" set="approval-and-signing" label="Подписание">
						<control template="/ru/it/lecm/workflow/signing/controls/signing-list-datagrid-control.ftl"/>
					</field>

					<field id="lecm-outgoing:outgoing-view-form" set="approval-and-signing">
						<control template="/ru/it/lecm/base-share/components/controls/css-hidden-control.ftl">
							<control-param name="cssFile">lecm-outgoing/outgoing-view-form.css</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором полей для правой области на карточке документа -->
			<form id="document">
				<field-visibility>
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
				</field-visibility>
			</form>

			<!-- Форма с набором полей для "Общие сведения" на карточке документа -->
			<form id="document-dashlet">
				<field-visibility>
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-statemachine:status"/>																<!-- Статус -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
				</field-visibility>
				<appearance>
					<field id="lecm-statemachine:status">
						<control template="/ru/it/lecm/documents/controls/history/status-history.ftl"/>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором дашлетов на главной странице -->
			<form id="main-page-dashlets">
				<field-visibility>
					<show id="line1"/>
				</field-visibility>
				<appearance>
					<field id="line1">
						<control template="/ru/it/lecm/documents/controls/document-dashlet-control.ftl">
							<control-param name="first">/lecm/components/dashlets/document-main;/lecm/components/dashlets/document-members</control-param>
							<control-param name="second">/lecm/components/dashlets/document-attachments;/lecm/components/dashlets/document-my-tasks</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-outgoing:document">
		<forms>
			<!-- Форма создания (по умолчанию) -->
			<form>
				<field-visibility>
					<show id="lecm-document-aspects:attachments-temp-assoc"/>											<!-- Файл документа -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-outgoing:contractor-assoc" force="true"/>											<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
				</field-visibility>
				<appearance>
					<set id="outgoing0" template="/ru/it/lecm/base-share/components/preview-set.ftl"/>

					<set id="outgoing1" parent="outgoing0" />
					<set id="outgoing2" parent="outgoing0" />

					<set id="outgoing3" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing4" parent="outgoing2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
					<set id="outgoing5" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing6" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing7" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
					<set id="outgoing8" parent="outgoing2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
					<set id="outgoing9" parent="outgoing2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>

					<field id="lecm-document-aspects:attachments-temp-assoc" set="outgoing1">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-uploader-with-preview-control.ftl">
							<control-param name="directoryName">Вложения</control-param>
							<control-param name="uploadDirectoryPath">{usertemp}</control-param>
						</control>
					</field>

					<!-- outgoing3:full-width-set -->
					<field id="lecm-document:title" set="outgoing3"/>

					<!-- outgoing4:2-columns-set-with-nested -->
					<field id="lecm-eds-document:document-type-assoc" set="outgoing4"/>
					<field id="lecm-outgoing:delivery-method-assoc" set="outgoing4"/>

					<!-- outgoing5:full-width-set -->
					<field id="lecm-outgoing:contractor-assoc" set="outgoing5">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="changeItemsFireAction">lecm-outgoing-addressee-assoc</control-param>
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Контрагенты</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">true</control-param>
							<control-param name="showCreateNewButton">true</control-param>
							<control-param name="createNewMessageId">label.new-contractor</control-param>
						</control>
					</field>
					<field id="lecm-outgoing:recipient-assoc" set="outgoing5">
						<control template="/ru/it/lecm/contractors/contractors-select-representative.ftl">
							<control-param name="updateOnAction">lecm-outgoing-addressee-assoc</control-param>
							<control-param name="createNewMessage">Новый Получатель</control-param>
							<control-param name="emptyMessage">Без получателя...</control-param>
						</control>
					</field>

					<!-- outgoing6:full-width-set -->
					<field id="lecm-document-aspects:response-to-assoc" set="outgoing6">
						<control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
							<control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
							<control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
							<control-param name="itemType">lecm-incoming:document</control-param>
						</control>
					</field>

					<!-- outgoing7:full-width-set -->
					<field id="lecm-eds-document:summaryContent" set="outgoing7">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<!-- outgoing8:2-columns-set-with-nested -->
					<field id="lecm-document:subject-assoc" set="outgoing8"/>
					<field id="lecm-eds-document:file-register-assoc" set="outgoing8"/>

					<!-- outgoing9:full-width-set -->
					<field id="lecm-eds-document:note" set="outgoing9">
						<control template="/org/alfresco/components/form/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- Форма для табличного представления (набор столбцов) -->
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-eds-document:regnum" force="true"/>													<!-- Номер проекта | Номер исходящего -->
					<show id="lecm-eds-document:regdate" force="true"/>													<!-- Дата регистрации проекта | Дата регистрации исходящего -->
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-document:creator-ref"/>																<!-- Автор Ссылка -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-statemachine:status"/>																<!-- Статус -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
				</field-visibility>
				<appearance>
					<field id="lecm-eds-document:regnum" label="Номер" substituteString="{~REGNUM}"/>
					<field id="lecm-eds-document:regdate" label="Дата" substituteString="{~REGDATE}"/>
				</appearance>
			</form>

			<!-- Форма атрибутивного поиска -->
			<form id="search">
				<field-visibility>
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:regnum"/>																	<!-- Номер проекта -->
					<show id="lecm-document:doc-date"/>																	<!-- Дата регистрации & Регистрационный номер -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
				</field-visibility>
				<appearance>
					<field id="lecm-document:doc-date">
						<control template="/org/alfresco/components/form/controls/daterange.ftl"/>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором полей, редактируемых в машине состояний -->
			<form id="statemachine-editable-fields">
				<field-visibility>
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Контрагент -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-document-aspects:registrator-assoc"/>												<!-- Регистратор -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Краткое содержание -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
					<show id="lecm-document-aspects:is-shared-folder"/>													<!-- Общая область хранения -->
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="Workflow">
		<hidden-workflows>
			<workflow name="activiti$lecm-outgoing_document"/>
		</hidden-workflows>
	</config>

</alfresco-config>
