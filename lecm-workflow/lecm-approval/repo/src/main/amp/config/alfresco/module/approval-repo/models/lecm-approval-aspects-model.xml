<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmApproveAspects:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model additional approval atributes</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/logicECM/model/approval/workflow/decision/1.0" prefix="lecmApproveDecision"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval/aspects/1.0" prefix="lecmApproveAspects"/>
	</namespaces>

	<aspects>
		<aspect name="lecmApproveAspects:approvalDetailsAspect">
			<properties>
				<property name="lecmApproveAspects:approvalState">
					<type>d:text</type>
					<default>NEW</default>
					<constraints>
						<constraint name="lecmApproveAspects:approvalStateConstraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>NEW</value>
									<value>ACTIVE</value>
									<value>COMPLETE</value>
									<value>SKIPPED</value>
									<value>CANCELLED</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<property name="lecmApproveAspects:approvalDecision">
					<type>d:text</type>
					<default>NO_DECISION</default>
					<constraints>
						<constraint ref="lecmApproveDecision:decisionConstraint"/>
					</constraints>
				</property>
				<property name="lecmApproveAspects:hasComment">
					<type>d:boolean</type>
					<default>false</default>
				</property>
				<property name="lecmApproveAspects:approvalComment">
					<type>d:text</type>
					<default>false</default>
				</property>
			</properties>
		</aspect>
		
		<aspect name="lecmApproveAspects:approvalDataAspect">
			<associations>
				<association name="lecmApproveAspects:approvalFolderRef">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>cm:folder</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</aspect>
	</aspects>
</model>