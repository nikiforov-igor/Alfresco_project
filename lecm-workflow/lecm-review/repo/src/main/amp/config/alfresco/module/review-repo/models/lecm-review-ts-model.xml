<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-review-ts:review-ts-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>LECM Review Table Structure Model</description>
    <author>vkuprin</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import base document model -->
        <import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
        <!-- Импорт модели данных оргструктуры -->
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/model/review-ts/1.0" prefix="lecm-review-ts"/>
    </namespaces>

    <constraints>
        <constraint name="lecm-review-ts:review-state-constraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>NOT_STARTED</value> <!-- ознакомление не начато -->
                    <value>REVIEWED</value> <!-- ознакомился -->
                    <value>NOT_REVIEWED</value> <!-- не ознакомился -->
                    <value>CANCELLED</value> <!-- Отозван -->
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="lecm-review-ts:review-table-item">
            <parent>lecm-document:tableDataRow</parent>
            <properties>
                <property name="lecm-review-ts:review-finish-date">
                    <title>Дата завершения ознакомления</title>
                    <type>d:date</type>
                </property>
                <property name="lecm-review-ts:review-start-date">
                    <title>Дата отправки на ознакомление</title>
                    <type>d:date</type>
                </property>
                <property name="lecm-review-ts:review-state">
                    <type>d:text</type>
                    <default>NOT_STARTED</default>
                    <constraints>
                        <constraint ref="lecm-review-ts:review-state-constraint" />
                    </constraints>
                </property>
            </properties>
            <associations>
                <association name="lecm-review-ts:reviewer-assoc">
                    <title>Ознакамливающийся</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <association name="lecm-review-ts:initiator-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        
        <type name="lecm-review-ts:review-table">
            <parent>lecm-document:tableData</parent>
            <overrides>
                <property name="lecm-document:tableDataRowType">
                    <default>lecm-review-ts:review-table-item</default>
                </property>
                <property name="lecm-document:pageSize">
                    <default>5</default>
                </property>
            </overrides>
        </type>
        
    </types>
    <aspects>
        <aspect name="lecm-review-ts:review-aspect">
            <parent>lecm-document:tableDataAspect</parent>
            <properties>
            </properties>
            <associations>
                <association name="lecm-review-ts:review-table-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-review-ts:review-table</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>

</model>