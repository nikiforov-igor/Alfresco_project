<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean id="arm.LogicEcmModelsBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap, ru.it.lecm.orgstructure.orgstructure-repo.orgStructureBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-arm-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/lecm-arm</value>
			</list>
		</property>
	</bean>

	<bean id="arm.LogicEcmBootstrap" parent="lecmDictionaryBootstrap" depends-on="arm.LogicEcmModelsBootstrap, armService">
		<property name="rootPath" value="/Business platform/LECM/Сервис АРМ"/>
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/dictionary/lecm-arm.xml</value>
			</list>
		</property>
	</bean>

	<bean id="arm.filters.LogicEcmBootstrap" parent="lecmDictionaryBootstrap"
	      depends-on="arm.LogicEcmModelsBootstrap, armService, arm.LogicEcmBootstrap">
		<property name="rootPath" value="/Business platform/LECM/Сервис АРМ"/>
		<property name="createOrUpdateDictionaries">
			<list>
				<value>alfresco/module/${artifactId}/dictionary/lecm-arm-filters.xml</value>
			</list>
		</property>
	</bean>

	<bean id="arm.settings.LogicEcmBootstrap" parent="lecmDictionaryBootstrap"
	      depends-on="arm.LogicEcmBootstrap, armService, arm.filters.LogicEcmBootstrap">
        <property name="rootPath" value="/Business platform/LECM/Сервис АРМ/Настройки АРМ"/>
		<property name="createOrUpdateDictionaries">
			<list>
                <value>alfresco/module/${artifactId}/dictionary/default-arm.xml</value>
                <value>alfresco/module/${artifactId}/dictionary/default-arm-2.xml</value>
			</list>
		</property>
	</bean>

	<util:constant id="ARM_ROOT_ID" static-field="ru.it.lecm.arm.beans.ArmService.ARM_ROOT_ID"/>

	<bean id="armService" class="ru.it.lecm.arm.beans.ArmServiceImpl" parent="baseBean"
		  depends-on="ServiceRegistry, nodeService, transactionService">
		<property name="nodeService" ref="NodeService"/>
		<property name="transactionService" ref="transactionService"/>
		<property name="authService" ref="authenticationService"/>
		<property name="serviceRegistry" ref="ServiceRegistry"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
		<property name="searchService" ref="searchService"/>
		<property name="namespaceService" ref="namespaceService"/>
        <property name="stateMachineHelper" ref="stateMachineHelper"/>
		<!-- Автоматическое создание каталогов. -->
		<property name="folders">
			<map>
				<entry key="#{ARM_ROOT_ID}" value="Сервис АРМ"/>
			</map>
		</property>
	</bean>

	<bean id="armScript" parent="baseScript" class="ru.it.lecm.arm.scripts.ArmWebScriptBean"
		  depends-on="serviceDictionary, armService">
		<property name="extensionName">
			<value>arm</value>
		</property>
		<property name="armService" ref="armService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="nodeService" ref="NodeService"/>
		<property name="documentService" ref="documentService"/>
	</bean>

	<bean id="webscript.ru.it.lecm.arm.tree-menu.get"
		  class="ru.it.lecm.arm.scripts.ArmTreeMenuScript"
		  parent="webscript">
		<property name="service" ref="armWrapperService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="statemachineService" ref="stateMachineHelper"/>
		<property name="documentService" ref="documentService"/>
	</bean>

	<bean id="armWrapperService"
		  class="ru.it.lecm.arm.beans.ArmWrapperServiceImpl">
		<property name="nodeService" ref="NodeService" />
		<property name="service" ref="armService"/>
		<property name="substitudeService" ref="substitudeService"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
		<property name="namespaceService" ref="namespaceService"/>
	</bean>

	<bean id="armAccordionPolicy" class="ru.it.lecm.arm.policy.ArmAccordionPolicy"
		  init-method="init">
		<property name="policyComponent" ref="policyComponent"/>
		<property name="permissionService" ref="permissionService"/>
		<property name="authorityService" ref="authorityService"/>
		<property name="nodeService" ref="nodeService" />
	</bean>

    <bean id="authorArmFilter" class="ru.it.lecm.arm.filters.AuthorArmFilter">
        <property name="orgstructureService" ref="serviceOrgstructure"/>
        <property name="authService" ref="authenticationService"/>
        <property name="preferenceService" ref="preferenceService"/>
    </bean>

	<bean id="dateArmFilter" class="ru.it.lecm.arm.filters.DateArmFilter">
		<property name="calendarBean" ref="WorkCalendarService"/>
	</bean>

    <bean id="baseQueryArmFilter" class="ru.it.lecm.arm.filters.BaseQueryArmFilter"/>

    <bean id="arm.exportSettingsInitializer" parent="dictionary.exportSettingsInitializer" class="ru.it.lecm.dictionary.beans.ExportSettingsInitializerBean">
        <constructor-arg>
            <map>
                <entry key="lecm-arm:arm">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:code</value>
                    </list>
                </entry>
                <entry key="lecm-arm:accordion">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:order</value>
                        <value>lecm-arm:business-roles-assoc</value>
                        <value>lecm-arm:types</value>
                        <value>lecm-arm:search-query</value>
                        <value>lecm-arm:counter-enable</value>
                        <value>lecm-arm:counter-limitation</value>
                        <value>lecm-arm:counter-description</value>
                        <value>lecm-arm:fields-assoc</value>
                        <value>lecm-arm:filters-assoc</value>
                    </list>
                </entry>
                <entry key="lecm-arm:node">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:order</value>
                        <value>lecm-arm:node-child-rule-assoc</value>
                        <value>lecm-arm:types</value>
                        <value>lecm-arm:search-query</value>
                        <value>lecm-arm:counter-enable</value>
                        <value>lecm-arm:counter-limitation</value>
                        <value>lecm-arm:counter-description</value>
                        <value>lecm-arm:fields-assoc</value>
                        <value>lecm-arm:filters-assoc</value>
                    </list>
                </entry>
                <entry key="lecm-arm:reports-node">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:order</value>
                        <value>lecm-arm:node-child-rule-assoc</value>
                        <value>lecm-arm:types</value>
                    </list>
                </entry>
                <entry key="lecm-arm:field">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:field-title</value>
                        <value>lecm-arm:field-name</value>
                        <value>lecm-arm:field-format-string</value>
                        <value>lecm-arm:field-sortable</value>
                    </list>
                </entry>
                <entry key="lecm-arm:base-child-rule">
                    <list>
                        <value>cm:name</value>
                    </list>
                </entry>
                <entry key="lecm-arm:query-child-rule">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:list-query-child-rule</value>
                    </list>
                </entry>
                <entry key="lecm-arm:dictionary-child-rule">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:child-rule-dictionary-assoc</value>
                    </list>
                </entry>
                <entry key="lecm-arm:statuses-child-rule">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:statuses-rule</value>
                        <value>lecm-arm:selected-statuses</value>
                    </list>
                </entry>
                <entry key="lecm-arm:filter">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-arm:filter-code</value>
                        <value>lecm-arm:filter-multiple-select</value>
                        <value>lecm-arm:filter-query</value>
                        <value>lecm-arm:filter-class</value>
                        <value>lecm-arm:lecm-arm:filter-values</value>
                    </list>
                </entry>
            </map>
        </constructor-arg>
    </bean>
</beans>
