<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/documents/documents-list</template-type>
    <properties>
        <preferedFilter>docAuthor</preferedFilter>
    </properties>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <itemType>{doctype}</itemType>
                <filteredLabel>page.documents-list.filter</filteredLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/documents/documents-list-toolbar</url>
            <properties>
                <itemType>{doctype}</itemType>
                <bubblingLabel>documents-list</bubblingLabel>
                <showExSearchBtn>true</showExSearchBtn>
                <showCreateBtn>true</showCreateBtn>
            </properties>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>documents-grid</region-id>
            <url>/lecm/documents/documents-list-grid</url>
            <properties>
                <itemType>{doctype}</itemType>
                <bubblingLabel>documents-list</bubblingLabel>
                <excludedColumns>lecm-document:creator-ref</excludedColumns>
                <filterProperty>lecm-statemachine:status</filterProperty>
                <formId>{formId}</formId>
                <filter>{query}</filter>
            </properties>
        </component>
        <!-- Filter -->
        <component>
            <region-id>documents-filter</region-id>
            <url>/lecm/documents/documents-list-filter</url>
            <properties>
                <itemType>{doctype}</itemType>
                <linkPage>documents-list</linkPage>
	            <gridBubblingLabel>documents-list</gridBubblingLabel>
                <filterProperty>lecm-statemachine:status</filterProperty>
            </properties>
        </component>
        <!-- Filter -->
        <component>
            <region-id>filters</region-id>
            <url>/lecm/documents/filters/author</url>
            <properties>
                <itemType>{doctype}</itemType>
	            <gridBubblingLabel>documents-list</gridBubblingLabel>
            </properties>
        </component>
        <!-- Forbidden -->
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
    </components>
</template-instance>