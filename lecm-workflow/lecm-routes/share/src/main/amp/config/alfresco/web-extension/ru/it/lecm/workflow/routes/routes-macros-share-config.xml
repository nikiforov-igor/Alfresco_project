<alfresco-config>
	<config evaluator="model-type" condition="lecmWorkflowRoutesMacros:macros">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecmWorkflowRoutesMacros:macrosServiceId"/>
					<show id="lecmWorkflowRoutesMacros:macrosString"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutesMacros:macrosString">
						<control template="/ru/it/lecm/base-share/components/controls/code-mirror-control.ftl">
							<control-param name="rows">30</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecmWorkflowRoutesMacros:macrosServiceId"/>
					<show id="lecmWorkflowRoutesMacros:macrosString"/>
				</field-visibility>
			</form>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecmWorkflowRoutesMacros:macros">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecmWorkflowRoutesMacros:macrosString"/>
				</field-visibility>
				<appearance>
					<field id="lecmWorkflowRoutesMacros:macrosString">
						<control template="/ru/it/lecm/base-share/components/controls/code-mirror-control.ftl">
							<control-param name="rows">30</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="view-node-form">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecmWorkflowRoutesMacros:macrosServiceId"/>
					<show id="lecmWorkflowRoutesMacros:macrosString"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>