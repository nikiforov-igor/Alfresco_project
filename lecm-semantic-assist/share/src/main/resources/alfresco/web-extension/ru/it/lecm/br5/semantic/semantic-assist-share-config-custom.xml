<?xml version='1.0' encoding='UTF-8'?>
<alfresco-config>
    <!-- Custom Aspects -->
    <config evaluator="string-compare" condition="DocumentLibrary">
        <aspects>
            <visible>          
                <aspect name="lecm-br5-semantic-aspects:br5"/>       
            </visible>  
        </aspects>
    </config>

    <config evaluator="node-type" condition="lecm-orgstr:employee">
        <forms>
            <form>
				<field-visibility>
					<show id="lecm-orgstr:tags-cloud"/>
				</field-visibility>
				<appearance>
					<field id="lecm-orgstr:tags-cloud" set="commonOther">
						<control template="/ru/it/lecm/br5/semantic/controls/tags-cloud-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

