<?xml version="1.0" encoding="UTF-8"?>
<!-- Модель данных для отрисовки форм отчетов -->
<model name="lecm-contract-reports:reports-forms" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Contracts reports forms model</description>
	<author>vlevin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Импорт модели данных оргструктуры -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.it.ru/lecm/contractors/model/contractor/1.0" prefix="lecm-contractor"/>
		<import uri="http://www.it.ru/logicECM/contract/dictionaries/1.0" prefix="lecm-contract-dic"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/contract/re1.0" prefix="lecm-contract-reports"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-contract-reports:dft-report-kind" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>contractKind</value>
					<value>contractTheme</value>
					<value>contractor</value>
					<value>initiator</value>
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<!-- форма параметров для отчёта "Реестр договоров" -->
		<type name="lecm-contract-reports:contracts-list-report">
			<title>Contracts list report</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-contract-reports:contracts-list-start-after" ><type>d:date</type></property>
				<property name="lecm-contract-reports:contracts-list-start-before" ><type>d:date</type></property>

				<property name="lecm-contract-reports:contracts-list-end-after"><type>d:date</type></property>
				<property name="lecm-contract-reports:contracts-list-end-before"><type>d:date</type></property>

				<property name="lecm-contract-reports:contracts-list-actual-only">
					<type>d:boolean</type>
					<default>true</default>
				</property>
				<property name="lecm-contract-reports:contracts-list-sum">
					<type>d:int</type>
					<default>0</default>
				</property>
			</properties>
			<associations>
				<association name="lecm-contract-reports:contracts-list-contractor">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contractor:contractor-type</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- вид договора -->
				<association name="lecm-contract-reports:contracts-list-contract-type">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-type</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- тематика договора -->
				<association name="lecm-contract-reports:contracts-list-contract-subject">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-subjects</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>

		<!-- форма параметров для отчёта "Исполнительская дисциплина по согласованиям за период" -->
		<type name="lecm-contract-reports:approval-discipline-report">
			<title>Approval discipline report</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-contract-reports:approval-discipline-start">
					<type>d:date</type>
				</property>
				<property name="lecm-contract-reports:approval-discipline-end">
					<type>d:date</type>
				</property>
			</properties>
		</type>

		<!-- форма параметров для отчёта "Сроки прохождения маршрута" -->
		<type name="lecm-contract-reports:docflow-timings-report">
			<title>Docflow timigs report</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-contract-reports:dft-reg-after" ><type>d:date</type></property>
				<property name="lecm-contract-reports:dft-reg-before" ><type>d:date</type></property>

				<!--
				<property name="lecm-contract-reports:dft-actual-only">
					<type>d:boolean</type>
					<default>true</default>
				</property>
				  -->
				<property name="lecm-contract-reports:dft-report-type">
					<title>ReportType</title>
					<type>d:text</type>
					<default>contractor</default>
					<constraints>
						<constraint ref="lecm-contract-reports:dft-report-kind" />
					</constraints>
				</property>
			</properties>
			<associations>
				<!-- контрагент -->
				<association name="lecm-contract-reports:dft-contractor">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contractor:contractor-type</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- вид договора -->
				<association name="lecm-contract-reports:dft-contract-type">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-type</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- тематика договора -->
				<association name="lecm-contract-reports:dft-contract-subject">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-subjects</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>

		<!-- форма параметров для отчёта "Сводный отчет по договорам" -->
		<type name="lecm-contract-reports:docflow-counters-report">
			<title>Docflow counters report</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-contract-reports:dfc-reg-after" ><type>d:date</type></property>
				<property name="lecm-contract-reports:dfc-reg-before" ><type>d:date</type></property>

				<property name="lecm-contract-reports:dfc-start-after" ><type>d:date</type></property>
				<property name="lecm-contract-reports:dfc-start-before" ><type>d:date</type></property>

				<property name="lecm-contract-reports:dfc-sum-low"><type>d:int</type></property>
				<property name="lecm-contract-reports:dfc-sum-up"><type>d:int</type></property>

				<!--
				<property name="lecm-contract-reports:dft-actual-only">
					<type>d:boolean</type>
					<default>true</default>
				</property>
				  -->
				<property name="lecm-contract-reports:dfc-report-type">
					<title>ReportType</title>
					<type>d:text</type>
					<default>contractor</default>
					<constraints>
						<constraint ref="lecm-contract-reports:dft-report-kind" />
					</constraints>
				</property>
			</properties>
			<associations>
				<!-- контрагент -->
				<association name="lecm-contract-reports:dfc-contractor">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contractor:contractor-type</class>
						<mandatory>false</mandatory>
						<many>false</many> 
					</target>
				</association>

				<!-- вид договора -->
				<association name="lecm-contract-reports:dfc-contract-type">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-type</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- тематика договора -->
				<association name="lecm-contract-reports:dfc-contract-subject">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-contract-dic:contract-subjects</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

				<!-- инициатор -->
				<association name="lecm-contract-reports:dfc-contract-initiator">
					<source>
						<mandatory>false</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>

			</associations>

		</type>
	</types>
</model>
