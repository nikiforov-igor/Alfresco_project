<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
	<bean id="lecm.resolver.doclib.actionGroup" class="ru.it.lecm.documents.resolvers.ActionsGroupResolver"/>

	<bean id="documents.custom.config" class="org.springframework.extensions.config.ConfigBootstrap" init-method="register" depends-on="base.custom.config">
		<property name="configService" ref="web.config" />
		<property name="configs">
			<list>
				<value>classpath:alfresco/web-extension/ru/it/lecm/documents/documents-share-config-custom.xml</value>
				<value>classpath:alfresco/web-extension/ru/it/lecm/documents/controls.xml</value>
			</list>
		</property>
	</bean>

    <bean id="documentResourceBundlesWebApp" class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent">
        <property name="resourceBundles">
            <list>
                <value>alfresco.web-extension.ru.it.lecm.documents.form</value>
                <value>alfresco.web-extension.ru.it.lecm.documents.scripts</value>
            </list>
        </property>
    </bean>

    <bean id="webscript.ru.it.lecm.documents.form.form.get" class="ru.it.lecm.documents.form.Form" parent="webscript">
        <property name="configService" ref="web.config" />
        <property name="scriptRemote" ref="webscripts.script.remote" />
    </bean>

	<bean id="webscript.ru.it.lecm.documents.form.form.post" class="ru.it.lecm.documents.form.Form" parent="webscript">
		<property name="configService" ref="web.config" />
		<property name="scriptRemote" ref="webscripts.script.remote" />
	</bean>

    <bean id="evaluator.ru.it.lecm.documents.isBase" parent="evaluator.doclib.action.nodeType">
        <property name="types">
            <list>
                <value>lecm-document:base</value>
            </list>
        </property>
        <property name="allowSubtypes" value="true"/>
    </bean>

	<bean id="evaluator.ru.it.lecm.documents.isNotBase" parent="evaluator.ru.it.lecm.documents.isBase">
		<property name="negateOutput" value="true" />
	</bean>
<!--TODO: Запилить машину состояний и включить -->
	<bean id="evaluator.ru.it.lecm.documents.isNotBaseOrFinalStatemachineStatus" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.ru.it.lecm.documents.isNotBase" />
				<ref bean="evaluator.ru.it.lecm.statemachine.isFinalStateMachineStatus" />
			</list>
		</property>
	</bean>

	<bean id="evaluator.ru.it.lecm.documents.isNotBaseOrFinalStatemachineStatusAndAdmin" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.ru.it.lecm.documents.isNotBase" />
				<ref bean="evaluator.ru.it.lecm.statemachine.isFinalStateMachineStatusAndAdmin" />
			</list>
		</property>
	</bean>

	<bean id="evaluators.documents.util" class="ru.it.lecm.documents.evaluators.EvaluatorsUtil">
		<property name="scriptRemote" ref="webscripts.script.remote" />
	</bean>

	<bean id="evaluator.documents.isCreator" class="ru.it.lecm.documents.evaluators.IsCreatorEvaluator"/>

	<bean id="evaluator.documents.isAttachment" parent="evaluator.doclib.metadata.hasAspect">
		<property name="aspects">
			<list>
				<value>lecm-document-aspects:lecm-attachment</value>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.isWritableCategory" class="ru.it.lecm.documents.evaluators.IsWritableCategory">
		<property name="evaluatorsUtil" ref="evaluators.documents.util"/>
	</bean>

	<bean id="evaluator.documents.isNotAttachment" parent="evaluator.documents.isAttachment">
		<property name="negateOutput" value="true" />
	</bean>

	<!-- Base permissions -->
	<bean id="evaluator.documents.hasPermissionEvaluator" class="ru.it.lecm.documents.evaluators.HasPermissionEvaluator" abstract="true">
		<property name="evaluatorsUtil" ref="evaluators.documents.util"/>
	</bean>

	<bean id="evaluator.documents.hasContentDeletePermission" parent="evaluator.documents.hasPermissionEvaluator">
		<property name="permission" value="_lecmPerm_ContentDelete"/>
	</bean>

	<bean id="evaluator.documents.hasOwnContentDeletePermission" parent="evaluator.documents.hasPermissionEvaluator">
		<property name="permission" value="_lecmPerm_OwnContentDelete"/>
	</bean>

	<bean id="evaluator.documents.hasContentAddVerPermission" parent="evaluator.documents.hasPermissionEvaluator">
		<property name="permission" value="_lecmPerm_ContentAddVer"/>
	</bean>

	<bean id="evaluator.documents.hasContentViewPermission" parent="evaluator.documents.hasPermissionEvaluator">
		<property name="permission" value="_lecmPerm_ContentView"/>
	</bean>

	<bean id="evaluator.documents.hasContentCopyPermission" parent="evaluator.documents.hasPermissionEvaluator">
		<property name="permission" value="_lecmPerm_ContentView"/>
	</bean>
	<!-- Base permissions -->

	<!-- Copy content -->
	<bean id="evaluator.documents.mayCopyAttachment" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isNotAttachment"/>
				<ref bean="evaluator.documents.mayCopyAttachmentEvaluator"/>
			</list>
		</property>
	</bean>
	<bean id="evaluator.documents.mayCopyAttachmentEvaluator" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.hasContentCopyPermission"/>
				<ref bean="evaluator.documents.mayEditAttachmentEvaluator"/>
			</list>
		</property>
	</bean>
	<!-- Copy content -->

	<!-- Delete content -->
	<bean id="evaluator.documents.mayDeleteAttachment" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isNotAttachment"/>
				<ref bean="evaluator.documents.mayDeleteAttachmentEvaluatorComplex"/>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.mayDeleteAttachmentEvaluatorComplex" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isWritableCategory"/>
				<ref bean="evaluator.documents.mayDeleteAttachmentEvaluator"/>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.mayDeleteAttachmentEvaluator" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.hasContentDeletePermission"/>
				<ref bean="evaluator.documents.mayDeleteOwnAttachmentEvaluator"/>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.mayDeleteOwnAttachmentEvaluator" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isCreator"/>
				<ref bean="evaluator.documents.hasOwnContentDeletePermission"/>
			</list>
		</property>
	</bean>
	<!-- Delete content -->

	<!-- Add content -->
	<bean id="evaluator.documents.mayAddAttachment" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isNotAttachment"/>
				<ref bean="evaluator.documents.mayAddAttachmentEvaluator"/>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.mayAddAttachmentEvaluator" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isWritableCategory"/>
				<ref bean="evaluator.documents.hasContentAddVerPermission"/>
			</list>
		</property>
	</bean>
	<!-- Add content -->

	<!--Edit content -->
	<bean id="evaluator.documents.mayEditAttachment" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isNotAttachment"/>
				<ref bean="evaluator.documents.mayEditAttachmentEvaluator"/>
			</list>
		</property>
	</bean>

	<bean id="evaluator.documents.mayEditAttachmentEvaluator" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isWritableCategory"/>
				<ref bean="evaluator.documents.hasContentViewPermission"/>
			</list>
		</property>
	</bean>
	<!--Edit content -->

	<!--View content -->
	<bean id="evaluator.documents.mayViewAttachment" parent="evaluator.doclib.action.chainedMatchOne">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.documents.isNotAttachment"/>
				<ref bean="evaluator.documents.hasContentViewPermission"/>
			</list>
		</property>
	</bean>
	<!--View content -->

	<bean id="evaluator.ru.it.lecm.documents.hasReadAttachmentComponent" class="ru.it.lecm.documents.evaluators.HasReadAttachmentComponentEvaluator">
		<property name="evaluatorsUtil" ref="evaluators.documents.util" />
	</bean>

	<bean id="evaluator.ru.it.lecm.documents.viewVersionComponent" class="ru.it.lecm.documents.evaluators.ViewVersionComponentEvaluator">
		<property name="evaluatorsUtil" ref="evaluators.documents.util" />
	</bean>
</beans>
