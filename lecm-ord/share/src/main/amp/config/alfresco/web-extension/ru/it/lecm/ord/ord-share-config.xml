<alfresco-config>
    <config evaluator="model-type" condition="lecm-ord:document">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:execution-date"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-ord:controller-assoc"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-ord:canceled-assoc"/>
                    <show id="lecm-ord:accepted-assoc"/>
	                <show id="lecm-document-aspects:attachments-temp-assoc"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-document:title" label="Заголовок"/>
                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_ОРД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:execution-date" label="Срок исполнения">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="minLimitCurrentDate">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent" label="Содержание">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:controller-assoc" label="Контролёр"/>
                    <field id="lecm-eds-document:note" label="Примечание">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:subject-assoc" label="Тематика"/>
                    <field id="lecm-eds-document:file-register-assoc" label="Номенклатура дел" mandatory="true"/>
                    <field id="lecm-ord:canceled-assoc" label="Отменяемые документы">
                        <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
                            <control-param name="rootLocation">/app:company_home</control-param>
                            <control-param name="itemType">lecm-eds-document:base</control-param>
                            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
                            <control-param name="additionalFilter">((TYPE:\"lecm-ord:document\" AND @lecm-statemachine\\:status:\"Исполнен\") OR (TYPE:\"lecm-nd:document\" AND (@lecm-statemachine\\:status:\"Действует\" OR @lecm-statemachine\\:status:\"Введен в действие\"))) </control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:accepted-assoc" label="Принимаемые документы">
                        <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
                            <control-param name="itemType">lecm-nd:document</control-param>
                            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
                            <control-param name="additionalFilter">(@lecm-statemachine\\:status:\"Зарегистрирован\")</control-param>
                        </control>
                    </field>

	                <field id="lecm-document-aspects:attachments-temp-assoc" label="Вложения">
		                <control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control-with-preview.ftl">
			                <control-param name="uploadDirectoryPath">{usertemp}</control-param>
			                <control-param name="directoryName">Вложения</control-param>
			                <control-param name="suppressRefreshEvent">true</control-param>
		                </control>
	                </field>
                </appearance>
            </form>

            <!-- Форма для табличного представления (набор столбцов) -->
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-eds-document:regnum" force="true"/>													<!-- Номер проекта | Номер исходящего -->
                    <show id="lecm-eds-document:regdate" force="true"/>													<!-- Дата регистрации проекта | Дата регистрации исходящего -->
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document:creator-ref"/>																<!-- Автор Ссылка -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-statemachine:status"/>																<!-- Статус -->
                </field-visibility>
                <appearance>
                    <field id="lecm-eds-document:regnum" label="Номер" substituteString="{~REGNUM}"/>
                    <field id="lecm-eds-document:regdate" label="Дата" substituteString="{~REGDATE}"/>
                </appearance>
            </form>

            <!-- Форма с набором полей, редактируемых в машине состояний -->
            <form id="statemachine-editable-fields">
                <field-visibility>
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document-aspects:is-shared-folder"/>													<!-- Общая область хранения -->
                    <show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
                    <show id="lecm-eds-document:summaryContent"/>														<!-- Краткое содержание -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
                    <show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
                    <show id="lecm-eds-document:document-type-assoc"/>                                                                <!-- Вид документа ОРД -->
                    <show id="lecm-eds-document:execution-date"/>                                                       <!-- Срок исполнения -->
                    <show id="lecm-ord:controller-assoc"/>                                                              <!-- Контролёр -->
                    <show id="lecm-eds-document:note"/>                                                                 <!-- Примечание -->
                    <show id="lecm-ord:canceled-assoc"/>                                                                <!-- Отменённые документы -->
                    <show id="lecm-ord:accepted-assoc"/>                                                                <!-- Принимаемые документы -->
                    <show id="lecm-ord-table-structure:items-assoc"/>
                    <show id="lecm-document:regnum"/>
                </field-visibility>
            </form>

            <!-- Форма атрибутивного поиска -->
            <form id="search">
                <field-visibility>
                    <show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="cm:created"/>																				<!-- Дата создания -->
                    <show id="lecm-document-aspects:reg-project-data-date"/>											<!-- Дата регистрации -->
                    <show id="lecm-document-aspects:reg-project-data-number"/>											<!-- Номер проекта -->
                    <show id="lecm-document:author-assoc"/>																<!-- Автор -->
                    <show id="lecm-ord:signers-assoc"/>																	<!-- Подписанты -->
                </field-visibility>
                <appearance>
                    <set id="ord-document-search-common-set" template="/ru/it/lecm/ord/components/class-set.ftl"/>

                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа" set="ord-document-search-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_ОРД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:title" set="ord-document-search-common-set" />
                    <field id="cm:created" set="ord-document-search-common-set" >
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:reg-project-data-date" set="ord-document-search-common-set" >
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:reg-project-data-number" set="ord-document-search-common-set" />
                    <field id="lecm-document:author-assoc" set="ord-document-search-common-set" />
                    <field id="lecm-ord:signers-assoc" set="ord-document-search-common-set" />
                </appearance>
            </form>
        </forms>
    </config>
    <config evaluator="node-type" condition="lecm-ord:document">
        <forms>
            <form>
                <edit-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <field-visibility>
	                <show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
	                <show id="lecm-document-aspects:reg-data-date"/>
	                <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:execution-date"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-ord:controller-assoc"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-ord:canceled-assoc"/>
                    <show id="lecm-ord:accepted-assoc"/>
                    <show id="lecm-document:author-assoc"/>
	                <show id="lecm-document-aspects:reg-project-data-number"/>
	                <show id="lecm-document-aspects:reg-project-data-date"/>
	                <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-ord-table-structure:items-assoc"/>
                    <show id="lecm-ord:approval-list" force="true" for-mode="view"/>								<!-- Листы согласования-->
                    <show id="lecm-ord:signing-list" force="true" for-mode="view"/>								<!-- Листы подписания-->
                </field-visibility>
                <appearance>
                    <set id="ord-document-form-common-set" label-id="label.ord.common"/>
                    <set id="ord-document-items" label-id="label.ord.items"/>
                    <set id="approval-and-signing" label-id="label.ord.approval-and-signing"/>

					<field id="lecm-document:regnum" set="ord-document-form-common-set" mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Documents.regnumUniqueness.validator"
										event="keyup" />
						</constraint-handlers>
					</field>
	                <field id="lecm-document-aspects:reg-data-date" set="ord-document-form-common-set"/>

                    <field id="lecm-document:title" set="ord-document-form-common-set"/>
                    <field id="lecm-eds-document:document-type-assoc" set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_ОРД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:execution-date" set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="minLimitCurrentDate">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent" set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:controller-assoc" set="ord-document-form-common-set"/>
                    <field id="lecm-eds-document:note"  set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>

                    <field id="lecm-document:subject-assoc" set="ord-document-form-common-set"/>
                    <field id="lecm-eds-document:file-register-assoc" mandatory="true" set="ord-document-form-common-set"/>

                    <field id="lecm-ord:canceled-assoc" set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
                            <control-param name="rootLocation">/app:company_home</control-param>
                            <control-param name="itemType">lecm-eds-document:base</control-param>
                            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
                            <control-param name="additionalFilter">((TYPE:\"lecm-ord:document\" AND @lecm-statemachine\\:status:\"Исполнен\") OR (TYPE:\"lecm-nd:document\" AND (@lecm-statemachine\\:status:\"Действует\" OR @lecm-statemachine\\:status:\"Введен в действие\"))) </control-param>
                            <control-param name="viewUrl">document?nodeRef={nodeRef}</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:accepted-assoc" set="ord-document-form-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
                            <control-param name="itemType">lecm-nd:document</control-param>
                            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
                            <control-param name="additionalFilter">(@lecm-statemachine\\:status:\"Зарегистрирован\")</control-param>
                        </control>
                    </field>

	                <field id="lecm-document:author-assoc" set="ord-document-form-common-set" read-only="true"/>
	                <field id="lecm-document-aspects:reg-project-data-number" set="ord-document-form-common-set"/>
	                <field id="lecm-document-aspects:reg-project-data-date" set="ord-document-form-common-set"/>
	                <field id="lecm-document-aspects:is-shared-folder" set="ord-document-form-common-set"/>

                    <field id="lecm-ord-table-structure:items-assoc" set="ord-document-items">
                        <control template="/ru/it/lecm/documents/controls/document-table-control.ftl">
                            <control-param name="attributeForShow">lecm-document:indexTableRow</control-param>
                            <control-param name="datagridFormId">datagrid</control-param>
                            <control-param name="expandable">true</control-param>
                            <control-param name="expandDataSource">components/form?formId=table-structure-info</control-param>
                            <control-param name="isTableSortable">false</control-param>
                            <control-param name="refreshAfterCreate">true</control-param>
                            <!--<control-param name="deleteMessageFunction"></control-param>-->
                            <control-param name="editFormTitleMsg">ord.item.edit.form.title</control-param>
                            <control-param name="createFormTitleMsg">ord.item.create.form.title</control-param>
                            <control-param name="viewFormTitleMsg">ord.item.view.form.title</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:approval-list" set="approval-and-signing" label="Согласование">
                        <control template="/ru/it/lecm/workflow/approval/controls/deprecated/approval-list-datagrid-control.ftl"/>
                    </field>
                    <field id="lecm-ord:signing-list" set="approval-and-signing" label="Подписание">
                        <control template="/ru/it/lecm/workflow/signing/controls/signing-list-datagrid-control.ftl"/>
                    </field>
                </appearance>
            </form>
            <!-- Форма с набором полей для правой области (Общие сведения) на карточке документа-->
            <form id="document">
                <field-visibility>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-statemachine:status"/>
                </field-visibility>
            </form>
            <!-- Форма просмотра на главной странице-->
            <form id="main-page-dashlets">
                <field-visibility>
                    <show id="viewMetadata"/>
                </field-visibility>
                <appearance>
                    <field id="viewMetadata">
                        <control template="/ru/it/lecm/documents/controls/document-view-metadata-control.ftl"/>
                    </field>
                </appearance>
            </form>

        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-ord-table-structure:item">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-document:indexTableRow" force="true"/>
                    <show id="lecm-ord-table-structure:item-status-assoc"/>
                    <show id="lecm-ord-table-structure:item-content"/>
                    <show id="lecm-ord-table-structure:executor-assoc"/>
                    <show id="lecm-ord-table-structure:execution-date"/>
                    <show id="lecm-ord-table-structure:execution-date-real"/>
                    <show id="lecm-ord-table-structure:item-comment"/>
                    <show id="lecm-ord-table-structure:errand-assoc"/>
                    <show id="lecm-ord:executed-button" force="true" />
                </field-visibility>
                <appearance>
                    <set id="item-container" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <set id="first-row" parent="item-container" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <set id="item0" parent="first-row" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
                    <set id="item1" parent="item-container"/>
                    <set id="item2" parent="item-container" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
                    <set id="item3" parent="item-container"/>
                    <set id="item4" parent="item-container" template="/ru/it/lecm/ord/components/class-set.ftl"/>

                    <field id="lecm-document:indexTableRow" set="item0"/>
                    <field id="lecm-ord-table-structure:item-status-assoc" set="item0">
                        <control template="/ru/it/lecm/base-share/components/controls/substitude-control.ftl">
                            <control-param name="formatString">{lecm-ord-table-structure:item-status-assoc/cm:name}</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:item-content" set="item1">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:executor-assoc" set="item2"/>
                    <field id="lecm-ord-table-structure:execution-date" set="item2">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="minLimitCurrentDate">true</control-param>
							<control-param name="dateFormatString">date-format.defaultDateOnly</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:execution-date-real" set="item2">
                        <control template="/org/alfresco/components/form/controls/info.ftl"/>
                    </field>
                    <field id="lecm-ord-table-structure:item-comment" set="item3">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:errand-assoc" set="item4">
                        <control template="/ru/it/lecm/base-share/components/controls/substitude-control.ftl">
                            <control-param name="formatString">
                                <![CDATA[<a href='/share/page/document?nodeRef={lecm-ord-table-structure:errand-assoc/nodeRef}'>{lecm-ord-table-structure:errand-assoc/lecm-document:present-string}</a>]]>
                            </control-param>
                        </control>
                    </field>
                    <field id="lecm-ord:executed-button" set="item4">
                        <control template="/ru/it/lecm/ord/components/controls/execute-point-control.ftl"/>
                    </field>
                </appearance>
            </form>
            <form id="table-structure-info">
                <field-visibility>
                    <show id="lecm-ord-table-structure:item-content"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-ord-table-structure:item-content">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                            <control-param name="columns">155</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>
    <config evaluator="model-type" condition="lecm-ord-table-structure:item">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-document:indexTableRow" force="true"/>
                    <show id="lecm-ord-table-structure:item-content"/>
                    <show id="lecm-ord-table-structure:executor-assoc"/>
                    <show id="lecm-ord-table-structure:execution-date"/>
                    <show id="lecm-ord-table-structure:item-comment"/>
                </field-visibility>
                <appearance>
                    <set id="item-container" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <set id="item0" parent="item-container" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <set id="item1" parent="item-container"/>
                    <set id="item2" parent="item-container" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
                    <set id="item3" parent="item-container"/>

                    <field id="lecm-document:indexTableRow" set="item0"/>

                    <field id="lecm-ord-table-structure:item-content" set="item1">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:executor-assoc" set="item2"/>
                    <field id="lecm-ord-table-structure:execution-date" set="item2">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="minLimitCurrentDate">true</control-param>
							<control-param name="dateFormatString">date-format.defaultDateOnly</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:item-comment" set="item3">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>

                </appearance>
            </form>
