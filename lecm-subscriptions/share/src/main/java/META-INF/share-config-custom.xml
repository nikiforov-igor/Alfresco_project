<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/scripts/lecm-subscriptions/controls/lecm-subscribe.js"/>
				<css src="/css/lecm-subscriptions/controls/style-form.css"/>
			</dependencies>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-subscr:subscription-to-type">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
				<appearance>
					<set id="type-events" appearance="" label="" />
					<set id="destination" appearance="panel" label-id="info.destination" />
					<set id="notification" appearance="panel" label-id="info.notification" label=""/>
					<set id="description" appearance="" label=""/>

					<field id="cm:name" label-id="Наименование"/>
					<field id="lecm-subscr:object-type-assoc" set="drop-down">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
							<control-param name="startLocation">
								/app:company_home/lecm-dic:Dictionary/lecm-dic:Тип_x0020_объекта
							</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="notSelectedOptionShow">true</control-param>
							<control-param name="notSelectedOptionLabel">Все</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="primaryCascading">true</control-param>
						</control>
					</field>
					<field id="lecm-subscr:event-category-assoc" set="drop-down">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-cascading-select-one-control.ftl">
							<control-param name="startLocation">
								/app:company_home/lecm-dic:Dictionary/lecm-dic:Категория_x0020_события
							</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="notSelectedOptionShow">true</control-param>
							<control-param name="notSelectedOptionLabel">Все</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="dependentFieldName">lecm-subscr:object-type-assoc</control-param>
							<control-param name="webScriptUrl">lecm/subscriptions/event-category</control-param>
							<control-param name="disabled">true</control-param>
						</control>
					</field>
					<field id="lecm-subscr:destination-employee-assoc" set="input-text"/>
					<field id="lecm-subscr:destination-position-assoc" set="input-text">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/lecm-dic:Dictionary/lecm-dic:Должностные_x0020_позиции</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
						</control>
					</field>
					<field id="lecm-subscr:destination-organization-unit-assoc" set="input-text"/>
					<field id="lecm-subscr:destination-work-group-assoc" set="input-text"/>
					<field id="lecm-subscr:notification-type-assoc" set="table"/>
					<field id="lecm-subscr:description" set="description"/>
				</appearance>
			</form>
		</forms>
	</config>

