<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-document:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM document model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/connect/aspects/1.0" prefix="lecm-connect-aspects"/>
        <import uri="http://www.it.ru/lecm/subscriptions/aspects/1.0" prefix="lecm-subscr-aspects"/>
        <import uri="http://www.it.ru/logicECM/document/member/1.0" prefix="lecm-doc-members"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/1.0" prefix="lecm-doc-dic"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-document:index-table-row-constraint" type="REGEX">
			<parameter name="expression"><value>^[0-9]+$</value></parameter>
			<parameter name="requiresMatch"><value>true</value></parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecm-document:base">
			<title>Logic ECM Base Document</title>
			<parent>cm:folder</parent>
			<properties>
                <property name="lecm-document:title">
                    <title>Заголовок</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
				<property name="lecm-document:sys_workflows">
					<type>d:text</type>
				</property>
                <property name="lecm-document:present-string">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
				<property name="lecm-document:ext-present-string">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
                <property name="lecm-document:list-present-string">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:creator">
                    <title>LECM Creator</title>
                    <type>d:text</type>
                    <protected>true</protected>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:modifier">
                    <type>d:text</type>
                    <protected>true</protected>
                </property>
                <property name="lecm-document:doc-date">
                    <title>Дата</title>
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:employee-ref">
                    <type>d:text</type>
                </property>
                <property name="lecm-document:creator-ref">
                    <type>d:text</type>
                </property>
                <property name="lecm-document:modifier-ref">
                    <type>d:text</type>
                </property>
				<property name="lecm-document:regnum">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
                <property name="lecm-document:status-changed-date">
                    <title>Last Status Changed Date</title>
                    <type>d:datetime</type>
                    <protected>true</protected>
                </property>
                <!-- Выполнение передачи прав при передаче документа-->
                <property name="lecm-document:istransmit">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <!-- Лишить текущего владельца прав на передоваемые документы-->
                <property name="lecm-document:deprive-right">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <!-- Для поиска по участникам -->
                <property name="lecm-document:doc-members-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!-- Тип документа -->
                <property name="lecm-document:doc-type">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:subject-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:subject-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
				<property name="lecm-document:author-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:author-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
			</properties>
            <associations>
                <association name="lecm-document:doc-members-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-members:member</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <!-- Тематика -->
                <association name="lecm-document:subject-assoc">
                    <title>Тематика</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-dic:subjects</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
	            <!-- Реальный автор -->
                <association name="lecm-document:author-assoc">
                    <title>Автор</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
            <mandatory-aspects>
                <aspect>lecm-subscr-aspects:subscribed</aspect>
                <aspect>lecm-connect-aspects:connectable</aspect>
                <aspect>cm:taggable</aspect>
            </mandatory-aspects>
		</type>
		<type name="lecm-document:attachmentsCategory">
			<title>Logic ECM Document attachments category</title>
			<parent>cm:folder</parent>
			<associations>
				<association name="lecm-document:categoryAttachments">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>
        <type name="lecm-document:documentComment">
            <title>Logic ECM Base Document Comment</title>
            <parent>cm:cmobject</parent>
            <properties>
                <property name="lecm-document:documentCommentTitle">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-document:documentCommentDescription">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
            </properties>
        </type>
		<type name="lecm-document:documentWorkflowComment">
			<title>Logic ECM Base Document Workflow Comment</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-document:documentWorkflowCommentText">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
        <type name="lecm-document:tableDataRow">
            <title>Logic ECM Base Document table row</title>
            <parent>cm:cmobject</parent>
            <properties>
                <!-- Порядковый номер -->
                <property name="lecm-document:indexTableRow">
                    <type>d:int</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                    <constraints>
                        <constraint ref="lecm-document:index-table-row-constraint" />
                    </constraints>
                </property>
            </properties>
        </type>
		<type name="lecm-document:tableDataTotalRow">
            <title>Logic ECM Base Document table total row</title>
            <parent>cm:cmobject</parent>
        </type>
		<type name="lecm-document:tableData">
			<title>Logic ECM Base Document Table</title>
			<parent>cm:folder</parent>
			<properties>
				<property name="lecm-document:tableDataRowType">
					<type>d:text</type>
					<default>lecm-document:tableDataRow</default>
					<index enabled="false"/>
				</property>
				<property name="lecm-document:tableDataTotalRowType">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-document:pageSize">
					<type>d:int</type>
					<default>10</default>
					<index enabled="false"/>
				</property>
			</properties>
		</type>
    </types>
    <aspects>
        <aspect name="lecm-document:tableDataAspect"/>
    </aspects>
</model>