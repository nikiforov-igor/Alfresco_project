<alfresco-config>
	<config evaluator="string-compare" condition="activiti$lecmRoute">
		<forms>
			<form>
				<field-visibility>
					<show id="message" force="true"/>
					<show id="packageItems"/>
				</field-visibility>
				<appearance>
					<field id="message">
						<control template="/ru/it/lecm/base-share/components/controls/message-control.ftl">
							<control-param name="msg">ru.it.lecm.workflow.route.message</control-param>
						</control>
					</field>
					<field id="packageItems">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>