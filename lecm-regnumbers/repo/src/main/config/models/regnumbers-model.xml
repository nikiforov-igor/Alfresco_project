<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-regnum:regnumbers" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Registration numbers Data Model</description>
	<author>Vsevolod Levin</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/model/regnumbers/1.0" prefix="lecm-regnum"/>
	</namespaces>

	<types>
		<!-- Глобальный сквозной счетчик -->
		<type name="lecm-regnum:plain-counter">
			<title>Plain counter</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-regnum:value">
					<type>d:long</type>
					<mandatory>true</mandatory>
					<default>0</default>
				</property>
			</properties>
		</type>
		<!-- Глобальный сквозной счетчик в пределах текущего года -->
		<type name="lecm-regnum:year-counter">
			<title>Year counter</title>
			<parent>lecm-regnum:plain-counter</parent>
			<mandatory-aspects>
				<aspect>lecm-regnum:year-aspect</aspect>
			</mandatory-aspects>
		</type>
		<!-- Сквозной счетчик для одного типа документа -->
		<type name="lecm-regnum:doctype-plain-counter">
			<title>Plain counter for document type</title>
			<parent>lecm-regnum:plain-counter</parent>
			<mandatory-aspects>
				<aspect>lecm-regnum:doctype-aspect</aspect>
			</mandatory-aspects>
		</type>
		<!-- Сквозной счетчик в пределах года для одного типа документа -->
		<type name="lecm-regnum:doctype-year-counter">
			<title>Year counter for document type</title>
			<parent>lecm-regnum:plain-counter</parent>
			<mandatory-aspects>
				<aspect>lecm-regnum:year-aspect</aspect>
				<aspect>lecm-regnum:doctype-aspect</aspect>
			</mandatory-aspects>
		</type>

		<type name="lecm-regnum:template">
			<title>Шаблон регистрационного номера</title>
			<parent>lecm-dic:plane_dictionary_values</parent>
			<properties>
				<property name="lecm-regnum:template-string">
					<title>Шаблон номера</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-regnum:template-service-id">
					<title>Служебный идентификатор шаблона номера</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-regnum:template-comment">
					<title>Комментарий</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
	</types>

	<aspects>
		<aspect name="lecm-regnum:year-aspect">
			<title>Years aspect</title>
			<properties>
				<property name="lecm-regnum:year">
					<type>d:int</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</aspect>

		<aspect name="lecm-regnum:doctype-aspect">
			<title>Document type aspect</title>
			<properties>
				<property name="lecm-regnum:doctype">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>
