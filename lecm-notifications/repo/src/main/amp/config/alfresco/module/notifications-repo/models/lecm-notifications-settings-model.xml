<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-notf-settings:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Notification settings</description>
	<author>AIvkin</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/notifications/types/1.0" prefix="lecm-notf-type"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/notifications/settings/1.0" prefix="lecm-notf-settings"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-notf-settings:natural-number-constraint" type="REGEX">
			<parameter name="expression"><value>^\+?(0|[1-9]\d*)$</value></parameter>
			<parameter name="requiresMatch"><value>true</value></parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecm-notf-settings:user">
			<title>Notifications user settings</title>
			<parent>cm:cmobject</parent>
			<associations>
				<!-- Ссылка на каналы доставки-->
				<association name="lecm-notf-settings:default-types-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-notf-type:notification-type</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>
		<!--@deprecated Нужно использовать lecm-document-global-settings:settings-->
		<type name="lecm-notf-settings:global">
			<title>Notifications global settings</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-notf-settings:enable-passive">
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<default>false</default>
				</property>
				<!--Срок уведомления о приближении исполнения-->
				<!--Для краткосрочного исполнения-->
				<property name="lecm-notf-settings:short-n-days">
					<type>d:int</type>
					<mandatory>true</mandatory>
					<default>1</default>
					<constraints>
						<constraint ref="lecm-notf-settings:natural-number-constraint"/>
					</constraints>
				</property>
				<!--Для долгосрочного исполнения-->
				<property name="lecm-notf-settings:n-days">
					<type>d:int</type>
					<mandatory>true</mandatory>
					<default>5</default>
					<constraints>
						<constraint ref="lecm-notf-settings:natural-number-constraint"/>
					</constraints>
				</property>
				<!--Краткий срок исполнения-->
				<property name="lecm-notf-settings:short-limit-days">
					<type>d:int</type>
					<default>10</default>
					<constraints>
						<constraint ref="lecm-notf-settings:natural-number-constraint"/>
					</constraints>
				</property>
			</properties>
		</type>
	</types>
</model>