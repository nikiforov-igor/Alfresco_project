<?xml version="1.0" encoding="UTF-8"?>

<!-- lecm-blanks == lecm Business Authority -->
<model name="lecm-blanks:blankdoc" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<!-- Optional meta-data about the model -->
	<description>Business Authority Delegation Model</description>
	<author>RAA</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Import User Model Definitions -->
		<import uri="http://www.alfresco.org/model/user/1.0" prefix="usr"/>
	</imports>


	<!-- Introduction of new namespaces defined by this model -->
	<namespaces>
		<namespace uri="http://www.it.ru/lecm/model/blanks/1.0" prefix="lecm-blanks"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-blanks:statusList" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>New</value>
					<value>Active</value>
					<value>Revoked</value>
					<value>Closed</value>
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<!-- Бланковый документ -->
		<type name="lecm-blanks:blank">
			<title>Простой документ с несколькими полями</title>
			<parent>cm:content</parent>

			<properties>

				<property name="lecm-blanks:info">
					<title>Некоторая информация</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>

				<property name="lecm-blanks:dateUTC">
					<title>Некоторое время</title>
					<type>d:datetime</type>
					<mandatory>false</mandatory>
				</property>

				<property name="lecm-blanks:comment">
					<title>Комментарий и детали</title>
					<type>d:text</type>
					<default></default>
					<constraints>
						<constraint type="LENGTH">
							<parameter name="minLength"><value>0</value></parameter>
							<parameter name="maxLength"><value>4096</value></parameter>
						</constraint>
					</constraints>
				</property>

				<property name="lecm-blanks:flag">
					<title>Некоторый флаг</title>
					<type>d:boolean</type>
					<default>false</default>
				</property>

				<property name="lecm-blanks:status">
					<title>Некоторое списочное значение</title>
					<type>d:text</type>
					<default>new</default>
					<constraints>
						<constraint ref="lecm-blanks:statusList"/>
					</constraints>
				</property>

			</properties>

			<!-- Ссылка на Aвтора (создателя) доверенности (может отличаться от значения "От кого") -->
			<mandatory-aspects>
				<aspect>cm:author</aspect>
			</mandatory-aspects>

		</type>

	</types>

</model>