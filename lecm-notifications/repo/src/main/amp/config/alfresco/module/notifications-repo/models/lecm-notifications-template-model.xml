<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-notification-template:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Notifications template</description>
	<author>VKuprin</author>
	<published>2016-02-29</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.it.ru/lecm/notifications/types/1.0" prefix="lecm-notf-type"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/notifications/template/1.0" prefix="lecm-notification-template"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-notification-template:send-state-constraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>true</value> <!-- Включить для всех -->
					<value>false</value> <!-- Отключить для всех -->
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecm-notification-template:template">
			<title>Notification template</title>
			<parent>lecm-dic:plane_dictionary_values</parent>
			<archive>false</archive>
			<properties>
				<property name="lecm-notification-template:description">
					<title>Description</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notification-template:ml-description">
					<title>Description</title>
					<type>d:mltext</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notification-template:template">
					<title>Template</title>
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-notification-template:subject">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-notification-template:ml-subject">
					<type>d:mltext</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-notification-template:send-enable">
					<type>d:text</type>
					<default>true</default>
					<constraints>
						<constraint ref="lecm-notification-template:send-state-constraint"/>
					</constraints>
				</property>
				<!-- json {"rows":[{"employee": "сотрудник", "created": "Дата создания", "author": "Автор"},...{}]}-->
				<property name="lecm-notification-template:exclusions-list">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-notification-template:exclusion-employee-ref">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
				<property name="lecm-notification-template:exclusion-employee-text-content">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<association name="lecm-notification-template:template-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
				<association name="lecm-notification-template:exclusion-employee">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>
