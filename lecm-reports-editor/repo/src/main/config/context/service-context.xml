<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

    <!-- Registration of Business Journal models -->
    <bean id="reportsEditor.modelBootstrap" parent="dictionaryModelBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-reports-editor-model.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco/module/${artifactId}/messages/reports-editor</value>
            </list>
        </property>
    </bean>

    <util:constant id="RE_ROOT_ID" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_ROOT_ID"/>
    <util:constant id="RE_ROOT_NAME" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_ROOT_NAME"/>

    <util:constant id="RE_DICTIONARY_ROOT_ID" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_DICTIONARY_ROOT_ID"/>
    <util:constant id="RE_DICTIONARY_ROOT_NAME" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_DICTIONARY_ROOT_NAME"/>

    <util:constant id="RE_SOURCES_ROOT_ID" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_SOURCES_ROOT_ID"/>
    <util:constant id="RE_SOURCES_ROOT_NAME" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_SOURCES_ROOT_NAME"/>

    <util:constant id="RE_TEMPLATES_ROOT_ID" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_TEMPLATES_ROOT_ID"/>
    <util:constant id="RE_TEMPLATES_ROOT_NAME" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_TEMPLATES_ROOT_NAME"/>

    <util:constant id="RE_REPORTS_ROOT_ID" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_REPORTS_ROOT_ID"/>
    <util:constant id="RE_REPORTS_ROOT_NAME" static-field="ru.it.lecm.reports.editor.ReporstEditorService.RE_REPORTS_ROOT_NAME"/>

    <bean id="reportsEditorService" init-method="init" class="ru.it.lecm.reports.editor.ReporstEditorService" parent="baseBean"
          depends-on="reportsEditor.modelBootstrap">
        <property name="serviceRegistry" ref="ServiceRegistry"/>
        <property name="nodeService" ref="nodeService"/>
        <property name="transactionService" ref="transactionService"/>
        <property name="authService" ref="authenticationService"/>
        <!-- Автоматическое создание каталогов. -->
        <property name="folders">
            <map>
                <entry key="#{RE_ROOT_ID}" value="#{RE_ROOT_NAME}"/>
                <entry key="#{RE_DICTIONARY_ROOT_ID}" value="#{RE_ROOT_NAME}/#{RE_DICTIONARY_ROOT_NAME}"/>
                <entry key="#{RE_SOURCES_ROOT_ID}" value="#{RE_ROOT_NAME}/#{RE_SOURCES_ROOT_NAME}"/>
                <entry key="#{RE_TEMPLATES_ROOT_ID}" value="#{RE_ROOT_NAME}/#{RE_TEMPLATES_ROOT_NAME}"/>
                <entry key="#{RE_REPORTS_ROOT_ID}" value="#{RE_ROOT_NAME}/#{RE_REPORTS_ROOT_NAME}"/>
            </map>
        </property>
    </bean>

    <bean id="reportsEditorScript" parent="baseScript" class="ru.it.lecm.reports.editor.scripts.ReportsEditorWebScriptBean"
          depends-on="reportsEditorService">
        <property name="extensionName">
            <value>reportsEditor</value>
        </property>
        <property name="service">
            <ref bean="reportsEditorService"/>
        </property>
    </bean>

    <bean id="reportsEditor.LogicEcmDictionariesBootstrap" parent="lecmDictionaryBootstrap"
          depends-on="reportsEditor.modelBootstrap, reportsEditorService, businessJournalLogEventsPolicy">
        <property name="createOrUpdateDictionaries">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-reports-columns-types.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-reports-parameters-types.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-reports-providers.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-reports-types.xml</value>
            </list>
        </property>
    </bean>

    <bean id="reportsEditorOnCreateAssocsPolicy" class="ru.it.lecm.reports.editor.policies.ReportsEditorOnCreateAssocsPolicy" parent="logicEcmAssociationPolicy"
          init-method="init"/>

    <bean id="reportsEditorTemplatePolicy" class="ru.it.lecm.reports.editor.policies.ReportTemplatePolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
        <property name="namespaceService">
            <ref bean="namespaceService"/>
        </property>
        <property name="dictionaryService">
            <ref bean="dictionaryService"/>
        </property>
    </bean>
</beans>
