<alfresco-config>
	<config>
		<forms>
			<default-controls>
				<type name="association:lecm-dic:dictionary" template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
					<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники</control-param>
					<control-param name="nameSubstituteString">{cm:name}</control-param>
					<control-param name="showCreateNewLink">false</control-param>
					<control-param name="showCreateNewButton">false</control-param>
				</type>
			</default-controls>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-dic:description"/>
					<show id="lecm-dic:type"/>
					<show id="lecm-dic:attributeForShow"/>
				</field-visibility>
				<appearance>
					<field id="lecm-dic:type" read-only="true">
						<control template="/ru/it/lecm/dictionary/all/components/controls/dicType-hidden.ftl"/>
					</field>
					<field id="lecm-dic:attributeForShow">
						<control template="/ru/it/lecm/base-share/components/controls/select-one-with-webscript-values.ftl">
							<control-param name="webscriptType">server</control-param>
							<control-param name="withEmpty">true</control-param>
							<control-param name="needSort">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-dic:description"/>
					<show id="lecm-dic:type"/>
					<show id="lecm-dic:attributeForShow"/>
					<show id="lecm-dic:plane"/>
					<show id="lecm-dic:attributeForShow-type-binder" force="true"/>
				</field-visibility>
				<appearance>
					<field id="lecm-dic:type">
						<control template="/ru/it/lecm/base-share/components/controls/select-one-with-webscript-values.ftl">
							<control-param name="webscriptType">server</control-param>
							<control-param name="webscript">lecm/dictionary/dataTypes</control-param>
							<control-param name="withEmpty">true</control-param>
							<control-param name="needSort">true</control-param>
						</control>
					</field>
					<field id="lecm-dic:attributeForShow">
						<control template="/ru/it/lecm/base-share/components/controls/select-one-with-webscript-values.ftl">
							<control-param name="webscriptType">server</control-param>
							<control-param name="withEmpty">true</control-param>
							<control-param name="needSort">true</control-param>
						</control>
					</field>
					<field id="lecm-dic:plane">
						<control template="/ru/it/lecm/base-share/components/controls/hidden.ftl"/>
					</field>
					<field id="lecm-dic:attributeForShow-type-binder">
						<control template="/ru/it/lecm/dictionary/all/components/controls/attributeForShow-type-binder.ftl"/>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
					<show id="lecm-dic:description" />
					<show id="lecm-dic:plane"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
				</field-visibility>
			</form>
            <form id="search">
				<field-visibility>
					<show id="cm:name"/>
				</field-visibility>
                <appearance>
                    <field id="cm:name" mandatory="false">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
                </appearance>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
				</field-visibility>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
				</field-visibility>
			</form>

            <form id="moveDictionaryItem">
                <field-visibility>
                    <show id="cm:title" force="true"/>
                    <show id="childNodeRef" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="cm:title" label-id="label.dictionary.move.parent" mandatory="true">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-control.ftl">
                            <control-param name="fieldName">parentNodeRef</control-param>
                            <control-param name="rootLocationArg">rootLocation</control-param>
                            <control-param name="endpointType">lecm-dic:hierarchical_dictionary_values</control-param>
                            <control-param name="treeBranchesDatasource">lecm/dictionary/move/tree</control-param>
                            <control-param name="rootNodeScript">lecm/dictionary/move/root</control-param>
                        </control>
                    </field>
                    <field id="childNodeRef">
                        <control template="/ru/it/lecm/base-share/components/controls/lecm-arguments-hidden-control.ftl">
                            <control-param name="argName">itemNodeRef</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-currency:alphabetic-code"/>
					<show id="lecm-currency:digital-code"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-currency:alphabetic-code"/>
					<show id="lecm-currency:digital-code"/>
				</field-visibility>
			</form>
			<form id="search">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-currency:alphabetic-code"/>
					<show id="lecm-currency:digital-code"/>
				</field-visibility>
				<appearance>
                    <field id="cm:name" mandatory="false">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
                    <field id="lecm-currency:alphabetic-code" mandatory="false">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
					<field id="lecm-currency:digital-code" mandatory="false">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl">
							<control-param name="nameSuffix">-strong-constant</control-param>
						</control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-currency:alphabetic-code"/>
					<show id="lecm-currency:digital-code"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>
