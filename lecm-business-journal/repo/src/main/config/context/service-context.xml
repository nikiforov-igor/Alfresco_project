<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:amq="http://activemq.apache.org/schema/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd
						   http://www.springframework.org/schema/jms
                           http://www.springframework.org/schema/jms/spring-jms.xsd
                           http://activemq.apache.org/schema/core
                           http://activemq.apache.org/schema/core/activemq-core.xsd">

    <!-- Registration of Business Journal models -->
    <bean id="${groupId}.${artifactId}.businessJournalBootstrap" parent="dictionaryModelBootstrap"
          depends-on="ru.it.lecm.dictionary.dictionary-repo.dictionary, ru.it.lecm.orgstructure.orgstructure-repo.orgStructureBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-model.xml</value>
            </list>
        </property>
        <property name="labels">
            <list>
                <value>alfresco/module/${artifactId}/messages/business-journal</value>
            </list>
        </property>
    </bean>

    <bean id="${groupId}.${artifactId}.businessJournalDictionaryBootstrap" parent="lecmDictionaryBootstrap"
          depends-on="ru.it.lecm.orgstructure.orgstructure-repo.orgBootstrap,ru.it.lecm.business-journal.business-journal-repo.businessJournalBootstrap, businessJournalLogEventsPolicy">
        <property name="dictionaries">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-eventCategory.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-messageTemplate.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-objectType.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-business-roles.xml</value>
            </list>
        </property>
        <property name="createOrUpdateDictionaries">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-eventCategory-items.xml</value>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-objectType-items.xml</value>
            </list>
        </property>
    </bean>

    <!-- Registration of Business Journal aspects model -->
    <bean id="${groupId}.${artifactId}.businessJournalAspectBootstrap" parent="dictionaryModelBootstrap">
        <property name="models">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-business-journal-aspects-model.xml</value>
            </list>
        </property>
    </bean>

    <util:constant id="BJ_ROOT_ID" static-field="ru.it.lecm.businessjournal.beans.BusinessJournalService.BJ_ROOT_ID"/>
    <util:constant id="BJ_ROOT_NAME" static-field="ru.it.lecm.businessjournal.beans.BusinessJournalService.BJ_ROOT_NAME"/>

    <util:constant id="BJ_ARCHIVE_ROOT_ID" static-field="ru.it.lecm.businessjournal.beans.BusinessJournalService.BJ_ARCHIVE_ROOT_ID"/>
    <util:constant id="BJ_ARCHIVE_ROOT_NAME" static-field="ru.it.lecm.businessjournal.beans.BusinessJournalService.BJ_ARCHIVE_ROOT_NAME"/>

    <bean id="businessJournalAsyncThreadPool" class="org.alfresco.util.ThreadPoolExecutorFactoryBean">
        <property name="poolName">
            <value>businessJournalAsyncAction</value>
        </property>
        <property name="corePoolSize">
            <value>8</value>
        </property>
        <property name="maximumPoolSize">
            <value>20</value>
        </property>
        <property name="threadPriority">
            <value>1</value>
        </property>
    </bean>

    <bean id="businessJournalServiceFactory" class="ru.it.lecm.businessjournal.beans.BusinessJournalServiceFactory">
        <property name="localService" ref="localBusinessJournalService" />
        <property name="remoteService" ref="remoteBusinessJournalService"/>
        <property name="useRemoteService" value="${lecm.business.journal.remote.enable}" />
    </bean>

    <bean id="businessJournalService" class="ru.it.lecm.businessjournal.beans.BusinessJournalService" factory-bean="businessJournalServiceFactory" factory-method="getService" depends-on="localBusinessJournalService, remoteBusinessJournalService, ServiceRegistry, repositoryHelper, serviceOrgstructure, substitudeService, nodeService, transactionService, serviceDictionary, ${groupId}.${artifactId}.businessJournalBootstrap"/>

    <bean id="localBusinessJournalService" init-method="init" class="ru.it.lecm.businessjournal.beans.LocalBusinessJournalServiceImpl" parent="abstaractBusinessJournalService"
          depends-on="ServiceRegistry, repositoryHelper, serviceOrgstructure, substitudeService, nodeService, transactionService, serviceDictionary, ${groupId}.${artifactId}.businessJournalBootstrap">
        <property name="searchService" ref="searchService"/>
        <property name="businessJournalOnCreateAssocsPolicy"  ref="businessJournalOnCreateAssocsPolicy"/>
    </bean>

    <bean id="abstaractBusinessJournalService" abstract="true" class="ru.it.lecm.businessjournal.beans.AbstractBusinessJournalService">
        <property name="dictionaryService" ref="serviceDictionary"/>
        <property name="orgstructureService" ref="serviceOrgstructure"/>
        <property name="substituteService" ref="substitudeService"/>
        <property name="dicService" ref="dictionaryService"/>
        <property name="personService" ref="personService"/>
        <property name="lecmPermissionService" ref="lecmPermissionServiceBean"/>
        <property name="jmsTemplate" ref="bjJMSTemplate"/>
        <property name="repositoryStructureHelper" ref="repositoryStructureHelper" />
        <property name="stateMachineService"  ref="stateMachineHelper"/>
        <property name="serviceRegistry"  ref="ServiceRegistry"/>
        <property name="nodeService"  ref="nodeService"/>
        <property name="transactionService"  ref="transactionService"/>
        <property name="authService" ref="authenticationService"/>
        <!-- Автоматическое создание каталогов. -->
        <property name="folders">
            <map>
                <entry key="#{BJ_ROOT_ID}" value="#{BJ_ROOT_NAME}"/>
                <entry key="#{BJ_ARCHIVE_ROOT_ID}" value="#{BJ_ROOT_NAME}/#{BJ_ARCHIVE_ROOT_NAME}"/>
            </map>
        </property>
    </bean>

    <bean id="remoteBusinessJournalClient" class="ru.it.lecm.businessjournal.remote.JaxWsProxy">
        <property name="serviceInterface" value="ru.it.lecm.businessjournal.remote.BusinessJournalStore"/>
        <property name="wsdlUrl" value="${lecm.business.journal.remote.url}"/>
        <property name="namespaceUri" value="http://remote.businessjournal.lecm.it.ru/"/>
        <property name="serviceName" value="BusinessJournalStoreImplService"/>
        <property name="portName" value="BusinessJournalStoreImplPort"/>
        <property name="useRemoteService" value="${lecm.business.journal.remote.enable}" />
        <property name="lookupServiceOnStartup" value="false" />
    </bean>

    <bean id="remoteBusinessJournalService" init-method="init" class="ru.it.lecm.businessjournal.beans.RemoteBusinessJournalServiceImpl" parent="abstaractBusinessJournalService">
        <property name="remoteService" ref="remoteBusinessJournalClient"/>
    </bean>

    <amq:broker xmlns="http://activemq.apache.org/schema/core" id="broker" useJmx="false" persistent="true" dataDirectory="${dir.root}/queue">
        <amq:transportConnectors>
            <amq:transportConnector uri="vm://localhost"/>
        </amq:transportConnectors>
        <persistenceAdapter>
            <kahaDB directory="${dir.root}/queue/Kaha"/>
        </persistenceAdapter>
    </amq:broker>

    <bean id="redeliveryPolicy" class="org.apache.activemq.RedeliveryPolicy">
        <property name="backOffMultiplier" value="3" />
        <property name="initialRedeliveryDelay" value="5000" />
        <property name="maximumRedeliveries" value="-1" />
        <property name="queue" value="*" />
        <property name="redeliveryDelay" value="5000" />
        <property name="useExponentialBackOff" value="true" />
        <property name="maximumRedeliveryDelay" value="1800000" />
    </bean>

    <bean id="brokerConnectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory"
          p:brokerURL="vm://localhost" p:useAsyncSend="true" p:redeliveryPolicy-ref="redeliveryPolicy" depends-on="broker"/>

    <bean id="jmxConnectionFactory"
          class="org.springframework.jms.connection.SingleConnectionFactory"
          p:targetConnectionFactory-ref="brokerConnectionFactory"
    />

    <bean id="bjQueue" class="org.apache.activemq.command.ActiveMQQueue">
        <constructor-arg value="bjQueue"/>
    </bean>

    <bean id="bjJMSTemplate"
          class="org.springframework.jms.core.JmsTemplate"
          p:connectionFactory-ref="jmxConnectionFactory"
          p:defaultDestination-ref="bjQueue" p:deliveryPersistent="true"/>

    <bean id="bjJMSTransactionManager"
          class="org.springframework.jms.connection.JmsTransactionManager">
        <property name="connectionFactory" ref="jmxConnectionFactory"/>
    </bean>

    <bean id="jmsBJListener" class="ru.it.lecm.businessjournal.beans.BJLogMessageReceiver">
        <property name="localService" ref="localBusinessJournalService" />
        <property name="remoteService" ref="remoteBusinessJournalService" />
        <property name="useRemote" value="${lecm.business.journal.remote.enable}" />
    </bean>

    <jms:listener-container container-type="default"
                            connection-factory="jmxConnectionFactory"
                            acknowledge="auto" transaction-manager="bjJMSTransactionManager" >
        <jms:listener destination="bjQueue" ref="jmsBJListener" />
    </jms:listener-container>


    <bean id="businessJournalScript" parent="baseScript" class="ru.it.lecm.businessjournal.script.BusinessJournalWebScriptBean"
          depends-on="businessJournalService">
        <property name="extensionName">
            <value>businessJournal</value>
        </property>
        <property name="service">
            <ref bean="businessJournalService"/>
        </property>
        <property name="archiverSettings">
            <ref bean="businessJournalArchiverSettings"/>
        </property>
    </bean>

    <bean id="businessJournalArchiveSchedule" class="ru.it.lecm.businessjournal.schedule.BusinessJournalArchiveSchedule">
        <property name="transactionMode">
            <value>ISOLATED_TRANSACTIONS</value>
        </property>
        <property name="compensatingActionMode">
            <value>IGNORE</value>
        </property>
        <property name="jobName">
            <value>archive-journal</value>
        </property>
        <property name="jobGroup">
            <value>business-journal</value>
        </property>
        <property name="triggerName">
            <value>archive-journal-trigger</value>
        </property>
        <property name="triggerGroup">
            <value>business-journal-trigger</value>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory"/>
        </property>
        <property name="actionService">
            <ref bean="ActionService"/>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>
        <property name="runAsUser">
            <value>System</value>
        </property>
        <property name="archiverSettings">
            <ref bean="businessJournalArchiverSettings"/>
        </property>
    </bean>

    <bean id="businessJournalArchiveScheduleExecutor" class="ru.it.lecm.businessjournal.schedule.BusinessJournalArchiveScheduleExecutor" parent="action-executer">
        <property name="ignoreLock">
            <value>false</value>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
        <property name="publicAction" value="false" />
    </bean>

    <bean id="businessJournalArchiverSettings" class="ru.it.lecm.businessjournal.schedule.BusinessJournalArchiverSettings" init-method="init">
        <property name="period">
            <value>${lecm.business-journal.archive.period}</value>
        </property>
        <property name="deep">
            <value>${lecm.business-journal.archive.deep}</value>
        </property>
        <property name="cronExpression">
            <value>0 0 2 */%s * ?</value>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
        <property name="transactionService">
            <ref bean="transactionService"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
    </bean>

    <bean id="businessJournalAuthLoggerSchedule" class="ru.it.lecm.businessjournal.schedule.BusinessJournalAuthLoggerSchedule">
        <property name="transactionMode">
            <value>ISOLATED_TRANSACTIONS</value>
        </property>
        <property name="compensatingActionMode">
            <value>IGNORE</value>
        </property>
        <property name="jobName">
            <value>business-journal-auth-logger</value>
        </property>
        <property name="jobGroup">
            <value>business-journal</value>
        </property>
        <property name="triggerName">
            <value>business-journal-auth-logger-trigger</value>
        </property>
        <property name="triggerGroup">
            <value>business-journal-trigger</value>
        </property>
        <property name="scheduler">
            <ref bean="schedulerFactory"/>
        </property>
        <property name="actionService">
            <ref bean="ActionService"/>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
        <property name="transactionService">
            <ref bean="TransactionService"/>
        </property>
        <property name="runAsUser">
            <value>System</value>
        </property>
        <property name="auditService">
            <ref bean="auditService"/>
        </property>
        <property name="personService">
            <ref bean="personService"/>
        </property>
    </bean>

    <bean id="businessJournalAuthLoggerScheduleExecutor" class="ru.it.lecm.businessjournal.schedule.BusinessJournalAuthLoggerScheduleExecutor" parent="action-executer">
        <property name="ignoreLock">
            <value>false</value>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
    </bean>

    <bean id="updateArchiveSettingsPolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalSettingsUpdatePolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="archiveSchedule">
            <ref bean="businessJournalArchiveSchedule"/>
        </property>
    </bean>
    
    <bean id="updateEventCategoryPolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalEventCategoryUpdatePolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="service">
            <ref bean="businessJournalService"/>
        </property>
    </bean>

    <bean id="businessJournalAddHistoryToMainObjectPolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalAddHistoryToMainObjectPolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
    </bean>

    <bean id="businessJournalLogEventsPolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalLogEventsPolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService"/>
        </property>
        <property name="nodeService">
            <ref bean="nodeService"/>
        </property>
        <property name="namespaceService">
            <ref bean="namespaceService"/>
        </property>
    </bean>

    <bean id="businessJournalOnCreateAssocsPolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalOnCreateAssocsPolicy"
          parent="logicEcmAssociationPolicy" init-method="init">
    </bean>

    <bean id="businessJournal.exportSettingsInitializer" parent="dictionary.exportSettingsInitializer" class="ru.it.lecm.dictionary.beans.ExportSettingsInitializerBean">
        <constructor-arg>
            <map>
                <entry key="lecm-busjournal:bjRecord">
                    <list>
                        <value>lecm-busjournal:bjRecord-date</value>
                        <value>lecm-busjournal:bjRecord-objType-assoc-text-content</value>
                        <value>lecm-busjournal:bjRecord-evCategory-assoc-text-content</value>
                        <value>lecm-busjournal:bjRecord-description</value>
                        <value>lecm-busjournal:bjRecord-initiator</value>
                        <value>lecm-busjournal:bjRecord-mainObject</value>
                        <value>lecm-busjournal:bjRecord-secondaryObj1</value>
                        <value>lecm-busjournal:bjRecord-secondaryObj2</value>
                        <value>lecm-busjournal:bjRecord-secondaryObj3</value>
                        <value>lecm-busjournal:bjRecord-secondaryObj4</value>
                        <value>lecm-busjournal:bjRecord-secondaryObj5</value>
                    </list>
                </entry>
                <entry key="lecm-busjournal:eventCategory">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-busjournal:eventCategory-code</value>
                    </list>
                </entry>
                <entry key="lecm-busjournal:objectType">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-busjournal:objectType-code</value>
                        <value>lecm-busjournal:objectType-template</value>
                        <value>lecm-busjournal:objectType-class</value>
                        <value>lecm-busjournal:objectType-list-template</value>
                    </list>
                </entry>
                <entry key="lecm-busjournal:messageTemplate">
                    <list>
                        <value>lecm-busjournal:messageTemplate-template</value>
                        <value>lecm-busjournal:messageTemplate-code</value>
                        <value>lecm-busjournal:messageTemplate-objType-assoc</value>
                        <value>lecm-busjournal:messageTemplate-evCategory-assoc</value>
                    </list>
                </entry>
            </map>
        </constructor-arg>
    </bean>
    <bean id="listOfUsedBJTypes" parent="listOfUsedTypes">
        <property name="types">
            <map>
                <entry key="lecm-busjournal:objectType" value="Тип объекта"/>
                <entry key="lecm-busjournal:eventCategory" value="Категория событий"/>
            </map>
        </property>
    </bean>

    <bean id="webscript.ru.it.lecm.business-journal.api.last.bjRecords.get"
          class="ru.it.lecm.businessjournal.script.ExportBJRecords"
          parent="webscript"
          depends-on="businessJournalService">
        <property name="nodeService">
            <ref bean="nodeService" />
        </property>
        <property name="businessJournalService">
            <ref bean="businessJournalService" />
        </property>
    </bean>

    <bean id="updateObjTypePolicy" class="ru.it.lecm.businessjournal.policies.BusinessJournalObjTypeUpdatePolicy"
          init-method="init">
        <property name="policyComponent">
            <ref bean="policyComponent"/>
        </property>
        <property name="objTypeCache">
            <ref bean="objTypeCache"/>
        </property>
        <property name="typeTemplateCache">
            <ref bean="typeTemplateCache"/>
        </property>
        <property name="typeListTemplateCache">
            <ref bean="typeListTemplateCache"/>
        </property>
    </bean>
</beans>
