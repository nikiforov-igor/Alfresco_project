<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>

<beans>
    <bean id="statemachineResourceBundlesWebApp" class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent">
        <property name="resourceBundles">
            <list>
				<value>ru.it.lecm.statemachine.statemachine</value>
            </list>
        </property>
    </bean>

	<bean id="evaluator.ru.it.lecm.statemachine.isFinalStateMachineStatus" class="ru.it.lecm.statemachine.evaluators.FinalStateMachineStatusEvaluator">
		<property name="scriptRemote" ref="webscripts.script.remote" />
	</bean>

	<bean id="evaluator.ru.it.lecm.statemachine.isFinalStateMachineStatusAndAdmin" parent="evaluator.doclib.action.chainedMatchAll">
		<property name="evaluators">
			<list>
				<ref bean="evaluator.ru.it.lecm.statemachine.isFinalStateMachineStatus" />
				<ref bean="evaluator.ru.it.lecm.base.isAdmin" />
			</list>
		</property>
	</bean>
</beans>
