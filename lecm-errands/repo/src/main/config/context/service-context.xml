<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean id="errands.LogicEcmModelsBootstrap" parent="dictionaryModelBootstrap"
	      depends-on="dictionaryBootstrap, documents.LogicEcmModelsBootstrap,
		  ru.it.lecm.orgstructure.orgstructure-repo.orgStructureBootstrap,
		  documents.LogicEcmModelsConnectionsBootstrap,
		  links.LogicEcmContractsBootstrap,
		  documents.dictionaries.LogicEcmModelsBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-errands-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/lecm-errands-model</value>
			</list>
		</property>
	</bean>

	<bean id="errands.dictionaries.LogicEcmModelsBootstrap" parent="dictionaryModelBootstrap"
	      depends-on="dictionaryBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-errands-dictionaries-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/lecm-errands-dictionaries-model</value>
			</list>
		</property>
	</bean>

	<bean id="errands.dictionaryBootstrap"
	      parent="lecmDictionaryBootstrap"
	      depends-on="ru.it.lecm.orgstructure.orgstructure-repo.orgBootstrap,
	                  ru.it.lecm.business-journal.business-journal-repo.businessJournalBootstrap,
                      businessJournalLogEventsPolicy, regNumbers.regNumbersTemplatesDicBootstrap,
                      errands.dictionaries.LogicEcmModelsBootstrap">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-errands-titles.xml</value>
			</list>
		</property>
		<property name="createOrUpdateDictionaries">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-errands-business-journal-objectType-items.xml</value>
				<value>alfresco/module/${artifactId}/models/lecm-errands-roles-items.xml</value>
				<value>alfresco/module/${artifactId}/models/lecm-errands-regnumbers.xml</value>
			</list>
		</property>
	</bean>

	<util:constant id="ERRANDS_ROOT_ID" static-field="ru.it.lecm.errands.ErrandsService.ERRANDS_ROOT_ID"/>
	<util:constant id="ERRANDS_ROOT_NAME" static-field="ru.it.lecm.errands.ErrandsService.ERRANDS_ROOT_NAME"/>

	<bean id="errandsService" class="ru.it.lecm.errands.beans.ErrandsServiceImpl" parent="baseBean"
	      depends-on="nodeService, documentService">
		<property name="nodeService" ref="nodeService"/>
		<property name="documentService" ref="documentService"/>
		<property name="serviceRegistry" ref="ServiceRegistry"/>
		<property name="authService" ref="authenticationService"/>
		<property name="transactionService" ref="transactionService"/>
		<property name="orgstructureService" ref="serviceOrgstructure"/>
		<property name="folders">
			<map>
				<entry key="#{ERRANDS_ROOT_ID}" value="#{ERRANDS_ROOT_NAME}"/>
			</map>
		</property>
	</bean>

	<bean id="errandsScript" parent="baseScript" class="ru.it.lecm.errands.scripts.ErrandsWebScriptBean"
	      depends-on="nodeService, errandsService">
		<property name="extensionName">
			<value>errands</value>
		</property>
		<property name="errandsService" ref="errandsService"/>
	</bean>

    <bean id="errandsStatusesFilter" parent="documentStatusesFilter">
        <property name="defaultFilters">
            <map>
                <entry key="lecm-errands:document" value="Все"/>
            </map>
        </property>
        <property name="filters">
            <map>
                <entry key="lecm-errands:document">
                    <map>
                        <entry key="Все" value="!Отменено, !Удалено, !Исполнено, !Не исполнено"/>
                        <entry key="Ожидает исполнения" value="Ожидает исполнения"/>
                        <entry key="Исполняется" value="Исполняется"/>
                        <entry key="На утверждении" value="На утверждении, На утверждении Контроллером"/>
                        <entry key="Неисполненные" value="Не исполнено"/>
                        <entry key="Исполненные" value="Исполнено"/>
                    </map>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="errandsAccessPermissions" parent="documentsPermissions">
        <property name="permissions">
            <map>
                <entry key="lecm-errands:document">
                    <list>
                        <value>ERRANDS_READER</value>
                    </list>
                </entry>
            </map>
        </property>
    </bean>

	<bean id="errandsOnCreateAssocsPolicy" class="ru.it.lecm.errands.policy.ErrandsOnCreateAssocsPolicy"
	      parent="logicEcmAssociationPolicy" init-method="init">
    </bean>

	<bean id="errands.exportSettingsInitializer" parent="dictionary.exportSettingsInitializer" class="ru.it.lecm.dictionary.beans.ExportSettingsInitializerBean">
		<constructor-arg>
			<map>
				<entry key="lecm-errands-dic:errand-titles">
					<list>
						<value>cm:name</value>
						<value>lecm-errands-dic:errand-title-code</value>
					</list>
				</entry>
			</map>
		</constructor-arg>
	</bean>

    <bean  id="errandsConnectionPolicy" class="ru.it.lecm.errands.policy.ErrandsConnectionPolicy"
           init-method="init" depends-on="documents.LogicEcmModelsBootstrap, errands.dictionaries.LogicEcmModelsBootstrap">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="dictionaryService" ref="serviceDictionary"/>
        <property name="documentConnectionService" ref="documentConnectionService"/>
    </bean>

    <bean  id="errandsPolicy" class="ru.it.lecm.errands.policy.ErrandsPolicy"
           init-method="init" depends-on="documents.LogicEcmModelsBootstrap, errands.dictionaries.LogicEcmModelsBootstrap"
           p:nodeService-ref="nodeService">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="nodeService" ref="nodeService"/>
    </bean>

    <bean id="contract.defaultStatemachine" parent="defaultStatemachines">
        <property name="statemachineName" value="lecm-errands:document" />
        <property name="path" value="alfresco/module/${artifactId}/models/lecm-errands-default-statemacine.xml" />
    </bean>

    <bean id="errandsWorkflowBootstrap" parent="workflowDeployer" depends-on="contracts.LogicEcmContractsDictionariesBootstrap, statemachine.aspects.LogicEcmModelsBootstrap">
        <property name="workflowDefinitions">
            <list>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-remove-draft.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-create-child-errand.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-request-due-date-change.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-change-executor.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-change-controller.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-change-due-date.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-request-cancel.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-initiator-decline.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-controller-decline.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
                <props>
                    <prop key="engineId">activiti</prop>
                    <prop key="location">alfresco/module/${artifactId}/workflow/lecm-errands-cancel.bpmn20.xml</prop>
                    <prop key="mimetype">text/xml</prop>
                    <prop key="redeploy">true</prop>
                </props>
            </list>
        </property>
        <property name="models">
            <list>
                <value>alfresco/module/${artifactId}/models/lecm-errands-workflow-model.xml</value>
            </list>
        </property>
        <property name="repositoryWorkflowDefsLocations" ref="customWorkflowDefsRepositoryLocation"/>
    </bean>

</beans>
