<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>ru/it/lecm/arm/arm-filters</template-type>
	<components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>Справочник "Фильтры АРМ"</title>
                <filteredLabel>(содержимое отфильтровано)</filteredLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/base/toolbar</url>
            <properties>
                <bubblingLabel>armFilters</bubblingLabel>
                <showSearch>false</showSearch>
                <showCreateBtn>true</showCreateBtn>
                <newRowLabel>label.new-filter.btn</newRowLabel>
                <newRowDialogTitle>label.create-filter.title</newRowDialogTitle>
                <showSearchBlock>false</showSearchBlock>
                <showExSearchBtn>false</showExSearchBtn>
                <showImportXmlBtn>true</showImportXmlBtn>
            </properties>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>datagrid</region-id>
            <url>/lecm/arm/filters/datagrid</url>
            <properties>
                <itemType>lecm-arm:filter</itemType>
                <showActions>true</showActions>
                <bubblingLabel>armFilters</bubblingLabel>
                <fullDelete>true</fullDelete>
                <parent>/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_АРМ/lecm-dic:Фильтры_x0020_АРМ</parent>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/arm/menu</url>
            <properties>
                <selected>filtersDic</selected>
                <onHome>false</onHome>
            </properties>
        </component>
	</components>
</template-instance>