<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:iJab="urn:import:ru.it.lecm.im.client.ui">
	<ui:style>
		
	</ui:style>
	<g:FlowPanel styleName="ijab-chat">
		<g:HTMLPanel styleName="ijab-chat-header ui-widget-subheader">
			<div class="ijab-user">
				<a class="ijab-user-pic" ui:field="picElement">
					<g:Image ui:field="imgAvatar"></g:Image>
				</a>
				<span class="ijab-user-status" ui:field="userStatusElement" />
			</div>
		</g:HTMLPanel>
		<g:HTMLPanel styleName="ijab-chat-notice-wrap">
			<div class="ijab-chat-notice ui-state-highlight" style="display:none;" ui:field="noticeElement" />
		</g:HTMLPanel>
		<g:FlowPanel styleName="ijab-chat-content">
			<g:FlowPanel styleName="ijab-history">
				<g:FlowPanel styleName="ijab-history-content" ui:field="chatContent"></g:FlowPanel>
			</g:FlowPanel>
		</g:FlowPanel>
		
		<g:HTMLPanel styleName="ijab-chat-actions pull-down">
			<div class="ijab-chat-tool-content">
				<iJab:EmoticonsPanel ui:field="emotionsPanel"></iJab:EmoticonsPanel>
			</div>
			<div class="ijab-chat-tools ui-helper-clearfix ui-state-default">
				<a title="Emotions" ui:field="emotElement">
					<em class="ijab-icon ijab-icon-emot" />
				</a>
				<a title="Clean" ui:field="cleanElement">
					<em class="ijab-icon ijab-icon-clear" />
				</a>
				<a title="History" ui:field="historyElement">
					<em class="ijab-icon ijab-icon-history" />
				</a>
				<g:HTMLPanel styleName="ijab-chat-status ijab-gray" ui:field="chatStatusPanel" />
			</div>
			<table class="ijab-chat-t" cellspacing="0">
				<tbody>
					<tr>
						<td style="vertical-align: top;">
							<em class="ijab-icon ijab-icon-chat"/>
						</td>
						<td style="vertical-align: top; width: 100%;"> 
							<div class="ijab-chat-input-wrap">
								<g:TextArea styleName="ijab-chat-input ijab-gray" ui:field="msgInput">Input message here, press Enter to send</g:TextArea>
							</div>
						</td>
					</tr>					
				</tbody>
			</table>
		</g:HTMLPanel>
	</g:FlowPanel>
</ui:UiBinder> 