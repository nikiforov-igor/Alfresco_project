<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>ru/it/lecm/dictionary/dictionary</template-type>
	<components>
		<component>
			<region-id>left-panel</region-id>
			<url>/lecm/dictionary/tree</url>
		<properties>
				<dictionaryName>{dic}</dictionaryName>
			</properties>
		</component>
		<!-- Title -->
		<component>
			<region-id>title</region-id>
			<url>/lecm/base/title-with-filter-label</url>
			<properties>
				<title>Справочники > Справочник "{dic}"</title>
				<filteredLabel>(содержимое отфильтровано)</filteredLabel>
			</properties>
		</component>
		<!-- Toolbar -->
		<component>
			<region-id>toolbar</region-id>
			<url>/lecm/dictionary/toolbar</url>
			<properties>
				<pagination>true</pagination>
				<dictionaryName>{dic}</dictionaryName>
			</properties>
		</component>
        <!-- Datagrid -->
        <component>
            <region-id>datagrid</region-id>
            <url>/lecm/dictionary/datagrid</url>
        <properties>
		        <plane>{plane}</plane>
		        <dictionaryName>{dic}</dictionaryName>
	        </properties>
        </component>
		<!-- Menu -->
		<component>
			<region-id>menu</region-id>
			<url>/lecm/dictionary/menu</url>
            <properties>
                <selected>dictionaries</selected>
            </properties>
		</component>
	<component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
	</components>
</template-instance>