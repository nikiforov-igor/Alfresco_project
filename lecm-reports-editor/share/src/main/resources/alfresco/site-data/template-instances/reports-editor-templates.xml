<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/reports-editor/reports-editor</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.lecm.reports-editor.templates</title>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/reports-editor/toolbar</url>
            <properties>
                <itemType>lecm-rpeditor:reportTemplate</itemType>
                <bubblingLabel>report-templates</bubblingLabel>
                <showSearch>false</showSearch>
                <showCreateBtn>true</showCreateBtn>
                <newRowLabel>label.new-template.btn</newRowLabel>
                <newRowDialogTitle>label.create-template.title</newRowDialogTitle>
            </properties>
        </component>
        <!-- DataGrid -->
        <component>
            <region-id>content</region-id>
            <url>/lecm/base/datagrid</url>
            <properties>
                <itemType>lecm-rpeditor:reportTemplate</itemType>
                <bubblingLabel>report-templates</bubblingLabel>
                <showActions>true</showActions>
                <parent>/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Редактор_x0020_Отчетов/cm:Шаблоны</parent>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/reports-editor/menu</url>
            <properties>
                <selected>templatesList</selected>
            </properties>
        </component>
    </components>
</template-instance>