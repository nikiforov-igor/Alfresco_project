<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmSaAt:sequentialApprovalTaskModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Approve task model for sequential approvement</description>
	<author>vlevin</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval/sequential/approve-task/1.0" prefix="lecmSaAt"/>
	</namespaces>

	<types>
        <type name="lecmSaAt:approveTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <properties>
                <property name="lecmSaAt:approveTaskResult">
                    <type>d:text</type>
                    <default>Reject</default>
                    <constraints>
                       <constraint name="lecmSaAt:approveTaskResultConstraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>APPROVED</value> <!-- согласован -->
									<value>APPROVED_WITH_REMARK</value> <!-- согласован с замечанием -->
									<value>REJECTED</value> <!-- отклонен -->
								</list>
							</parameter>
						</constraint>
                    </constraints>
                </property>
            </properties>
			<associations>
				<association name="lecmSaAt:approveTaskCommentAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
            <overrides>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.it.ru/logicECM/model/approval/sequential/approve-task/1.0}approveTaskResult</default>
                </property>
            </overrides>
        </type>
	</types>
</model>
