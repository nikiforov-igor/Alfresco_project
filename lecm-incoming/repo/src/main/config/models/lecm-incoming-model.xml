<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-incoming:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Входящие</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.it.ru/lecm/document/aspects/1.0" prefix="lecm-document-aspects"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <import uri="http://www.it.ru/logicECM/links/1.0" prefix="lecm-links"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/1.0" prefix="lecm-doc-dic"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/deliveryMethod/1.0" prefix="lecm-doc-dic-dm"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/docType/1.0" prefix="lecm-doc-dic-dt"/>
        <import uri="http://www.it.ru/logicECM/document/dictionaries/fileRegister/1.0" prefix="lecm-doc-dic-fr"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/incoming/1.0" prefix="lecm-incoming"/>
	</namespaces>

    <constraints>
        <constraint name="lecm-incoming:present-string-constraint" type="ru.it.lecm.documents.constraints.PresentStringConstraint">
            <parameter name="presentString">
                <value><![CDATA[{cm:name}]]></value>
            </parameter>
        </constraint>
        <constraint name="lecm-incoming:attachment-categories" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Входящее</value>
                    <value>Прочее</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="lecm-incoming:author-property-constraint" type="ru.it.lecm.documents.constraints.AuthorPropertyConstraint">
            <parameter name="authorProperty">
                <value>lecm-document:creator-ref</value>
            </parameter>
        </constraint>
	    <constraint name="lecm-incoming:arm-url-constraint" type="ru.it.lecm.documents.constraints.ArmUrlConstraint">
		    <parameter name="armUrl">
			    <value>documents-list?doctype=lecm-incoming:document</value>
		    </parameter>
	    </constraint>
    </constraints>

    <types>
		<type name="lecm-incoming:document">
			<title>Logic Ecm Incoming Document</title>
			<parent>lecm-document:base</parent>
			<properties>
                <property name="lecm-incoming:note">
                    <title>Примечание</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:title">
                    <title>Заголовок</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Содержание-->
				<property name="lecm-incoming:summaryContent">
                    <title>Содержание</title>
					<type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
				</property>
                <!--На контроле-->
                <property name="lecm-incoming:is-on-control">
                    <title>На контроле</title>
                    <type>d:boolean</type>
                </property>
                <!--Нерегистрируемый-->
                <property name="lecm-incoming:is-not-registered">
                    <title>Нерегистрируемый</title>
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <!--Исходящий номер-->
                <property name="lecm-incoming:outgoing-number">
                    <title>Исходящий номер</title>
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <!--Исходящий от-->
                <property name="lecm-incoming:outgoing-date">
                    <title>Исходящий от</title>
                    <type>d:date</type>
                </property>
                <!--Срок исполнения-->
                <property name="lecm-incoming:execution-date">
                    <title>Срок исполнения</title>
                    <type>d:date</type>
                </property>
                <!-- системные свойства-->
                <property name="lecm-incoming:registrator-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:registrator-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:document-type-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:document-type-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:subject-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:subject-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:delivery-method-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-incoming:delivery-method-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
			</properties>
			<associations>
				<!-- Регистратор -->
				<association name="lecm-incoming:registrator-assoc">
                    <title>Регистратор</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
                <!--Вид документа -->
                <association name="lecm-incoming:document-type-assoc">
                    <title>Вид документа</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-dic-dt:documentType</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!--Номенклатура -->
                <association name="lecm-incoming:file-register-assoc">
                    <title>Номенклатура дел</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-dic-fr:level3</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
				<!-- Ссылки -->
				<association name="lecm-incoming:links-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-links:link</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Тематика -->
				<association name="lecm-incoming:subject-assoc">
                    <title>Тематика</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-doc-dic:subjects</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
                <!--Способ доставки -->
                <association name="lecm-incoming:delivery-method-assoc">
                    <title>Способ доставки</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-doc-dic-dm:deliveryMethod</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
				<!-- Получатель (сотрудник или подразделение) -->
				<association name="lecm-incoming:recipient-assoc">
                    <title>Получатель</title>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:cmobject</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
				<!-- Временное хранение ссылок на вложения, загружаемые на форме создания -->
				<association name="lecm-incoming:attachments-temp-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>