<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-review-list:review-list-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>LECM Review List Dictionary Model</description>
    <author>vkuprin</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import base lecm dictionary model -->
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
        <!-- Import base document model -->
        <import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
        <!-- Импорт модели данных оргструктуры -->
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/model/review-list/1.0" prefix="lecm-review-list"/>
    </namespaces>

    
    <types>
        <type name="lecm-review-list:review-list-item">
            <parent>lecm-dic:plane_dictionary_values</parent>
            <properties>
                <property name="lecm-review-list:reviewer-assoc-ref">
                    <type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
                </property>
                <property name="lecm-review-list:reviewer-assoc-text-content">
                    <type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
                </property>
                <property name="lecm-review-list:is-public">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
            </properties>
            <associations>
                <association name="lecm-review-list:reviewer-assoc">
                    <title>Ознакамливающийся</title>
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:cmobject</class>
                        <mandatory>true</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
            <mandatory-aspects>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>
	</types>
</model>