<alfresco-config>

    <!-- Global config section -->
    <config replace="true">
        <flags>
            <!--
               Developer debugging setting to turn on DEBUG mode for client scripts in the browser
            -->
            <client-debug>true</client-debug>
            <!--
               LOGGING can always be toggled at runtime when in DEBUG mode (Ctrl, Ctrl, Shift, Shift).
               This flag automatically activates logging on page load.
            -->
            <client-debug-autologging>false</client-debug-autologging>
        </flags>
    </config>

	<config evaluator="node-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
                    <show id="lecm-dic:active" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
                    <show id="lecm-dic:active" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description_values" force="true"/>
                    <show id="lecm-dic:active_values" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description_values" force="true"/>
                    <show id="lecm-dic:active_values" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>