<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean id="${groupId}.${artifactId}.notificationsBootstrap" parent="dictionaryModelBootstrap"
	      depends-on="ru.it.lecm.notifications.notifications-repo.notificationsBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-notifications-email-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/lecm-notifications-email</value>
			</list>
		</property>
	</bean>

	<bean id="${groupId}.${artifactId}.notificationsTypeEmailBootstrap" parent="lecmDictionaryBootstrap"
	      depends-on="ru.it.lecm.notifications.notifications-repo.notificationsTypesBootstrap, businessJournalLogEventsPolicy">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-notifications-type-email.xml</value>
			</list>
		</property>
	</bean>

	<util:constant id="NOTIFICATIONS_EMAIL_ROOT_ID" static-field="ru.it.lecm.notifications.email.beans.NotificationsEmailChannel.NOTIFICATIONS_EMAIL_ROOT_ID"/>
	<util:constant id="NOTIFICATIONS_EMAIL_ROOT_NAME" static-field="ru.it.lecm.notifications.email.beans.NotificationsEmailChannel.NOTIFICATIONS_EMAIL_ROOT_NAME"/>
	<util:constant id="NOTIFICATIONS_ROOT_NAME" static-field="ru.it.lecm.notifications.beans.NotificationsService.NOTIFICATIONS_ROOT_NAME"/>

	<bean id="notificationEmailChannel" init-method="init" class="ru.it.lecm.notifications.email.beans.NotificationsEmailChannel"
	      depends-on="ServiceRegistry, nodeService, repositoryHelper, notificationsService, transactionService" parent="baseBean">
		<property name="notificationsService" ref="notificationsService"/>
		<property name="actionService" ref="ActionService"/>
		<!-- Автоматическое создание каталогов. -->
		<property name="folders">
			<map>
				<entry key="#{NOTIFICATIONS_EMAIL_ROOT_ID}" value="#{NOTIFICATIONS_ROOT_NAME}/#{NOTIFICATIONS_EMAIL_ROOT_NAME}"/>
			</map>
		</property>
	</bean>

	<bean id="notificationsEmailScript" parent="baseScript" class="ru.it.lecm.notifications.email.scripts.NotificationsEmailWebScriptBean"
	      depends-on="notificationEmailChannel">
		<property name="extensionName">
			<value>notificationsEmail</value>
		</property>
		<property name="notificationsEmailService">
			<ref bean="notificationEmailChannel"/>
		</property>
	</bean>


	<bean id="mailWithAttachment" class="ru.it.lecm.notifications.email.beans.MailActionExecuterWithAttachment" parent="action-executer">

		<property name="queueName" value="outboundMail"/>
		<property name="mailService">
			<ref bean="mailService"></ref>
		</property>
		<property name="templateService" ref="templateService"/>
		<property name="personService">
			<ref bean="personService"></ref>
		</property>
		<property name="authenticationService">
			<ref bean="authenticationService"></ref>
		</property>
		<property name="nodeService">
			<ref bean="nodeService"></ref>
		</property>
		<property name="tenantService">
			<ref bean="tenantService"></ref>
		</property>
		<property name="authorityService">
			<ref bean="authorityService"></ref>
		</property>
		<property name="preferenceService">
			<ref bean="preferenceService"></ref>
		</property>
		<property name="serviceRegistry">
			<ref bean="ServiceRegistry"></ref>
		</property>
		<property name="searchService">
			<ref bean="searchService"></ref>
		</property>
		<property name="namespaceService">
			<ref bean="namespaceService"></ref>
		</property>

		<property name="imageResolver" ref="defaultImageResolver" />
		<property name="validateAddresses">
			<value>${mail.validate.addresses}</value>
		</property>
		<property name="fromAddress">
			<value>${mail.from.default}</value>
		</property>
		<property name="fromEnabled">
			<value>${mail.from.enabled}</value>
		</property>
		<property name="sysAdminParams">
			<ref bean="sysAdminParams"></ref>
		</property>
		<property name="contentService">
			<ref bean="contentService"></ref>
		</property>
		<property name="publicAction" value="false" />
	</bean>

</beans>
