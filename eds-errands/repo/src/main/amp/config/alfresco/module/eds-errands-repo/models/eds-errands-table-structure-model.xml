<?xml version="1.0" encoding="UTF-8"?>
<model name="eds-errands-ts:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Отчёты соисполнителей</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/eds-errands/table-structure/1.0" prefix="eds-errands-ts"/>
    </namespaces>

    <constraints>
        <constraint name="eds-errands-ts:coexecutor-report-status-const" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>ACCEPT</value>
                    <value>DECLINE</value>
                    <value>ONCONTROL</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="eds-errands-ts:coexecutor-report">
            <!--<title>Отчёт соисполнителя</title>-->
            <parent>lecm-document:tableDataRow</parent>
            <properties>
                <!--Дата принятия отчёт-->
                <property name="eds-errands-ts:coexecutor-report-accept-date">
                    <type>d:date</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>

                <!-- Статус -->
                <property name="eds-errands-ts:coexecutor-report-status">
                    <type>d:text</type>
                    <default>ONCONTROL</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                    <constraints>
                        <constraint ref="eds-errands-ts:coexecutor-report-status-const"/>
                    </constraints>
                </property>

                <!-- Текст отчета -->
                <property name="eds-errands-ts:coexecutor-report-text">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
            </properties>
            <associations>
                <!--Соисполнитель-->
                <association name="eds-errands-ts:coexecutor-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!--Вложение-->
                <association name="eds-errands-ts:coexecutor-report-attachment-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:content</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        <type name="eds-errands-ts:coexecutor-reports-table">
            <parent>lecm-document:tableData</parent>
            <overrides>
                <property name="lecm-document:tableDataRowType">
                    <default>eds-errands-ts:coexecutor-report</default>
                </property>
                <property name="lecm-document:pageSize">
                    <default>5</default>
                </property>
            </overrides>
        </type>
    </types>

    <aspects>
        <aspect name="eds-errands-ts:coexecutor-reports-aspect">
            <parent>lecm-document:tableDataAspect</parent>
            <properties>
                <property name="eds-errands-ts:coexecutor-reports-assoc-text-content">
                    <type>d:text</type>
                </property>
                <property name="eds-errands-ts:coexecutor-reports-assoc-ref">
                    <type>d:text</type>
                </property>
            </properties>
            <associations>
                <association name="eds-errands-ts:coexecutor-reports-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>eds-errands-ts:coexecutor-reports-table</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>
</model>