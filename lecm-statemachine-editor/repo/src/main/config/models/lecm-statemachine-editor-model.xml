<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-stmeditor:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM statemachine model for editor</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/statemachine/editor/1.0" prefix="lecm-stmeditor"/>
	</namespaces>

	<types>
		<type name="lecm-stmeditor:statemachine">
			<title>Logic ECM Base Document</title>
			<parent>cm:cmobject</parent>
			<properties>
				<property name="lecm-stmeditor:statemachineId">
					<title>Statemachine ID</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
			<associations>
				<!-- Связь со структурой-->
				<child-association name="lecm-stmeditor:status-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-stmeditor:status</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>
		<type name="lecm-stmeditor:status">
			<title>Logic ECM Base Document</title>
			<parent>cm:cmobject</parent>
			<associations>
				<!-- Связь со структурой-->
				<child-association name="lecm-stmeditor:action-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-stmeditor:action</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>
		<type name="lecm-stmeditor:action">
			<title>Logic ECM Base Document</title>
			<parent>cm:cmobject</parent>
		</type>
	</types>

</model>