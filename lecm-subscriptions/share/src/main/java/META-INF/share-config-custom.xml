							<constraint type="MANDATORY" validation-handler="LogicECM.module.Subscriptions.destinationValidation" event="change"/>
						</constraint-handlers>
					</field>
					<field id="lecm-subscr:notification-type-assoc" set="notification"/>
					<field id="lecm-subscr:description" set="description"/>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-subscr:subscription-to-object">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-subscr:subscription-to-object">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:subscription-object-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="cm:name">
						<control template="/org/alfresco/components/form/controls/hidden.ftl"/>
					</field>
					<field id="lecm-subscr:subscription-object-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
					<field id="lecm-subscr:destination-employee-assoc">
