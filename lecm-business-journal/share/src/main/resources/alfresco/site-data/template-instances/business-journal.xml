<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/business-journal/business-journal</template-type>
    <components>
        <component>
            <region-id>records-grid</region-id>
            <url>/lecm/business-journal/datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>bj-records</bubblingLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/business-journal/toolbar</url>
            <properties>
                <bubblingLabel>bj-records</bubblingLabel>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>true</showExSearchBtn>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.business-journal</title>
                <filteredLabel>page.business-journal.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/business-journal/menu</url>
            <properties>
                <selected>bj-summary</selected>
            </properties>
        </component>
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
    </components>
</template-instance>