<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-workflow-result:workflow-result-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>LECM Worflow Result Model</description>
	<author>vlevin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Импорт модели данных оргструктуры -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/workflow-result/1.0" prefix="lecm-workflow-result"/>
	</namespaces>

	<types>
		<!-- лист результата БП -->
		<type name="lecm-workflow-result:workflow-result-list">
			<parent>cm:folder</parent>
			<properties>
				<!-- дата окончания БП -->
				<property name="lecm-workflow-result:workflow-result-list-complete-date">
					<type>d:date</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- дата начала БП -->
				<property name="lecm-workflow-result:workflow-result-list-start-date">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- номер версии документа, с которой работал БП -->
				<property name="lecm-workflow-result:workflow-result-list-document-version">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<association name="lecm-workflow-result:workflow-result-list-initiator-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
				<child-association name="lecm-workflow-result:workflow-result-list-workflow-result-item-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-workflow-result:workflow-result-item</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>

		<!-- Элемент листа результата БП -->
		<type name="lecm-workflow-result:workflow-result-item">
			<parent>cm:content</parent>
			<properties>
				<!-- дата назаначения задачи -->
				<property name="lecm-workflow-result:workflow-result-item-start-date">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- крайний срок выполения задачи -->
				<property name="lecm-workflow-result:workflow-result-item-due-date">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- дата выполения задачи сотрудником -->
				<property name="lecm-workflow-result:workflow-result-item-finish-date">
					<type>d:date</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!-- атрибуты для того, чтобы можно было сортировать результаты по сотруднику -->
				<property name="lecm-workflow-result:workflow-result-item-employee-assoc-text-content">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-workflow-result:workflow-result-item-employee-assoc-ref">
					<type>d:text</type>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
			</properties>

			<associations>
				<!-- ссылка на элемент справочника "Сотрудники" -->
				<association name="lecm-workflow-result:workflow-result-item-employee-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>
