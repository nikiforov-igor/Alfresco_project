<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmReview:reviewWorkflow" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model for parallel review</description>
	<author>vmalygin</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
		<import uri="http://www.it.ru/logicECM/model/workflow/1.0" prefix="lecm-workflow"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/review/wokflow/1.0" prefix="lecmReview"/>
	</namespaces>

	<constraints>
		<constraint name="lecmReview:reviewTaskResultConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>REVIEWED</value> <!-- ознакомился -->
					<value>NOT_REVIEWED</value> <!-- не ознакомился -->
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecmReview:review">
			<parent>bpm:startTask</parent>
			<properties>
				<property name="lecmReview:noReviewControl">
					<type>d:boolean</type>
					<default>false</default>
				</property>
				<property name="lecmReview:documentAttachmentCategoryName">
					<type>d:text</type>
				</property>
			</properties>
			<mandatory-aspects>
				<aspect>lecm-workflow:assigneesListAspect</aspect>
			</mandatory-aspects>
		</type>

		<type name="lecmReview:reviewTask">
			<parent>bpm:activitiOutcomeTask</parent>
			<properties>
				<property name="lecmReview:reviewTaskResult">
					<type>d:text</type>
					<default>NOT_REVIEWED</default>
					<constraints>
						<constraint ref="lecmReview:reviewTaskResultConstraint" />
					</constraints>
				</property>
			</properties>
			<overrides>
				<property name="bpm:reassignable">
					<default>false</default>
				</property>
				<property name="bpm:packageItemActionGroup">
					<default>edit_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://www.it.ru/logicECM/model/review/wokflow/1.0}reviewTaskResult</default>
				</property>
			</overrides>
		</type>
	</types>
</model>
