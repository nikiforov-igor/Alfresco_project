<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-controls-editor:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Controls editor model</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/controls/editor/1.0" prefix="lecm-controls-editor"/>
	</namespaces>

	<types>
		<type name="lecm-controls-editor:control">
			<parent>cm:folder</parent>
			<properties>
				<property name="lecm-controls-editor:control-id">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-controls-editor:control-template">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-controls-editor:control-default">
					<type>d:boolean</type>
					<default>false</default>
				</property>
			</properties>
			<mandatory-aspects>
				<!--
				 cm:name будет равен lecm-controls-editor:control-id для читаемости в репозитории
				 cm:title будем использовать для хранения localName - имя контрола для отображения
				-->
				<aspect>cm:titled</aspect>
			</mandatory-aspects>
		</type>
		<type name="lecm-controls-editor:control-param">
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-controls-editor:param-id">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-controls-editor:param-value">
					<type>d:text</type>
				</property>
				<property name="lecm-controls-editor:param-mandatory">
					<type>d:boolean</type>
					<default>false</default>
				</property>
				<property name="lecm-controls-editor:param-visible">
					<type>d:boolean</type>
					<default>true</default>
				</property>
			</properties>
			<mandatory-aspects>
				<!--
				 cm:name будет равен lecm-controls-editor:param-id для читаемости в репозитории
				 cm:title будем использовать для хранения localName - имя контрола для отображения
				 cm:description будем использовать для хранения tooltip - подсказка с описанием параметра
				-->
				<aspect>cm:titled</aspect>
			</mandatory-aspects>
		</type>
	</types>
</model>
