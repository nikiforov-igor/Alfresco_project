<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:iJab="urn:import:ru.it.lecm.im.client.ui">
	<ui:style>
	</ui:style>
	<iJab:FocusHTMLPanel styleName="ijab-contactview-item ijab-contactview-item-normal" ui:field="mainWidget" >
		<div class="statusicon">
			<img ui:field="statusIconElement"></img>
		</div>
		<div class="names" ui:field="nameElement">
		    <span ui:field="nameTextElement" class="user-name"></span>
            <span ui:field="msgCounterTextElement" class="msg-count"></span>
            <g:TextBox styleName="ijab-contactview-item-editor" ui:field="nameEditor"></g:TextBox><br/>
            <span ui:field="statusTextElement" class="ijab-gray"></span>
		</div>
		<div class="avatar" ui:field="avatar">
			<a>
				<g:Image ui:field="avatarImg" styleName="ijab-contactviewitem-avatar ijab-offline ui-corner-all"></g:Image>
			</a>
		</div>
	</iJab:FocusHTMLPanel>
</ui:UiBinder> 