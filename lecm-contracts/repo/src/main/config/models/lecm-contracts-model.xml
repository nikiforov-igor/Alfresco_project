<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-contract:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM contracts model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/document/aspects/1.0" prefix="lecm-document-aspects"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <import uri="http://www.it.ru/lecm/contractors/model/contractor/1.0" prefix="lecm-contractor"/>
        <import uri="http://www.it.ru/logicECM/contract/dictionaries/1.0" prefix="lecm-contract-dic"/>
        <import uri="http://www.it.ru/logicECM/dictionary/currency/1.0" prefix="lecm-currency"/>
        <import uri="http://www.it.ru/lecm/contractors/model/representative/1.0" prefix="lecm-representative"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/contract/1.0" prefix="lecm-contract"/>
	</namespaces>

    <constraints>
        <constraint name="lecm-contract:present-string-constraint" type="ru.it.lecm.documents.constraints.PresentStringConstraint">
            <parameter name="presentString">
                <value>{cm:name} к договору {cm:created} от , регистрационный номер {lecm-document:regnum}</value>
            </parameter>
        </constraint>
        <constraint name="lecm-contract:attachment-categories" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Договор</value>
                    <value>Приложения</value>
                    <value>Спецификации</value>
                    <value>Согласование</value>
                    <value>Подписанный договор</value>
                    <value>Другое</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

	<types>
        <type name="lecm-contract:additionalDocument">
            <title>Logic Ecm Additional Contract Document</title>
            <parent>lecm-document:base</parent>
        </type>

		<type name="lecm-contract:document">
			<title>Logic Ecm Contract Document</title>
			<parent>lecm-document:base</parent>
			<properties>
                <property name="lecm-contract:regNumProject">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-contract:regNumSystem">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-contract:regNumContractor">
                    <type>d:text</type>
                </property>
                <property name="lecm-contract:dateRegProjectContracts">
                    <type>d:date</type>
                </property>
                <property name="lecm-contract:dateRegContracts">
                    <type>d:date</type>
                </property>
                <property name="lecm-contract:dateConclusionContracts">
                    <type>d:date</type>
                </property>
                <property name="lecm-contract:summaryContent">
                    <type>d:text</type>
                </property>
                <property name="lecm-contract:signedCounterparty">
                    <type>d:boolean</type>
                </property>
                <property name="lecm-contract:signatoryCounterparty">
                    <type>d:text</type>
                </property>
                <!-- Общая сумма по договору -->
                <property name="lecm-contract:totalSum">
                    <type>d:text</type>
                </property>
                <property name="lecm-contract:startDate">
                    <type>d:date</type>
                </property>
                <property name="lecm-contract:endDate">
                    <type>d:date</type>
                </property>
                <property name="lecm-contract:unlimited">
                    <type>d:boolean</type>
                </property>
                <property name="lecm-contract:locationRegistration">
                    <type>d:text</type>
                </property>
                <property name="lecm-contract:locationContract">
                    <type>d:text</type>
                </property>
                <property name="lecm-contract:partner-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-contract:typeContract-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
			</properties>
            <associations>
                <!-- Контрагенты -->
                <association name="lecm-contract:partner-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-contractor:contractor-type</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Регистратор -->
                <association name="lecm-contract:registrator-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Вид договора -->
                <association name="lecm-contract:typeContract-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-contract-dic:contract-type</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Тематика договора -->
                <association name="lecm-contract:subjectContract-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-contract-dic:contract-subjects</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!-- Причина удаления -->
                <association name="lecm-contract:reasonDelete-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-contract-dic:delete-reason</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                 <!--Представители -->
                <association name="lecm-contract:representative-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-representative:representative-type</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <!--Валюта договора -->
                <association name="lecm-contract:currency-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-currency:currency</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
		</type>
	</types>

</model>