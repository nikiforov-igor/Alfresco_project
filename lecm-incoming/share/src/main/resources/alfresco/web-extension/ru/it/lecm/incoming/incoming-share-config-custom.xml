<alfresco-config>
    <config evaluator="node-type" condition="lecm-incoming:document">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:title"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:is-not-registered"/>
                    <show id="lecm-incoming:outgoing-date"/>
                    <show id="lecm-incoming:execution-date"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:document-type-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                    <show id="lecm-incoming:recipient-assoc"/>
                    <show id="lecm-incoming:delivery-method-assoc"/>
                    <show id="lecm-incoming:file-register-assoc"/>
                </field-visibility>
	            <appearance>
		            <field id="lecm-incoming:recipient-assoc">
			            <control template="/ru/it/lecm/base-share/components/controls/double-association-tree-picker.ftl">
				            <control-param name="firstItemType">lecm-orgstr:employee</control-param>
				            <control-param name="firstRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
				            <control-param name="firstNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
				            <control-param name="firstPlane">true</control-param>
				            <control-param name="firstShowSearch">true</control-param>

				            <control-param name="secondItemType">lecm-orgstr:organization-unit</control-param>
				            <control-param name="secondRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
				            <control-param name="secondNameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
				            <control-param name="secondTreeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
				            <control-param name="secondTreeNodeTitleSubstituteString">{cm:name}</control-param>
				            <control-param name="secondPlane">false</control-param>
				            <control-param name="secondShowSearch">true</control-param>
			            </control>
		            </field>
	            </appearance>
            </form>
            <form id="document">
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                </field-visibility>
            </form>
            <form id="document-dashlet">
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                </field-visibility>
            </form>
            <form id="transfer-right">
                <field-visibility>
                    <show id="lecm-document:employee-ref"/>
                    <show id="lecm-document:istransmit" />
                    <show id="lecm-document:deprive-right" />
                </field-visibility>
                <appearance>

                    <field id="lecm-document:employee-ref" label-id="contract.creator-ref" mandatory="true">
                        <control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="itemType">lecm-orgstr:employee</control-param>
                            <control-param name="employeeAbsenceMarker">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:istransmit" label-id="contract.istransmit" />
                    <field id="lecm-document:deprive-right" label-id="contract.deprive.right" />
                </appearance>
            </form>
            <form id="main-page-dashlets">
                <field-visibility>
                    <show id="line1"/>
                </field-visibility>
                <appearance>
                    <field id="line1">
                        <control template="/ru/it/lecm/documents/controls/document-dashlet-control.ftl">
                            <control-param name="first">/lecm/components/dashlets/document-main;/lecm/components/dashlets/document-members</control-param>
                            <control-param name="second">/lecm/components/dashlets/document-attachments;/lecm/components/dashlets/document-my-tasks</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-incoming:document">
        <forms>
            <form>
	            <!--<create-form template="/ru/it/lecm/base-share/components/form-with-preview.ftl"/>-->
                <field-visibility>
                    <show id="lecm-incoming:attachments-temp-assoc"/>
	                <show id="lecm-incoming:title"/>
                    <show id="lecm-incoming:document-type-assoc"/>
                    <show id="lecm-incoming:delivery-method-assoc"/>
	                <show id="lecm-incoming:recipient-assoc"/>
	                <show id="lecm-incoming:response-to-assoc"/>
	                <show id="lecm-incoming:outgoing-number"/>
	                <show id="lecm-incoming:outgoing-date"/>
	                <show id="lecm-incoming:outgoing-date"/>
	                <show id="lecm-incoming:summaryContent"/>
	                <show id="lecm-incoming:subject-assoc"/>
	                <show id="lecm-incoming:file-register-assoc"/>
	                <show id="lecm-incoming:note"/>
	                <show id="lecm-incoming:execution-date"/>
	                <show id="lecm-incoming:is-on-control"/>
	                <show id="lecm-incoming:is-not-registered"/>
                </field-visibility>
	            <appearance>
		            <set id="incoming0" template="/ru/it/lecm/base-share/components/preview-set.ftl"/>
		            <set id="incoming1" parent="incoming0" />
		            <set id="incoming2" parent="incoming0" />
		            <set id="incoming3" parent="incoming2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
		            <set id="incoming4" parent="incoming2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
		            <set id="incoming5" parent="incoming2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
		            <set id="incoming6" parent="incoming2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
		            <set id="incoming7" parent="incoming2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
		            <set id="incoming8" parent="incoming2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
		            <set id="incoming9" parent="incoming2" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
		            <set id="incoming10" parent="incoming2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>
		            <set id="incoming11" parent="incoming2" template="/ru/it/lecm/base-share/components/2-columns-set-with-nested.ftl"/>

		            <field id="lecm-incoming:attachments-temp-assoc" set="incoming1">
			            <control template="/ru/it/lecm/base-share/components/controls/lecm-uploader-with-preview-control.ftl">
				            <control-param name="directoryName">Вложения</control-param>
				            <control-param name="uploadDirectoryPath">{usertemp}</control-param>
			            </control>
		            </field>

		            <field id="lecm-incoming:title" set="incoming3"/>
		            <field id="lecm-incoming:document-type-assoc" set="incoming4"/>
		            <field id="lecm-incoming:delivery-method-assoc" set="incoming4"/>
		            <field id="lecm-incoming:recipient-assoc" set="incoming5">
			            <control template="/ru/it/lecm/base-share/components/controls/double-association-tree-picker.ftl">
				            <control-param name="firstItemType">lecm-orgstr:employee</control-param>
				            <control-param name="firstRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
				            <control-param name="firstNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
				            <control-param name="firstPlane">true</control-param>
				            <control-param name="firstShowSearch">true</control-param>
				            <control-param name="firstPickerButtonLabel"><![CDATA[<i class='icon-male'></i>]]></control-param>
				            <control-param name="firstPickerButtonTitleCode">title.employee.select</control-param>

				            <control-param name="secondItemType">lecm-orgstr:organization-unit</control-param>
				            <control-param name="secondRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
				            <control-param name="secondNameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
				            <control-param name="secondTreeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
				            <control-param name="secondTreeNodeTitleSubstituteString">{cm:name}</control-param>
				            <control-param name="secondPlane">false</control-param>
				            <control-param name="secondShowSearch">true</control-param>
				            <control-param name="secondPickerButtonLabel"><![CDATA[<i class='icon-building'></i>]]></control-param>
				            <control-param name="secondPickerButtonTitleCode">title.organizationUnit.select</control-param>
			            </control>
		            </field>
		            <field id="lecm-incoming:response-to-assoc" set="incoming5">
			            <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
				            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
				            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
				            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
				            <control-param name="itemType">lecm-contract:document</control-param>
			            </control>
		            </field>

		            <field id="lecm-incoming:outgoing-number" set="incoming6"/>
		            <field id="lecm-incoming:outgoing-date" set="incoming6"/>
		            <field id="lecm-incoming:summaryContent" set="incoming7">
			            <control template="/org/alfresco/components/form/controls/textarea.ftl"/>
		            </field>
		            <field id="lecm-incoming:subject-assoc" set="incoming8"/>
		            <field id="lecm-incoming:file-register-assoc" set="incoming8"/>
		            <field id="lecm-incoming:note" set="incoming9">
			            <control template="/org/alfresco/components/form/controls/textarea.ftl"/>
		            </field>
		            <field id="lecm-incoming:is-on-control" set="incoming10"/>
		            <field id="lecm-incoming:is-not-registered" set="incoming10"/>
		            <field id="lecm-incoming:execution-date" set="incoming11"/>
	            </appearance>
            </form>
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                </field-visibility>
            </form>
            <form id="document-journal">
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="cm:image"/>
                    <show id="lecm-document:present-string"/>
                    <show id="lecm-document:list-present-string"/>
                </field-visibility>
                <appearance>
                    <field id="cm:image" label=" "/>
                    <field id="cm:name" label=" "/>
                    <field id="lecm-document:present-string" label=" "/>
                </appearance>
            </form>
            <form id="search">
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                </field-visibility>
            </form>
            <form id="statemachine-editable-fields">
                <field-visibility>
                    <show id="lecm-incoming:summaryContent"/>
                    <show id="lecm-incoming:note"/>
                    <show id="lecm-incoming:title"/>
                    <show id="lecm-incoming:is-on-control"/>
                    <show id="lecm-incoming:is-not-registered"/>
                    <show id="lecm-incoming:outgoing-date"/>
                    <show id="lecm-incoming:execution-date"/>
                    <show id="lecm-incoming:outgoing-number"/>
                    <show id="lecm-incoming:registrator-assoc"/>
                    <show id="lecm-incoming:document-type-assoc"/>
                    <show id="lecm-incoming:subject-assoc"/>
                    <show id="lecm-incoming:recipient-assoc"/>
                    <show id="lecm-incoming:delivery-method-assoc"/>
                    <show id="lecm-incoming:file-register-assoc"/>
                </field-visibility>
            </form>
        </forms>
    </config>
</alfresco-config>