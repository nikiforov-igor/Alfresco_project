<?xml version='1.0' encoding='UTF-8'?>
<webscript>
    <shortname>delegation-opts</shortname>
    <description>Returns content for delegation options</description>
	<url>/lecm/delegation/opts/content</url>
	<format default="html"/>
	<!--
	 | авторизация отключена умышленно
	 | это сделано потому, что этот скрипт выполняет remote.connect к alfresco
	 | и если авторизация будет активна, то вылезет окошко авторизации
	 | в общем плохо понятно почему так. Вероятно бага альфреско
	-->
    <authentication>none</authentication>
</webscript>
