<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<import resource="classpath:alfresco/module/${artifactId}/context/actions-context.xml"/>
	<import resource="classpath:alfresco/module/${artifactId}/context/service-context.xml"/>
	<import resource="classpath:alfresco/module/${artifactId}/context/extension-context.xml"/>
	<!-- deprecated context, will be removed in the future release -->
	<import resource="classpath*:alfresco/module/${artifactId}/context/deprecated/service-context.xml" />
	<import resource="classpath*:alfresco/module/${artifactId}/context/deprecated/extension-context.xml" />
	<import resource="classpath*:alfresco/module/${artifactId}/context/deprecated/policy-context.xml" />
	<import resource="classpath*:alfresco/module/${artifactId}/context/deprecated/webscript-context.xml" />
</beans>
