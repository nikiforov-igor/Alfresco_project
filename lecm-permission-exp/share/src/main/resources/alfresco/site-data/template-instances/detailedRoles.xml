<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/permExp/detailedRoles</template-type>
    <components>
        
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.BRExp.title</title>
                <filteredLabel>page.BRExp.filteredLabel</filteredLabel>
            </properties>
        </component>
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>true</showExSearchBtn>
                <bubblingLabel>employee</bubblingLabel>
                <newRowLabel>button.new-employee</newRowLabel>
            </properties>
        </component>
        <component>
            <region-id>employees-grid</region-id>
            <url>/lecm/BRExplanation/employees-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>employee</bubblingLabel>
            </properties>
        </component>
    </components>
</template-instance>
