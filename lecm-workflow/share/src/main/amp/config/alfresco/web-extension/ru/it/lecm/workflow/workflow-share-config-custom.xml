<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/scripts/lecm-workflow/workflow-validators.js" />
			</dependencies>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:assignee">
		<forms>
			<form id="parallel">
				<field-visibility>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="sequential">
				<field-visibility>
					<show id="lecm-workflow:assignee-employee-assoc"/>
					<show id="lecm-workflow:assignee-due-date"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-workflow:assignee-order"/>
					<show id="lecm-workflow:assignee-due-date"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:workflow-assignees-list">
		<forms>
			<form id="save">
				<field-visibility>
					<show id="cm:title" force="true"/>
				</field-visibility>
				<appearance>
					<field id="cm:title" mandatory="true">
						<control template="/ru/it/lecm/base-share/components/controls/textfield.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
