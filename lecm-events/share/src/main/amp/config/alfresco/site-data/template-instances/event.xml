<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/events/event</template-type>
    <components>
        <!-- Хэдер -->
        <component>
            <region-id>document-header</region-id>
            <sub-components>
                <sub-component id="default">
                    <evaluations>
                        <evaluation id="lecm-document">
                            <url>/lecm/components/document/header</url>
                            <properties>
                                <nodeRef>{nodeRef}</nodeRef>
                            </properties>
                        </evaluation>
                    </evaluations>
                </sub-component>
            </sub-components>
        </component>

        <!-- Панель дашлетов -->
        <component>
            <region-id>dashlet-panel</region-id>
            <sub-components>
                <sub-component id="default">
                    <evaluations>
                        <evaluation>
                            <url>/lecm/components/form</url>
                            <properties>
                                <itemKind>node</itemKind>
                                <itemId>{nodeRef}</itemId>
                                <mode>view</mode>
                                <submitType>json</submitType>
                                <formUI>false</formUI>
                                <formId>main-page-dashlets</formId>
                                <showCancelButton>false</showCancelButton>
                                <showSubmitButton>false</showSubmitButton>
                            </properties>
                        </evaluation>
                    </evaluations>
                </sub-component>
            </sub-components>
        </component>

        <!-- Комментарии -->
        <component>
            <region-id>comments</region-id>
            <url>/lecm/components/comments/list</url>
            <properties>
                <nodeRef>{nodeRef}</nodeRef>
                <activityType>document</activityType>
            </properties>
        </component>

        <!-- Рейтинг -->
        <component>
            <region-id>rating</region-id>
            <sub-components>
                <sub-component id="default">
                    <evaluations>
                        <evaluation>
                            <url>/lecm/components/document/rating</url>
                            <properties>
                                <nodeRef>{nodeRef}</nodeRef>
                            </properties>
                        </evaluation>
                    </evaluations>
                </sub-component>
            </sub-components>
        </component>

        <!-- Действия -->
        <component>
            <region-id>document-actions</region-id>
            <sub-components>
                <sub-component id="default">
                    <evaluations>
                        <evaluation>
                            <url>/lecm/components/dashlets/document-actions</url>
                            <properties>
                                <nodeRef>{nodeRef}</nodeRef>
                            </properties>
                        </evaluation>
                    </evaluations>
                </sub-component>
            </sub-components>
        </component>

        <component>
            <region-id>actions-common</region-id>
            <url>/components/documentlibrary/actions-common</url>
            <properties>
                <nodeRef>{nodeRef}</nodeRef>
            </properties>
        </component>

        <!-- Вложения -->
        <component>
            <region-id>document-attachments</region-id>
            <url>/lecm/components/document/document-attachments</url>
            <properties>
                <nodeRef>{nodeRef}</nodeRef>
            </properties>
        </component>

        <!-- Связи -->
        <component>
            <region-id>document-connections</region-id>
            <url>/lecm/components/document/connections</url>
            <properties>
                <nodeRef>{nodeRef}</nodeRef>
            </properties>
        </component>

        <!-- Uploaders -->
        <component>
            <region-id>html-upload</region-id>
            <url>/components/upload/html-upload</url>
        </component>
        <component>
            <region-id>flash-upload</region-id>
            <url>/components/upload/flash-upload</url>
        </component>
        <component>
            <region-id>file-upload</region-id>
            <url>/components/upload/file-upload</url>
        </component>
        <component>
            <region-id>dnd-upload</region-id>
            <url>/lecm/components/dnd-upload</url>
        </component>
    </components>
</template-instance>
