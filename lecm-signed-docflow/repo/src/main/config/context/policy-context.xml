<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean init-method="init" id="signingContentVersionChangePolicy"
		  class="ru.it.lecm.signed.docflow.policies.SigningContentVersionChangePolicy"
		  p:policyComponent-ref="policyComponent"
		  p:nodeService-ref="nodeService"/>

	<bean init-method="init" id="signedContentCopyPolicy"
		  class="ru.it.lecm.signed.docflow.policies.SignedContentCopyPolicy"
		  p:policyComponent-ref="policyComponent"
		  p:nodeService-ref="nodeService"/>

	<bean init-method="init" id="signedContentDeletePolicy"
		  class="ru.it.lecm.signed.docflow.policies.SignedContentDeletePolicy"
		  p:policyComponent-ref="policyComponent"
		  p:nodeService-ref="nodeService"
		  p:signedDocflowService-ref="signedDocflowService"/>
</beans>
