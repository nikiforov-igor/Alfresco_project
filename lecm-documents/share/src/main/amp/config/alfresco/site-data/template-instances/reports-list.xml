<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/documents/reports-list</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.reports-list</title>
            </properties>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>reports-grid</region-id>
            <url>/lecm/documents/reports-list-grid</url>
            <properties>
                <itemType>{doctype}</itemType>
            </properties>
        </component>
        <!-- Forbidden -->
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>

        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/documents/documents-list-menu</url>
            <properties>
                <itemType>{doctype}</itemType>
                <selected>reports</selected>
            </properties>
        </component>
    </components>
</template-instance>