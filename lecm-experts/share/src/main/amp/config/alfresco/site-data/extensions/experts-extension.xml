<extension>
    <modules>
        <module>
            <id>Experts On Document Details Page</id>
            <evaluator type="default.extensibility.evaluator"/>
            <auto-deploy>false</auto-deploy>
            <components>
                <component>
                    <scope>template</scope>
                    <region-id>document-actions</region-id>
                    <source-id>document-details</source-id>
                    <sub-components>
                        <sub-component id="experts-component" index="100">
                            <evaluations>
                                <evaluation id="experts-component-add">
                                    <url>/lecm/experts/get</url>
                                    <properties>
                                        <nodeRef>{nodeRef}</nodeRef>
                                    </properties>
                                </evaluation>
                            </evaluations>
                        </sub-component>
                    </sub-components>
                </component>
            </components>
        </module>
    </modules>
</extension>