<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-orgstr-aspects:aspects" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <description>Orgstructure aspects</description>
    <author>DBashmakov</author>
    <published>2014-07-18</published>
    <version>1.0</version>

    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/contractors/model/contractor/1.0" prefix="lecm-contractor"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/lecm/org/structure/aspects/1.0" prefix="lecm-orgstr-aspects"/>
    </namespaces>

    <aspects>
        <!-- маркер. Имеет организацию -->
        <aspect name="lecm-orgstr-aspects:is-organization-aspect"/>

        <!-- аспект Иммет связанного контрагента -->
        <aspect name="lecm-orgstr-aspects:has-linked-organization-aspect">
            <properties>
                <property name="lecm-orgstr-aspects:linked-organization-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-orgstr-aspects:linked-organization-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
            </properties>
            <associations>
                <association name="lecm-orgstr-aspects:linked-organization-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-contractor:contractor-type</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>
</model>
