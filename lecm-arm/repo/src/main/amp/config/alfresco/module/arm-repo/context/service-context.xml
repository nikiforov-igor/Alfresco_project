    </bean>

    <bean name="arm.parents.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.parents.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.parents"/>
    </bean>

    <bean name="arm.arms.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.arms.shared.cache"/>
    </bean>

    <bean name="arm.arms.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.arms.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.arms"/>
    </bean>

    <bean name="arm.types.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.types.shared.cache"/>
    </bean>

    <bean name="arm.types.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.types.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.types"/>
