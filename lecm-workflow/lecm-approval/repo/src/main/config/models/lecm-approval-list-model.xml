<?xml version="1.0" encoding="UTF-8"?>
<!--
 | Модель данных листа согласования
 | lecm-al сокращение от approval list
-->
<model name="lecm-al:approval-list-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>List of approval model</description>
	<author>vmalygin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Импорт модели данных оргструктуры -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.it.ru/logicECM/model/workflow/1.0" prefix="lecm-workflow"/>
		<import uri="http://www.it.ru/logicECM/model/workflow-result/1.0" prefix="lecm-workflow-result"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval-list/1.0" prefix="lecm-al"/>
	</namespaces>

	<types>
		<!-- лист согласования -->
		<type name="lecm-al:approval-list">
			<parent>lecm-workflow-result:workflow-result-list</parent>
			<properties>
				<!-- результат согласования документа -->
				<property name="lecm-al:approval-list-decision">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<default>NO_DECISION</default>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
					<constraints>
						<constraint name="lecm-al:approval-list-decision-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>NO_DECISION</value>
									<value>APPROVED</value> <!-- согласован -->
									<value>REJECTED</value> <!-- отклонен -->
									<value>APPROVED_WITH_REMARK</value> <!-- согласован с замечанием -->
									<value>REJECTED_FORCE</value> <!-- отозван с согласования -->
									<value>APPROVED_FORCE</value> <!-- Согласование принудительно завершено -->
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
		</type>
		<!-- Согласующий сотрудник -->
		<type name="lecm-al:approval-item">
			<parent>lecm-workflow-result:workflow-result-item</parent>
			<properties>
				<!-- Результат согласования сотрудником -->
				<property name="lecm-al:approval-item-decision">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<default>NO_DECISION</default>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
					<constraints>
						<constraint name="lecm-al:approval-item-decision-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>NO_DECISION</value>
									<value>APPROVED</value> <!-- согласован -->
									<value>APPROVED_WITH_REMARK</value> <!-- согласован с замечанием -->
									<value>REJECTED</value> <!-- отклонен -->
									<value>REASSIGNED</value> <!-- задача переназначена -->
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<!-- замечания сотрудника -->
				<property name="lecm-al:approval-item-comment">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<!-- Ссылка на документ, приложенный согласующим сотрудником -->
				<association name="lecm-al:approval-item-comment-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>
