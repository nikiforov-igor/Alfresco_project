<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmSign:signingWorkflow" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model for sequential signing</description>
	<author>vmalygin</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
		<import uri="http://www.it.ru/logicECM/model/workflow/1.0" prefix="lecm-workflow"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/signing/wokflow/1.0" prefix="lecmSign"/>
	</namespaces>

	<constraints>
		<constraint name="lecmSign:signTaskResultConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>NO_DECISION</value> <!-- нет решения -->
					<value>SIGNED</value> <!-- подписано -->
					<value>REJECTED</value> <!-- отклонено -->
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecmSign:signing">
			<parent>bpm:startTask</parent>
			<mandatory-aspects>
				<aspect>lecm-workflow:assigneesListAspect</aspect>
			</mandatory-aspects>
		</type>

		<type name="lecmSign:signTask">
			<parent>bpm:activitiOutcomeTask</parent>
			<properties>
				<property name="lecmSign:signTaskResult">
					<type>d:text</type>
					<default>NO_DECISION</default>
					<constraints>
						<constraint ref="lecmSign:signTaskResultConstraint"/>
					</constraints>
				</property>
			</properties>
			<overrides>
				<property name="bpm:reassignable">
					<default>false</default>
				</property>
				<property name="bpm:packageItemActionGroup">
					<default>edit_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://www.it.ru/logicECM/model/signing/wokflow/1.0}signTaskResult</default>
				</property>
			</overrides>
		</type>
	</types>
</model>
