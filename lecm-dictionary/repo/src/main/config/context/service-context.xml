<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- Registration of dictionary models -->
	<bean id="${groupId}.${artifactId}.dictionary" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-dictionary-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/dictionary</value>
			</list>
		</property>
	</bean>

    <bean id="lecmDictionaryBootstrap" init-method="bootstrap" abstract="true"
          class="ru.it.lecm.dictionary.bootstrap.LecmDictionaryBootstrap" depends-on="dictionaryBootstrap">
        <property name="nodeService" ref="nodeService"/>
        <property name="transactionService" ref="transactionService"/>
	    <property name="namespaceService" ref="namespaceService"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
    </bean>


    <bean id="webscript.ru.it.lecm.dictionary.export.get"
          class="ru.it.lecm.dictionary.export.Export"
          parent="webscript">
        <property name="nodeService" ref="nodeService"/>
	    <property name="namespaceService" ref="namespaceService"/>
    </bean>

    <bean id="webscript.ru.it.lecm.dictionary.export-csv.get"
          class="ru.it.lecm.dictionary.export.ExportCSV"
          parent="webscript">
        <property name="nodeService">
            <ref bean="nodeService" />
        </property>
    </bean>

    <bean id="webscript.ru.it.lecm.dictionary.import.post"
          class="ru.it.lecm.dictionary.imports.Import"
          parent="webscript">
        <property name="nodeService" ref="nodeService"/>
	    <property name="namespaceService" ref="namespaceService"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
    </bean>

	<bean id="webscript.ru.it.lecm.dictionary.api.export.get"
	      class="ru.it.lecm.dictionary.export.ExportAPI"
	      parent="webscript">
		<property name="nodeService" ref="nodeService"/>
		<property name="namespaceService" ref="namespaceService"/>
	</bean>

	<util:constant id="DICTIONARIES_ROOT_ID" static-field="ru.it.lecm.dictionary.beans.DictionaryBean.DICTIONARIES_ROOT_ID"/>
	<util:constant id="DICTIONARIES_ROOT_NAME" static-field="ru.it.lecm.dictionary.beans.DictionaryBean.DICTIONARIES_ROOT_NAME"/>

    <bean id="serviceDictionary" class="ru.it.lecm.dictionary.beans.DictionaryBeanImpl" parent="baseBean">
        <property name="nodeService" ref="nodeService"/>
        <property name="dictionaryService" ref="dictionaryService"/>
		<!-- Автоматическое создание каталогов. -->
		<property name="folders">
			<map>
				<entry key="#{DICTIONARIES_ROOT_ID}" value="#{DICTIONARIES_ROOT_NAME}"/>
			</map>
		</property>
    </bean>

    <bean id="dictionaryScript" parent="baseJavaScriptExtension" class="ru.it.lecm.dictionary.scripts.DictionaryWebScriptBean"
          depends-on="serviceDictionary">
        <property name="extensionName">
            <value>dictionary</value>
        </property>
        <property name="serviceRegistry">
            <ref bean="ServiceRegistry"/>
        </property>
        <property name="dictionaryService">
            <ref bean="serviceDictionary"/>
        </property>
    </bean>

	<bean id="dictionaryLogEventsPolicy" class="ru.it.lecm.dictionary.policy.DictionaryLogEventPolicy"
	      init-method="init">
		<property name="policyComponent">
			<ref bean="policyComponent"/>
		</property>
		<property name="businessJournalService">
			<ref bean="businessJournalService"/>
		</property>
		<property name="dictionaryService">
			<ref bean="serviceDictionary"/>
		</property>
	</bean>
</beans>
