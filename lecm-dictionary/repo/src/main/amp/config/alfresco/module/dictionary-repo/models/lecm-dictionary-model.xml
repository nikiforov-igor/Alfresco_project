<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-dic:dictionaryStructure" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>dictionary</description>
	<author>MShafeev</author>
	<published>2012-08-23</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
	</namespaces>

	<types>

		<!--Описание справочника-->
		<type name="lecm-dic:dictionary">
			<title>Information guide</title>
			<parent>cm:folder</parent>
			<properties>
				<property name="lecm-dic:description">
					<title>Description</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
				</property>
				<property name="lecm-dic:type">
					<title>Type</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
				</property>
                <property name="lecm-dic:attributeForShow">
                    <title>Attribute for show</title>
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <default>cm:name</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
				<property name="lecm-dic:plane">
					<title>Plane</title>
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<default>true</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
				</property>
			</properties>
            <mandatory-aspects>
                <aspect>lecm-dic:aspect_active</aspect>
            </mandatory-aspects>
		</type>

		<!--Значения плоского справочника-->
		<type name="lecm-dic:plane_dictionary_values">
			<title>Dictionary values</title>
			<parent>cm:content</parent>
            <mandatory-aspects>
                <aspect>lecm-dic:aspect_active</aspect>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
		</type>

        <type name="lecm-dic:big_plane_dictionary_values">
            <title>Dictionary values</title>
            <parent>cm:content</parent>
            <mandatory-aspects>
                <aspect>lecm-dic:aspect_active</aspect>
            </mandatory-aspects>
        </type>

        <!--Значения иерархического справочника-->
        <type name="lecm-dic:hierarchical_dictionary_values">
            <title>Dictionary values</title>
            <parent>cm:folder</parent>
            <properties>
		        <property name="lecm-dic:valueContainsType">
			        <type>d:text</type>
			        <mandatory>true</mandatory>
		        </property>
	        </properties>
            <mandatory-aspects>
                <aspect>lecm-dic:aspect_active</aspect>
                <aspect>cm:titled</aspect>
            </mandatory-aspects>
        </type>

	</types>

    <aspects>
        <aspect name="lecm-dic:aspect_active">
            <properties>
                <property name="lecm-dic:active">
                    <title>Active</title>
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>true</default>
                </property>
            </properties>
        </aspect>
    </aspects>
</model>