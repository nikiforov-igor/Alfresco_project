<?xml version='1.0' encoding='UTF-8'?>

<!--
   An example of how user login details can be captured.
-->

<Audit
    xmlns="http://www.alfresco.org/repo/audit/model/3.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.alfresco.org/repo/audit/model/3.2 alfresco-audit-3.2.xsd"
    >

    <DataExtractors>
       <DataExtractor name="simpleValue" registeredName="auditModel.extractor.simpleValue"/>
    </DataExtractors>

    <DataGenerators>
	   <DataGenerator name="personLogin" class="org.alfresco.repo.audit.generator.AuthenticatedUserDataGenerator"/>
    </DataGenerators>

    <PathMappings>
        <PathMap source="/alfresco-api/post/AuthenticationService/authenticate" target="/authAudit/error"/>
        <!-- <PathMap source="/alfresco-api/post/AuthenticationService/getCurrentTicket" target="/authAudit/login"/> -->
        <PathMap source="/alfresco-api/post/AuthenticationService/authenticate" target="/authAudit/login"/>
        <PathMap source="/alfresco-api/pre/ticketComponent/invalidateTicketById" target="/authAudit/logout"/>
    </PathMappings>

    <Application name="AuthAudit" key="authAudit">
        <AuditPath key="error">
            <AuditPath key="error">
                <RecordValue key="user" dataExtractor="simpleValue" dataSource="/authAudit/error/args/userName"/>
            </AuditPath>    
        </AuditPath>
        <AuditPath key="login">
            <AuditPath key="no-error">
                <!-- <GenerateValue key="user" dataGenerator="personLogin"/> -->
                <RecordValue key="user" dataExtractor="simpleValue" dataSource="/authAudit/login/args/userName"/>
            </AuditPath>
        </AuditPath>
		<AuditPath key="logout">
            <AuditPath key="args">
                <GenerateValue key="user" dataGenerator="personLogin"/>
            </AuditPath>
		</AuditPath>	
    </Application>

    

</Audit>
