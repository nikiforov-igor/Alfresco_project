<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-events-ts:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Табличные данные мероприятий</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <import uri="http://www.it.ru/logicECM/events/dictionaries/1.0" prefix="lecm-events-dic"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/events/table-structure/1.0" prefix="lecm-events-ts"/>
    </namespaces>

    <constraints>
        <constraint name="lecm-events-ts:members-status-constraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>EMPTY</value>
                    <value>CONFIRMED</value>
                    <value>DECLINED</value>
                    <value>REQUEST_NEW_TIME</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="lecm-events-ts:resources-status-constraint" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>EMPTY</value>
                    <value>CONFIRMED</value>
                    <value>DECLINED</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
        <type name="lecm-events-ts:members">
            <title>Участники</title>
            <parent>lecm-document:tableDataRow</parent>
            <properties>
                <property name="lecm-events-ts:members-status">
                    <type>d:text</type>
                    <default>EMPTY</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                    <constraints>
                        <constraint ref="lecm-events-ts:members-status-constraint"/>
                    </constraints>
                </property>
                <property name="lecm-events-ts:members-decline-reason">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events-ts:members-from-date">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events-ts:members-to-date">
                    <type>d:datetime</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-events-ts:members-all-day">
                    <type>d:boolean</type>
                </property>
            </properties>
            <associations>
                <association name="lecm-events-ts:members-employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        <type name="lecm-events-ts:membersTable">
            <title>Таблица участников</title>
            <parent>lecm-document:tableData</parent>
            <overrides>
                <property name="lecm-document:tableDataRowType">
                    <default>lecm-events-ts:members</default>
                </property>
                <property name="lecm-document:pageSize">
                    <default>5</default>
                </property>
            </overrides>
        </type>

        <type name="lecm-events-ts:resources">
            <title>Ресурсы</title>
            <parent>lecm-document:tableDataRow</parent>
            <properties>
                <property name="lecm-events-ts:resources-status">
                    <type>d:text</type>
                    <default>EMPTY</default>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                    <constraints>
                        <constraint ref="lecm-events-ts:resources-status-constraint"/>
                    </constraints>
                </property>
            </properties>
            <associations>
                <association name="lecm-events-ts:resources-data-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-events-dic:resources</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        <type name="lecm-events-ts:resourcesTable">
            <title>Таблица ресурсов</title>
            <parent>lecm-document:tableData</parent>
            <overrides>
                <property name="lecm-document:tableDataRowType">
                    <default>lecm-events-ts:resources</default>
                </property>
                <property name="lecm-document:pageSize">
                    <default>5</default>
                </property>
            </overrides>
        </type>
    </types>
    <aspects>
        <aspect name="lecm-events-ts:members-table-aspect">
            <parent>lecm-document:tableDataAspect</parent>
            <properties>
                <property name="lecm-events-ts:members-assoc-text-content">
                    <type>d:text</type>
                </property>
            </properties>
            <associations>
                <association name="lecm-events-ts:members-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-events-ts:membersTable</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
        <aspect name="lecm-events-ts:resources-table-aspect">
            <parent>lecm-document:tableDataAspect</parent>
            <properties>
                <property name="lecm-events-ts:resources-assoc-text-content">
                    <type>d:text</type>
                </property>
            </properties>
            <associations>
                <association name="lecm-events-ts:resources-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-events-ts:resourcesTable</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>
</model>