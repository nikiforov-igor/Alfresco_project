<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<!-- Registration of dictionary models -->
	<bean id="${groupId}.${artifactId}.dictionary" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-dictionary-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/dictionary</value>
			</list>
		</property>
	</bean>

	<bean id="dictionary.LogicEcmDictionaryCurrencyModelBootstrap" parent="dictionaryModelBootstrap"
	      depends-on="dictionaryBootstrap, ru.it.lecm.dictionary.dictionary-repo.dictionary">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-dictionary-currency-model.xml</value>
			</list>
		</property>
	</bean>

    <bean id="lecmDictionaryExportBean" class="ru.it.lecm.dictionary.beans.XMLExportBeanImpl">
        <property name="nodeService" ref="nodeService"/>
        <property name="namespaceService" ref="namespaceService"/>
        <property name="exportSettings" ref="dictionary.exportSettings"/>
        <property name="contentService" ref="contentService"/>
        <property name="lecmMessageService" ref="lecmMessageService"/>
    </bean>

    <bean id="lecmDictionaryImportBean" class="ru.it.lecm.dictionary.beans.XMLImportBeanImpl">
        <property name="nodeService" ref="nodeService"/>
        <property name="namespaceService" ref="namespaceService"/>
        <property name="dictionaryService" ref="dictionaryService"/>
        <property name="repositoryHelper" ref="repositoryHelper"/>
	    <property name="contentService" ref="contentService"/>
	    <property name="mimetypeService" ref="mimetypeService"/>
        <property name="searchService" ref="searchService"/>
    </bean>

    <bean id="lecmDictionaryBootstrap" abstract="true" parent="baseBean"
          class="ru.it.lecm.dictionary.bootstrap.LecmDictionaryBootstrap" depends-on="dictionaryBootstrap">
        <property name="dictionaryBean" ref="serviceDictionary"/>
        <property name="xmlImportBean" ref="lecmDictionaryImportBean"/>
        <property name="repositoryHelper" ref="repositoryHelper"/>
        <property name="bootstrapOnStart" value="#{new Boolean('${lecm.dictionaries.bootstrapOnStart}')}"/>
    </bean>

    <bean id="webscript.ru.it.lecm.dictionary.export.get"
          class="ru.it.lecm.dictionary.export.Export"
          parent="webscript">
        <property name="xmlExportBean" ref="lecmDictionaryExportBean"/>
    </bean>

    <bean id="webscript.ru.it.lecm.dictionary.import.post"
          class="ru.it.lecm.dictionary.imports.Import"
          parent="webscript">
		<property name="dictionaryBean" ref="serviceDictionary"/>
        <property name="xmlImportBean" ref="lecmDictionaryImportBean"/>
	    <property name="transactionService" ref="transactionService"/>
	    <property name="dictionaryService" ref="dictionaryService"/>
	    <property name="namespaceService" ref="namespaceService"/>
    </bean>

	<bean id="webscript.ru.it.lecm.dictionary.api.export.get"
	      class="ru.it.lecm.dictionary.export.ExportAPI"
	      parent="webscript">
        <property name="xmlExportBean" ref="lecmDictionaryExportBean"/>
	</bean>

	<util:constant id="DICTIONARIES_ROOT_ID" static-field="ru.it.lecm.dictionary.beans.DictionaryBean.DICTIONARIES_ROOT_ID"/>
	<util:constant id="DICTIONARIES_ROOT_NAME" static-field="ru.it.lecm.dictionary.beans.DictionaryBean.DICTIONARIES_ROOT_NAME"/>

    <bean id="serviceDictionary" class="ru.it.lecm.dictionary.beans.DictionaryBeanImpl" parent="baseBean">
        <property name="dictionaryService" ref="dictionaryService"/>
	    <property name="searchService" ref="searchService"/>
	    <property name="namespaceService" ref="namespaceService"/>
		<!-- Автоматическое создание каталогов. -->
		<property name="folders">
			<map>
				<entry key="#{DICTIONARIES_ROOT_ID}" value="#{DICTIONARIES_ROOT_NAME}"/>
			</map>
		</property>
    </bean>

    <bean id="dictionaryScript" parent="baseScript" class="ru.it.lecm.dictionary.scripts.DictionaryWebScriptBean"
          depends-on="serviceDictionary">
        <property name="extensionName">
            <value>dictionary</value>
        </property>
        <property name="dictionaryService">
            <ref bean="serviceDictionary"/>
        </property>
        <property name="namespaceService" ref="namespaceService"/>
    </bean>

	<bean id="dictionaryLogEventsPolicy" class="ru.it.lecm.dictionary.policy.DictionaryLogEventPolicy"
	      init-method="init">
		<property name="policyComponent">
			<ref bean="policyComponent"/>
		</property>
		<property name="businessJournalService">
			<ref bean="businessJournalService"/>
		</property>
		<property name="dictionaryService">
			<ref bean="serviceDictionary"/>
		</property>
		<property name="nodeService">
			<ref bean="nodeService"/>
		</property>
	</bean>

	<bean id="dictionary.LogicEcmDictionaryCurrencyBootstrap" parent="lecmDictionaryBootstrap">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-dictionary-currency.xml</value>
			</list>
		</property>
	</bean>

    <bean id="dictionary.LogicEcmDictionaryRolesBootstrap" parent="lecmDictionaryBootstrap"
          depends-on="ru.it.lecm.orgstructure.orgstructure-repo.orgBootstrap">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-dictionary-roles-items.xml</value>
			</list>
		</property>
	</bean>

    <bean id="dictionary.exportSettings" class="ru.it.lecm.dictionary.beans.ExportSettingsHolder">
        <property name="namespaceService" ref="namespaceService"/>
        <property name="dictionaryService" ref="dictionaryService"/>
        <property name="dictionaryBean" ref="serviceDictionary"/>
        <property name="fileFolderService" ref="fileFolderService"/>
    </bean>

    <bean id="dictionary.exportSettingsInitializer" abstract="true" class="ru.it.lecm.dictionary.ExportSettingsInitializer" init-method="init">
        <property name="exportSettings" ref="dictionary.exportSettings"/>
    </bean>

    <bean id="dictionary.exportSettingsInitializer.model" parent="dictionary.exportSettingsInitializer" class="ru.it.lecm.dictionary.beans.ExportSettingsInitializerBean">
        <constructor-arg>
            <map>
                <entry key="lecm-dic:dictionary">
                    <list>
                        <value>cm:name</value>
                        <value>lecm-dic:attributeForShow</value>
                        <value>lecm-dic:type</value>
                        <value>lecm-dic:plane</value>
                        <value>lecm-dic:description</value>
                    </list>
                </entry>
                <entry key="lecm-currency:currency">
                    <list>
                        <value>cm:name</value>
                        <value>cm:title</value>
                        <value>lecm-currency:digital-code</value>
                        <value>lecm-currency:alphabetic-code</value>
                        <value>lecm-currency:ml-alphabetic-code</value>
                    </list>
                </entry>
                <entry key="lecm-notification-template:template">
                    <list>
                        <value>lecm-notification-template:template-assoc</value>
                    </list>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="listOfUsedDictionaryTypes" parent="listOfUsedTypes">
        <property name="types">
            <map>
                <entry key="lecm-currency:currency" value="Валюта"/>
            </map>
        </property>
    </bean>

	<!-- Настройки прав доступа на каталоги в рамках сервиса -->
	<bean id="${groupId}.${artifactId}.doctionariesServicePermissions" parent="ServiceFolderPermissionHelper"
	      depends-on="${groupId}.${artifactId}.dictionary, serviceDictionary" >
		<property name="serviceBean" ref="serviceDictionary"/>
		<property name="permissionsList">
			<list>
				<value>alfresco/module/${artifactId}/permissions/directories-permissions.xml</value>
			</list>
		</property>
	</bean>

    <bean id="dictionary.arm.settings.LogicEcmBootstrap" parent="lecmDictionaryBootstrap"
          depends-on="arm.settings.LogicEcmBootstrap">
        <property name="rootPath" value="/Business platform/LECM/Сервис АРМ"/>
        <property name="dictionaries">
            <list>
                <value>alfresco/module/${artifactId}/arm/dictionary-settings-arm.xml</value>
            </list>
        </property>
    </bean>

    <bean id="dictionary.ConfigToRepositoryLoader" parent="configsToRepositoryLoader">
        <property name="configs">
            <list>
                <value>alfresco/module/dictionary-repo/reports/configs/dictionaries.properties</value>
            </list>
        </property>
    </bean>

    <bean id="bigPlaneDictionaryPolicy" init-method="init" class="ru.it.lecm.dictionary.policy.BigPlaneDictionaryPolicy" parent="baseBean">
        <property name="policyComponent" ref="policyComponent"/>
        <property name="dictionaryBean" ref="serviceDictionary"/>
        <property name="counterFactoryImpl" ref="regNumbersCounterFactory"/>
    </bean>
</beans>
