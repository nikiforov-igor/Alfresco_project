<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-forms-editor:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Forms Editor Model</description>
	<author>AIvkin</author>
	<published>2013-11-18</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/forms/editor/1.0" prefix="lecm-forms-editor"/>
	</namespaces>

	<constraints>
		<constraint name="lecm-forms-editor:attr-for-mode-constraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>view</value>
					<value>edit</value>
					<value>create</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="lecm-forms-editor:boolean-constraint" type="LIST">
			<parameter name="caseSensitive">
				<value>false</value>
			</parameter>
			<parameter name="allowedValues">
				<list>
					<value></value>
					<value>true</value>
					<value>false</value>
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<!--Описание формы-->
		<type name="lecm-forms-editor:form">
			<parent>cm:folder</parent>
			<properties>
				<property name="lecm-forms-editor:id">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-forms-editor:form-evaluator">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-forms-editor:form-id">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:form-template">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:fill-by-default">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<default>false</default>
				</property>
			</properties>
		</type>

		<!--Описание аттрибута формы-->
		<type name="lecm-forms-editor:attr">
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-forms-editor:attr-name">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-title">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-index">
					<type>d:int</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-tab">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-set">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-control">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-mandatory">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<constraints>
						<constraint ref="lecm-forms-editor:boolean-constraint"/>
					</constraints>
				</property>
				<property name="lecm-forms-editor:attr-for-mode">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<constraints>
						<constraint ref="lecm-forms-editor:attr-for-mode-constraint"/>
					</constraints>
				</property>
				<property name="lecm-forms-editor:attr-description">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-help">
					<type>d:text</type>
					<mandatory>false</mandatory>
				</property>
				<property name="lecm-forms-editor:attr-read-only">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<constraints>
						<constraint ref="lecm-forms-editor:boolean-constraint"/>
					</constraints>
				</property>
			</properties>
		</type>
	</types>
</model>
