            <form>
                <field-visibility>
                    <!-- Заголовок -->
                    <show id="lecm-events:title"/>
                    <!-- Весмь день -->
                    <show id="lecm-events:all-day"/>
                    <!-- Дата начала мероприятия -->
                    <show id="lecm-events:from-date"/>
                    <!-- Дата окончания мероприятия -->
                    <show id="lecm-events:to-date"/>
