<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<css src="/css/lecm-workflow/result-list.css" />
				<js src="/scripts/lecm-workflow/lecm-package-items-finder.js" />
			</dependencies>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:route">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:route-to-employee-assoc"/>

					<show id="lecm-workflow:fake-workflow-list-1" force="true"/>
					<!--<show id="lecm-workflow:fake-workflow-list-2" force="true"/>-->

					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
				<appearance>
					<field id="cm:title"/>
					<field id="lecm-workflow:route-to-employee-assoc"/>

					<!-- Первый контрол списков -->
					<field id="lecm-workflow:fake-workflow-list-1">
						<control template="/ru/it/lecm/workflow/controls/button-add.ftl">
							<control-param name="workflowType">SIGNING</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="concurrencyInputName"></control-param>
							`							<!--<control-param name="concurrency"></control-param>&lt;!&ndash; PARALLEL | SEQUENTIAL &ndash;&gt;-->
						</control>
					</field>

					<!-- Второй контрол списков -->
					<!--<field id="lecm-workflow:fake-workflow-list-2">-->
					<!--<control template="/ru/it/lecm/workflow/controls/button-add.ftl">-->
					<!--<control-param name="asdf">zxcv</control-param>-->
					<!--</control>-->
					<!--</field>-->

					<field id="lecm-workflow:is-register-after-signed"/>
				</appearance>
			</form>

			<form id="datagrid">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:route-to-employee-assoc"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
			</form>

			<form id="createNewCommonRouteForm">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:route-to-employee-assoc"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
			</form>

			<form id="createNewPrivateRouteForm">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:route-to-employee-assoc"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-workflow:route"></config>

	<config evaluator="model-type" condition="lecm-workflow:assignee">
		<forms>
			<form id="parallel">
				<field-visibility>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" substituteString="{lecm-orgstr:employee-short-name}">
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="sequential">
				<field-visibility>
					<show id="lecm-workflow:assignee-due-date"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" substituteString="{lecm-orgstr:employee-short-name}">
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-workflow:assignee-order"/>
					<show id="lecm-workflow:assignee-due-date"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:workflow-assignees-list">
		<forms>
			<form id="save">
				<field-visibility>
					<show id="cm:title" force="true" mandatory="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>