<alfresco-config>

    <config>
        <forms>
            <dependencies>
                <js src="/scripts/lecm-dictionary/dictionary-datagrid.js"/>
            </dependencies>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
                    <show id="lecm-dic:attributeForShow" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
					<show id="lecm-dic:attributeForShow" force="true"/>
					<show id="lecm-dic:plane" force="true"/>
				</field-visibility>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" />
					<show id="lecm-dic:description" />
					<show id="lecm-dic:plane"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:plane_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>

            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" />
                </field-visibility>
            </form>
		</forms>
	</config>

    <config evaluator="node-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:hierarchical_dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
				</field-visibility>
			</form>

            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" />
                </field-visibility>
            </form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-currency:currency">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-currency:alphabetic-code" force="true"/>
					<show id="lecm-currency:digital-code" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>