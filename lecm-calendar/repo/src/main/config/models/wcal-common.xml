<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-wcal:wcal-common" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Worker absence Data Model</description>
	<author>Vsevolod Levin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Import Org Structure Model Definitions -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<!-- Import Dictionary Model Definitions -->
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.it.ru/logicECM/model/work-calendar/calendar/1.0" prefix="lecm-cal"/>
		<import uri="http://www.it.ru/logicECM/model/work-calendar/absence/1.0" prefix="lecm-absence"/>
		<import uri="http://www.it.ru/logicECM/model/work-calendar/schedule/1.0" prefix="lecm-sched"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/work-calendar/1.0" prefix="lecm-wcal"/>
	</namespaces>
	<types>
		<!-- Дынные сущности будут играть роль папки для календарей, расписаний и отсутствий. -->
		<type name="lecm-wcal:wcal-container">
			<parent>cm:folder</parent>
			<associations>
				<child-association name="lecm-wcal:container-calendar-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-cal:calendar</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>
		<type name="lecm-wcal:absence-container">
			<parent>cm:folder</parent>
			<associations>
				<child-association name="lecm-wcal:container-absence-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-absence:absence</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>
		<type name="lecm-wcal:schedule-container">
			<parent>cm:folder</parent>
			<associations>
				<child-association name="lecm-wcal:container-schedule-assoc">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-sched:schedule</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>
		</type>
	</types>
</model>