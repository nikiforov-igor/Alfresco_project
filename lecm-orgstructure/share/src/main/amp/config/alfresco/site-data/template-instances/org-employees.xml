<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/org-employees</template-type>
    <components>
        <component>
            <region-id>employees-grid</region-id>
            <url>/lecm/orgstructure/employees-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>employee</bubblingLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>true</showExSearchBtn>
                <bubblingLabel>employee</bubblingLabel>
                <newRowLabel>button.new-employee</newRowLabel>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.org-employees</title>
                <filteredLabel>page.orgstructure.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
            <properties>
                <selected>employees</selected>
            </properties>
        </component>
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>
    </components>
</template-instance>