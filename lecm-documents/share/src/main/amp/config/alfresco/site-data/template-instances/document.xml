<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>ru/it/lecm/documents/document</template-type>
   <components>
      <!-- Заголовок -->
      <component>
         <region-id>title</region-id>
         <sub-components>
            <sub-component id="default">
               <evaluations>
                  <evaluation id="lecm-document">
                     <url>/lecm/components/document/title</url>
                     <properties>
	                     <nodeRef>{nodeRef}</nodeRef>
                     </properties>
                  </evaluation>
               </evaluations>
            </sub-component>
         </sub-components>
      </component>

      <!-- Хэдер -->
      <component>
         <region-id>document-header</region-id>
         <sub-components>
            <sub-component id="default">
               <evaluations>
                  <evaluation id="lecm-document">
                     <url>/lecm/components/document/header</url>
                     <properties>
                        <nodeRef>{nodeRef}</nodeRef>
                     </properties>
                  </evaluation>
               </evaluations>
            </sub-component>
         </sub-components>
      </component>

       <!-- Панель дашлетов -->
      <component>
           <region-id>dashlet-panel</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/form</url>
                           <properties>
                               <itemKind>node</itemKind>
                               <itemId>{nodeRef}</itemId>
                               <mode>view</mode>
                               <submitType>json</submitType>
                               <formUI>false</formUI>
                               <formId>main-page-dashlets</formId>
                               <showCancelButton>false</showCancelButton>
                               <showSubmitButton>false</showSubmitButton>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

       <!-- Основные сведения -->
       <component>
           <region-id>metadata</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/dashlets/document-main</url>
                           <properties>
                               <nodeRef>{nodeRef}</nodeRef>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

       <!-- Вложения -->
       <component>
           <region-id>attachments</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/dashlets/document-attachments</url>
                           <properties>
                               <nodeRef>{nodeRef}</nodeRef>
	                           <view>{view}</view>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

       <!-- Участники -->
       <component>
           <region-id>members</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/dashlets/document-members</url>
                           <properties>
                               <nodeRef>{nodeRef}</nodeRef>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

      <!-- Комментарии -->
      <component>
         <region-id>comments</region-id>
         <url>/lecm/components/document/comments</url>
         <properties>
            <nodeRef>{nodeRef}</nodeRef>
            <activityType>document</activityType>
         </properties>
      </component>

      <!-- Рейтинг -->
      <component>
         <region-id>rating</region-id>
          <sub-components>
              <sub-component id="default">
                  <evaluations>
                      <evaluation>
                          <url>/lecm/components/document/rating</url>
                          <properties>
                              <nodeRef>{nodeRef}</nodeRef>
                          </properties>
                      </evaluation>
                  </evaluations>
              </sub-component>
          </sub-components>
      </component>

       <!-- Действия -->
       <component>
           <region-id>document-actions</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/dashlets/document-actions</url>
                           <properties>
                               <nodeRef>{nodeRef}</nodeRef>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

       <!-- Действия с документом-основанием -->
       <component>
           <region-id>base-doc-actions</region-id>
           <sub-components>
               <sub-component id="default">
                   <evaluations>
                       <evaluation>
                           <url>/lecm/components/dashlets/base-doc-actions</url>
                           <properties>
                               <nodeRef>{nodeRef}</nodeRef>
                           </properties>
                       </evaluation>
                   </evaluations>
               </sub-component>
           </sub-components>
       </component>

	   <component>
		   <region-id>actions-common</region-id>
		   <url>/components/documentlibrary/actions-common</url>
		   <properties>
			   <nodeRef>{nodeRef}</nodeRef>
		   </properties>
	   </component>

       <!-- Основные сведения -->
       <component>
           <region-id>document-metadata</region-id>
           <url>/lecm/components/document/document-meta</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

       <!-- Вложения -->
       <component>
           <region-id>document-attachments</region-id>
           <url>/lecm/components/document/document-attachments</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

       <!-- Бизнес-процессы -->
       <component>
           <region-id>document-workflows</region-id>
           <url>/lecm/components/document/document-workflows</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

       <!-- История -->
       <component>
           <region-id>document-history</region-id>
           <url>/lecm/components/document/document-history</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

       <!-- Связи -->
       <component>
           <region-id>document-connections</region-id>
           <url>/lecm/components/document/connections</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

       <!-- Печатные формы-->
       <component>
           <region-id>document-forms</region-id>
           <url>/lecm/components/document/forms</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

      <!-- Метки -->
      <component>
         <region-id>document-tags</region-id>
         <sub-components>
            <sub-component id="default">
               <evaluations>
                  <evaluation>
                     <url>/lecm/components/document/document-tags</url>
                     <properties>
                        <nodeRef>{nodeRef}</nodeRef>
                     </properties>
                  </evaluation>
               </evaluations>
            </sub-component>
         </sub-components>
      </component>

       <!-- Участники документа -->
       <component>
           <region-id>document-members</region-id>
           <url>/lecm/components/document/document-members</url>
           <properties>
               <nodeRef>{nodeRef}</nodeRef>
           </properties>
       </component>

      <!-- Участие в ЮЗД -->
      <component>
         <region-id>document-signed-docflow</region-id>
         <url>/lecm/components/document/document-signed-docflow</url>
         <properties>
            <nodeRef>{nodeRef}</nodeRef>
         </properties>
      </component>

		<!-- Информация об адресанте -->
		<component>
			<region-id>addresser-info</region-id>
		</component>

		<!-- Информация об обращении -->
		<component>
			<region-id>appeal-info</region-id>
		</component>

      <!-- Uploaders -->
      <component>
         <region-id>html-upload</region-id>
         <url>/components/upload/html-upload</url>
      </component>
      <component>
         <region-id>flash-upload</region-id>
         <url>/components/upload/flash-upload</url>
      </component>
      <component>
         <region-id>file-upload</region-id>
         <url>/components/upload/file-upload</url>
      </component>
	  <component>
	     <region-id>dnd-upload</region-id>
	     <url>/lecm/components/dnd-upload</url>
	  </component>
   </components>
</template-instance>
