<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean parent="spacesStoreImporter">
		<property name="useExistingStore" value="true"/>
		<property name="bootstrapViews">
			<list>
				<props>
					<prop key="uuidBinding">UPDATE_EXISTING</prop>
					<prop key="path">/${spaces.company_home.childname}/${spaces.dictionary.childname}</prop>
					<prop key="location">alfresco/module/${artifactId}/acp/bootstrap-forms-editor.xml</prop>
					<prop key="messages">alfresco/module/${artifactId}/messages/bootstrap-forms-editor</prop>
				</props>
			</list>
		</property>
	</bean>
<!-- *************************************************************************************************************** -->
	<bean id="webscript.ru.it.lecm.namespaces.get" class="ru.it.lecm.NamespacesGet" parent="webscript">
      <property name="namespaceService" ref="NamespaceService"/>
	</bean>

	<bean id="formsEditor.modelBootstrap" parent="dictionaryModelBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-forms-editor-model.xml</value>
				<value>alfresco/module/${artifactId}/models/lecm-controls-editor-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/forms-editor</value>
				<value>alfresco/module/${artifactId}/messages/controls-editor</value>
			</list>
		</property>
	</bean>

	<util:constant id="FORMS_EDITOR_ROOT_ID" static-field="ru.it.lecm.modelEditor.beans.FormsEditorBeanImpl.FORMS_EDITOR_ROOT_ID"/>

	<bean id="formsEditorService" class="ru.it.lecm.modelEditor.beans.FormsEditorBeanImpl" parent="baseBean"
	      depends-on="nodeService, transactionService">
		<property name="repository" ref="repositoryHelper"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="folders">
			<map>
				<entry key="#{FORMS_EDITOR_ROOT_ID}" value="Сервис Редактор форм"/>
			</map>
		</property>
	</bean>

	<bean id="formsEditorScript" parent="baseScript"
	      class="ru.it.lecm.modelEditor.scripts.FormsEditorWebScriptBean"
	      depends-on="formsEditorService">
		<property name="extensionName">
			<value>formsEditor</value>
		</property>
		<property name="formsEditorService">
			<ref bean="formsEditorService"/>
		</property>
	</bean>

	<bean id="modelListService" class="ru.it.lecm.modelEditor.beans.ModelsListBeanImpl" parent="baseBean"
	      depends-on="repositoryHelper, dictionaryService">
		<property name="repository" ref="repositoryHelper"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="contentService" ref="ContentService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="documentService" ref="documentService"/>
		<property name="lecmModelsService" ref="lecmModelsService"/>
		<property name="models" ref="dictionaryBootstrapPostProcessor"/>
	</bean>

	<bean id="modelListScript" parent="baseScript"
	      class="ru.it.lecm.modelEditor.scripts.ModelsListWebScriptBean"
	      depends-on="modelListService">
		<property name="extensionName">
			<value>modelsList</value>
		</property>
		<property name="modelListService">
			<ref bean="modelListService"/>
		</property>
	</bean>

    <bean id="webscript.ru.it.lecm.subclasses.get" class="org.alfresco.repo.web.scripts.dictionary.SubClassesGet" parent="webscript.dictionary"/>

    <bean id="modelUpdatePolicy" class="ru.it.lecm.modelEditor.policy.UpdateModelPolicy" init-method="init">
        <property name="propertiesService" ref="propertiesService"/>
        <property name="policyComponent" ref="policyComponent"/>
    </bean>
<!-- *************************************************************************************************************** -->
	<util:constant id="CONTROLS_EDITOR_ROOT_ID" static-field="ru.it.lecm.modelEditor.beans.ControlsEditorBeanImpl.CONTROLS_EDITOR_ROOT_ID"/>

	<bean id="controlsEditorService" class="ru.it.lecm.modelEditor.beans.ControlsEditorBeanImpl" parent="baseBean">
		<property name="versionService" ref="versionService"/>
		<property name="cociService" ref="checkOutCheckInService"/>
		<property name="contentService" ref="contentService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="folders">
			<map>
				<entry key="#{CONTROLS_EDITOR_ROOT_ID}" value="Сервис Редактор контролов"/>
			</map>
		</property>
	</bean>

	<bean class="ru.it.lecm.modelEditor.scripts.ControlsEditorWebScriptBean" parent="baseScript">
		<property name="extensionName" value="controlsEditor"/>
		<property name="controlsEditorService" ref="controlsEditorService"/>
	</bean>

	<bean id="webscript.ru.it.lecm.model.item.get" class="ru.it.lecm.modelEditor.scripts.ModelItemScript" parent="webscript">
		<property name="contentService" ref="contentService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="modelListService" ref="modelListService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="nodeService" ref="nodeService"/>
	</bean>
	
	<bean id="dictionaryBootstrapPostProcessor" class="ru.it.lecm.modelEditor.beans.DictionaryBootstrapPostProcessor"/>

</beans>
