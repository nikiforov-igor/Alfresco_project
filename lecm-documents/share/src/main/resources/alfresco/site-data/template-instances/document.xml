<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>ru/it/lecm/documents/document</template-type>
   <components>
      <!-- Заголовок -->
      <!--<component>
         <region-id>title</region-id>
         <sub-components>
            <sub-component id="default">
               <evaluations>
                  <evaluation id="lecm-document">
                     <url>/components/title/simple-title</url>
