<alfresco-config>
	<config evaluator="node-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
                    <show id="lecm-dic:active" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description" force="true"/>
					<show id="lecm-dic:type" force="true"/>
                    <show id="lecm-dic:active" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-dic:dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description_values" force="true"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-dic:dictionary_values">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
                    <show id="lecm-dic:description_values" force="true"/>
				</field-visibility>
			</form>

            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" />
                    <show id="lecm-dic:description_values" />
                    <show id="lecm-dic:active_values" />
                </field-visibility>
            </form>
		</forms>
	</config>
</alfresco-config>