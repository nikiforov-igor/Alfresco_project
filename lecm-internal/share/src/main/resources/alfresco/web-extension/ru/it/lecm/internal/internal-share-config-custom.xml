<alfresco-config>
    <config>
        <forms>
            <default-controls>
                <type name="association:lecm-internal-doc-type:dictionary" template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                        <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_внутреннего_x0020_документа</control-param>
                        <control-param name="nameSubstituteString">{cm:name}</control-param>
                        <control-param name="showCreateNewLink">true</control-param>
                        <control-param name="showCreateNewButton">true</control-param>
                        <control-param name="endpointType">lecm-internal-doc-type:dictionary</control-param>
                </type>
            </default-controls>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-internal:document">
        <forms>
            <!-- Форма для модального представления -->
            <form id="internal-modal">
                <field-visibility>
                    <show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date" force="true"/>
                    <show id="lecm-document:creator"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-document-aspects:attachments-temp-assoc"/>
                    <show id="lecm-internal:full-form" force="true" for-mode="view"/>
                </field-visibility>
                <appearance>
                    <set id="header" appearance=""  template="/org/alfresco/components/form/3-column-set.ftl"/>
                    <set id="content" appearance=""/>
                    <set id="uploader" appearance=""/>

                    <field id="lecm-document:regnum" set="header"/>
                    <field id="lecm-document-aspects:reg-data-date" set="header"/>
                    <field id="lecm-document:creator" set="header"/>

                    <field id="lecm-eds-document:summaryContent" set="content">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl"/>
                    </field>

                    <field id="lecm-document-aspects:attachments-temp-assoc" set="uploader" label="Вложения">
                        <control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control.ftl">
                            <control-param name="uploadDirectoryPath">{usertemp}</control-param>
                            <control-param name="directoryName">Вложения</control-param>
                        </control>
                    </field>

                    <field id="lecm-internal:full-form" set="full-form">
                        <control template="/ru/it/lecm/internal/controls/simple-doc-link-control.ftl">
                            <control-param name="text">К полной форме</control-param>
                        </control>
                    </field>

                </appearance>
            </form>
            <!-- Форма редатирования-->
            <form>
                <view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <edit-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <field-visibility>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date"/>
                    <show id="lecm-document:creator"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-internal:doc-type-assoc"/>
                    <show id="lecm-eds-document:execution-date"/>
                    <show id="lecm-internal:recipients-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-document-aspects:response-to-assoc"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
	                <show id="lecm-document-aspects:reg-project-data-number"/>
	                <show id="lecm-document-aspects:reg-project-data-date"/>
	                <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-internal:approval-list"/><!-- Листы согласования-->
                    <show id="lecm-internal:signing-list"/>	<!-- Листы подписания-->
                    <show id="lecm-internal:style-for-approval-and-signing-tab"/>
                    <show id="lecm-internal-table-structure:answers-assoc"/>
                </field-visibility>
                <appearance>
                    <set id="common" appearance="" label="Атрибуты" /> <!-- tab1 -->
                    <set id="approval-and-signing" appearance="" label="Согласование/подписание" /> <!-- tab2 -->
                    <set id="answers" appearance="" label="Ответы" />
                    <set id="exist-permissions" parent="approval-and-signing" appearance="~_lecmPerm_InnerAttrList" template="/ru/it/lecm/base-share/components/exist-bussines-role.ftl" />
                    <set id="header" parent="common" template="/org/alfresco/components/form/3-column-set.ftl"/>
                    <set id="title" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
                    <set id="typeAndDate" parent="common" template="/org/alfresco/components/form/2-column-set.ftl" />
                    <set id="recipients" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
                    <set id="content" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
                    <set id="responseTo" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
                    <set id="subjectAndRegister" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
                    <set id="note" parent="common" template="/ru/it/lecm/base-share/components/full-width-set.ftl"/>
	                <set id="footer" parent="common" template="/org/alfresco/components/form/3-column-set.ftl"/>

                    <field id="lecm-eds-document:note" set="note">
                        <control template="/org/alfresco/components/form/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:regnum" set="header"/>
                    <field id="lecm-document-aspects:reg-data-date" set="header"/>
                    <field id="lecm-document:creator" set="header" readonly="true"/>
                    <field id="lecm-document:title" set="title"/>

                    <field id="lecm-internal:doc-type-assoc" set="typeAndDate"/>
                    <field id="lecm-eds-document:execution-date" set="typeAndDate">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Approval.workflowFormValidator" event="keyup"/>
                        </constraint-handlers>
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
                    </field>

                    <field id="lecm-internal:recipients-assoc" set="recipients">
                        <control template="/ru/it/lecm/base-share/components/controls/double-association-tree-picker.ftl">
                            <control-param name="firstItemType">lecm-orgstr:employee</control-param>
                            <control-param name="firstRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="firstNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
                            <control-param name="firstPlane">true</control-param>
                            <control-param name="firstShowSearch">true</control-param>
                            <control-param name="firstPickerButtonLabel"><![CDATA[<i class='icon-male'></i>]]></control-param>
                            <control-param name="firstPickerButtonTitleCode">title.employee.select</control-param>

                            <control-param name="secondItemType">lecm-orgstr:organization-unit</control-param>
                            <control-param name="secondRootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="secondNameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="secondTreeNodeTitleSubstituteString">{cm:name}</control-param>
                            <control-param name="secondPlane">false</control-param>
                            <control-param name="secondShowSearch">true</control-param>
                            <control-param name="secondPickerButtonLabel"><![CDATA[<i class='icon-building'></i>]]></control-param>
                            <control-param name="secondPickerButtonTitleCode">title.organizationUnit.select</control-param>
                        </control>
                    </field>

                    <field id="lecm-eds-document:summaryContent" set="content">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl"/>
                    </field>

                    <field id="lecm-document-aspects:response-to-assoc" set="responseTo">
                        <control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
                            <control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
                            <control-param name="itemType">lecm-internal:document</control-param>
                        </control>
                    </field>

                    <field id="lecm-document:subject-assoc" mandatory="true" set="subjectAndRegister"/>

                    <field id="lecm-eds-document:file-register-assoc" set="subjectAndRegister"/>

                    <field id="lecm-document-aspects:reg-project-data-number" set="footer"/>
                    <field id="lecm-document-aspects:reg-project-data-date" set="footer"/>
	                <field id="lecm-document-aspects:is-shared-folder" set="footer">
		                <control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
	                </field>

                    <field id="lecm-internal:approval-list" set="exist-permissions" label="Согласование">
                        <control template="/ru/it/lecm/workflow/approval/controls/approval-list-datagrid-control.ftl">
                            <control-param name="approvalItemsDatagridId">internal-datagrid</control-param>
                        </control>
                    </field>

                    <field id="lecm-internal:signing-list" set="approval-and-signing" label="Подписание">
                        <control template="/ru/it/lecm/workflow/signing/controls/signing-list-datagrid-control.ftl">
                            <control-param name="datagridFormId">internal</control-param>
                        </control>
                    </field>

                    <field id="lecm-internal:style-for-approval-and-signing-tab" set="approval-and-signing">
                        <control template="/ru/it/lecm/base-share/components/controls/">
                            <control-param name="css">.tab-approval-and-signing { height: auto !important; }</control-param>
                        </control>
                    </field>

                    <field id="lecm-internal-table-structure:answers-assoc" set="answers">
                        <control template="/ru/it/lecm/documents/controls/document-table-control.ftl">
                            <control-param name="datagridFormId">answers-datagrid</control-param>
                            <control-param name="isTableSortable">false</control-param>
                            <control-param name="refreshAfterCreate">true</control-param>
                            <control-param name="toolbar">false</control-param>
                            <control-param name="showActions">false</control-param>
                            <control-param name="showCreateButton">false</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <!-- Форма с набором полей для правой области (Общие сведения) на карточке документа-->
            <form id="document">
                <field-visibility>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:recipients-assoc"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-eds-document:execution-date"/>
                    <show id="lecm-statemachine:status"/>
                </field-visibility>
            </form>
            <!-- Форма с набором полей для дашлета Общие сведения на карточке документа-->
            <form id="document-dashlet">
                <field-visibility>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:recipients-assoc"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-eds-document:execution-date"/>
                    <show id="lecm-statemachine:status"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-statemachine:status">
                        <control template="/ru/it/lecm/documents/controls/history/status-history.ftl"/>
                    </field>
                </appearance>
            </form>
            <!-- Форма просмотра на главной странице-->
	        <form id="main-page-dashlets">
		        <field-visibility>
			        <show id="viewMetadata"/>
		        </field-visibility>
		        <appearance>
			        <field id="viewMetadata">
				        <control template="/ru/it/lecm/documents/controls/document-view-metadata-control.ftl"/>
			        </field>
		        </appearance>
	        </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-internal-table-structure:answer">
