<alfresco-config>

    <config evaluator="node-type" condition="lecm-additional-document:additionalDocument">
        <forms>
            <!-- Форма редактирования-->
            <form id="edit">
                <field-visibility>
                    <show id="lecm-base-dummy-aspects:script2" force="true"/>
                    <show id="lecm-additional-document:additionalDocumentType"/>
                    <show id="lecm-document:regnum"/>
                    <show id="lecm-additional-document:date"/>
                    <show id="lecm-additional-document:signedCounterparty"/>
                    <show id="lecm-additional-document:summaryContent"/>
                    <show id="lecm-signing-v2-aspects:signed-on-paper"/>
                    <show id="lecm-signing-v2-aspects:signerEmployeeAssoc" force="true"/>
                    <show id="lecm-signing-v2-aspects:signingDate" force="true"/>
                    <show id="lecm-base-dummy-aspects:script" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-base-dummy-aspects:script2">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-signing-v2/change-availability-of-signing-fields-script.js</control-param>
                        </control>
                    </field>
                    <field id="lecm-additional-document:additionalDocumentType"/>
                    <field id="lecm-document:regnum"/>
                    <field id="lecm-additional-document:date"/>
                    <field id="lecm-additional-document:signedCounterparty"/>
                    <field id="lecm-additional-document:summaryContent">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl"/>
                    </field>
                    <field id="lecm-signing-v2-aspects:signed-on-paper">
                        <control>
                            <control-param name="changeFireAction">actionsVisibilityChange</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="fireMandatoryByChange">true</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:signerEmployeeAssoc">
                        <control>
                            <control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=LECM_SIGNERS,LECM_ES_SIGNERS</control-param>
                            <control-param name="endpointMany">true</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="changeItemsFireAction">mandatoryControlValueUpdated</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name}</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change" message-id="Alfresco.forms.validation.mandatory.message"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:signingDate">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="showTime">false</control-param>
                            <control-param name="hideByDefault">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-base-dummy-aspects:script">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/check-allow-signing-on-paper-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">allowSigningOnPaperScript</control-param>
                        </control>
                    </field>
                </appearance>
            </form>

            <!-- Форма просмотра-->
            <form>
                <field-visibility>
                    <show id="lecm-additional-document:document-assoc"/>
                    <show id="lecm-additional-document:additionalDocumentType"/>
                    <show id="lecm-document:regnum"/>
                    <show id="lecm-additional-document:date"/>
                    <show id="lecm-additional-document:signedCounterparty"/>
                    <show id="lecm-additional-document:summaryContent"/>
                    <show id="lecm-signing-v2-aspects:signed-on-paper" force="true"/>
                    <show id="lecm-signing-v2-aspects:signerEmployeeAssoc" force="true"/>
                    <show id="lecm-signing-v2-aspects:isSigned" force="true"/>
                    <show id="lecm-signing-v2-aspects:signingDate" force="true"/>
                    <show id="lecm-base-dummy-aspects:script" force="true"/>
                    <show id="lecm-base-dummy-aspects:script2" force="true"/>
                </field-visibility>
                <appearance>
                    <set id="common" appearance="" label-id="label.contracts.main" />
                    <field id="lecm-additional-document:document-assoc" set="common">
                        <control template="/ru/it/lecm/contracts/controls/associationItem.ftl">
                            <control-param name="nameSubstituteString">{lecm-document:regnum}</control-param>
                        </control>
                    </field>
                    <field id="lecm-additional-document:additionalDocumentType" set="common"/>
                    <field id="lecm-document:regnum" set="common"/>
                    <field id="lecm-additional-document:date" set="common"/>
                    <field id="lecm-additional-document:signedCounterparty" set="common"/>
                    <field id="lecm-additional-document:summaryContent" set="common">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl"/>
                    </field>
                    <field id="lecm-signing-v2-aspects:signed-on-paper" set="common">
                        <control>
                            <control-param name="changeFireAction">actionsVisibilityChange</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="fireMandatoryByChange">true</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:signerEmployeeAssoc" set="common">
                        <control>
                            <control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=LECM_SIGNERS,LECM_ES_SIGNERS</control-param>
                            <control-param name="endpointMany">true</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="changeItemsFireAction">mandatoryControlValueUpdated</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name}</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change" message-id="Alfresco.forms.validation.mandatory.message"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:isSigned" set="common"/>
                    <field id="lecm-signing-v2-aspects:signingDate" set="common">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="showTime">false</control-param>
                            <control-param name="hideByDefault">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-base-dummy-aspects:script" set="common">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/check-allow-signing-on-paper-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">allowSigningOnPaperScript</control-param>
                        </control>
                    </field>
                    <field id="lecm-base-dummy-aspects:script2" set="common">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-signing-v2/change-availability-of-signing-fields-script.js</control-param>
                        </control>
                    </field>
                </appearance>
            </form>

            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-statemachine:status"/>
                    <show id="lecm-additional-document:additionalDocumentType"/>
                    <show id="lecm-document:regnum"/>
                </field-visibility>
            </form>

            <!-- Область навигации -->
            <form id="navigation-pane">
                <field-visibility>
                    <show id="attributes"/>
                    <show id="approvalAndSigning"/>
                    <show id="attachments"/>
                    <show id="errands"/>
                    <show id="connections"/>
                    <show id="members"/>
                    <show id="tags"/>
                    <show id="history"/>
                    <show id="reports"/>
                    <show id="comments"/>
                </field-visibility>
                <appearance>
                    <field id="attributes">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/attributes-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/form</control-param>
                            <control-param name="nodeLabel">Атрибуты</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_AttrList")</control-param>
                        </control>
                    </field>
                    <field id="approvalAndSigning">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/signing-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/approval-and-signing</control-param>
                            <control-param name="nodeLabel">Согласование и подписание</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_AttrList")</control-param>
                        </control>
                    </field>
                    <field id="attachments">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/attachments-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/attachments</control-param>
                            <control-param name="nodeLabel">Вложения</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_ContentList")</control-param>
                        </control>
                    </field>
                    <field id="errands">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/errands-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/errands</control-param>
                            <control-param name="nodeLabel">Поручения</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_LinksView")</control-param>
                        </control>
                    </field>
                    <field id="connections">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/connections-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/connections-list</control-param>
                            <control-param name="nodeLabel">Связи</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_LinksView")</control-param>
                            <control-param name="uri_excludeType">lecm-errands:document</control-param>
                        </control>
                    </field>
                    <field id="members">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/members-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/members-list</control-param>
                            <control-param name="nodeLabel">Участники документа</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_MemberList")</control-param>
                        </control>
                    </field>
                    <field id="tags">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/tags-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/tags-list</control-param>
                            <control-param name="nodeLabel">Метки</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_TagView")</control-param>
                        </control>
                    </field>
                    <field id="history">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/history-40.png</control-param>
                            <control-param name="uri">/lecm/components/document/history-datagrid</control-param>
                            <control-param name="nodeLabel">История</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_HistoryView")</control-param>
                            <control-param name="uri_showSecondaryCheckBox">true</control-param>
                            <control-param name="uri_hideCollapseButton">false</control-param>
                            <control-param name="uri_dataSource">lecm/business-journal/ds/history</control-param>
                        </control>
                    </field>
                    <field id="reports">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/print-forms-40.png</control-param>
                            <control-param name="nodeLabel">Печатные формы</control-param>
                            <control-param name="uri">/lecm/components/document/forms</control-param>
                        </control>
                    </field>
                    <field id="comments">
                        <control template="/ru/it/lecm/documents/controls/navigation-item-control.ftl">
                            <control-param name="iconSrc">/document-page/comments-40.png</control-param>
                            <control-param name="uri">/lecm/components/comments/list</control-param>
                            <control-param name="nodeLabel">Комментарии</control-param>
                            <control-param name="nodeExpression">user.currentUser().hasPermission(doc.getNodeRef(), "_lecmPerm_CommentView")</control-param>
                            <control-param name="counterUri">/lecm/document/api/getCommentsCount</control-param>
                            <control-param name="uri_activityType">document</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-additional-document:additionalDocument">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-base-dummy-aspects:script" force="true"/>
                    <show id="lecm-document-aspects:attachments-temp-assoc"/>
                    <show id="lecm-additional-document:additionalDocumentType"/>
                    <show id="lecm-document:regnum"/>
                    <show id="lecm-additional-document:date"/>
                    <show id="lecm-additional-document:signedCounterparty"/>
                    <show id="lecm-additional-document:summaryContent"/>
                    <show id="lecm-signing-v2-aspects:signed-on-paper"/>
                    <show id="lecm-signing-v2-aspects:signerEmployeeAssoc" force="true"/>
                    <show id="lecm-signing-v2-aspects:signingDate" force="true"/>
                    <show id="lecm-document-aspects:template-name" force="true"/>
                    <show id="lecm-document-aspects:template-ref" force="true"/>
                    <show id="lecm-additional-document:document-assoc" force="true"/>
                    <show id="lecm-approval-route:approvalFolder" force="true"/>
                    <show id="lecm-signing-route:signingFolder" force="true"/>
                    <show id="checkAllowSigningOnPaperScript" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-base-dummy-aspects:script">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-signing-v2/change-availability-of-signing-fields-script.js</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:attachments-temp-assoc" label-id="label.attachments">
                        <control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control-with-preview.ftl">
                            <control-param name="uploadDirectoryPath">{usertemp}</control-param>
                            <control-param name="directoryName">Вложения</control-param>
                            <control-param name="suppressRefreshEvent">true</control-param>
                            <control-param name="defaultSelectedShowPreviewButton">true</control-param>
                            <control-param name="categoriesName">["Документ", "Другое"]</control-param>
                        </control>
                    </field>
                    <field id="lecm-signing-v2-aspects:signed-on-paper">
                        <control>
                            <control-param name="changeFireAction">actionsVisibilityChange</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="fireMandatoryByChange">true</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:signerEmployeeAssoc">
                        <control>
                            <control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=LECM_SIGNERS,LECM_ES_SIGNERS</control-param>
                            <control-param name="endpointMany">true</control-param>
                            <control-param name="hideByDefault">true</control-param>
                            <control-param name="changeItemsFireAction">mandatoryControlValueUpdated</control-param>
                            <control-param name="selectedItemsNameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name}</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Signing2.signersValidator" event="change" message-id="Alfresco.forms.validation.mandatory.message"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-signing-v2-aspects:signingDate">
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl">
                            <control-param name="showTime">false</control-param>
                            <control-param name="hideByDefault">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:template-name">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-default-value.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:template-ref">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-default-value.ftl"/>
                    </field>
                    <field id="lecm-additional-document:document-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
                    </field>
                    <field id="lecm-approval-route:approvalFolder" label-id="label.forms.approval">                
                        <control template="/ru/it/lecm/routes-v2/controls/routes-datagrid-control.ftl">
                            <control-param name="noRoutesLabel">label.approval.routes.no-route</control-param>
                            <control-param name="routeDataScript">lecm/routes-v2/approvalRoutes/getRouteData</control-param>
                            <control-param name="createStageItemScript">lecm/routes-v2/approvalRoutes/CreateStageItemInQueue</control-param>
                            <control-param name="createEmptyIterationScript">lecm/routes-v2/approvalRoutes/createEmptyIteration</control-param>
                            <control-param name="createIterationFromPrevious">lecm/routes-v2/createIterationFromPreviousApproval</control-param>
                            <control-param name="convertRouteToIterationScript">lecm/routes-v2/approvalRoutes/convertRouteToIteration</control-param>
                            <control-param name="removeWorkFolderScript">lecm/routes-v2/approvalRoutes/removeWorkFolder</control-param>
                            <control-param name="createListFromRouteFormId">selectRouteForm</control-param>
                            <control-param name="createIterationFormId">createIteration</control-param>
                            <control-param name="createStageInlineFormId">editStageParametersInlineForm</control-param>
                            <control-param name="expandDataSource">ru/it/lecm/routes-v2/stages/stageExpanded</control-param>
                            <control-param name="expandedDataSource">lecm/components/form?formId=viewApprovalResult</control-param>
                            <control-param name="newListTitleMsgId">title.new.approval.list</control-param>
                            <control-param name="repeatRouteDialogFormId">repeatPreviousApprovalRouteDialog</control-param>
                            <control-param name="newListConfirmationMsgId">message.new.approval.list.confirmation</control-param>
                            <control-param name="newListFromRoutTitleMsgId">title.new.approval.list.from.route</control-param>
                            <control-param name="clearListTitleId">title.approval.list.clear</control-param>
                            <control-param name="clearListMsgId">message.clear.approval.list</control-param>
                            <control-param name="viewIterationResultFormTitleId">label.view.approval.details</control-param>
                            <control-param name="showIterationsHistoryFormId">showApprovalHistoryForm</control-param>
                            <control-param name="viewIterationResultFormId">viewApprovalResult</control-param>
                            <control-param name="editIterationFormId">editIterationProperties</control-param>
                            <control-param name="fieldsForFilterRoutes">lecm-eds-document:executor-assoc,lecm-document:author-assoc</control-param>
                            <control-param name="scripts">scripts/lecm-routes-v2/validators/route-complete-create-validator.js</control-param>
                            <control-param name="addEmployeeToStageMsgId">label.approval.routes.stage.addEmployee</control-param>
                        </control>                 
                    </field>
                    <field id="lecm-signing-route:signingFolder" label-id="label.forms.signing">
                        <control template="/ru/it/lecm/routes-v2/controls/routes-datagrid-control.ftl">
                            <control-param name="noRoutesLabel">label.signing.routes.no-route</control-param>
                            <control-param name="removeWorkFolderScript">lecm/routes-v2/signingRoutes/removeWorkFolder</control-param>
                            <control-param name="routeDataScript">lecm/routes-v2/signingRoutes/getRouteData</control-param>
                            <control-param name="createStageItemScript">lecm/routes-v2/signingRoutes/CreateStageItemInQueue</control-param>
                            <control-param name="createEmptyIterationScript">lecm/routes-v2/signingRoutes/createEmptyIteration</control-param>
                            <control-param name="createIterationFromPrevious">lecm/routes-v2/createIterationFromPreviousSigning</control-param>
                            <control-param name="convertRouteToIterationScript">lecm/routes-v2/signingRoutes/convertRouteToIteration</control-param>
                            <control-param name="createListFromRouteFormId">selectRouteForm</control-param>
                            <control-param name="editIterationFormId">editIterationProperties</control-param>
                            <control-param name="createIterationFormId">createIteration</control-param>
                            <control-param name="createStageInlineFormId">editStageParametersInlineForm</control-param>
                            <control-param name="expandDataSource">ru/it/lecm/routes-v2/stages/stageExpanded</control-param>
                            <control-param name="editStageItemsFormTitleMessage">title.signing.routes.stage.item.form.edit</control-param>
                            <control-param name="expandedDataSource">lecm/components/form?formId=viewSigningResult</control-param>
                            <control-param name="repeatRouteDialogFormId">repeatPreviousApprovalRouteDialog</control-param>
                            <control-param name="clearListTitleId">title.signing.list.clear</control-param>
                            <control-param name="clearListMsgId">message.clear.signing.list</control-param>
                            <control-param name="showIterationsHistoryFormId">showApprovalHistoryForm</control-param>
                            <control-param name="viewIterationResultFormId">viewSigningResult</control-param>
                            <control-param name="cssFiles">css/lecm-signing-v2/lecm-signing-v2-routes-datagrid-control.css</control-param>
                            <control-param name="determinantClass">signing-control</control-param>
                            <control-param name="scripts">scripts/lecm-signing-v2/evaluators-v2.js,scripts/lecm-routes-v2/validators/route-complete-create-validator.js</control-param>
                            <control-param name="jsObjectName">LogicECM.module.Signing.Evaluators</control-param>
                            <control-param name="newListConfirmationMsgId">message.new.signing.list.confirmation</control-param>
                            <control-param name="newListFromRoutTitleMsgId">title.new.signing.list.from.route</control-param>
                            <control-param name="newListTitleMsgId">title.new.signing.list</control-param>
                            <control-param name="unableCreateListActiveMessageId">message.signing.unable.to.create.list.active</control-param>
                            <control-param name="addEmployeeToStageMsgId">label.signing.routes.stage.addEmployee</control-param>
                        </control>
                    </field>
                    <field id="checkAllowSigningOnPaperScript">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/check-allow-signing-on-paper-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">allowSigningOnPaperScript</control-param>
                        </control>
