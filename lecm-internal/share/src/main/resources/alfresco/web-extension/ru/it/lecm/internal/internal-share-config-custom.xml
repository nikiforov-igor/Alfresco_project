                            <control-param name="showCreateNewLink">true</control-param>
                            <control-param name="showCreateNewButton">true</control-param>
                            <control-param name="endpointType">lecm-internal-doc-type:dictionary</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:execution-date" set="typeAndDate">
