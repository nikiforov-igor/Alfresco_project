<alfresco-config>
	<config evaluator="node-type" condition="lecm-outgoing:document">
		<forms>
			<!-- Форма редактирования -->
			<form>
				<view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
				<edit-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
				<field-visibility>
					<show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
					<show id="lecm-document-aspects:reg-data-date"/>													<!-- Дата регистрации -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-outgoing:contractor-assoc" force="true"/>											<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-document:author-assoc"/>																<!-- Автор -->
					<show id="lecm-document-aspects:reg-project-data-number"/>
					<show id="lecm-document-aspects:reg-project-data-date"/>
					<show id="lecm-document-aspects:is-shared-folder"/>
					<show id="lecm-contract:approval" force="true"/>
					<show id="lecm-outgoing:signing-list" force="true" for-mode="view"/>								<!-- Листы подписания-->
				</field-visibility>
				<appearance>
					<set id="common" appearance="" label="Сведения" /> <!-- tab1 -->
					<set id="signingTab" appearance="" label="Подписание" /> <!-- tab2 -->
                    <set id="approvalTab" appearance="" label="Согласование"/>

					<field id="lecm-document:regnum" set="common" mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Documents.regnumUniqueness.validator"
										event="keyup" />
						</constraint-handlers>
					</field>
					<field id="lecm-document-aspects:reg-data-date" set="common"/>

					<field id="lecm-document:title" set="common"/>

					<field id="lecm-eds-document:document-type-assoc" set="common"/>
					<field id="lecm-outgoing:delivery-method-assoc" set="common"/>

					<field id="lecm-outgoing:contractor-assoc" set="common"/>
					<field id="lecm-outgoing:recipient-assoc" set="common">
                        <control template="/ru/it/lecm/contractors/contractors-double-select-representative.ftl">
                            <control-param name="updateOnContractorSelect">contractor.selected</control-param>
                            <control-param name="updateOnOrganizationSelect">organization.selected</control-param>
                            <!-- autocomplete options-->
                            <control-param name="autoCompleteJsName">select-representative-autoComplete</control-param>
                            <control-param name="treeViewJsName">select-representative-treeView</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="employeeAbsenceMarker">true</control-param>
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM</control-param>
                            <control-param name="lazyLoading">true</control-param>
                            <control-param name="checkType">false</control-param>
                            <!--customization options-->
                            <control-param name="employeesByOrgDS">lecm/employees/byOrg/{organization}/picker</control-param>
                            <control-param name="representativesByContrDS">lecm/representatives/{contractor}/picker</control-param>

                            <!--<control-param name="employeesType">lecm-orgstr:employee</control-param>
                            <control-param name="representativesType">lecm-representative:representative-type</control-param>-->

                            <control-param name="employeesNameSubstitute">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
                            <control-param name="representativesSubstitute">{cm:name}</control-param>

                            <control-param name="employeesLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="representativesLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Адресанты</control-param>

                            <control-param name="employeesDefaultValueDS"></control-param>
                            <control-param name="representativesDefaultValueDS">lecm/contractors/getMainRepresentative?contractor={contractor}</control-param>
                        </control>
					</field>

					<field id="lecm-eds-document:summaryContent" set="common">
						<control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<field id="lecm-document:subject-assoc" set="common"/>

					<field id="lecm-eds-document:note" set="common">
						<control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<field id="lecm-eds-document:file-register-assoc" set="common"/>
					<field id="lecm-document:author-assoc" set="common" read-only="true"/>

					<field id="lecm-document-aspects:reg-project-data-number" set="common"/>
					<field id="lecm-document-aspects:reg-project-data-date" set="common"/>
					<field id="lecm-document-aspects:is-shared-folder" set="common"/>

					<field id="lecm-contract:approval" set="approvalTab">
						<control template="/ru/it/lecm/workflow/approval/controls/approval-list-datagrid-control.ftl"/>
					</field>
					<field id="lecm-outgoing:signing-list" set="signingTab" label="Подписание">
						<control template="/ru/it/lecm/workflow/signing/controls/deprecated/signing-list-datagrid-control.ftl"/>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором полей для правой области на карточке документа -->
			<form id="document">
				<field-visibility>
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
				</field-visibility>
			</form>

			<!-- Форма с набором полей для "Общие сведения" на карточке документа -->
			<form id="document-dashlet">
				<field-visibility>
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-statemachine:status"/>																<!-- Статус -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
				</field-visibility>
				<appearance>
					<field id="lecm-statemachine:status">
						<control template="/ru/it/lecm/documents/controls/history/status-history.ftl"/>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором дашлетов на главной странице -->
			<form id="main-page-dashlets">
				<field-visibility>
					<show id="line1"/>
				</field-visibility>
				<appearance>
					<field id="line1">
						<control template="/ru/it/lecm/documents/controls/document-dashlet-control.ftl">
							<control-param name="first">/lecm/components/dashlets/document-main;/lecm/components/dashlets/document-members</control-param>
							<control-param name="second">/lecm/components/dashlets/document-attachments;/lecm/components/dashlets/document-my-tasks</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-outgoing:document">
		<forms>
			<!-- Форма создания (по умолчанию) -->
			<form>
				<field-visibility>
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-outgoing:contractor-assoc" force="true"/>											<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
					<show id="lecm-document-aspects:attachments-temp-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-document:title"/>

					<field id="lecm-eds-document:document-type-assoc"/>
					<field id="lecm-outgoing:delivery-method-assoc"/>

					<field id="lecm-outgoing:contractor-assoc"/>
					<field id="lecm-outgoing:recipient-assoc">
                        <control template="/ru/it/lecm/contractors/contractors-double-select-representative.ftl">
                            <control-param name="updateOnContractorSelect">contractor.selected</control-param>
                            <control-param name="updateOnOrganizationSelect">organization.selected</control-param>
                            <!-- autocomplete options-->
                            <control-param name="autoCompleteJsName">select-representative-autoComplete</control-param>
                            <control-param name="treeViewJsName">select-representative-treeView</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="employeeAbsenceMarker">true</control-param>
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM</control-param>
                            <control-param name="lazyLoading">true</control-param>
                            <control-param name="checkType">false</control-param>
                            <!--customization options-->
                            <control-param name="employeesByOrgDS">lecm/employees/byOrg/{organization}/picker</control-param>
                            <control-param name="representativesByContrDS">lecm/representatives/{contractor}/picker</control-param>

                            <!--<control-param name="employeesType">lecm-orgstr:employee</control-param>
                            <control-param name="representativesType">lecm-representative:representative-type</control-param>-->

                            <control-param name="employeesNameSubstitute">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
                            <control-param name="representativesSubstitute">{cm:name}</control-param>

                            <control-param name="employeesLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
                            <control-param name="representativesLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Адресанты</control-param>

                            <control-param name="employeesDefaultValueDS"></control-param>
                            <control-param name="representativesDefaultValueDS">lecm/contractors/getMainRepresentative?contractor={contractor}</control-param>
                        </control>
					</field>

					<field id="lecm-document-aspects:response-to-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-search-control-with-dialog.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:Documents</control-param>
							<control-param name="nameSubstituteString">{lecm-document:ext-present-string}&lt;/br&gt;{lecm-document:list-present-string}</control-param>
							<control-param name="selectedItemsNameSubstituteString">{lecm-document:ext-present-string}</control-param>
							<control-param name="itemType">lecm-incoming:document</control-param>
						</control>
					</field>

					<field id="lecm-eds-document:summaryContent">
						<control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<field id="lecm-document:subject-assoc"/>
					<field id="lecm-eds-document:file-register-assoc"/>

					<field id="lecm-eds-document:note">
						<control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>

					<field id="lecm-document-aspects:attachments-temp-assoc" label="Вложения">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control-with-preview.ftl">
							<control-param name="uploadDirectoryPath">{usertemp}</control-param>
							<control-param name="directoryName">Вложения</control-param>
							<control-param name="suppressRefreshEvent">true</control-param>
						</control>
					</field>
				</appearance>
			</form>

			<!-- Форма для табличного представления (набор столбцов) -->
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-document-aspects:reg-data-number"/>													<!-- Номер проекта | Номер исходящего -->
					<show id="lecm-document-aspects:reg-project-data-number"/>													<!-- Дата регистрации проекта | Дата регистрации исходящего -->
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-document:creator-ref"/>																<!-- Автор Ссылка -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-statemachine:status"/>																<!-- Статус -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
				</field-visibility>
			</form>

			<!-- Форма атрибутивного поиска -->
			<form id="search">
				<field-visibility>
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Содержание -->
					<show id="lecm-document:regnum"/>																	<!-- Номер проекта -->
					<show id="lecm-document:doc-date"/>																	<!-- Дата регистрации & Регистрационный номер -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Организация-получатель -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
				</field-visibility>
				<appearance>
					<field id="lecm-document:doc-date">
						<control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
					</field>
				</appearance>
			</form>

			<!-- Форма с набором полей, редактируемых в машине состояний -->
			<form id="statemachine-editable-fields">
				<field-visibility>
					<show id="lecm-document:creator"/>																	<!-- Автор -->
					<show id="lecm-outgoing:contractor-assoc"/>															<!-- Контрагент -->
					<show id="lecm-outgoing:recipient-assoc"/>															<!-- Получатель -->
					<show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
					<show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
					<show id="lecm-document-aspects:registrator-assoc"/>												<!-- Регистратор -->
					<show id="lecm-eds-document:summaryContent"/>														<!-- Краткое содержание -->
					<show id="lecm-outgoing:delivery-method-assoc"/>													<!-- Способ доставки -->
					<show id="lecm-document:title"/>																	<!-- Заголовок -->
					<show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
					<show id="lecm-document-aspects:response-to-assoc"/>												<!-- В ответ на -->
					<show id="lecm-eds-document:note"/>																	<!-- Примечание -->
					<show id="lecm-document-aspects:is-shared-folder"/>													<!-- Общая область хранения -->
					<show id="lecm-document:regnum"/>																	<!-- Регистрационный номер -->
					<show id="lecm-contract:approval"/>
				</field-visibility>
				<appearance>
					<field id="lecm-contract:approval" label="Согласование"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="Workflow">
		<hidden-workflows>
			<workflow name="activiti$lecm-outgoing_document"/>
		</hidden-workflows>
	</config>

</alfresco-config>
