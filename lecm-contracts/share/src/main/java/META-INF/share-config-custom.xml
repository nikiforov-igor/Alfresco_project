<alfresco-config>

	<config evaluator="node-type" condition="lecm-contract:document">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-contract:regnum" force="true"/>
					<show id="lecm-contract:contentAttr" force="true"/>
				</field-visibility>
				<appearance>
					<field id="lecm-contract:contentAttr">
                        <control  template="/ru/it/lecm/base-share/components/controls/richtext.ftl"/>
					</field>
				</appearance>
			</form>
            <form id="connections">
                <field-visibility>
                    <show id="lecm-connect-aspects:connections-list"/>
                    <show id="lecm-connect-aspects:connections-with-list"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-connect-aspects:connections-list">
                        <control template="/ru/it/lecm/documents/controls/connections/connected-documents.ftl"/>
                    </field>
                    <field id="lecm-connect-aspects:connections-with-list">
                        <control template="/ru/it/lecm/documents/controls/connections/primary-documents.ftl"/>
                    </field>
                </appearance>
            </form>
            <form id="document">
                <field-visibility>
                    <show id="cm:name" force="true"/>
                    <show id="lecm-statemachine:status" force="true"/>
                    <show id="lecm-contract:regnum" force="true"/>
                </field-visibility>
            </form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-contract:document">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name" force="true"/>
					<show id="lecm-contract:regnum" force="true"/>
                    <show id="lecm-contract:contentAttr" force="true"/>
				</field-visibility>
				<appearance>
					<field id="cm:name"/>
					<field id="lecm-contract:regnum"/>
                    <field id="lecm-contract:contentAttr"/>
				</appearance>
			</form>
            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name" force="true"/>
                    <show id="lecm-contract:regnum" force="true"/>
                    <show id="lecm-document:present-string" force="true"/>
                    <show id="lecm-statemachine:status" force="true"/>
                </field-visibility>
            </form>
		</forms>
	</config>

</alfresco-config>