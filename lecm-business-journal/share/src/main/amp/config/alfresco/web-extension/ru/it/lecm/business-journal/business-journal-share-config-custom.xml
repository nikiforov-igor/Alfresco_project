				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-busjournal:eventCategory">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-busjournal:eventCategory-code"/>
					<show id="lecm-busjournal:eventCategory-on"/>
				</field-visibility>
			</form>
			<form id="search">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-busjournal:eventCategory-code"/>
