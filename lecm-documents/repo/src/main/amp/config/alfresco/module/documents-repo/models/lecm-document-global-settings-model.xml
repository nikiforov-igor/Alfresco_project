<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-document-global-settings:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Logic ECM Global documents settings model</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/document/global-settings/1.0" prefix="lecm-document-global-settings"/>
    </namespaces>

    <constraints>
        <constraint name="lecm-document-global-settings:links-view-const" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>VIEW_ALL</value>
                    <value>VIEW_DIRECT</value>
                    <value>VIEW_NO</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

    <types>
		<type name="lecm-document-global-settings:settings">
		    <title>Logic Ecm Global Documents Settings</title>
		    <parent>cm:cmobject</parent>
		    <properties>
                <!-- Скрывать свойства для получателей -->
                <property name="lecm-document-global-settings:hide-properties-for-recipients">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                </property>
                <!-- Режим отображения связи -->
                <property name="lecm-document-global-settings:links-view-mode">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <default>VIEW_ALL</default>
                    <constraints>
                        <constraint ref="lecm-document-global-settings:links-view-const"/>
                    </constraints>
                </property>
                <property name="lecm-document-global-settings:enable-passive">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                </property>
                <property name="lecm-document-global-settings:n-days">
                    <type>d:int</type>
                    <mandatory>true</mandatory>
                    <default>5</default>
                </property>
		    </properties>
	    </type>
    </types>
</model>