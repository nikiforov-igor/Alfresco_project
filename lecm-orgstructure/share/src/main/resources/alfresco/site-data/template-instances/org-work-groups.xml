<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/org-work-groups</template-type>
    <components>
        <!-- Grids -->
        <component>
            <region-id>groups-grid</region-id>
            <url>/lecm/orgstructure/workgroups-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>workGroup</bubblingLabel>
            </properties>
        </component>
        <component>
            <region-id>workforces-grid</region-id>
            <url>/lecm/orgstructure/workforces-datagrid</url>
            <bubblingLabel>workForce</bubblingLabel>
            <properties>
                <pagination>true</pagination>
            </properties>
        </component>
        <!-- Toolbars -->
        <component>
            <region-id>workforces-toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>false</showSearchBlock>
                <showExSearchBtn>false</showExSearchBtn>
                <typeButton>newRowButtonStaff</typeButton>
                <bubblingLabel>workForce</bubblingLabel>
	            <newRowLabel>button.new-work-force</newRowLabel>
            </properties>
        </component>
        <component>
            <region-id>groups-toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>false</showExSearchBtn>
                <bubblingLabel>workGroup</bubblingLabel>
	            <newRowLabel>button.new-work-group</newRowLabel>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.work-groups</title>
                <filteredLabel>page.orgstructure.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
            <properties>
                <selected>workGroup</selected>
            </properties>
        </component>
    </components>
</template-instance>
