<?xml version='1.0' encoding='UTF-8'?>
<items>
    <item name="lecm-dic:Шаблоны уведомлений" type="lecm-dic:dictionary">
        <property name="cm:name"><![CDATA[Шаблоны уведомлений]]></property>
        <property name="lecm-dic:attributeForShow"><![CDATA[cm:name]]></property>
        <property name="lecm-dic:type"><![CDATA[lecm-notification-template:template]]></property>
        <property name="lecm-dic:plane"><![CDATA[true]]></property>
        <property name="lecm-dic:description"><![CDATA[Шаблоны уведомлений]]></property>
        <items>
            <item name="cm:DELEGATION_DELEGATE_TASKS" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[DELEGATION_DELEGATE_TASKS]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[От пользователя {#mainObject.wrapAsLink(#mainObject.attribute("lecm-orgstr:employee-short-name"))} Вам делегировано {#tasksCount} задач. Распределить на других исполнителей можно по {#formatLink(#url, "ссылке")}]]></property>
                <property name="lecm-notification-template:description">
                    <![CDATA[Делегирование. Делигировано задач]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
                <assocs>
                    <assoc type="lecm-notification-template:template-assoc"
                           xpath="/app:company_home/app:dictionary/app:email_templates/cm:defaultNotificationTemplate.ftl"/>
                </assocs>
            </item>
            <item name="cm:DELEGATION_DELEGATE_TRUSTEE_START" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[DELEGATION_DELEGATE_TRUSTEE_START]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[Сотрудник {#mainObject.wrapAsLink(#mainObject.attribute("lecm-orgstr:employee-short-name"))} делегировал Вам свои полномочия по причине своего отсутствия.]]></property>
                <property name="lecm-notification-template:description">
                    <![CDATA[Делегирование. Делегирование полномочий начато]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
                <assocs>
                    <assoc type="lecm-notification-template:template-assoc"
                           xpath="/app:company_home/app:dictionary/app:email_templates/cm:defaultNotificationTemplate.ftl"/>
                </assocs>
            </item>
            <item name="cm:DELEGATION_DELEGATE_TRUSTEE_STOP" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[DELEGATION_DELEGATE_TRUSTEE_STOP]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[Делегирование полномочий сотрудника {#mainObject.wrapAsLink(#mainObject.attribute("lecm-orgstr:employee-short-name"))} завершено по причине его выхода на работу.]]></property>
                <property name="lecm-notification-template:description">
                    <![CDATA[Делегирование. Делегирование полномочий завершено]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
                <assocs>
                    <assoc type="lecm-notification-template:template-assoc"
                           xpath="/app:company_home/app:dictionary/app:email_templates/cm:defaultNotificationTemplate.ftl"/>
                </assocs>
            </item>
            <item name="cm:DELEGATION_NEW_TASK" type="lecm-notification-template:template">
                <property name="cm:name"><![CDATA[DELEGATION_NEW_TASK]]></property>
                <property name="lecm-notification-template:template">
                    <![CDATA[Вам назначена новая {#formatLink(#url, "задача")}]]></property>
                <property name="lecm-notification-template:description">
                    <![CDATA[Делегирование. Вам назначена задача]]></property>
                <property name="lecm-notification-template:subject"><![CDATA[]]></property>
                <assocs>
                    <assoc type="lecm-notification-template:template-assoc"
                           xpath="/app:company_home/app:dictionary/app:email_templates/cm:defaultNotificationTemplate.ftl"/>
                </assocs>
            </item>
        </items>
    </item>
</items>