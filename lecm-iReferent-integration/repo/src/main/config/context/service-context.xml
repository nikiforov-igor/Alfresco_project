<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
               http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
            http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

    <jaxws:endpoint address="/WSBR_StaffManager" implementor="#staffService"
                    implementorClass="ru.it.lecm.integration.referent.services.staffManager.WSStaffManagerPort">
        <!--<jaxws:inInterceptors>
            <ref local="saajLECMInInterceptor" />
            <ref local="wss4jLECMInInterceptor" />
            <ref local="authenticationLECMInterceptor" />
        </jaxws:inInterceptors>

        <jaxws:outInterceptors>
            <ref local="authenticationLECMClearInterceptor" />
            <ref local="saajLECMOutInterceptor" />
            <ref local="wss4jLECMOutInterceptor" />
        </jaxws:outInterceptors>

        <jaxws:outFaultInterceptors>
            <ref local="authenticationLECMClearInterceptor" />
            <ref local="saajLECMOutInterceptor" />
            <ref local="wss4jLECMOutInterceptor" />
        </jaxws:outFaultInterceptors>
        <jaxws:features>
            <bean class="org.apache.cxf.feature.LoggingFeature" />
        </jaxws:features>-->
    </jaxws:endpoint>

    <bean id="staffService" class="ru.it.lecm.integration.referent.services.staffManager.WSStaffManagerPort">
        <property name="objectFactory" ref="objectFactory"/>
        <property name="nodeService" ref="nodeService"/>
        <property name="personService" ref="personService"/>
        <property name="orgstructureService" ref="serviceOrgstructure" />
        <property name="documentService" ref="documentService"/>
    </bean>

    <bean id="objectFactory" class="ru.it.lecm.integration.referent.objects.ObjectFactory">
        <property name="nodeService" ref="nodeService"/>
        <property name="authService" ref="authenticationService"/>
        <property name="orgstructureService" ref="serviceOrgstructure" />
        <property name="documentService" ref="documentService"/>
        <property name="namespaceService" ref="namespaceService"/>
        <property name="contentService" ref="contentService"/>
        <property name="transactionService" ref="transactionService"/>
    </bean>

    <jaxws:endpoint address="/WSBR_DocumentManager" implementor="#documentManagerServicePort"
                    implementorClass="ru.it.lecm.integration.referent.services.documentManager.DocumentManagerImplServicePort">
        <!--<jaxws:inInterceptors>
            <ref local="wss4jLECMInInterceptor" />
        </jaxws:inInterceptors>

        <jaxws:outInterceptors>
            <ref local="wss4jLECMOutInterceptor" />
        </jaxws:outInterceptors>

        <jaxws:outFaultInterceptors>
            <ref local="wss4jLECMOutInterceptor" />
        </jaxws:outFaultInterceptors>

        <jaxws:features>
            <bean class="org.apache.cxf.feature.LoggingFeature" />
        </jaxws:features>-->
    </jaxws:endpoint>

    <bean id="documentManagerServicePort" class="ru.it.lecm.integration.referent.services.documentManager.DocumentManagerImplServicePort">
        <property name="objectFactory" ref="objectFactory"/>
        <property name="nodeService" ref="nodeService"/>
        <property name="documentService" ref="documentService"/>
        <property name="authenticationService" ref="authenticationService"/>
        <property name="authorityService" ref="authorityService"/>
    </bean>

    <!-- ========================================================================================================= -->

    <bean id="saajLECMInInterceptor" class="org.apache.cxf.binding.soap.saaj.SAAJInInterceptor" />

    <bean id="saajLECMOutInterceptor" class="org.apache.cxf.binding.soap.saaj.SAAJOutInterceptor" />

    <bean id="wss4jLECMInInterceptor" class="org.apache.cxf.ws.security.wss4j.WSS4JInInterceptor">
        <constructor-arg>
            <map>
                <entry key="action" value="UsernameToken Timestamp" />
                <entry key="passwordType" value="PasswordText" />
                <entry>
                    <key>
                        <value>passwordCallbackRef</value>
                    </key>
                    <ref local="authenticationLECMTokenCallback" />
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="wss4jLECMOutInterceptor" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
        <constructor-arg>
            <map>
                <entry key="action" value="Timestamp" />
                <entry key="mustUnderstand" value="false" />
            </map>
        </constructor-arg>
    </bean>

    <bean id="wss4jLECMOutInterceptorWithMTOM" class="org.apache.cxf.ws.security.wss4j.WSS4JOutInterceptor">
        <constructor-arg>
            <map>
                <entry key="action" value="Timestamp" />
                <entry key="mustUnderstand" value="false" />
            </map>
        </constructor-arg>
        <property name="allowMTOM" value="true" />
    </bean>

    <bean id="authenticationLECMTokenCallback" class="org.alfresco.repo.cmis.ws.AuthenticationTokenCallbackHandler" />

    <bean id="authenticationLECMInterceptor" class="org.alfresco.repo.cmis.ws.AuthenticationInterceptor">
        <property name="authenticationService" ref="authenticationService" />
        <property name="transactionService" ref="transactionService" />
    </bean>

    <bean id="authenticationLECMClearInterceptor" class="org.alfresco.repo.cmis.ws.AuthenticationClearInterceptor"/>
</beans>