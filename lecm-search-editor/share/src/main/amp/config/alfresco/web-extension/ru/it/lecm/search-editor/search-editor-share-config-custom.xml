<alfresco-config>
    <config evaluator="model-type" condition="lecm-search-queries:dic">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-search-queries:name"/>
                    <show id="lecm-search-queries:employee-assoc"/>
                    <show id="lecm-search-queries:query-setting"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-search-queries:employee-assoc">
                        <control template="/ru/it/lecm/wcalendar/controls/hidden-current-employee.ftl"/>
                    </field>
                    <field id="lecm-search-queries:query-setting">
                        <control template="/org/alfresco/components/form/controls/hidden.ftl"/>
                    </field>
                </appearance>
            </form>
            <form id="search">
                <field-visibility>
                    <show id="lecm-search-queries:name"/>
                </field-visibility>
            </form>
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-search-queries:name"/>
                </field-visibility>
            </form>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-search-queries:dic">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-search-queries:name"/>
                    <show id="lecm-search-queries:query-setting"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-search-queries:query-setting">
                        <control template="/org/alfresco/components/form/controls/hidden.ftl"/>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>
</alfresco-config>