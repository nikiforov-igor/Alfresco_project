<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-arm:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM ARM model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/arm/1.0" prefix="lecm-arm"/>
	</namespaces>

	<types>
		<type name="lecm-arm:arm">
			<parent>lecm-dic:hierarchical_dictionary_values</parent>
			<properties>
				<!--Код-->
				<property name="lecm-arm:code">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Выбран по умолчанию-->
				<property name="lecm-arm:use-by-default">
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<default>false</default>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Показывать календарь-->
				<property name="lecm-arm:show-calendar">
					<type>d:boolean</type>
					<mandatory>true</mandatory>
					<default>false</default>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-arm:show-create-button">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<default>true</default>
				</property>
			</properties>
			<overrides>
				<property name="lecm-dic:valueContainsType">
					<default>lecm-arm:accordion</default>
				</property>
			</overrides>
			<mandatory-aspects>
				<aspect>lecm-arm:ordered</aspect>
				<aspect>lecm-arm:menu-settings</aspect>
			</mandatory-aspects>
		</type>

		<type name="lecm-arm:accordion">
			<parent>lecm-arm:base-node</parent>
			<properties>
				<!--Для работы секретаря с документами руководителей-->
				<property name="lecm-arm:is-for-secretaries">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<default>false</default>
				</property>
			</properties>
			<associations>
				<!-- @deprecated Бизнес роли -->
				<association name="lecm-arm:business-roles-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:business-role</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
			<overrides>
				<property name="lecm-dic:valueContainsType">
					<default>lecm-arm:node</default>
				</property>
			</overrides>
            <mandatory-aspects>
                <aspect>lecm-arm:ordered</aspect>
            </mandatory-aspects>
		</type>

		<!--Deprecated! Do not use!-->
		<type name="lecm-arm:accordion-runAs">
			<parent>lecm-arm:accordion</parent>
			<properties>
				<!--Путь к узлу-->
				<property name="lecm-arm:path-to-node">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
				<!--Названия узла-->
				<property name="lecm-arm:name-format-string">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
			<associations>
				<!-- Сотрудник-->
				<association name="lecm-arm:runAs-employee">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>

		<type name="lecm-arm:node">
			<parent>lecm-arm:base-node</parent>
            <properties>
                <property name="lecm-arm:is-select-by-activeTasks">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <property name="lecm-arm:activeTasks-filter">
                    <type>d:text</type>
                </property>
            </properties>
			<overrides>
				<property name="lecm-dic:valueContainsType">
					<default>lecm-arm:node</default>
				</property>
			</overrides>
		</type>

		<type name="lecm-arm:reports-node">
			<parent>lecm-arm:base-node</parent>
            <properties>
                <property name="lecm-arm:reportCodes">
                    <type>d:text</type>
                </property>
            </properties>
			<overrides>
				<property name="lecm-dic:valueContainsType">
					<default>lecm-arm:reports-node</default>
				</property>
			</overrides>
		</type>

		<type name="lecm-arm:html-node">
			<parent>lecm-arm:base-node</parent>
			<properties>
				<property name="lecm-arm:html-url">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<overrides>
				<property name="lecm-dic:valueContainsType">
					<default>lecm-arm:node</default>
				</property>
			</overrides>
		</type>

		<type name="lecm-arm:base-node">
			<parent>lecm-dic:hierarchical_dictionary_values</parent>
			<properties>
				<!--Отображаемые типы-->
				<property name="lecm-arm:types">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Поисковый запрос-->
				<property name="lecm-arm:search-query">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Включить счётчик-->
				<property name="lecm-arm:counter-enable">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Счётчик: ограничение-->
				<property name="lecm-arm:counter-limitation">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Счётчик: описание-->
				<property name="lecm-arm:counter-description">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Агрегирующий узел-->
				<property name="lecm-arm:is-aggregation-node">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Тип для атрибутивного поиска-->
				<property name="lecm-arm:search-type">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Условие доступности-->
				<property name="lecm-arm:expression">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="false"/>
				</property>
			</properties>
			<associations>
				<!-- Список колонок -->
                <association name="lecm-arm:fields-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-arm:field</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
                <!-- Список фильтров -->
                <association name="lecm-arm:filters-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-arm:filter</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
				<!-- Правило построения узлов -->
				<association name="lecm-arm:node-child-rule-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-arm:base-child-rule</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
            <mandatory-aspects>
                <aspect>lecm-arm:ordered</aspect>
            </mandatory-aspects>
		</type>

		<type name="lecm-arm:field">
			<parent>cm:cmobject</parent>
			<properties>
				<!--Заголовок-->
				<property name="lecm-arm:field-title">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Имя атрибута-->
				<property name="lecm-arm:field-name">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Форматная строка-->
				<property name="lecm-arm:field-format-string">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<!--Включить сортировку-->
				<property name="lecm-arm:field-sortable">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
                <!--Включить сортировку-->
                <property name="lecm-arm:field-by-default">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
				<!--Является маркером-->
				<property name="lecm-arm:field-is-marker">
					<type>d:boolean</type>
					<mandatory>false</mandatory>
					<index enabled="false"/>
				</property>
				<!--Иконка маркера-->
				<property name="lecm-arm:field-marker-icon">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="false"/>
				</property>
				<!--Разметка маркера -->
				<property name="lecm-arm:field-marker-html">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="false"/>
				</property>
                <!--Счётчик-->
                <property name="lecm-arm:field-is-counter">
                    <type>d:boolean</type>
                    <mandatory>false</mandatory>
                    <index enabled="false" />
                </property>
			</properties>
        	<mandatory-aspects>
                <aspect>lecm-arm:ordered</aspect>
            </mandatory-aspects>
		</type>

		<type name="lecm-arm:base-child-rule">
			<parent>cm:cmobject</parent>
		</type>
		<type name="lecm-arm:query-child-rule">
			<parent>lecm-arm:base-child-rule</parent>
			<properties>
				<!--Запрос для списка-->
				<property name="lecm-arm:list-query-child-rule">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
		<type name="lecm-arm:dictionary-child-rule">
			<parent>lecm-arm:base-child-rule</parent>
			<associations>
				<!-- Справочник -->
				<association name="lecm-arm:child-rule-dictionary-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-dic:dictionary</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
		<type name="lecm-arm:statuses-child-rule">
			<parent>lecm-arm:base-child-rule</parent>
			<properties>
				<property name="lecm-arm:statuses-rule">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
					<constraints>
						<constraint name="lecm-arm:statuses-rule-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>ALL</value>
									<value>ALL_NOT_ARCHIVE</value>
									<value>ALL_ARCHIVE</value>
									<value>SELECTED</value>
									<value>EXCEPT_SELECTED</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<property name="lecm-arm:selected-statuses">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
		<type name="lecm-arm:xpath-child-rule">
			<parent>lecm-arm:base-child-rule</parent>
			<properties>
				<property name="lecm-arm:xpath-child-rule-root-xpath">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-arm:xpath-child-rule-types">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-arm:xpath-child-rule-filter">
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>
		<type name="lecm-arm:script-child-rule">
			<parent>lecm-arm:base-child-rule</parent>
			<properties>
				<property name="lecm-arm:script-child-rule-root">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
		</type>

        <type name="lecm-arm:filter">
            <parent>lecm-dic:plane_dictionary_values</parent>
            <properties>
                <property name="lecm-arm:filter-code">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-arm:filter-multiple-select">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
                <property name="lecm-arm:filter-query">
                    <type>d:text</type>
                </property>
                <property name="lecm-arm:filter-class">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
                <property name="lecm-arm:filter-values">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
        </type>

        <type name="lecm-arm:user-settings">
            <parent>cm:cmobject</parent>
            <associations>
                <!-- Список колонок -->
                <association name="lecm-arm:user-fields-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-arm:field</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </type>
	</types>

    <aspects>
        <aspect name="lecm-arm:ordered">
            <properties>
                <property name="lecm-arm:order">
                    <type>d:int</type>
                    <default>0</default>
                </property>
            </properties>
        </aspect>
		<aspect name="lecm-arm:menu-settings">
			<properties>
				<property name="lecm-arm:show-in-menu">
					<type>d:boolean</type>
					<default>false</default>
				</property>
			</properties>
			<associations>
				<!-- Бизнес роли -->
				<association name="lecm-arm:menu-business-roles-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:business-role</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</aspect>
    </aspects>
</model>
