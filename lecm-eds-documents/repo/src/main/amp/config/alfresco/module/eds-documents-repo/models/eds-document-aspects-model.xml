<?xml version="1.0" encoding="UTF-8"?>
<model name="eds-errands-aspect:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>EDS errands aspects model</description>
    <author>EDS</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/eds-document-aspects/1.0" prefix="eds-document-aspect"/>
    </namespaces>
    <constraints>
        <constraint name="eds-document-aspect:limitation-date-type-const" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>WORK</value>
                    <value>CALENDAR</value>
                </list>
            </parameter>
        </constraint>
        <constraint name="eds-document-aspect:execution-limitation-date-radio-const" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>LIMITLESS</value>
                    <value>DAYS</value>
                    <value>DATE</value>
                </list>
            </parameter>
        </constraint>
    </constraints>
    <aspects>
        <aspect name="eds-document-aspect:executionAspect">
            <properties>
                <!-- Исполнитель -->
                <property name="eds-document-aspect:executor-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="eds-document-aspect:executor-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <!-- Срок поручения-->
                <property name="eds-document-aspect:limitation-date">
                    <type>d:date</type>
                    <mandatory>false</mandatory>
                </property>
                <property name="eds-document-aspect:limitation-date-radio">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <constraints>
                        <constraint ref="eds-document-aspect:limitation-date-radio-const"/>
                    </constraints>
                </property>
                <property name="eds-document-aspect:limitation-date-days">
                    <type>d:int</type>
                    <mandatory>false</mandatory>
                    <default>1</default>
                </property>
                <property name="eds-document-aspect:limitation-date-type">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <constraints>
                        <constraint ref="eds-document-aspect:execution-limitation-date-type-const"/>
                    </constraints>
                </property>
            </properties>
            <associations>
                <association name="eds-document-aspect:executor-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>
</model>