<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-frequency:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Logic ECM document Frequency Analysis Model</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/document/frequency/1.0" prefix="lecm-frequency"/>
    </namespaces>

    <types>
        <type name="lecm-frequency:unit">
            <title>Logic ECM Frequency Unit</title>
            <parent>cm:cmobject</parent>
            <properties>
                <property name="lecm-frequency:unit-doc-type">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-frequency:unit-actionId">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-frequency:unit-count">
                    <type>d:long</type>
                    <default>0</default>
                </property>
            </properties>
            <associations>
                <association name="lecm-frequency:employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        <type name="lecm-frequency:employeeLastDocuments">
            <title>Logic ECM Employee Last Documents Container</title>
            <parent>cm:cmobject</parent>
            <properties>
                <property name="lecm-frequency:last-documents">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <index enabled="false"/>
                </property>
            </properties>
            <associations>
                <association name="lecm-frequency:last-doc-to-employee-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
    </types>
</model>