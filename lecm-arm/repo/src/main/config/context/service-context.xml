<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:util="http://www.springframework.org/schema/util"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">

	<bean id="arm.LogicEcmModelsBootstrap" parent="dictionaryModelBootstrap" depends-on="dictionaryBootstrap, ru.it.lecm.orgstructure.orgstructure-repo.orgStructureBootstrap">
		<property name="models">
			<list>
				<value>alfresco/module/${artifactId}/models/lecm-arm-model.xml</value>
			</list>
		</property>
		<property name="labels">
			<list>
				<value>alfresco/module/${artifactId}/messages/lecm-arm</value>
			</list>
		</property>
	</bean>

	<bean id="arm.LogicEcmConnectionTypesBootstrap" parent="lecmDictionaryBootstrap" depends-on="arm.LogicEcmModelsBootstrap, armService">
		<property name="dictionaries">
			<list>
				<value>alfresco/module/${artifactId}/dictionary/lecm-arm.xml</value>
			</list>
		</property>
		<property name="createOrUpdateDictionaries">
			<list>
				<value>alfresco/module/${artifactId}/dictionary/default-arm.xml</value>
                <value>alfresco/module/${artifactId}/dictionary/lecm-arm-filters.xml</value>
			</list>
		</property>
	</bean>

	<util:constant id="ARM_ROOT_ID" static-field="ru.it.lecm.arm.beans.ArmService.ARM_ROOT_ID"/>

	<bean id="armService" class="ru.it.lecm.arm.beans.ArmServiceImpl" parent="baseBean"
		  depends-on="ServiceRegistry, nodeService, transactionService">
		<property name="nodeService" ref="NodeService"/>
		<property name="transactionService" ref="transactionService"/>
		<property name="authService" ref="authenticationService"/>
		<property name="serviceRegistry" ref="ServiceRegistry"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
		<property name="searchService" ref="searchService"/>
		<property name="namespaceService" ref="namespaceService"/>
        <property name="stateMachineHelper" ref="stateMachineHelper"/>
		<!-- Автоматическое создание каталогов. -->
		<property name="folders">
			<map>
				<entry key="#{ARM_ROOT_ID}" value="Сервис АРМ"/>
			</map>
		</property>
	</bean>

	<bean id="armScript" parent="baseScript" class="ru.it.lecm.arm.scripts.ArmWebScriptBean"
		  depends-on="serviceDictionary, armService">
		<property name="extensionName">
			<value>arm</value>
		</property>
		<property name="armService" ref="armService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="nodeService" ref="NodeService"/>
		<property name="documentService" ref="documentService"/>
	</bean>

	<bean id="webscript.ru.it.lecm.arm.tree-menu.get"
		  class="ru.it.lecm.arm.scripts.ArmTreeMenuScript"
		  parent="webscript">
		<property name="service" ref="armWrapperService"/>
		<property name="dictionaryService" ref="dictionaryService"/>
		<property name="namespaceService" ref="namespaceService"/>
		<property name="statemachineService" ref="stateMachineHelper"/>
		<property name="documentService" ref="documentService"/>
	</bean>

    <bean id="webscript.ru.it.lecm.arm.query.by.filters.post"
          class="ru.it.lecm.arm.scripts.ArmQueryByFiltersScript"
          parent="webscript">
    </bean>

	<bean id="armWrapperService"
		  class="ru.it.lecm.arm.beans.ArmWrapperServiceImpl">
		<property name="nodeService" ref="NodeService" />
		<property name="service" ref="armService"/>
		<property name="substitudeService" ref="substitudeService"/>
		<property name="dictionaryService" ref="serviceDictionary"/>
		<property name="namespaceService" ref="namespaceService"/>
	</bean>

	<bean id="armAccordionPolicy" class="ru.it.lecm.arm.policy.ArmAccordionPolicy"
		  init-method="init">
		<property name="policyComponent" ref="policyComponent"/>
		<property name="permissionService" ref="permissionService"/>
		<property name="authorityService" ref="authorityService"/>
		<property name="nodeService" ref="nodeService" />
	</bean>

    <bean id="authorArmFilter" class="ru.it.lecm.arm.filters.AuthorArmFilter">
        <property name="orgstructureService" ref="serviceOrgstructure"/>
        <property name="authService" ref="authenticationService"/>
        <property name="preferenceService" ref="preferenceService"/>
    </bean>

    <bean id="baseQueryArmFilter" class="ru.it.lecm.arm.filters.BaseQueryArmFilter"/>
</beans>
