<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/reports-editor/reports-editor</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.lecm.reports-editor.sources</title>
            </properties>
        </component>
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/reports-editor/toolbar</url>
            <properties>
                <itemType>lecm-rpeditor:reportDataSource</itemType>
                <bubblingLabel>sourceColumns</bubblingLabel>
                <showSearch>false</showSearch>
                <showCreateBtn>true</showCreateBtn>
                <newRowLabel>label.new-source-column.btn</newRowLabel>
                <newRowDialogTitle>label.create-source-column.title</newRowDialogTitle>
            </properties>
        </component>
        <component>
            <region-id>content</region-id>
            <url>/lecm/reports-editor/source-columns</url>
        </component>
    </components>
</template-instance>