<?xml version='1.0' encoding='UTF-8'?>
<alfresco-config>

	<config>
		<forms>
			<form id="signs-info-short">
				<create-form template="/ru/it/lecm/signed/docflow/signs-short-form.ftl"/>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="DocumentLibrary">
		<aspects>
			<visible>
				<aspect name="lecm-signed-docflow:signable"/>
			</visible>
		</aspects>
	</config>

	<config evaluator="aspect" condition="lecm-signed-docflow:organization-attrs-aspect">
		<forms>
			<form>
				<field-visibility>
					<show id="lecm-signed-docflow:operator-code" for-mode="view,edit,create"/>
					<show id="lecm-signed-docflow:partner-key" for-mode="view,edit,create"/>
					<show id="lecm-signed-docflow:applet-key" for-mode="view,edit,create"/>
					<show id="lecm-signed-docflow:applet-cert" for-mode="view,edit,create"/>
					<show id="lecm-signed-docflow:applet-container" for-mode="view,edit,create"/>
				</field-visibility>
				<appearance>
					<field id="lecm-signed-docflow:operator-code" set="other"/>
					<field id="lecm-signed-docflow:partner-key" set="other"/>
					<field id="lecm-signed-docflow:applet-key" set="other"/>
					<field id="lecm-signed-docflow:applet-cert" set="other"/>
					<field id="lecm-signed-docflow:applet-container" set="other"/>
				</appearance>
			</form>
		</forms>
	</config>
	<!--конфиг для апплета АйТиШтамп-->
	<config>
        <forms>
            <form id="auth-form">
                <create-form template="/ru/it/lecm/signed-docflow/form/auth-form.ftl" />
            </form>
            <dependencies>
                <js src="/scripts/signed-docflow/signApplet.js" />               
            </dependencies>
        </forms>
    </config>

</alfresco-config>