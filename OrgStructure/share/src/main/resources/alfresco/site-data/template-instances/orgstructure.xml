<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/orgstructure</template-type>
    <components>
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
        </component>
        <component>
            <region-id>content</region-id>
            <url>/lecm/orgstructure/content?empty=true</url>
            <sub-components>
                <sub-component id="tree">
                    <url>/lecm/orgstructure/tree</url>
                    <evaluations>
                        <evaluation id= "OrgTreeEvaluator">
                            <evaluators>
                                <evaluator type="orgstructure.tree.evaluator"></evaluator>
                            </evaluators>
                            <render>false</render>
                        </evaluation>
                    </evaluations>
                </sub-component>
                <sub-component id="datagrid">
                    <url>/lecm/orgstructure/datagrid</url>
                    <!--<evaluations>
                        <evaluation id= "DataGridEvaluator" >
                            <evaluators>
                                <evaluator type= "blog.demo.evaluator" ></evaluator>
                            </evaluators>
                            <render> false </render>
                        </evaluation>
                    </evaluations>-->
                </sub-component>
            </sub-components>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <pagination>true</pagination>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/components/title/simple-title</url>
            <properties>
                <title>Справочник Организации</title>
            </properties>
        </component>
    </components>
</template-instance>