<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-template:document-template-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Documents templates model</description>
	<author>LogicECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.it.ru/lecm/contractors/model/contractor/1.0" prefix="lecm-contractor"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/document/template/1.0" prefix="lecm-template"/>
	</namespaces>

	<types>
		<type name="lecm-template:document-template">
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-template:doc-type">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
				<property name="lecm-template:attributes">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<property name="lecm-template:readonly">
					<type>d:boolean</type>
					<default>false</default>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>false</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<association name="lecm-template:organizationAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-contractor:contractor-type</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
				<association name="lecm-template:unitAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:organization-unit</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
			<mandatory-aspects>
				<aspect>cm:titled</aspect>
			</mandatory-aspects>
		</type>
	</types>
</model>
