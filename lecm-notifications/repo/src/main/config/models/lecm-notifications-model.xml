<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-notf-type:dictionaryNotification" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Notifications</description>
	<author>AIvkin</author>
	<published>2011-01-10</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.it.ru/lecm/notifications/types/1.0" prefix="lecm-notf-type"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/notifications/1.0" prefix="lecm-notf"/>
	</namespaces>

	<types>
		<type name="lecm-notf:generalized-notification">
			<title>Notification</title>
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-notf:general-author">
					<title>Autor</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notf:general-description">
					<title>Description</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notf:general-forming-date">
					<title>Forming date</title>
					<type>d:datetime</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<!-- Ссылка на тип доставки-->
				<association name="lecm-notf:notification-type-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-notf-type:notification-type</class>
						<mandatory>true</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на адресата "сотрудник" -->
				<association name="lecm-notf:recipient-employee-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на адресата "должностная позиция" -->
				<association name="lecm-notf:recipient-position-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:position</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на адресата "подразделение" -->
				<association name="lecm-notf:recipient-organization-unit-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:organization-unit</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на получатель "рабочая группа" -->
				<association name="lecm-notf:recipient-work-group-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:workGroup</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на объект -->
				<association name="lecm-notf:object-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:cmobject</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>

		<type name="lecm-notf:notification-unit-base">
			<title>Notification</title>
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-notf:author">
					<title>Autor</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notf:description">
					<title>Description</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-notf:forming-date">
					<title>Forming date</title>
					<type>d:datetime</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<!-- Ссылка на адресата "сотрудник" -->
				<association name="lecm-notf:recipient-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>