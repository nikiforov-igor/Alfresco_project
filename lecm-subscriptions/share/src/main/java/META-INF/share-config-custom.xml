					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
			<form id="search">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:subscription-object-assoc"/>
