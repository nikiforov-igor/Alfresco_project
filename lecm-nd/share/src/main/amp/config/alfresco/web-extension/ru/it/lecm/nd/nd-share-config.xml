<alfresco-config>
    <config>
        <forms>
            <dependencies>
                <js src="/scripts/lecm-nd/nd-date-validator.js" />
            </dependencies>
            <default-controls>
                <type name="association:lecm-nd-dic:documentType" template="/ru/it/lecm/base-share/components/controls/association-control.ftl">
                    <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                    <control-param name="plane">true</control-param>
                </type>
            </default-controls>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-nd:document">
        <forms>
            <form>
                <field-visibility>
	                <show id="lecm-document-aspects:attachments-temp-assoc"/>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:executor-assoc"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>
					<show id="lecmSignAspects:signerEmployeeAssoc"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-eds-document:sheets-number"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true"/>
                    <show id="lecm-nd:begin-date" mandatory="true"/>
                    <show id="lecm-nd:end-date" mandatory="true"/>
                    <show id="lecm-nd:unlimited" mandatory="true"/>
                    <show id="lecm-document-aspects:registrator-assoc" force="true"/>
                    <show id="lecm-document-aspects:template-name" force="true"/>
                    <show id="lecm-document-aspects:template-ref" force="true"/>
                    <show id="loadAuthorScript" force="true"/>
                    <show id="editExecutorScript" force="true"/>
                </field-visibility>
                <appearance>
	                <set id="dates" appearance="" template="/ru/it/lecm/base-share/components/controls/daterange.ftl" />

                    <field id="lecm-document:title"/>
                    <field id="lecm-eds-document:document-type-assoc" mandatory="true">
                        <control>
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                            <control-param name="plane">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true">
                        <control template="/ru/it/lecm/base-share/components/controls/association-control.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура/cm:Холдинг</control-param>
                            <control-param name="nameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="endpointType">lecm-orgstr:organization-unit</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-nd:begin-date" label-id="label.nd.period" set="dates"/>
                    <field id="lecm-nd:end-date" label="" set="dates"/>
	                <field id="lecm-nd:unlimited" set="dates"/>
                    <field id="lecm-eds-document:note">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:subject-assoc"/>

	                <field id="lecm-document-aspects:attachments-temp-assoc" label-id="label.attachments.title">
		                <control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control-with-preview.ftl">
			                <control-param name="uploadDirectoryPath">{usertemp}</control-param>
			                <control-param name="directoryName">Вложения</control-param>
			                <control-param name="suppressRefreshEvent">true</control-param>
		                </control>
	                </field>
                    <field id="lecm-document:author-assoc" label-id="label.eds.assoc.compiler" read-only="true">
                        <control>
                            <control-param name="defaultValueDataSource">lecm/orgstructure/api/getCurrentEmployee</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:executor-assoc">
                        <control>
                            <control-param name="childrenDataSource">lecm/employees/ND_CREATORS/picker</control-param>
                            <control-param name="defaultValueDataSource">lecm/orgstructure/api/getCurrentEmployee</control-param>
                        </control>
                    </field>
                    <field id="lecmSignAspects:signerEmployeeAssoc">
						<control>
							<control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=LECM_SIGNERS</control-param>
						</control>
					</field>

					<field id="lecm-eds-document:sheets-number">
						<control template="/ru/it/lecm/base-share/components/controls/number.ftl">
							<control-param name="maxLength">9</control-param>
						</control>
					</field>
                    <field id="lecm-document-aspects:registrator-assoc">
                        <control>
                            <control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=DA_REGISTRARS</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:template-name">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-default-value.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:template-ref">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-default-value.ftl"/>
                    </field>
                    <field id="loadAuthorScript">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/load-default-author-in-readonly-control.js</control-param>
                            <control-param name="scriptLoadedFireAction">loadDefaultAuthorAction</control-param>
                        </control>
                    </field>
                    <field id="editExecutorScript">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/edit-executor-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">editExecutorCreateFormScriptLoaded</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <form id="document-template-fields">
                <field-visibility>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>
					<show id="lecmSignAspects:signerEmployeeAssoc"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-eds-document:sheets-number"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                    <show id="lecm-nd:unlimited"/>
                    <show id="lecm-document-aspects:registrator-assoc" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-eds-document:document-type-assoc" mandatory="true">
                        <control>
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                            <control-param name="plane">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true">
                        <control>
                            <control-param name="useStrictFilterByOrg">true</control-param>
                            <control-param name="rootLocation">{organization}</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent" >
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:note" >
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
					<field id="lecmSignAspects:signerEmployeeAssoc">
						<control>
							<control-param name="useStrictFilterByOrg">true</control-param>
							<control-param name="additionalFilter">{{EMPLOYEE_HAS_LOGIN}}</control-param>
							<control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=LECM_SIGNERS</control-param>
						</control>
					</field>

					<field id="lecm-eds-document:sheets-number">
						<control template="/ru/it/lecm/base-share/components/controls/number.ftl">
							<control-param name="maxLength">9</control-param>
						</control>
					</field>
                    <field id="lecm-document-aspects:registrator-assoc">
                        <control>
                            <control-param name="useStrictFilterByOrg">true</control-param>
                            <control-param name="additionalFilter">{{EMPLOYEE_HAS_LOGIN}}</control-param>
                            <control-param name="allowedNodesScript">lecm/orgstructure/employees/allowed?businessRoleId=DA_REGISTRARS</control-param>
                        </control>
                    </field>
                    <field id="lecm-nd:begin-date">
                        <control template="/ru/it/lecm/base-share/components/controls/relative-date-control.ftl">
                            <control-param name="radioOptions">RELATIVE,ABSOLUTE</control-param>
                            <control-param name="modeOptions">WORK|Рабочих,CALENDAR|Календарных</control-param>
                        </control>
                    </field>
                    <field id="lecm-nd:end-date">
                        <control template="/ru/it/lecm/base-share/components/controls/relative-date-control.ftl">
                            <control-param name="radioOptions">RELATIVE,ABSOLUTE</control-param>
                            <control-param name="modeOptions">WORK|Рабочих,CALENDAR|Календарных</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <!-- Форма для табличного представления (набор столбцов) -->
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-eds-document:regnum" force="true"/>													<!-- Номер проекта | Номер исходящего -->
                    <show id="lecm-eds-document:regdate" force="true"/>													<!-- Дата регистрации проекта | Дата регистрации исходящего -->
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document:creator-ref"/>																<!-- Автор Ссылка -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-statemachine:status"/>																<!-- Статус -->
                </field-visibility>
                <appearance>
                    <field id="lecm-eds-document:regnum" label="Номер" substituteString="{~REGNUM}"/>
                    <field id="lecm-eds-document:regdate" label="Дата" substituteString="{~REGDATE}"/>
                </appearance>
            </form>

            <!-- Форма с набором полей, редактируемых в машине состояний -->
            <form id="statemachine-editable-fields">
                <field-visibility>
                    <show id="lecm-document-aspects:reg-data-number"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                    <show id="lecm-eds-document:regdate"/>
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:executor-assoc"/>
                    <!-- Вид документа НД -->
                    <show id="lecm-eds-document:sheets-number"/>
                    <show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
                    <show id="lecm-document-aspects:registrator-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>														<!-- Краткое содержание -->
                    <show id="lecm-eds-document:note"/>                                                                 <!-- Примечание -->
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                    <show id="lecm-nd:unlimited"/>
                    <show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
	                <show id="lecm-document:regnum"/>
					<show id="lecmApproveAspects:approvalFolderRef"/>
					<show id="lecmSignAspects:signerEmployeeAssoc"/>
					<show id="lecm-review-ts:review-table-assoc"/>
                </field-visibility>
				<appearance>
					<field id="lecmApproveAspects:approvalFolderRef" label="Согласование"/>
				</appearance>
            </form>

            <!-- Форма атрибутивного поиска -->
            <form id="search">
                <field-visibility>
                    <show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
                    <show id="lecm-statemachine:status" force="true"/>                                                  <!-- Статус -->
                    <show id="lecm-document-aspects:reg-data-number"/>                                                  <!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date"/>                                                    <!-- Дата регистрации -->
                    <show id="lecm-document-aspects:reg-project-data-number"/>                                          <!-- Номер проекта -->
                    <show id="lecm-document-aspects:reg-project-data-date"/>                                            <!-- Дата регистрации проекта -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:executor-assoc"/>                                                       <!-- Исполнитель -->
                    <show id="lecmSignAspects:signerEmployeeAssoc"/>                                                    <!-- Подписанты -->
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                    <show id="lecm-eds-aspect:execution-state"/>                                                        <!-- Исполнение -->
                    <show id="lecm-review-ts:doc-review-state"/>                                                        <!-- Ознакомление -->
                </field-visibility>
                <appearance>
                    <set id="nd-document-search-common-set" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <field id="lecm-eds-document:document-type-assoc" set="nd-document-search-common-set">
                        <control>
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                            <control-param name="plane">true</control-param>
                            <control-param name="endpointMany">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-statemachine:status" set="nd-document-search-common-set">
                        <control template="/ru/it/lecm/documents/controls/select-status-control.ftl">
                            <control-param name="docType">lecm-nd:document</control-param>
                            <control-param name="withEmpty">true</control-param>
                            <control-param name="endpointMany">true</control-param>
                            <control-param name="nameSuffix">-multiText</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:reg-data-number" set="nd-document-search-common-set" label-id="label.number"/>
                    <field id="lecm-document-aspects:reg-data-date" set="nd-document-search-common-set" label-id="label.simple.date">
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:reg-project-data-number" set="nd-document-search-common-set"/>
                    <field id="lecm-document-aspects:reg-project-data-date" set="nd-document-search-common-set" label-id="label.project.date">
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document:title" set="nd-document-search-common-set">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup" />
                        </constraint-handlers>
                    </field>
                    <field id="lecm-document:author-assoc" set="nd-document-search-common-set" label-id="label.eds.assoc.compiler">
                        <control>
                            <control-param name="endpointMany">true</control-param>
                        </control>
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.constraints.notMandatory" event="keyup"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-eds-document:executor-assoc" set="nd-document-search-common-set">
                        <control>
                            <control-param name="endpointMany">true</control-param>
                        </control>
                    </field>
                    <field id="lecmSignAspects:signerEmployeeAssoc" set="nd-document-search-common-set">
                        <control>
                            <control-param name="endpointMany">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" set="nd-document-search-common-set">
                        <control>
                            <control-param name="useStrictFilterByOrg">true</control-param>
                            <control-param name="endpointMany">true</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-aspect:execution-state" set="nd-document-search-common-set" label-id="ord.execution.lable">
                        <control template="/ru/it/lecm/eds/controls/selectmany.ftl">
                            <control-param name="withEmpty">true</control-param>
                            <control-param name="nameSuffix">-multiText</control-param>
                            <control-param name="useDefaultValue">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-review-ts:doc-review-state" set="nd-document-search-common-set" label-id="ord.review.lable">
                        <control template="/ru/it/lecm/eds/controls/selectmany.ftl">
                            <control-param name="withEmpty">true</control-param>
                            <control-param name="nameSuffix">-multiText</control-param>
                            <control-param name="useDefaultValue">false</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <form id="searchQueryGrid">
                <field-visibility>
                    <show id="lecm-document-aspects:reg-data-number"/>
                    <show id="lecm-document-aspects:reg-data-date"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-statemachine:status" force="true"/>
                </field-visibility>
            </form>
            <form id="search-editor-fields">
                <field-visibility>
                    <show id="lecm-document-aspects:reg-data-number"/>																	<!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:sheets-number"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                    <show id="lecm-nd:unlimited"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                    <show id="lecm-document-aspects:reg-project-data-date"/>
                    <show id="lecmSignAspects:isSigned"/>
                    <show id="lecmSignAspects:signingDate"/>

                    <show id="cm:created"/>
                    <show id="lecm-statemachine:status" force="true"/>
                    <show id="lecm-document-aspects:reg-data-is-registered"/>
                    <show id="lecm-document:present-string"/>
                    <show id="lecm-document-aspects:registrator-assoc"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-document:present-string" label="Название"/>
                    <field id="lecm-eds-document:document-type-assoc">
                        <control>
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_документа/cm:Вид_x0020_НД</control-param>
                            <control-param name="plane">true</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <form id="searchColumns">
                <field-visibility>
                    <show id="lecm-document:present-string"/>
                    <show id="lecm-document:ext-present-string"/>
                    <show id="lecm-document:list-present-string"/>
                    <show id="lecm-document:ml-present-string"/>
                    <show id="lecm-document:ml-ext-present-string"/>
                    <show id="lecm-document:ml-list-present-string"/>

                    <show id="lecm-document:doc-type"/>
                    <show id="lecm-document:regnum"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:title"/>

                    <show id="lecm-document:subject-assoc-text-content"/>
                    <show id="lecm-eds-document:document-type-assoc-text-content"/>
                    <show id="lecm-document:author-assoc-text-content"/>
                    <show id="lecm-document-aspects:registrator-assoc-text-content"/>
                    <show id="lecm-eds-document:reviewers-assoc-text-content"/>
                </field-visibility>
            </form>
        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-nd:document">
        <forms>
            <form>
                <view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
				<edit-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <field-visibility>
                    <show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date" force="true"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true"/>
                    <show id="lecm-eds-document:sheets-number"/>
                    <show id="lecm-document:subject-assoc"/>
					<show id="lecmApproveAspects:approvalFolderRef" force="true"/>
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
	                <show id="lecm-nd:unlimited" mandatory="true"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:executor-assoc"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                    <show id="lecm-document-aspects:reg-project-data-date"/>
					<show id="lecmSignAspects:signerEmployeeAssoc"/>
					<show id="lecmSignAspects:isSigned" for-mode="view"/>
					<show id="lecmSignAspects:signingDate" for-mode="view"/>
                    <show id="lecm-document-aspects:registrator-assoc" force="true"/>
					<show id="lecm-review-ts:review-table-assoc"/>
                    <show id="lecm-base-dummy-aspects:script" force="true"/>
                </field-visibility>
                <appearance>

                    <set id="common" appearance="" label="Атрибуты"/>
                    <set id="approvalTab" appearance="" label="Согласование"/>
					<set id="review" label="Ознакомление"/>

                    <set id="dates" parent="common" template="/ru/it/lecm/base-share/components/controls/daterange.ftl"/>
                    <set id="afterDates" parent="common"/>

                    <!-- Вкладка Атрибуты -->
                    <field id="lecm-document:regnum" set="common" mandatory="true">
						<constraint-handlers>
