<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-resolutions-aspect:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Logic ECM resolutions aspects model</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/logicECM/resolutions/1.0" prefix="lecm-resolutions"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/resolutions/aspects/1.0" prefix="lecm-resolutions-aspect"/>
    </namespaces>

    <aspects>
        <aspect name="lecm-resolutions-aspect:resolution-completed-signal">
            <properties>
                <property name="lecm-resolutions-aspect:resolutions-completed-assoc-ref">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
                </property>
                <property name="lecm-resolutions-aspect:resolutions-completed-assoc-text-content">
                    <type>d:text</type>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>both</tokenised>
                    </index>
                </property>
            </properties>
            <associations>
                <association name="lecm-resolutions-aspect:resolutions-completed-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-resolutions:document</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </association>
            </associations>
        </aspect>
    </aspects>
</model>