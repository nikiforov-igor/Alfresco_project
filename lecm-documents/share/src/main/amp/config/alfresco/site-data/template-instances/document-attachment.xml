<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>ru/it/lecm/documents/document-attachment</template-type>
	<components>
		<!-- Заголовок -->
		<component>
			<region-id>title</region-id>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation id="lecm-document">
							<url>/components/title/simple-title</url>
							<properties>
								<title>title.documents</title>
							</properties>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Хэдер -->
		<component>
			<region-id>document-attachment-header</region-id>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation id="lecm-document">
							<url>/lecm/components/document/attachment/header</url>
							<properties>
								<nodeRef>{nodeRef}</nodeRef>
							</properties>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- WebPreview -->
		<component>
			<region-id>web-preview</region-id>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation>
							<evaluators>
								<evaluator type="config.component.evaluator">
									<params>
										<element>DocumentDetails/document-details/display-web-preview</element>
									</params>
								</evaluator>
							</evaluators>
							<url>/components/preview/web-preview</url>
							<properties>
								<nodeRef>{nodeRef}</nodeRef>
							</properties>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Comments -->
		<component>
			<region-id>comments</region-id>
			<url>/lecm/components/comments/list</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
				<activityType>document</activityType>
			</properties>
		</component>

		<!-- Document Actions (incl commons) -->
		<component>
			<region-id>document-actions</region-id>
			<url>/lecm/components/document/attachment/actions</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>
		<component>
			<region-id>actions-common</region-id>
			<url>/components/documentlibrary/actions-common</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>

		<!-- Document Tags -->
		<component>
			<region-id>document-tags</region-id>
			<sub-components>
				<sub-component id="default">
					<evaluations>
						<evaluation>
							<url>/lecm/components/document/document-tags</url>
							<properties>
								<nodeRef>{nodeRef}</nodeRef>
							</properties>
						</evaluation>
					</evaluations>
				</sub-component>
			</sub-components>
		</component>

		<!-- Document Attachment DND -->
		<component>
			<region-id>document-attachment-dnd</region-id>
			<url>/lecm/components/document/attachment/dnd</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>

		<!-- Document Metadata -->
		<component>
			<region-id>document-metadata</region-id>
			<url>/lecm/components/document/attachment/metadata</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>

		<!-- Document Versions -->
		<component>
			<region-id>document-versions</region-id>
			<url>/lecm/components/document/attachment/versions</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>

		<!-- Digital signing -->
		<component>
			<region-id>document-signing</region-id>
			<url>/lecm/components/document/attachment/signing</url>
			<properties>
				<nodeRef>{nodeRef}</nodeRef>
			</properties>
		</component>

		<!-- Uploaders -->
		<component>
			<region-id>html-upload</region-id>
			<url>/components/upload/html-upload</url>
		</component>
		<component>
			<region-id>flash-upload</region-id>
			<url>/components/upload/flash-upload</url>
		</component>
		<component>
			<region-id>file-upload</region-id>
			<url>/components/upload/file-upload</url>
		</component>
		<component>
			<region-id>lecm-dnd-upload</region-id>
			<url>/lecm/components/dnd-upload</url>
		</component>
		<component>
			<region-id>dnd-upload</region-id>
			<url>/components/upload/dnd-upload</url>
		</component>
	</components>
</template-instance>
