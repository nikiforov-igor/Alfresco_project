<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config>
		<forms>
			<default-controls>
				<type name="association:lecm-workflow:route" template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
					<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Бизнес_x0020_процессов</control-param>
					<control-param name="nameSubstituteString">{cm:title} ({cm:description})</control-param>
					<control-param name="notSelectedOptionShow">true</control-param>
					<control-param name="notSelectedOptionLabel"> </control-param>
					<control-param name="showCreateNewButton">false</control-param>
					<control-param name="endpointType">lecm-workflow:route</control-param>
				</type>
			</default-controls>
			<dependencies>
				<js src="/scripts/lecm-workflow/lecm-package-items-finder.js" />
				<js src="/scripts/lecm-workflow/workflow-validators.js" />
			</dependencies>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:route">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:workflow-assignees-list-owner-assoc"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-workflow:route">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:workflow-assignees-list-owner-assoc"/>
					<show id="lecm-workflow:fake-workflow-list-approval" force="true" for-mode="edit"/>
					<show id="lecm-workflow:fake-workflow-list-signing" force="true" for-mode="edit"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
				<appearance>
					<set id="route1" appearance=""/>
					<set id="route2" appearance=""/>
					<set id="approval" appearance="bordered-panel" label-id="workflow.route.set.approval.title"/>
					<set id="signing" appearance="bordered-panel" label-id="workflow.route.set.signing.title"/>
					<set id="route3" appearance=""/>
					<field id="cm:title" set="route1">
						<control template="/org/alfresco/components/form/controls/textfield.ftl"/>
					</field>
					<field id="lecm-workflow:workflow-assignees-list-owner-assoc" read-only="true" set="route2"/>
					<field id="lecm-workflow:fake-workflow-list-approval" set="approval">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">approval</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="workflowType">APPROVAL</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="itemType">route</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для согласования</control-param>
						</control>
					</field>
					<field id="lecm-workflow:fake-workflow-list-signing" set="signing">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">signing</control-param>
							<control-param name="workflowType">SIGNING</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="concurrency">SEQUENTIAL</control-param><!-- PARALLEL | SEQUENTIAL -->
							<control-param name="itemType">route</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для подписания</control-param>
						</control>
					</field>
					<field id="lecm-workflow:is-register-after-signed" set="route3"/>
				</appearance>
			</form>
			<form id="createNewCommonRouteForm">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:workflow-assignees-list-owner-assoc"/>
					<show id="lecm-workflow:fake-workflow-list-approval" force="true"/>
					<show id="lecm-workflow:fake-workflow-list-signing" force="true"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
				<appearance>
					<set id="route1" appearance=""/>
					<set id="route2" appearance=""/>
					<set id="approval" appearance="bordered-panel" label-id="workflow.route.set.approval.title"/>
					<set id="signing" appearance="bordered-panel" label-id="workflow.route.set.signing.title"/>
					<set id="route3" appearance=""/>
					<field id="cm:title" set="route1">
						<control template="/org/alfresco/components/form/controls/textfield.ftl"/>
					</field>
					<field id="lecm-workflow:workflow-assignees-list-owner-assoc" mandatory="true" set="route2">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="plane">false</control-param>
							<control-param name="showSearch">false</control-param>
							<control-param name="showSelectedItemsPath">false</control-param>
							<control-param name="treeItemType">lecm-orgstr:organization-unit</control-param>
							<control-param name="endpointType">lecm-orgstr:organization-unit</control-param>
						</control>
					</field>
					<field id="lecm-workflow:fake-workflow-list-approval" set="approval">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">approval</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="workflowType">APPROVAL</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="itemType">route</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для согласования</control-param>
						</control>
					</field>
					<field id="lecm-workflow:fake-workflow-list-signing" set="signing">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">signing</control-param>
							<control-param name="workflowType">SIGNING</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="concurrency">SEQUENTIAL</control-param><!-- PARALLEL | SEQUENTIAL -->
							<control-param name="itemType">route</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для подписания</control-param>
						</control>
					</field>
					<field id="lecm-workflow:is-register-after-signed" set="route3"/>
				</appearance>
			</form>
			<form id="createNewPrivateRouteForm">
				<field-visibility>
					<show id="cm:title"/>
					<show id="lecm-workflow:fake-workflow-list-approval" force="true" for-mode="edit"/>
					<show id="lecm-workflow:fake-workflow-list-signing" force="true" for-mode="edit"/>
					<show id="lecm-workflow:is-register-after-signed"/>
				</field-visibility>
				<appearance>
					<set id="route1" appearance=""/>
					<set id="approval" appearance="bordered-panel" label-id="workflow.route.set.approval.title"/>
					<set id="signing" appearance="bordered-panel" label-id="workflow.route.set.signing.title"/>
					<set id="route3" appearance=""/>
					<field id="cm:title" set="route1">
						<control template="/org/alfresco/components/form/controls/textfield.ftl"/>
					</field>
					<field id="lecm-workflow:fake-workflow-list-approval" set="approval">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">approval</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="workflowType">APPROVAL</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="itemType">route</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для согласования</control-param>
						</control>
					</field>
					<field id="lecm-workflow:fake-workflow-list-signing" set="signing">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="namespace">signing</control-param>
							<control-param name="workflowType">SIGNING</control-param><!-- APPROVAL | SIGNING | REVIEW -->
							<control-param name="concurrency">SEQUENTIAL</control-param><!-- PARALLEL | SEQUENTIAL -->
							<control-param name="itemType">route</control-param>
							<control-param name="showListSelectMenu">false</control-param>
							<control-param name="showComputeTermsButton">false</control-param>
							<control-param name="formAddAssigneeTitle">Добавить сотрудника для подписания</control-param>
						</control>
					</field>
					<field id="lecm-workflow:is-register-after-signed" set="route3"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:assignee">
		<forms>
			<form id="parallel">
				<field-visibility>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" substituteString="{lecm-orgstr:employee-short-name}">
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="sequential">
				<field-visibility>
					<show id="lecm-workflow:assignee-employee-assoc"/>
					<show id="lecm-workflow:assignee-due-date"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" substituteString="{lecm-orgstr:employee-short-name}">
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="route">
				<field-visibility>
					<show id="lecm-workflow:assignee-days-to-complete"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" substituteString="{lecm-orgstr:employee-short-name}">
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-short-name}</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-workflow:assignee-order"/>
					<show id="lecm-workflow:assignee-due-date"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
				</appearance>
			</form>
			<form id="datagrid-route">
				<field-visibility>
					<show id="lecm-workflow:assignee-order"/>
					<show id="lecm-workflow:assignee-days-to-complete"/>
					<show id="lecm-workflow:assignee-employee-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow:assignee-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-workflow:workflow-assignees-list">
		<forms>
			<form id="save">
				<field-visibility>
					<show id="cm:title" force="true"/>
				</field-visibility>
				<appearance>
					<field id="cm:title" mandatory="true">
						<control template="/org/alfresco/components/form/controls/textfield.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>