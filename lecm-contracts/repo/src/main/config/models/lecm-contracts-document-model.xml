<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-contract:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM document model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.it.ru/logicECM/document/1.0" prefix="lecm-document"/>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/contract/1.0" prefix="lecm-contract"/>
	</namespaces>

    <constraints>
        <constraint name="lecm-contract:present-string-constraint" type="ru.it.lecm.documents.constraints.PresentStringConstraint">
            <parameter name="presentString">
                <value>Договор {cm:name} от {cm:created}, регистрационный номер {lecm-contract:regnum}</value>
            </parameter>
        </constraint>
        <constraint name="lecm-contract:attachment-categories" type="LIST">
            <parameter name="allowedValues">
                <list>
                    <value>Основные</value>
                    <value>Схемы</value>
                    <value>Остальные</value>
                </list>
            </parameter>
        </constraint>
    </constraints>

	<types>
		<type name="lecm-contract:document">
			<title>Logic Ecm Contract Document</title>
			<parent>lecm-document:base</parent>
			<properties>
				<property name="lecm-contract:regnum">
					<type>d:text</type>
				</property>
                <property name="lecm-contract:contentAttr">
					<type>d:text</type>
				</property>
			</properties>
		</type>
		<type name="lecm-contract:importTestDocument">
			<title>Logic Ecm Import Test Document</title>
			<parent>lecm-document:base</parent>
			<properties>
				<property name="lecm-contract:importTestRegnum">
					<type>d:text</type>
				</property>
			</properties>
		</type>
	</types>

</model>