<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/search-builder/search-query-view</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>Личные поисковые запросы</title>
            </properties>
        </component>
        <component>
            <region-id>doc-toolbar</region-id>
            <url>/lecm/arm/documents-toolbar</url>
            <properties>
                <bubblingLabel>query-view-in-arm</bubblingLabel>
                <showColumnsBtn>false</showColumnsBtn>
                <showFiltersBtn>false</showFiltersBtn>
                <showSearchBlock>true</showSearchBlock>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/search-query/toolbar</url>
            <properties>
                <pagination>true</pagination>
                <nodeRef>{armSelectedNodeRef}</nodeRef>
                <editPath>Мои поисковые запросы/Управление поисковыми запросами</editPath>
                <deletePath>Мои поисковые запросы/Поисковые запросы</deletePath>
            </properties>
        </component>
        <!-- Datagrid -->
        <component>
            <region-id>datagrid</region-id>
            <url>/lecm/search-query/datagrid</url>
            <properties>
                <nodeRef>{armSelectedNodeRef}</nodeRef>
            </properties>
        </component>
    </components>
</template-instance>