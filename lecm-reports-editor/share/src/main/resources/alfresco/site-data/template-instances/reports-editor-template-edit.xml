<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/reports-editor/report-edit</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.lecm.reports-editor.edit-template</title>
            </properties>
        </component>
        <!-- Content = Toolbar + Form -->
        <component>
            <region-id>content</region-id>
            <url>/lecm/reports-editor/template-edit-main</url>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/reports-editor/menu</url>
            <properties>
                <selected>editTemplate</selected>
            </properties>
        </component>
        <!-- Report Editor Navigation Toolbar -->
        <component>
            <region-id>reports-editor-toolbar</region-id>
            <url>/lecm/reports-editor-toolbar</url>
            <properties>
                <!-- Доступность кнопки -->
                <previousButton>true</previousButton>
                <nextButton>false</nextButton>
                <!-- Настройки перехода на страницу-->
                <previousPage>reports-editor-source-edit</previousPage>
            </properties>
        </component>
    </components>
</template-instance>