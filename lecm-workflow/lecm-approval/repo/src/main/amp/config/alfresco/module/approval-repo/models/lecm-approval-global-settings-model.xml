<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmApproveGlobalSettings:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Model for storing approval global settings</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval/workflow/global-settings/1.0" prefix="lecmApproveGlobalSettings"/>
	</namespaces>

	<types>
		<!-- Глобальные настройки согласования -->
		<type name="lecmApproveGlobalSettings:settings">
			<parent>cm:cmobject</parent>
			<properties>
				<!-- срок согласования по-умолчанию -->
				<property name="lecmApproveGlobalSettings:defaultApprovalTerm">
					<type>d:int</type>
					<mandatory>true</mandatory>
					<constraints>
						<constraint name="lecmApproveGlobalSettings:defaultApprovalTermConstraint" type="MINMAX">
							<parameter name="minValue">
								<value>1</value>
							</parameter>
							<parameter name="maxValue">
								<value>2147483647</value>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
		</type>
	</types>
</model>
