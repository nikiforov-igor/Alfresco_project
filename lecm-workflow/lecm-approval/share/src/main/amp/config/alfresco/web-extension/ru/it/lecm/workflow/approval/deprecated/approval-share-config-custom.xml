<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config evaluator="model-type" condition="lecm-orgstr:employees">
		<forms>
			<form id="reassign-override-form">
				<field-visibility>
					<show id="reassign-to-employee" force="true"/>
				</field-visibility>
				<appearance>
					<field id="reassign-to-employee" label-id="label.assign.to.employee">
						<control template="/ru/it/lecm/base-share/components/controls/association-control.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
							<control-param name="employeeAbsenceMarker">true</control-param>
							<control-param name="itemType">lecm-orgstr:employee</control-param>
							<control-param name="useStrictFilterByOrg">true</control-param>
							<control-param name="plane">true</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="activiti$lecmApprovalWorkflow">
		<forms>
			<form>
				<field-visibility>
					<show id="bpm:workflowDueDate"/>
					<show id="packageItems"/>
					<show id="bpm:workflowDescription" />
					<show id="lecm-workflow:assigneesListAssoc"/>
				</field-visibility>
				<appearance>
					<field id="bpm:workflowDescription">
						<control template="/ru/it/lecm/documents/controls/workflow/document-present-string-hidden.ftl">
							<control-param name="leftPartTextCode">ru.it.approval.workflowDescription.message</control-param>
						</control>
					</field>

					<field id="bpm:workflowDueDate" mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Workflow.workflowDueDateValidator" event="keyup"/>
						</constraint-handlers>
						<control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
					</field>
					<field id="lecm-workflow:assigneesListAssoc">
						<control template="/ru/it/lecm/workflow/controls/workflow-assignees-control.ftl">
							<control-param name="namespace">approval</control-param>
							<control-param name="workflowType">APPROVAL</control-param>
							<control-param name="concurrency">USER</control-param>
							<control-param name="concurrencyInputName">prop_lecm-workflow_workflowConcurrency</control-param>
							<control-param name="showListSelectMenu">true</control-param>
							<control-param name="showComputeTermsButton">true</control-param>
							<control-param name="allowedBusinessRoleId">DA_APPROVERS</control-param>
							<control-param name="formAddAssigneeTitle">title.approval.add.employee</control-param>
						</control>
					</field>
					<field id="packageItems">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="task-type" condition="lecmApprove2:approveTask">
		<forms>
			<form>
				<field-visibility>
					<show id="lecmApprove2:presentString"/>
					<show id="bpm:dueDate" />
					<show id="lecmApprove2:approveTaskResult" />
					<show id="bpm:comment" />
					<show id="lecmApprove2:approveTaskCommentAssoc" />
				<show id="bpm:reassignable" />
				</field-visibility>
				<appearance>
					<field id="lecmApprove2:presentString">
						<control template="/ru/it/lecm/workflow/controls/document-present-string.ftl" />
					</field>
					<field id="bpm:dueDate" label-id="workflow.field.due">
						<control template="/org/alfresco/components/form/controls/info.ftl" />
					</field>
					<field id="lecmApprove2:approveTaskResult" mandatory="true">
						<control template="/ru/it/lecm/base-share/components/controls/activiti-transitions-radiobuttons.ftl">
							<control-param name="options">APPROVED|Согласовать#alf#APPROVED_WITH_REMARK|Согласовать с замечаниями#alf#REJECTED|Отклонить</control-param>
						</control>
					</field>
					<field id="bpm:comment">
						<control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
							<control-param name="rows">4</control-param>
						</control>
					</field>
					<field id="lecmApprove2:approveTaskCommentAssoc">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-uploader-control.ftl">
							<control-param name="uploadDirectoryPath">{usertemp}</control-param>
						</control>
					</field>
				<field id="bpm:reassignable">
						<control template="/ru/it/lecm/base-share/components/controls/reassign-task-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="task-type" condition="lecmApprove2:approval">
		<forms>
			<form id="workflow-details">
				<field-visibility>
					<show id="packageItems"/>
				</field-visibility>
				<appearance>
					<field id="packageItems">
						<control template="/ru/it/lecm/workflow/controls/package-items-with-result-list-control.ftl">
							<control-param name="nameSubstituteString">{lecm-document:present-string}</control-param>
							<control-param name="resultListType">lecmApprovalResult:approvalResultList</control-param>
						</control>
					</field>
				</appearance>
			</form>
			<form>
				<field-visibility>
					<hide id="packageItems"/>
					<hide id="lecm-workflow:assigneesListAssoc"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecmApprovalResult:approvalResultList">
		<forms>
			<form>
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-list-document-version"/>
					<show id="lecm-workflow-result:workflow-result-list-start-date"/>
					<show id="lecm-workflow-result:workflow-result-list-complete-date"/>
					<show id="lecm-workflow-result:workflow-result-list-workflow-result-item-assoc"/>
					<show id="lecmApprovalResult:approvalResultListDecision"/>
					<show id="lecmApprovalResult:printBtn"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow-result:workflow-result-list-workflow-result-item-assoc">
						<control template="/ru/it/lecm/workflow/controls/result-list.ftl">
							<control-param name="itemType">lecmApprovalResult:approvalResultItem</control-param>
						</control>
					</field>
					<field id="lecmApprovalResult:printBtn">
						<control template="/ru/it/lecm/workflow/controls/printListBtn.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecmApprovalResult:approvalResultList">
		<forms>
			<form id="approvalListDataGridControl">
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-list-start-date"/>
					<show id="lecm-workflow-result:workflow-result-list-complete-date"/>
					<show id="lecmApprovalResult:approvalResultListDecision"/>
					<show id="lecm-workflow-result:workflow-result-list-initiator-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow-result:workflow-result-list-initiator-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecmApprovalResult:approvalResultItem">
		<forms>
			<form id="datagrid">
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-item-employee-assoc"/>
					<show id="lecm-workflow-result:workflow-result-item-employee-position" force="true"/>
					<show id="lecm-workflow-result:workflow-result-item-employee-unit" force="true"/>
					<show id="lecm-workflow-result:workflow-result-item-finish-date"/>
					<show id="lecmApprovalResult:approvalResultItemDecision"/>
					<show id="lecmApprovalResult:approvalResultItemComment"/>
					<show id="lecmApprovalResult:approvalResultItemCommentAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow-result:workflow-result-item-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
                    <field id="lecm-workflow-result:workflow-result-item-employee-position" substituteString="{lecm-workflow-result:workflow-result-item-employee-assoc/..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name}" />
                    <field id="lecm-workflow-result:workflow-result-item-employee-unit" substituteString="{lecm-workflow-result:workflow-result-item-employee-assoc/..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}" />
					<field id="lecmApprovalResult:approvalResultItemCommentAssoc" label-id="field.comment.file"/>
				</appearance>
			</form>
			<form id="internal-datagrid">
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-item-employee-assoc"/>
					<show id="lecmApprovalResult:approvalResultItemDecision"/>
					<show id="lecm-workflow-result:workflow-result-item-finish-date"/>
					<show id="lecmApprovalResult:approvalResultItemCommentAssoc"/>
					<show id="lecmApprovalResult:approvalResultItemComment"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow-result:workflow-result-item-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
					<field id="lecm-workflow-result:workflow-result-item-finish-date" label-id="field.date"/>
					<field id="lecmApprovalResult:approvalResultItemCommentAssoc" label=""/>
					<field id="lecmApprovalResult:approvalResultItemComment" label=""/>
				</appearance>
			</form>
			<form id="approvalItemsDataGridControl">
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-item-employee-assoc"/>
					<show id="lecm-workflow-result:workflow-result-item-finish-date"/>
					<show id="lecmApprovalResult:approvalResultItemDecision"/>
					<show id="lecmApprovalResult:approvalResultItemComment"/>
					<show id="lecmApprovalResult:approvalResultItemCommentAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecm-workflow-result:workflow-result-item-employee-assoc" substituteString="{lecm-orgstr:employee-short-name}"/>
					<field id="lecmApprovalResult:approvalResultItemCommentAssoc" label-id="field.comment.file"/>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecmApprovalResult:approvalResultItem">
		<forms>
			<form>
				<field-visibility>
					<show id="lecm-workflow-result:workflow-result-item-employee-assoc"/>
					<show id="lecmApprovalResult:approvalResultItemDecision"/>
					<show id="lecm-workflow-result:workflow-result-item-finish-date"/>
					<show id="lecmApprovalResult:approvalResultItemComment"/>
					<show id="lecmApprovalResult:approvalResultItemCommentAssoc"/>
				</field-visibility>
				<appearance>
					<field id="lecmApprovalResult:approvalResultItemDecision">
						<control template="/ru/it/lecm/base-share/components/controls/selectone.ftl"/>
					</field>
                    <field id="lecmApprovalResult:approvalResultItemCommentAssoc">
						<control template="/ru/it/lecm/base-share/components/controls/view-file-link.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="activiti$approvalTermination">
		<forms>
			<form>
				<field-visibility>
					<show id="warning"/>
					<show id="packageItems"/>
				</field-visibility>
				<appearance>
					<field id="warning">
						<control template="/ru/it/lecm/base-share/components/controls/message-control.ftl">
							<control-param name="msg">ru.it.approval.terminate</control-param>
						</control>
					</field>
					<field id="packageItems">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>

	<config evaluator="string-compare" condition="activiti$approvalForce">
		<forms>
			<form>
				<field-visibility>
					<show id="warning"/>
					<show id="packageItems"/>
				</field-visibility>
				<appearance>
					<field id="warning">
						<control template="/ru/it/lecm/base-share/components/controls/message-control.ftl">
							<control-param name="msg">ru.it.approval.force</control-param>
						</control>
					</field>
					<field id="packageItems">
						<control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
