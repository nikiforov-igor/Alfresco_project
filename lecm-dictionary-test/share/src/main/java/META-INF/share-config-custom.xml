                    <show id="lecm-dic-test:addressOneTree" force="true"/>
                    <show id="lecm-dic-test:addressManyTree" force="true"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-dic-test:regOneSelect">
                        <control template="/ru/it/lecm/base-share/components/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/lecm-dic:Dictionary/lecm-dic:Регионы</control-param>
                            <control-param name="nameSubstituteString">{cm:name} ({lecm-dic-regions:code})</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
