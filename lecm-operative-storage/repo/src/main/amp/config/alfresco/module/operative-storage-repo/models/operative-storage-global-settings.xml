<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-os-global-settings:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Model for storing operative storage global settings</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/os/global-settings/1.0" prefix="lecm-os-global-settings"/>
	</namespaces>

	<types>
		<!-- Глобальные настройки оперативного хранения -->
			<type name="lecm-os-global-settings:settings">
			<parent>cm:cmobject</parent>
			<properties>
				<!-- централизованное/децентрализованное хранение -->
				<property name="lecm-os-global-settings:centralized">
					<type>d:boolean</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</type>
	</types>
</model>
