<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-events-settings:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Настройки мероприятий</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/events/settings/1.0" prefix="lecm-events-settings"/>
    </namespaces>

    <types>
        <type name="lecm-events-settings:user-settings">
            <title>Logic Ecm Events User Settings</title>
            <parent>cm:cmobject</parent>
            <properties>
                <!-- Режим выбора исполнителей  -->
                <property name="lecm-events-settings:show-declined">
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                    <default>false</default>
                </property>
            </properties>
        </type>
    </types>
</model>