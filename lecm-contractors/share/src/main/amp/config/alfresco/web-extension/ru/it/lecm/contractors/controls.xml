<alfresco-config>
    <config>
        <field-types>
            <field-type id="lecm-representative:representative-type" localName="Представитель контрагента">
                <control id="lecm-representative:representative-type-control" template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl" localName="Выбор представителя">
                    <param id="startLocation" localName="Корневая директория" mandatory="true" visible="false">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Адресанты</param>
                    <param id="nameSubstituteString" localName="Шаблон имени">{lecm-representative:surname} {lecm-representative:firstname} {lecm-representative:propMiddlename}</param>
                    <param id="showCreateNewLink" localName="Показывать ссылку создания">false</param>
                    <param id="showCreateNewButton" localName="Показывать кнопку создания">false</param>
                    <param id="itemType" localName="Тип" visible="false">lecm-representative:representative-type</param>
                </control>
            </field-type>
            <field-type id="lecm-contractor:region-type" localName="Регионы">
                <control id="lecm-contractor:region-type-control" template="/ru/it/lecm/base-share/components/controls/association-control.ftl" localName="Выбор региона">
                    <param id="rootLocation" localName="Корневая директория" mandatory="true" visible="false">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Регионы</param>
                    <param id="nameSubstituteString" localName="Шаблон имени">{cm:title}</param>
                    <param id="showCreateNewLink" localName="Показывать ссылку создания">false</param>
                    <param id="showCreateNewButton" localName="Показывать кнопку создания">false</param>
                    <param id="plane" localName="Плоский справочник" visible="false">true</param>
                    <param id="showSearch" localName="Показывать поле поиска">true</param>
                </control>
            </field-type>
        </field-types>
    </config>
</alfresco-config>