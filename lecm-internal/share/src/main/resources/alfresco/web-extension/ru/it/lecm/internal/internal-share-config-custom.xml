                </appearance>
            </form>
            <!-- Форма для табличного представления (набор столбцов)-->
            <form id="datagrid">
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="lecm-document:subject-assoc"/>
                </field-visibility>
            </form>
            <!-- Форма для базового журнала документов-->
            <form id="document-journal">
                <field-visibility>
                    <show id="cm:name"/>
                    <show id="cm:image"/>
                    <show id="lecm-document:present-string"/>
                    <show id="lecm-document:list-present-string"/>
                </field-visibility>
                <appearance>
                    <field id="cm:image" label=" "/>
                    <field id="cm:name" label=" "/>
                    <field id="lecm-document:present-string" label=" "/>
                </appearance>
            </form>
            <!-- Форма атрибутивного поиска-->
            <form id="search">
                <field-visibility>
                    <show id="lecm-internal:doc-type-assoc"/>
                    <show id="lecm-document:title"/>
                    <show id="cm:created"/>
                    <show id="lecm-document:doc-date"/>
                    <show id="lecm-document-aspects:reg-data-number"/>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-eds-document:recipients-assoc"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                </field-visibility>
                <appearance>
                    <field id="cm:created">
                        <control template="/org/alfresco/components/form/controls/daterange.ftl"/>
                    </field>
                    <field id="lecm-document:title"/>
                    <field id="lecm-document:doc-date">
                        <control template="/org/alfresco/components/form/controls/daterange.ftl"/>
                    </field>
                    <field id="lecm-internal:doc-type-assoc">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_внутреннего_x0020_документа</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="endpointType">lecm-internal-doc-type:dictionary</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <!-- Форма с набором полей, редактируемых в машине состояний-->
            <form id="statemachine-editable-fields">
                <field-visibility>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-internal:response-date"/>
                    <show id="lecm-internal:recipients-assoc"/>
                    <show id="lecm-internal:doc-type-assoc"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-document-aspects:response-to-assoc"/>
                    <show id="lecm-document-aspects:reg-data-number"/>
                </field-visibility>
            </form>
        </forms>
    </config>

    <config evaluator="string-compare" condition="activiti$lecmInternalDirect">
        <forms>
            <form>
                <field-visibility>
                    <show id="warning"/>
                    <show id="packageItems"/>
                </field-visibility>
                <appearance>
                    <field id="warning">
                        <control template="/ru/it/lecm/base-share/components/controls/message-control.ftl">
                            <control-param name="msg">ru.it.internal.direct</control-param>
                        </control>
                    </field>
                    <field id="packageItems">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

    <config evaluator="task-type" condition="internalDirect:answerTask">
        <forms>
            <form>
                <field-visibility>
                    <show id="packageItems"/>
                    <show id="internalDirect:formData"/>
                    <show id="internalDirect:answerResult"/>
                    <show id="transitions" force="true" />
                </field-visibility>
                <appearance>
                    <field id="packageItems">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-association-control.ftl"/>
                    </field>
                    <field id="internalDirect:formData">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden.ftl"/>
                    </field>
                    <field id="internalDirect:answerResult">
                        <control template="/ru/it/lecm/internal/controls/direct-answer.ftl" />
                    </field>
                    <field id="transitions">
                        <control template="/ru/it/lecm/base-share/components/controls/hidden-value.ftl">
                            <control-param name="fieldValue">Next</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

</alfresco-config>