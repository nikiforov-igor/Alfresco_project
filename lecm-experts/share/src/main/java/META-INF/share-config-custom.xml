<alfresco-config>
    <config>
        <forms>
            <dependencies>
                <js src="/ru/it/lecm/experts/experts.js" />
            </dependencies>
        </forms>
    </config>

    <!-- Custom Aspects -->
    <config evaluator="string-compare" condition="DocumentLibrary">
        <aspects>
            <visible>          
                <aspect name="lecm-exp:hasExperts"/>       
            </visible>  
        </aspects>
    </config>

    <!-- Custom Aspects forms-->
    <config evaluator="aspect" condition="lecm-exp:hasExperts">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-exp:experts" for-mode="edit"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-exp:experts">
                        <control template="/ru/it/lecm/experts/viewExperts.ftl"/>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>

</alfresco-config>
