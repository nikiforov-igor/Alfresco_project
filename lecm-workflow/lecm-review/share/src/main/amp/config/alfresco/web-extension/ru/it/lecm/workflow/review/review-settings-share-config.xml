<?xml version="1.0" encoding="UTF-8"?>
<alfresco-config>
	<config evaluator="node-type" condition="lecmReviewGlobalSettings:settings">
		<forms>
			<form id="lecm-review-settings">
				<field-visibility>
					<show id="lecmReviewGlobalSettings:defaultReviewTerm"/>
					<show id="lecmReviewGlobalSettings:termToNotifyBeforeDeadline"/>
					<show id="lecmReviewGlobalSettings:selectByOrganization"/>
					<show id="lecmReviewGlobalSettings:selectByOrganizationUnit-assoc"/>
				</field-visibility>
				<appearance>
					<field id="lecmReviewGlobalSettings:defaultReviewTerm">
						<control template="/ru/it/lecm/base-share/components/controls/number.ftl"/>
					</field>
					<field id="lecmReviewGlobalSettings:termToNotifyBeforeDeadline">
						<control template="/ru/it/lecm/base-share/components/controls/number.ftl"/>
					</field>
					<field id="lecmReviewGlobalSettings:selectByOrganization">
						<control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl">
							<control-param name="disabledFieldsIfSelect">lecmReviewGlobalSettings:selectByOrganizationUnit-assoc</control-param>
							<control-param name="hideFieldsIfSelect">lecmReviewGlobalSettings:selectByOrganizationUnit-assoc</control-param>
						</control>
					</field>
					<field id="lecmReviewGlobalSettings:selectByOrganizationUnit-assoc">
						<control template="/ru/it/lecm/base-share/components/controls/association-control.ftl">
							<control-param name="nameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
							<control-param name="treeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
							<control-param name="treeNodeTitleSubstituteString">{cm:name}</control-param>
							<control-param name="plane">false</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="showSelectedItemsPath">false</control-param>
						</control>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
