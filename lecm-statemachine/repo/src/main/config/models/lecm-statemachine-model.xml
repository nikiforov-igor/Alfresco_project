<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-statemachine:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM statemachine model</description>
	<author>Logic ECM</author>
	<version>1.0</version>
	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>
	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/statemachine/1.0" prefix="lecm-statemachine"/>
	</namespaces>
	<constraints>
		<constraint name="lecm-statemachine:statuses" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>NEW</value>
					<value>DRAFT</value>
					<value>ON_AGREEMENT</value>
					<value>AGREED</value>
					<value>ON_REFINING</value>
					<value>ON_SIGNING</value>
					<value>CANCELED</value>
					<value>SIGNED</value>
				</list>
			</parameter>
		</constraint>
	</constraints>
	<types>
		<type name="lecm-statemachine:startTask">
			<parent>bpm:startTask</parent>
			<mandatory-aspects>
				<aspect>bpm:assignee</aspect>
			</mandatory-aspects>
		</type>
        <type name="lecm-statemachine:timer">
            <title>Logic ECM Statemachine Task Timer</title>
            <parent>cm:cmobject</parent>
            <properties>
                <property name="lecm-statemachine:executionId">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-statemachine:taskId">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-statemachine:variable">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-statemachine:finishTimestamp">
                    <type>d:long</type>
                    <mandatory>true</mandatory>
                </property>
                <property name="lecm-statemachine:stopSubWorkflows">
                    <type>d:boolean</type>
                </property>
            </properties>
        </type>
	</types>
	<aspects>
		<aspect name="lecm-statemachine:documentTask">
			<properties>
				<property name="lecm-statemachine:stateProcess">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</aspect>
		<aspect name="lecm-statemachine:documentStatus">
			<properties>
				<property name="lecm-statemachine:status">
					<type>d:text</type>
					<mandatory>true</mandatory>
                    <index enabled="true">
                        <atomic>true</atomic>
                        <stored>false</stored>
                        <tokenised>false</tokenised>
                    </index>
				</property>
			</properties>
		</aspect>
        <aspect name="lecm-statemachine:statemachineAspect">
            <properties>
                <property name="lecm-statemachine:statemachineId">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>
            </properties>
        </aspect>
	</aspects>
</model>