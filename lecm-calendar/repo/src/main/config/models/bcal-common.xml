<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-absence:absence-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Worker absence Data Model</description>
    <author>Vsevolod Levin</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Org Structure Model Definitions -->
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <!-- Import Dictionary Model Definitions -->
        <import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
        <import uri="http://www.it.ru/logicECM/model/business-calendar/calendar/1.0" prefix="lecm-cal"/>
        <import uri="http://www.it.ru/logicECM/model/business-calendar/absence/1.0" prefix="lecm-absence"/>
        <import uri="http://www.it.ru/logicECM/model/business-calendar/shedule/1.0" prefix="lecm-shed"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/model/business-calendar/1.0" prefix="lecm-bcal"/>
    </namespaces>
    <types>
        <!-- Данная сущность будет играть роль папки для календарей, расписаний и отсутствий. -->
        <type name="lecm-bcal:bcal-container">
            <parent>cm:folder</parent>
            <associations>
                <child-association name="lecm-bcal:container-calendar-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-cal:calendar</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>
                <child-association name="lecm-bcal:container-absence-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-absence:absence</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>
                <child-association name="lecm-bcal:container-shedule-assoc">
                    <source>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>lecm-shed:shedule</class>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </target>
                </child-association>
            </associations>
        </type>
    </types>
</model>