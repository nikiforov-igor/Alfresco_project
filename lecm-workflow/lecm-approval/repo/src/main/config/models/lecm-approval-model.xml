<?xml version="1.0" encoding="UTF-8"?>
<model name="lecmApprove2:approvalWorkflow" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Workflow model for parallel and sequential approvement</description>
	<author>vlevin</author>
	<version>2.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.it.ru/logicECM/model/workflow/1.0" prefix="lecm-workflow"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/approval/wokflow/2.0" prefix="lecmApprove2"/>
	</namespaces>

	<constraints>
		<constraint name="lecmApprove2:approveTaskResultConstraint" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>APPROVED</value> <!-- согласован -->
					<value>APPROVED_WITH_REMARK</value> <!-- согласован с замечанием -->
					<value>REJECTED</value> <!-- отклонен -->
				</list>
			</parameter>
		</constraint>
	</constraints>

	<types>
		<type name="lecmApprove2:approval">
			<title>Согласование</title>
			<parent>bpm:startTask</parent>
			<mandatory-aspects>
				<aspect>lecm-workflow:assigneesListAspect</aspect>
				<aspect>lecm-workflow:workflow-concurrency-aspect</aspect>
			</mandatory-aspects>
		</type>
		<type name="lecmApprove2:approveTask">
			<parent>bpm:activitiOutcomeTask</parent>
			<properties>
				<property name="lecmApprove2:approveTaskResult">
					<type>d:text</type>
					<default>REJECTED</default>
					<constraints>
						<constraint ref="lecmApprove2:approveTaskResultConstraint"/>
					</constraints>
				</property>
			</properties>
			<associations>
				<association name="lecmApprove2:approveTaskCommentAssoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
			<overrides>
				<property name="bpm:reassignable">
					<default>false</default>
				</property>
				<property name="bpm:packageItemActionGroup">
					<default>edit_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://www.it.ru/logicECM/model/approval/wokflow/2.0}approveTaskResult</default>
					<constraints>
						<constraint ref="lecmApprove2:approveTaskResultConstraint"/>
					</constraints>
				</property>
			</overrides>
		</type>
	</types>
</model>
