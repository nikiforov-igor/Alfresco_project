<?xml version='1.0' encoding='UTF-8'?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:mvc="http://www.springframework.org/schema/mvc"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
						   http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc.xsd">

	<bean id="base.custom.config" class="org.springframework.extensions.config.ConfigBootstrap" init-method="register">
		<property name="configService" ref="web.config" />
		<property name="configs">
			<list>
				<value>classpath:alfresco/web-extension/ru/it/lecm/base/base-share-config-custom.xml</value>
				<value>classpath:alfresco/web-extension/ru/it/lecm/base/controls.xml</value>
				<value>classpath:alfresco/web-extension/ru/it/lecm/base/controls-templates.xml</value>
			</list>
		</property>
	</bean>

	<bean id="baseResourceBundlesWebApp" class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent" depends-on="webscripts.resources">
		<property name="resourceBundles">
			<list>
				<value>alfresco.web-extension.ru.it.lecm.base.base-share</value>
				<value>alfresco.web-extension.ru.it.lecm.base.slingshot</value>
			</list>
		</property>
	</bean>

	<bean id="evaluator.ru.it.lecm.base.isAdmin" class="ru.it.lecm.base.IsAdminEvaluator">
		<property name="scriptRemote" ref="webscripts.script.remote" />
	</bean>

	<bean id="webscript.ru.it.lecm.base-share.config.init.get" class="ru.it.lecm.base.scripts.RepoConfigInitializer" parent="webscript">
		<property name="configService" ref="web.config" />
		<property name="scriptRemote" ref="webscripts.script.remote" />
		<property name="formsConfig" ref="formsConfigService"/>
	</bean>

	<bean id="formsConfigService" class="ru.it.lecm.base.formsConfig.FormsConfig">
		<property name="configService" ref="web.config" />
		<property name="scriptRemote" ref="webscripts.script.remote" />
	</bean>

	<bean id="webscript.ru.it.lecm.base-share.formsConfig.getFormsConfig.get" class="ru.it.lecm.base.scripts.FormsConfigWebscript" parent="webscript">
		<property name="formsConfigService" ref="formsConfigService" />
	</bean>

	<bean id="evaluator.ru.it.lecm.base.evaluators.DocumentTypeEvaluator" class="ru.it.lecm.base.evaluators.DocumentTypeEvaluator">
		<property name="connectorService" ref="connector.service"/>
	</bean>

	<bean id="evaluator.ru.it.lecm.base.evaluators.DocumentTypeByAttachmentEvaluator" class="ru.it.lecm.base.evaluators.DocumentTypeByAttachmentEvaluator">
		<property name="connectorService" ref="connector.service"/>
		<property name="evaluator" ref="evaluator.ru.it.lecm.base.evaluators.DocumentTypeEvaluator"/>
	</bean>
</beans>
