<alfresco-config>
    <config evaluator="node-type" condition="lecm-review-ts:review-table-item">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-document:indexTableRow" force="true"/>
                    <show id="lecm-review-ts:review-state" readonly="true"/>
                    <show id="lecm-review-ts:review-start-date" readonly="true"/>
                    <show id="lecm-review-ts:review-finish-date" readonly="true"/>
