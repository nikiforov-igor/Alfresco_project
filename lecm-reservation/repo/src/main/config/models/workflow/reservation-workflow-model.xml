<?xml version="1.0" encoding="UTF-8"?>

<model name="reservationWf:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>Logic ECM Reservation Document workflow model</description>
	<author>Logic ECM</author>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
		<import uri="http://www.it.ru/logicECM/statemachine/aspects/1.0" prefix="lecm-statemachine-aspects"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/reservation/workflow/1.0" prefix="reservationWf"/>
	</namespaces>

	<types>
		<type name="reservationWf:regnumReservationStart">
		   <parent>bpm:startTask</parent>
		   <mandatory-aspects>
			  <aspect>reservationWf:assignee</aspect>
			  <aspect>lecm-statemachine-aspects:is-service-workflow</aspect>
		   </mandatory-aspects>
		</type>

		<type name="reservationWf:regnumReservationTask">
			<parent>bpm:activitiOutcomeTask</parent>
			<properties>
				<property name="reservationWf:isReservate">
					<type>d:text</type>
					<default>Reservation</default>
					<constraints>
						<constraint name="reservationWf:reservateOptions" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>Зарезервировать</value>
									<value>Отклонить</value>
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
				<property name="reservationWf:comment">
					<title>Комментарий</title>
					<type>d:text</type>
				</property>
			</properties>
			<overrides>
				<property name="bpm:packageItemActionGroup">
					<default>edit_package_item_actions</default>
				</property>
				<property name="bpm:outcomePropertyName">
					<default>{http://www.alfresco.org/model/reservationWf/1.0}raterOutcome</default>
				</property>
			</overrides>
			<mandatory-aspects>
				<aspect>lecm-statemachine-aspects:is-service-workflow</aspect>
			</mandatory-aspects>
		</type>
	</types>

	<aspects>
		<aspect name="reservationWf:assignee">
			<associations>
				<association name="reservationWf:assignee">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</aspect>
	</aspects>
</model>