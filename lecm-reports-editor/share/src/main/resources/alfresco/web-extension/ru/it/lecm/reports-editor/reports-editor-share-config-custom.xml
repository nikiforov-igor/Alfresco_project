                    <field id="lecm-rpeditor:reportTemplateFile">
                        <control template="/ru/it/lecm/base-share/components/controls/lecm-uploader-control.ftl">
                            <control-param name="uploadDirectoryPath">
                                /app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Редактор_x0020_Отчетов/cm:Шаблоны
