                            <control-param name="defaultValue">CANCEL</control-param>
                            <control-param name="fireChangeEventName">changeCompletionOption</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:item-comment" mandatory="true" set="common">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="ord-item-completion-form-script">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-ord/ord-item-completion-form-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">ordItemCompletionFormScriptLoaded</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
        </forms>
    </config>
