<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-document-route:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>LECM Worflow Model</description>
	<author>vlevin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/document/route/1.0" prefix="lecm-document-route"/>
	</namespaces>

	<aspects>
		<aspect name="lecm-document-route:routable">
			<properties>
				<!-- ссылка на маршрут -->
				<property name="lecm-document-route:routeRef">
					<type>d:noderef</type>
					<index enabled="false"/>
				</property>
				<!-- направить на регистрацию после подписания -->
				<property name="lecm-document-route:is-register-after-signed">
					<type>d:boolean</type>
					<index enabled="false"/>
				</property>
				<!-- идентификатор запущенного процесса согласования -->
				<property name="lecm-document-route:approval-workflow-id">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<!-- результат согласования по маршруту -->
				<property name="lecm-document-route:is-approved">
					<type>d:boolean</type>
					<index enabled="false"/>
				</property>
				<!-- идентификатор запущенного процесса подписания -->
				<property name="lecm-document-route:signing-workflow-id">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
				<!-- результат подписания по маршруту -->
				<property name="lecm-document-route:is-signed">
					<type>d:boolean</type>
					<index enabled="false"/>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>
