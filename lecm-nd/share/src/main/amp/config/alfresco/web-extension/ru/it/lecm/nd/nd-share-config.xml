<alfresco-config>
    <config>
        <forms>
            <dependencies>
                <js src="/scripts/lecm-nd/nd-date-validator.js" />
            </dependencies>
        </forms>
    </config>

    <config evaluator="model-type" condition="lecm-nd:document">
        <forms>
            <form>
                <field-visibility>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true"/>
                    <show id="lecm-nd:begin-date" mandatory="true"/>
                    <show id="lecm-nd:end-date" mandatory="true"/>
	                <show id="lecm-document-aspects:attachments-temp-assoc"/>
                </field-visibility>
                <appearance>
                    <field id="lecm-document:title" label="Заголовок"/>
                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_НД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" label="Подразделения" mandatory="true">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="nameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="endpointType">lecm-orgstr:organization-unit</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent" label="Содержание">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-nd:begin-date" label="Дата начала действия" mandatory="true">
                        <constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.ND.dateIntervalValidation" event="blur"/>
						</constraint-handlers>
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
                    </field>
                    <field id="lecm-nd:end-date" label="Дата окончания действия" mandatory="true">
                        <constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.ND.dateIntervalValidation" event="blur"/>
						</constraint-handlers>
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
                    </field>
                    <field id="lecm-eds-document:note" label="Примечание">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:subject-assoc" label="Тематика"/>

	                <field id="lecm-document-aspects:attachments-temp-assoc" label="Вложения">
		                <control template="/ru/it/lecm/base-share/components/controls/lecm-dnd-uploader-control.ftl">
			                <control-param name="uploadDirectoryPath">{usertemp}</control-param>
			                <control-param name="directoryName">Вложения</control-param>
			                <control-param name="suppressRefreshEvent">true</control-param>
		                </control>
	                </field>
                </appearance>
            </form>

            <!-- Форма для табличного представления (набор столбцов) -->
            <form id="datagrid">
                <field-visibility>
                    <show id="lecm-eds-document:regnum" force="true"/>													<!-- Номер проекта | Номер исходящего -->
                    <show id="lecm-eds-document:regdate" force="true"/>													<!-- Дата регистрации проекта | Дата регистрации исходящего -->
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document:creator-ref"/>																<!-- Автор Ссылка -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-statemachine:status"/>																<!-- Статус -->
                </field-visibility>
                <appearance>
                    <field id="lecm-eds-document:regnum" label="Номер" substituteString="{~REGNUM}"/>
                    <field id="lecm-eds-document:regdate" label="Дата" substituteString="{~REGDATE}"/>
                </appearance>
            </form>

            <!-- Форма с набором полей, редактируемых в машине состояний -->
            <form id="statemachine-editable-fields">
                <field-visibility>
                    <show id="lecm-document-aspects:reg-data-number"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                    <show id="lecm-eds-document:regdate"/>
                    <show id="lecm-document:creator"/>																	<!-- Автор -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="lecm-eds-document:document-type-assoc"/>                                                                <!-- Вид документа НД -->
                    <show id="lecm-document:subject-assoc"/>															<!-- Тематика -->
                    <show id="lecm-document-aspects:registrator-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc"/>
                    <show id="lecm-eds-document:summaryContent"/>														<!-- Краткое содержание -->
                    <show id="lecm-eds-document:note"/>                                                                 <!-- Примечание -->
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-eds-document:file-register-assoc"/>													<!-- Номенклатура дел -->
                <show id="lecm-document:regnum"/>
                </field-visibility>
            </form>

            <!-- Форма атрибутивного поиска -->
            <form id="search">
                <field-visibility>
                    <show id="lecm-eds-document:document-type-assoc"/>													<!-- Вид документа -->
                    <show id="lecm-document:title"/>																	<!-- Заголовок -->
                    <show id="cm:created"/>
                    <show id="lecm-document-aspects:reg-project-data-date"/>																<!-- Дата регистрации & Регистрационный номер -->
                    <show id="lecm-document-aspects:reg-project-data-number"/>																	<!-- Номер проекта -->
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                </field-visibility>
                <appearance>
                    <set id="nd-document-search-common-set" template="/ru/it/lecm/ord/components/class-set.ftl"/>
                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа" set="nd-document-search-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_НД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:title" set="nd-document-search-common-set" />
                    <field id="cm:created" set="nd-document-search-common-set" >
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:reg-project-data-date" set="nd-document-search-common-set" >
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-document-aspects:reg-project-data-number" set="nd-document-search-common-set" />
                    <field id="lecm-document:author-assoc" set="nd-document-search-common-set" />
                    <field id="lecm-nd:begin-date" set="nd-document-search-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                    <field id="lecm-nd:end-date" set="nd-document-search-common-set">
                        <control template="/ru/it/lecm/base-share/components/controls/daterange-control.ftl"/>
                    </field>
                </appearance>
            </form>

        </forms>
    </config>

    <config evaluator="node-type" condition="lecm-nd:document">
        <forms>
            <form>
                <!--<edit-form template="/ru/it/lecm/controls/2-column-edit-form.ftl"/>-->
                <view-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <edit-form template="/ru/it/lecm/base-share/components/base-form-tabs.ftl" />
                <field-visibility>
                    <show id="lecm-document:regnum"/>																	<!-- Рег. номер -->
                    <show id="lecm-document-aspects:reg-data-date" force="true"/>
                    <show id="lecm-eds-document:summaryContent"/>
                    <show id="lecm-eds-document:note"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-document-aspects:additional-organization-unit-assoc" mandatory="true"/>
                    <show id="lecm-document:subject-assoc"/>
                    <show id="lecm-nd:approval-list" force="true" for-mode="view"/>								<!-- Листы согласования-->
                    <show id="lecm-nd:signing-list" force="true" for-mode="view"/>								<!-- Листы подписания-->
                    <show id="lecm-nd:begin-date"/>
                    <show id="lecm-nd:end-date"/>
                    <show id="lecm-eds-document:file-register-assoc"/>
                    <show id="lecm-document:author-assoc"/>
                    <show id="lecm-document-aspects:reg-project-data-number"/>
                    <show id="lecm-document-aspects:reg-project-data-date"/>
                    <show id="lecm-document-aspects:is-shared-folder"/>
                </field-visibility>
                <appearance>

                    <set id="common" appearance="" label="Атрибуты"/>
                    <set id="approval-and-signing" appearance="" label="Согласование/подписание"/>

                    <set id="regData" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
                    <set id="nd3" parent="common"/>
                    <set id="nd4" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
                    <set id="nd5" parent="common"/>
                    <set id="dates" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
                    <set id="nd7" parent="common"/>
                    <set id="nd8" parent="common" template="/org/alfresco/components/form/2-column-set.ftl"/>
                    <set id="author" parent="common"/>
                    <set id="footer" parent="common" template="/org/alfresco/components/form/3-column-set.ftl"/>

                    <!-- Вкладка Атрибуты -->
                    <field id="lecm-document:regnum" set="regData" mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Documents.regnumUniqueness.validator"
										event="keyup" />
                    </constraint-handlers>
					</field>
                    <field id="lecm-document-aspects:reg-data-date" set="regData"/>

                    <field id="lecm-document:title" label="Заголовок" set="nd3"/>
                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа" set="nd4">
                        <control template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
                            <control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Вид_x0020_НД</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="notSelectedOptionShow">true</control-param>
                            <control-param name="notSelectedOptionLabel"> </control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                        </control>
                    </field>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" label="Подразделения" set="nd4" mandatory="true">
                        <control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
                            <control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
                            <control-param name="nameSubstituteString">{cm:name}</control-param>
                            <control-param name="showCreateNewLink">false</control-param>
                            <control-param name="showCreateNewButton">false</control-param>
                            <control-param name="endpointType">lecm-orgstr:organization-unit</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:summaryContent" label="Содержание" set="nd5">
                        <control template="/ru/it/lecm/base-share/components/controls/richtext.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-eds-document:note" label="Примечание" set="nd7">
                        <control template="/ru/it/lecm/base-share/components/controls/textarea.ftl">
                            <control-param name="rows">4</control-param>
                        </control>
                    </field>
                    <field id="lecm-document:subject-assoc" label="Тематика" set="nd8"/>
                    <field id="lecm-eds-document:file-register-assoc" label="Номенклатура" set="nd8"/>
                    <field id="lecm-nd:begin-date" label="Дата начала действия" set="dates">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Approval.workflowFormValidator" event="keyup"/>
                        </constraint-handlers>
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
                    </field>
                    <field id="lecm-nd:end-date" label="Дата окончания действия" set="dates">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.Approval.workflowFormValidator" event="keyup"/>
                        </constraint-handlers>
                        <control template="/ru/it/lecm/base-share/components/controls/date.ftl"/>
                    </field>
                    <field id="lecm-document:author-assoc" set="author" read-only="true"/>
                    <field id="lecm-document-aspects:reg-project-data-number" set="footer"/>
                    <field id="lecm-document-aspects:reg-project-data-date" set="footer"/>
                    <field id="lecm-document-aspects:is-shared-folder" set="footer">
                        <control template="/ru/it/lecm/base-share/components/controls/lecm-checkbox-control.ftl"/>
                    </field>

                    <!-- Вкладка "Согласование/подписание" -->
                    <field id="lecm-nd:approval-list" set="approval-and-signing" label="Согласование">
                        <control template="/ru/it/lecm/workflow/approval/controls/approval-list-datagrid-control.ftl"/>
                    </field>
                    <field id="lecm-nd:signing-list" set="approval-and-signing" label="Подписание">
                        <control template="/ru/it/lecm/workflow/signing/controls/signing-list-datagrid-control.ftl"/>
                    </field>
                </appearance>
            </form>
            <!-- Форма с набором полей для правой области (Общие сведения) на карточке документа-->
            <form id="document">
                <field-visibility>
                    <show id="lecm-eds-document:document-type-assoc"/>
                    <show id="lecm-document:title"/>
                    <show id="lecm-statemachine:status"/>
                </field-visibility>
            </form>
            <!-- Форма просмотра на главной странице-->
	        <form id="main-page-dashlets">
		        <field-visibility>
			        <show id="viewMetadata"/>
		        </field-visibility>
		        <appearance>
			        <field id="viewMetadata">
				        <control template="/ru/it/lecm/documents/controls/document-view-metadata-control.ftl"/>
			        </field>
		        </appearance>
	        </form>
        </forms>
    </config>

    <config evaluator="string-compare" condition="Workflow">
        <hidden-workflows>
            <workflow name="activiti$lecm-nd_document"/>
        </hidden-workflows>
    </config>

</alfresco-config>
