<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/org-positions</template-type>
    <components>
        <component>
            <region-id>positions-grid</region-id>
            <url>/lecm/orgstructure/positions-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>staffPosition</bubblingLabel>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showExSearchBtn>true</showExSearchBtn>
                <bubblingLabel>staffPosition</bubblingLabel>
	            <newRowLabel>button.new-position</newRowLabel>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.org-positions</title>
                <filteredLabel>page.orgstructure.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
            <properties>
                <selected>positions</selected>
            </properties>
        </component>
    </components>
</template-instance>
