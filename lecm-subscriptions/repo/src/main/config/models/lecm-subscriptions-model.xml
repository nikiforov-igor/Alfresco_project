<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-subscr:subscriptionsStructure" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Subscriptions</description>
	<author>AIvkin</author>
	<published>2012-12-24</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
		<import uri="http://www.it.ru/lecm/notifications/types/1.0" prefix="lecm-notf-type"/>
		<import uri="http://www.it.ru/logicECM/business-journal/1.0" prefix="lecm-busjournal"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/subscriptions/1.0" prefix="lecm-subscr"/>
	</namespaces>

	<types>
		<!--Описание подписки - базовый тип-->
		<type name="lecm-subscr:subscription-base">
			<title>Subscription Base Object</title>
			<parent>cm:content</parent>
			<properties>
				<property name="lecm-subscr:description">
					<title>Description</title>
					<type>d:text</type>
					<mandatory>false</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
			</properties>
			<associations>
				<!-- Ссылка на тип доставки-->
				<association name="lecm-subscr:notification-type-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-notf-type:notification-type</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
				<!-- Ссылка на адресата "сотрудник" -->
				<association name="lecm-subscr:destination-employee-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
			</associations>
		</type>

		<!--Описание подписки на тип-->
		<type name="lecm-subscr:subscription-to-type">
			<title>Subscription To Type</title>
			<parent>lecm-subscr:subscription-base</parent>
			<associations>
				<!-- Ссылка на адресата "должностная позиция" -->
				<association name="lecm-subscr:destination-position-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:position</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на адресата "подразделение" -->
				<association name="lecm-subscr:destination-organization-unit-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:organization-unit</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на адресата "рабочая группа" -->
				<association name="lecm-subscr:destination-work-group-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:workGroup</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</association>
				<!-- Ссылка на тип объекта -->
				<association name="lecm-subscr:object-type-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-busjournal:objectType</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
				<!-- Ссылка на категорию события -->
				<association name="lecm-subscr:event-category-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-busjournal:eventCategory</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>

		<!--Описание подписки на экземпляр-->
		<type name="lecm-subscr:subscription-to-object">
			<title>Subscription To Object</title>
			<parent>lecm-subscr:subscription-base</parent>
			<associations>
				<!-- Ссылка на объект подписки -->
				<association name="lecm-subscr:subscription-object-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:cmobject</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>
</model>