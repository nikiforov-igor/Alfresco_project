<view:view xmlns:view="http://www.alfresco.org/view/repository/1.0"
           xmlns:cm="http://www.alfresco.org/model/content/1.0"
           xmlns:app="http://www.alfresco.org/model/application/1.0"
           xmlns:sys="http://www.alfresco.org/model/system/1.0">

    <cm:content view:childName="cm:defaultNotificationTemplate.ftl">
        <view:aspects>
            <cm:titled/>
            <sys:referenceable/>
            <app:inlineeditable/>
        </view:aspects>
        <view:properties>
            <sys:node-uuid>default-notification-template</sys:node-uuid>
            <sys:store-protocol>workspace</sys:store-protocol>
            <sys:store-identifier>SpacesStore</sys:store-identifier>
            <app:editInline>true</app:editInline>
            <cm:name>defaultEmailNotificationTemplate.ftl</cm:name>
            <cm:title>defaultEmailNotificationTemplate.ftl</cm:title>
            <cm:description>Default email notification template.</cm:description>
            <cm:content>contentUrl=classpath:alfresco/module/notifications-repo/bootstrap/defaultEmailNotificationTemplate.ftl|mimetype=text/plain|encoding=UTF-8</cm:content>
        </view:properties>
    </cm:content>

    <cm:folder view:childName="cm:Images">
        <view:aspects>
            <app:uifacets/>
        </view:aspects>
        <view:properties>
            <sys:node-uuid>notification-template-images</sys:node-uuid>
            <sys:store-protocol>workspace</sys:store-protocol>
            <sys:store-identifier>SpacesStore</sys:store-identifier>
            <app:icon>space-icon-default</app:icon>
            <cm:name>Images</cm:name>
            <cm:description>Template images</cm:description>
        </view:properties>
        <view:associations>
            <cm:contains>
                <cm:content view:childName="cm:defaultEmailNotificationTemplateImage.png">
                    <view:aspects>
                        <cm:titled/>
                        <sys:referenceable/>
                    </view:aspects>
                    <view:properties>
                        <sys:node-uuid>default-notification-template-image</sys:node-uuid>
                        <sys:store-protocol>workspace</sys:store-protocol>
                        <sys:store-identifier>SpacesStore</sys:store-identifier>
                        <cm:name>defaultEmailNotificationTemplateImage.png</cm:name>
                        <cm:title>defaultEmailNotificationTemplateImage.png</cm:title>
                        <cm:description>Default email notification template image.</cm:description>
                        <cm:content>contentUrl=classpath:alfresco/module/notifications-repo/bootstrap/defaultEmailNotificationTemplateImage.png|mimetype=image/png|encoding=UTF-8</cm:content>
                    </view:properties>
                </cm:content>
            </cm:contains>
        </view:associations>
    </cm:folder>

</view:view>