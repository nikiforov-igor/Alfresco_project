<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/scripts/lecm-subscriptions/controls/lecm-subscribe.js"/>
				<js src="/scripts/lecm-subscriptions/constraints/subscription-destination-validator.js"/>
				<js src="/modules/simple-dialog.js"/>
				<css src="/css/lecm-subscriptions/subscription-control.css"/>
			</dependencies>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-subscr:subscription-to-type">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
				<appearance>
					<set id="type-events" appearance="" label="" />
					<set id="destination" appearance="panel" label-id="info.destination" />
					<set id="notification" appearance="panel" label-id="info.notification" label=""/>
					<set id="description" appearance="" label=""/>

					<field id="cm:name" label-id="label.form.cm-name"/>
					<field id="lecm-subscr:object-type-assoc" set="type-events">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
							<control-param name="startLocation">
								/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Тип_x0020_объекта
							</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="notSelectedOptionShow">true</control-param>
							<control-param name="notSelectedOptionLabelCode">subscriptions.all</control-param>
							<control-param name="showCreateNewButton">false</control-param>
						</control>
					</field>
					<field id="lecm-subscr:event-category-assoc" set="type-events">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-select-one-control.ftl">
							<control-param name="startLocation">
								/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Категория_x0020_события
							</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="notSelectedOptionShow">true</control-param>
							<control-param name="notSelectedOptionLabelCode">subscriptions.all</control-param>
							<control-param name="showCreateNewButton">false</control-param>
						</control>
					</field>
					<field id="lecm-subscr:destination-employee-assoc" mandatory="true" set="destination">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Сотрудники</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:employee-last-name} {lecm-orgstr:employee-first-name} {lecm-orgstr:employee-middle-name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../lecm-orgstr:element-member-position-assoc/cm:name} {..lecm-orgstr:employee-link-employee-assoc(lecm-orgstr:employee-link-is-primary = true)/../../lecm-orgstr:element-short-name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="showViewIncompleteWarning">false</control-param>
						</control>
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Subscriptions.destinationValidation" event="change"/>
						</constraint-handlers>
					</field>
					<field id="lecm-subscr:destination-position-assoc" mandatory="true" set="destination">
						<control
								template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Справочники/lecm-dic:Должностные_x0020_позиции</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="showViewIncompleteWarning">false</control-param>
						</control>
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Subscriptions.destinationValidation" event="change"/>
						</constraint-handlers>
					</field>
					<field id="lecm-subscr:destination-organization-unit-assoc" mandatory="true" set="destination">
						<control template="/ru/it/lecm/base-share/components/controls/association-tree-picker.ftl">
							<control-param name="rootLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
							<control-param name="nameSubstituteString">{lecm-orgstr:element-short-name}</control-param>
							<control-param name="treeNodeSubstituteString">{lecm-orgstr:element-short-name}</control-param>
							<control-param name="treeNodeTitleSubstituteString">{cm:name}</control-param>
							<control-param name="plane">false</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="showSelectedItemsPath">false</control-param>
							<control-param name="showViewIncompleteWarning">false</control-param>
						</control>
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Subscriptions.destinationValidation" event="change"/>
						</constraint-handlers>
					</field>
					<field id="lecm-subscr:destination-work-group-assoc" mandatory="true" set="destination">
						<control template="/ru/it/lecm/base-share/components/controls/association-autocomplete-control.ftl">
							<control-param name="startLocation">/app:company_home/cm:Business_x0020_platform/cm:LECM/cm:Сервис_x0020_Структура_x0020_организации_x0020_и_x0020_сотрудников/cm:Организация/cm:Структура</control-param>
							<control-param name="nameSubstituteString">{cm:name}</control-param>
							<control-param name="showCreateNewLink">false</control-param>
							<control-param name="showCreateNewButton">false</control-param>
							<control-param name="showViewIncompleteWarning">false</control-param>
						</control>
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.Subscriptions.destinationValidation" event="change"/>
						</constraint-handlers>
					</field>
					<field id="lecm-subscr:notification-type-assoc" set="notification"/>
					<field id="lecm-subscr:description" set="description"/>
				</appearance>
			</form>
		</forms>
	</config>

