                    <show id="lecm-document-aspects:is-shared-folder"/>
                    <show id="lecm-document:edit-document" for-mode="view"/>
                    <show id="lecm-nd:nd-css-fix" force="true" for-mode="view"/> <!-- Костыль для стилей -->
                </field-visibility>
                <appearance>
