<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/scripts/lecm-subscriptions/controls/lecm-subscribe.js" />
			</dependencies>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-subscr:subscription-to-type">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-subscr:subscription-to-type">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:destination-position-assoc"/>
					<show id="lecm-subscr:destination-organization-unit-assoc"/>
					<show id="lecm-subscr:destination-work-group-assoc"/>
					<show id="lecm-subscr:object-type-assoc"/>
					<show id="lecm-subscr:event-category-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="node-type" condition="lecm-subscr:subscription-to-object">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-subscr:subscription-to-object">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:subscription-object-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
				<appearance>
					<field id="lecm-subscr:subscription-object-assoc">
						<control template="/ru/it/lecm/base-share/components/hidden-association-control.ftl"/>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:subscription-object-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
			<form id="search">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-subscr:notification-type-assoc"/>
					<show id="lecm-subscr:destination-employee-assoc"/>
					<show id="lecm-subscr:subscription-object-assoc"/>
					<show id="lecm-subscr:description"/>
				</field-visibility>
			</form>
		</forms>
	</config>
</alfresco-config>