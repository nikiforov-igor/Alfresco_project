<?xml version='1.0' encoding='UTF-8'?>
<webscript>
	<shortname>Get person's delegation options</shortname>
	<description>Returns delegation options nodeRef for current subject. Subject can be person or employee or delegation-opts.</description>
	<url>/lecm/delegation/get/options?nodeRef={nodeRef?}</url>
	<authentication>user</authentication>
	<format default="json"/>
	<transaction>required</transaction>
    <transaction allow="readonly">required</transaction>
</webscript>