<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
	<template-type>ru/it/lecm/wcalendar/calendar</template-type>
	<properties>
		<pageFamily>wcalendar</pageFamily>
		<container>wcalendar</container>
	</properties>
	<components>
		<!-- Title -->
		<component>
			<region-id>title</region-id>
			<url>/lecm/base/title-with-filter-label</url>
			<properties>
				<title>page.wcalendar.title</title>
				<filteredLabel>page.wcalendar.filteredLabel</filteredLabel>
			</properties>
		</component>
		<!-- Menu -->
		<component>
			<region-id>menu</region-id>
			<url>/ru/it/lecm/wcalendar/menu</url>
			<properties>
				<selected>wcalendarCalendar</selected>
			</properties>
		</component>
		<!-- Grids -->
		<component>
			<region-id>wcalendar-years-grid</region-id>
			<url>/ru/it/lecm/wcalendar/calendar/years</url>
			<properties>
				<pagination>true</pagination>
				<bubblingLabel>wcalendarYears</bubblingLabel>
			</properties>
		</component>
		<component>
			<region-id>wcalendar-working-days-grid</region-id>
			<url>/ru/it/lecm/wcalendar/calendar/working-days</url>
			<bubblingLabel>wcalendarWorkingDays</bubblingLabel>
			<properties>
				<pagination>true</pagination>
			</properties>
		</component>
		<component>
			<region-id>wcalendar-non-working-days-grid</region-id>
			<url>/ru/it/lecm/wcalendar/calendar/non-working-days</url>
			<bubblingLabel>wcalendarNonWorkingDays</bubblingLabel>
			<properties>
				<pagination>true</pagination>
			</properties>
		</component>
		<!-- Toolbars -->
		<component>
			<region-id>wcalendar-years-toolbar</region-id>
			<url>/ru/it/lecm/wcalendar/calendar/years-toolbar</url>
			<properties>
				<bubblingLabel>wcalendarYears</bubblingLabel>
			</properties>
		</component>
		<component>
			<region-id>wcalendar-special-days-toolbar</region-id>
			<url>/ru/it/lecm/wcalendar/calendar/special-days-toolbar</url>
			<properties>
				<bubblingLabel>wcalendarToolbar</bubblingLabel>
			</properties>
		</component>
	</components>
</template-instance>


