    <bean name="arm.rules.shared.cache" factory-bean="cacheFactory" factory-method="createCache">
        <constructor-arg value="cache.arm.rules.shared.cache"/>
    </bean>

    <bean name="arm.rules.cache" class="org.alfresco.repo.cache.TransactionalCache">
        <property name="sharedCache" ref="arm.rules.shared.cache"/>
        <property name="name" value="ru.it.lecm.cache.arm.rules"/>
    </bean>

    <bean id="armBPExpression" class="ru.it.lecm.arm.expression.ExpressionForArm" parent="baseSpellExpression">
        <property name="serviceRegistry" ref="ServiceRegistry"/>
    </bean>

    <bean id="armNodeExpression" class="ru.it.lecm.arm.expression.ExpressionArmNode" parent="baseNodeExpression">
        <property name="armService" ref="armService"/>
        <property name="armWrapper" ref="armWrapperService"/>
        <property name="serviceRegistry" ref="ServiceRegistry"/>
