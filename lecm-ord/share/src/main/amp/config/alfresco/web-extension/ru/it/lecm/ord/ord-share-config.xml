                        <control template="/ru/it/lecm/base-share/components/controls/selectone.ftl"/>
                    </field>
                    <field id="lecm-ord-table-structure:execution-date" set="limitation-date">
                        <constraint-handlers>
                            <constraint type="MANDATORY" validation-handler="LogicECM.module.ORD.commonLimitationDateValidation" event="change"  message-id="Alfresco.forms.validation.mandatory.message"/>
                        </constraint-handlers>
                    </field>
                    <field id="lecm-base-dummy-aspects:script2">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-eds-documents/complex-date-listener.js</control-param>
                            <control-param name="scriptLoadedFireAction">complexDateScriptLoaded</control-param>
                            <control-param name="bubblingName">ordItemChangeLimitationDateRadio</control-param>
                            <control-param name="dateField">lecm-ord-table-structure:execution-date</control-param>
                            <control-param name="daysCountField">lecm-ord-table-structure:limitation-date-days</control-param>
                            <control-param name="daysTypeField">lecm-ord-table-structure:limitation-date-type</control-param>
                        </control>
                    </field>
                    <field id="lecm-base-dummy-aspects:script" set="limitation-date">
                        <control template="/ru/it/lecm/eds/controls/static-text-control.ftl">
                            <control-param name="textCode">label.ord.limitless</control-param>
                        </control>
                    </field>
                    <field id="lecm-ord-table-structure:item-status-assoc" read-only="true" set="bottom"/>
                    <field id="lecm-ord-table-structure:errand-assoc" read-only="true" set="bottom"/>
                    <field id="ord-item-edit-form-script">
                        <control template="/ru/it/lecm/base-share/components/controls/load-script-control.ftl">
                            <control-param name="scripts">scripts/lecm-ord/ord-item-create-form-script.js</control-param>
                            <control-param name="scriptLoadedFireAction">ordItemEditFormScriptLoaded</control-param>
                        </control>
                    </field>
                </appearance>
            </form>
            <form id="ord-complete-item">
                <field-visibility>
                    <show id="lecm-ord-table-structure:completion-option"/>
                    <show id="lecm-ord-table-structure:item-comment"/>
