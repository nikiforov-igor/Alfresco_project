<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-errands-aspect:model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <description>Logic ECM errands aspects model</description>
    <author>Logic ECM</author>
    <version>1.0</version>
    <imports>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
        <import uri="http://www.it.ru/logicECM/errands/1.0" prefix="lecm-errands"/>
    </imports>
    <namespaces>
        <namespace uri="http://www.it.ru/logicECM/errands-aspects/1.0" prefix="lecm-errands-aspect"/>
    </namespaces>

    <aspects>
        <aspect name="lecm-errands-aspect:isCancelRequestedAspect">
            <properties>
                <property name="lecm-errands-aspect:isCancelRequested">
                    <type>d:boolean</type>
                </property>
            </properties>
        </aspect>
        <aspect name="lecm-errands-aspect:isDueDateChangeRequestedAspect">
            <properties>
                <property name="lecm-errands-aspect:isDueDateChangeRequested">
                    <type>d:boolean</type>
                </property>
            </properties>
        </aspect>
        <aspect name="lecm-errands-aspect:alreadyOnApprovalAspect">
            <properties>
                <property name="lecm-errands-aspect:alreadyOnApproval">
                    <type>d:boolean</type>
                    <default>false</default>
                </property>
            </properties>
            <associations>
                <association name="lecm-errands-aspect:approver-assoc">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>lecm-orgstr:employee</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </aspect>
        <aspect name="lecm-errands-aspect:errand-wait-for-execution-signal">
            <properties>
            <property name="lecm-errands-aspect:errand-wait-for-execution-assoc-ref">
                <type>d:text</type>
                <index enabled="true">
                    <atomic>true</atomic>
                    <stored>false</stored>
                    <tokenised>false</tokenised>
                </index>
            </property>
            <property name="lecm-errands-aspect:errand-wait-for-execution-assoc-text-content">
                <type>d:text</type>
                <index enabled="true">
                    <atomic>true</atomic>
                    <stored>false</stored>
                    <tokenised>both</tokenised>
                </index>
            </property>
        </properties>
        <associations>
            <association name="lecm-errands-aspect:errand-wait-for-execution-assoc">
                <source>
                    <mandatory>false</mandatory>
                    <many>true</many>
                </source>
                <target>
                    <class>lecm-errands:document</class>
                    <mandatory>false</mandatory>
                    <many>true</many>
                </target>
            </association>
        </associations>
        </aspect>
    </aspects>
</model>