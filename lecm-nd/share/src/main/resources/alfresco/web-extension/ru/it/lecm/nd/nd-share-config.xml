                    </field>


                    <field id="lecm-document:regnum" set="regData"/>
                    <field id="lecm-document-aspects:reg-data-date" set="regData"/>

                    <field id="lecm-document:title" label="Заголовок" set="nd3"/>
                    <field id="lecm-eds-document:document-type-assoc" label="Вид документа" set="nd4"/>
                    <field id="lecm-document-aspects:additional-organization-unit-assoc" label="Подразделения" set="nd4" mandatory="true">
