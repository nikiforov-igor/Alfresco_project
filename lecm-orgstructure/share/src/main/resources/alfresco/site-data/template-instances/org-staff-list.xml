<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/orgstructure/org-staff-list</template-type>
    <components>
        <component>
            <region-id>tree-and-grid</region-id>
            <url>/lecm/orgstructure/staff-list-datagrid</url>
            <properties>
                <pagination>true</pagination>
                <bubblingLabel>staff-list</bubblingLabel>
                <fullDelete>false</fullDelete>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/orgstructure/toolbar</url>
            <properties>
                <showSearchBlock>true</showSearchBlock>
                <showStructure>true</showStructure>
                <showStructureLabel>button.show_structure</showStructureLabel>
                <showExSearchBtn>true</showExSearchBtn>
                <newRowButton>activeOnUnitClick</newRowButton>
                <bubblingLabel>staff-list</bubblingLabel>
                <searchButtons>activeOnTreeNodeClick</searchButtons>
	            <newRowLabel>button.new-row-staff</newRowLabel>
            </properties>
        </component>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                <title>page.staff-list</title>
                <filteredLabel>page.orgstructure.filter.label</filteredLabel>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/orgstructure/menu</url>
            <properties>
                <selected>staff</selected>
            </properties>
        </component>
    </components>
</template-instance>
