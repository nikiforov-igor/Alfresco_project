<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-document-stamp:dictionary-stamp" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>Document Stamps Dictionary</description>
	<author>PMelnikov</author>
	<published>2015-07-01</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/lecm/org/document/stamp/1.0" prefix="lecm-document-stamp"/>
	</namespaces>
	<constraints>
		<constraint name="lecm-document-stamp:horizontal-align-const" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>LEFT</value>
					<value>CENTER</value>
					<value>RIGHT</value>
				</list>
			</parameter>
		</constraint>
		<constraint name="lecm-document-stamp:vertical-align-const" type="LIST">
			<parameter name="allowedValues">
				<list>
					<value>TOP</value>
					<value>MIDDLE</value>
					<value>BOTTOM</value>
				</list>
			</parameter>
		</constraint>
	</constraints>
	<types>
		<type name="lecm-document-stamp:stamp">
			<title>Connection Type</title>
			<parent>lecm-dic:plane_dictionary_values</parent>
			<properties>
				<property name="lecm-document-stamp:title">
					<title>Stamp Title</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-document-stamp:code">
					<title>Stamp Code</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<index enabled="true">
						<atomic>true</atomic>
						<stored>false</stored>
						<tokenised>both</tokenised>
					</index>
				</property>
				<property name="lecm-document-stamp:width">
					<title>Stamp Width</title>
					<type>d:int</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-document-stamp:height">
					<title>Stamp Height</title>
					<type>d:int</type>
					<mandatory>true</mandatory>
				</property>
				<property name="lecm-document-stamp:substitude-string">
					<title>Stamp substitute string</title>
					<type>d:text</type>
				</property>
				<property name="lecm-document-stamp:font-size">
					<title>Stamp Font Size</title>
					<type>d:int</type>
					<mandatory>true</mandatory>
					<default>12</default>
				</property>
				<property name="lecm-document-stamp:horizontal-align">
					<title>Stamp Horizontal Align</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<constraints>
						<constraint ref="lecm-document-stamp:horizontal-align-const"/>
					</constraints>
				</property>
				<property name="lecm-document-stamp:vertical-align">
					<title>Stamp Verical Align</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<constraints>
						<constraint ref="lecm-document-stamp:vertical-align-const"/>
					</constraints>
				</property>
			</properties>
			<associations>
				<association name="lecm-document-stamp:image-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:content</class>
						<mandatory>false</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
			<mandatory-aspects>
				<aspect>lecm-dic:aspect_active</aspect>
			</mandatory-aspects>
		</type>
	</types>
	<aspects>
		<aspect name="lecm-document-stamp:previous-stamps-aspect">
			<properties>
				<property name="lecm-document-stamp:previous-stamps">
					<type>d:text</type>
					<index enabled="false"/>
				</property>
			</properties>
		</aspect>
	</aspects>
</model>