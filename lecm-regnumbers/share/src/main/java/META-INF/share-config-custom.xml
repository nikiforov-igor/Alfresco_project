<alfresco-config>
	<config>
		<forms>
			<dependencies>
				<js src="/scripts/lecm-regnumbers/template-validator.js"/>
				<js src="/jquery/jquery-1.6.2.js"/>
			</dependencies>
		</forms>
	</config>

	<config evaluator="model-type" condition="lecm-regnum:template">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-regnum:template-string"/>
					<show id="lecm-regnum:template-comment"/>
				</field-visibility>
				<appearance>
					<field id="lecm-regnum:template-string"  mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.RegNumbers.templateValidation" event="change" />
						</constraint-handlers>
					</field>
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-regnum:template-string"/>
					<show id="lecm-regnum:template-comment"/>
				</field-visibility>
			</form>
		</forms>
	</config>
	<config evaluator="node-type" condition="lecm-regnum:template">
		<forms>
			<form>
				<field-visibility>
					<show id="cm:name"/>
					<show id="lecm-regnum:template-string"/>
					<show id="lecm-regnum:template-comment"/>
				</field-visibility>
				<appearance>
					<field id="lecm-regnum:template-string"  mandatory="true">
						<constraint-handlers>
							<constraint type="MANDATORY" validation-handler="LogicECM.module.RegNumbers.templateValidation" event="change" />
						</constraint-handlers>
					</field>
				</appearance>
			</form>
		</forms>
	</config>
</alfresco-config>
