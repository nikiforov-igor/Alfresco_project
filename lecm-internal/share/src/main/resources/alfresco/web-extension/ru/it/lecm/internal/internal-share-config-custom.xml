                    <set id="header" parent="common" appearance=""  template="/org/alfresco/components/form/3-column-set.ftl"/>
                    <set id="title" parent="common" appearance=""/>
                    <set id="typeAndDate" parent="common" appearance="" template="/org/alfresco/components/form/2-column-set.ftl" />
