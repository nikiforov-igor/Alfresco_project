<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
    <template-type>ru/it/lecm/contracts/contracts-main</template-type>
    <components>
        <!-- Title -->
        <component>
            <region-id>title</region-id>
            <url>/lecm/base/title-with-filter-label</url>
            <properties>
                    <title>page.contracts-main</title>
            </properties>
        </component>
        <!-- Toolbar -->
        <component>
            <region-id>toolbar</region-id>
            <url>/lecm/documents/documents-list-toolbar</url>
            <properties>
                <itemType>lecm-contract:document</itemType>
                <bubblingLabel>contracts</bubblingLabel>
                <showCreateBtn>true</showCreateBtn>
                <showSearch>false</showSearch>
                <newRowLabel>label.create-lecm-contract_document</newRowLabel>
                <newRowDialogTitle>label.create-lecm-contract_document</newRowDialogTitle>
            </properties>
        </component>
        <!-- Menu -->
        <component>
            <region-id>menu</region-id>
            <url>/lecm/contracts/menu</url>
            <properties>
                <selected>main</selected>
            </properties>
        </component>
        <!-- Forbidden -->
        <component>
            <region-id>forbidden</region-id>
            <url>/lecm/base/forbidden</url>
        </component>

        <component>
            <region-id>summary</region-id>
            <url>/lecm/contracts/components/summary</url>
        </component>

        <component>
            <region-id>favorites</region-id>
            <url>/lecm/contracts/components/favorite</url>
        </component>

        <component>
            <region-id>activity</region-id>
            <url>/lecm/contracts/components/history</url>
        </component>

        <component>
            <region-id>sr-info</region-id>
            <url>/lecm/contracts/components/sr-info</url>
        </component>
    </components>
</template-instance>