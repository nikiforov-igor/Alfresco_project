<?xml version="1.0" encoding="UTF-8"?>
<ds.config>
    <report.descriptor mnem="eds-by-kind-stat">
        <l18>
            <item key="RU_RU" value="Сводка по видам документов"/>
        </l18>
        <provider
            javaClass="ru.it.lecm.reports.generators.GenericDSProviderBase" mnem="PROV_GENERIC_PROVIDER">
            <l18>
                <item key="RU_RU" value="genericProvider"/>
            </l18>
        </provider>
        <templates>
            <template type="JASPER" filename="eds-by-kind-stat_tmpl.jrxml" mnem="tmpl">
                <l18>
                    <item key="RU_RU" value="eds-by-type-kind.jrxml"/>
                </l18>
            </template>
        </templates>
        <datasource.descriptor>
            <l18>
                <item key="RU_RU" value="ecb7c9b7-ea04-4641-a290-650442e86ee0"/>
            </l18>
        </datasource.descriptor>
        <roles>DA_REGISTRARS,DA_SIGNERS,DA_ENGINEER,ORD_CREATORS,ND_CREATORS,OUTGOING_CREATORS,INTERNAL_CREATORS</roles>
    </report.descriptor>
    <query.descriptor>
        <queryText><![CDATA[TYPE:"lecm-eds-document:base" AND @lecm\-document\-aspects\:reg\-data\-is\-registered:true]]></queryText>
        <querySort>col_DocKind|ASC,col_DocType|ASC</querySort>
        <allVersions>true</allVersions>
        <preferedType>lecm-incoming:document,lecm-internal:document,lecm-nd:document,lecm-ord:document,lecm-outgoing:document</preferedType>
        <isMultiRow>true</isMultiRow>
        <isCustom>false</isCustom>
    </query.descriptor>
    <fields>
        <field jrFldName="dateReg" order="0" queryFldName="{lecm-document:doc-date}" displayName="Дата регистрации"
               javaValueClass="java.util.Date" alfrescoType="d:date">
            <parameter mnem="PARAM_TYPE_RANGE" paramType="PARAM_TYPE_RANGE">
                <l18>
                    <item key="RU_RU" value="Диапазон"/>
                </l18>
                <label1>
                    <item key="RU_RU" value="С"/>
                </label1>
                <label2>
                    <item key="RU_RU" value="По"/>
                </label2>
            </parameter>
        </field>

        <field jrFldName="docSubject" order="1" queryFldName="{lecm-document:subject-assoc-ref}" displayName="Тематика"
               javaValueClass="java.lang.String" alfrescoType="lecm-doc-dic:subjects">
            <parameter mnem="PARAM_TYPE_LIST" paramType="PARAM_TYPE_LIST">
                <l18> <item key="RU_RU" value="Список"/> </l18>
            </parameter>
        </field>

        <field alfrescoType="d:text" displayName="Вид документа"
            expression="{lecm-eds-document:document-type-assoc/cm:name}" jrFldName="col_DocType">
            <l18>
                <item key="RU_RU" value="Вид документа"/>
            </l18>
        </field>

        <field alfrescoType="d:text" displayName="Тип документа"
               expression="{lecm-document:doc-type}" jrFldName="col_DocKind">
            <l18>
                <item key="RU_RU" value="Тип документа"/>
            </l18>
        </field>
    </fields>
</ds.config>
