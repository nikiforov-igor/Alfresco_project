<?xml version="1.0" encoding="UTF-8"?>
<model name="lecm-workflow:workflow-model" xmlns="http://www.alfresco.org/model/dictionary/1.0">
	<description>LECM Worflow Model</description>
	<author>vlevin</author>
	<version>1.0</version>

	<imports>
		<!-- Import Alfresco Dictionary Definitions -->
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
		<!-- Import Alfresco Content Domain Model Definitions -->
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
		<!-- Импорт модели данных оргструктуры -->
		<import uri="http://www.it.ru/lecm/org/structure/1.0" prefix="lecm-orgstr"/>
	</imports>

	<namespaces>
		<namespace uri="http://www.it.ru/logicECM/model/workflow/1.0" prefix="lecm-workflow"/>
	</namespaces>

	<types>
		<!-- Список участников бизнес-процесса -->
		<type name="lecm-workflow:workflow-assignees-list">
			<parent>cm:folder</parent>

			<associations>
				<association name="lecm-workflow:workflow-assignees-list-owner-assoc">
					<description>Владелец списка участников (сотрудник или подразделение)</description>
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>cm:object</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
				<child-association name="lecm-workflow:workflow-assignees-list-contains-assignee">
					<source>
						<mandatory>true</mandatory>
						<many>false</many>
					</source>
					<target>
						<class>lecm-workflow:assignee</class>
						<mandatory>false</mandatory>
						<many>true</many>
					</target>
				</child-association>
			</associations>

			<mandatory-aspects>
				<aspect>lecm-workflow:workflow-type-aspect</aspect>
			</mandatory-aspects>
		</type>

		<!-- Участник БП -->
		<type name="lecm-workflow:assignee">
			<parent>cm:content</parent>
			<properties>

				<!-- Срок согласования -->
				<property name="lecm-workflow:assignee-due-date">
					<type>d:date</type>
				</property>

				<!-- Имя пользователя согласующего -->
				<property name="lecm-workflow:userName">
					<type>d:text</type>
					<mandatory>true</mandatory>
				</property>
			</properties>

			<!-- Ссылка на "Сотрудника" -->
			<associations>
				<association name="lecm-workflow:assignee-employee-assoc">
					<source>
						<mandatory>false</mandatory>
						<many>true</many>
					</source>
					<target>
						<class>lecm-orgstr:employee</class>
						<mandatory>true</mandatory>
						<many>false</many>
					</target>
				</association>
			</associations>
		</type>
	</types>

	<aspects>
		<aspect name="lecm-workflow:workflow-route-aspect">
			<title>Маршрут</title>
		</aspect>

		<aspect name="lecm-workflow:temp">
			<title>Временный список участников бизнес-процесса</title>
		</aspect>

		<aspect name="lecm-workflow:workflow-type-aspect">
			<title>Аспект с типом бизнес-процесса</title>
			<properties>
				<property name="lecm-workflow:workflow-type">
					<title>Тип бизес-процесса</title>
					<type>d:text</type>
					<mandatory>true</mandatory>
					<constraints>
						<constraint name="lecm-workflow:workflow-type-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>APPROVAL</value> <!-- Согласоване -->
									<value>FAMILIARIZATION</value>  <!-- Ознакомление -->
									<value>SIGNING</value> <!-- Подписание -->
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
		</aspect>

		<aspect name="lecm-workflow:workflow-concurrency-aspect">
			<properties>
				<property name="lecm-workflow:workflow-concurrency">
					<type>d:text</type>
					<mandatory>true</mandatory>
					<default>PARALLEL</default>
					<constraints>
						<constraint name="lecm-workflow:workflow-concurrency-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>PARALLEL</value> <!-- Параллельный процесс -->
									<value>SEQUENTIAL</value>  <!-- Последовательный процесс -->
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
		</aspect>

		<aspect name="lecm-workflow:assignee-order-aspect">
			<properties>
				<!-- Порядковый номер элемента -->
				<property name="lecm-workflow:assignee-order">
					<type>d:int</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</aspect>

		<aspect name="lecm-workflow:assignee-days-to-complete-aspect">
			<properties>
				<property name="lecm-workflow:assignee-days-to-complete">
					<type>d:int</type>
					<mandatory>true</mandatory>
				</property>
			</properties>
		</aspect>

	</aspects>
</model>
