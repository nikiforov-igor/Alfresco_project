                    <show id="lecm-events:repeatable"/>
                    <!-- Дата начала периода -->
                    <show id="lecm-events:repeatable-start-period"/>
                    <!-- Дата окончания периода -->
                    <show id="lecm-events:repeatable-end-period"/>
