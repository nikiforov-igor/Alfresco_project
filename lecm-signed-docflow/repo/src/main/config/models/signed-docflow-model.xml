<?xml version="1.0" encoding="UTF-8"?>

<model name="lecm-signed-docflow:signed-docflow" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <description>Asdf</description>
    <author>Denis Gonchar</author>
    <published>2013-03-18</published>
    <version>1.0</version>

    <imports>
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <import uri="http://www.it.ru/lecm/dictionary/1.0" prefix="lecm-dic"/>
    </imports>

    <namespaces>
        <namespace uri="http://www.it.ru/lecm/model/signed-docflow/1.0" prefix="lecm-signed-docflow"/>
    </namespaces>

    <types>
        <type name="lecm-signed-docflow:sign">

            <title>Signature Type</title>

            <properties>

                <!-- Владелец -->
                <property name="lecm-signed-docflow:owner">
                    <title>Owner</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Должность -->
                <property name="lecm-signed-docflow:owner-position">
                    <title>Owner's Position</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Организация -->
                <property name="lecm-signed-docflow:owner-organization">
                    <title>Owner's Organization</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Дата подписания -->
                <property name="lecm-signed-docflow:signing-date">
                    <title>Signing Date</title>
                    <type>d:date</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Серийный номер -->
                <property name="lecm-signed-docflow:serial-number">
                    <title>Serial Number</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Дата начала срока действия подписи -->
                <property name="lecm-signed-docflow:valid-from">
                    <title>Valid From</title>
                    <type>d:date</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Дата окончания срока действия подписи -->
                <property name="lecm-signed-docflow:valid-through">
                    <title>Valid Through</title>
                    <type>d:date</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Удостоверяющий центр (УЦ) -->
                <property name="lecm-signed-docflow:ca">
                    <title>Certification Authority</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Дата обновления -->
                <property name="lecm-signed-docflow:update-date">
                    <title>Update Date</title>
                    <type>d:date</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Подпись действительна (?) -->
                <property name="lecm-signed-docflow:is-valid">
                    <title>Is Valid</title>
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                </property>

                <!-- Наша организация (?) -->
                <property name="lecm-signed-docflow:is-our">
                    <title>Is Our Organization</title>
                    <type>d:boolean</type>
                    <mandatory>true</mandatory>
                </property>

            </properties>

            <associations>

                <!-- FK Content -->
                <association name="lecm-signed-docflow:sign-to-content-association">
                    <source>
                        <mandatory>false</mandatory>
                        <many>true</many>
                    </source>
                    <target>
                        <class>cm:content</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>

            </associations>

            <mandatory-aspects>
                <aspect>cm:versionable</aspect>
            </mandatory-aspects>
        </type>
    </types>

    <aspects>
        <aspect name="lecm-signed-docflow:signable"/>
        <aspect name="lecm-signed-docflow:docflowable"/>

        <aspect name="lecm-signed-docflow:aspect-document-id">
            <properties>
                <property name="lecm-signed-docflow:document-id">
                    <title>Document ID</title>
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <default>true</default>
                </property>
            </properties>
        </aspect>

		<!-- аспект расширяющий lecm-orgstr:organization атрибутами для работы с ЭП  -->
		<aspect name="lecm-signed-docflow:organization-attrs-aspect">
			<properties>
				<!-- код спецоператора ЭДО, например 2АЕ - калуга астрал -->
				<property name="lecm-signed-docflow:operator-code">
					<type>d:text</type>
				</property>
				<!-- идентификатор партнерско системы, получаемый у unicloud -->
				<property name="lecm-signed-docflow:partner-key">
					<type>d:text</type>
				</property>
				<!-- внутренний, служебный идентификатор в сервисе unicloud -->
				<property name="lecm-signed-docflow:organization-id">
					<type>d:text</type>
				</property>
				<!-- ID организации в Астрале. Он глобальный с точки зрения ЭДО, содержится в документах. -->
				<property name="lecm-signed-docflow:organization-edo-id">
					<type>d:text</type>
				</property>
			</properties>
		</aspect>

		<!-- аспект расширяющий lecm-orgstr:personal-data атрибутами для работы с ЭП -->
		<aspect name="lecm-signed-docflow:personal-data-attrs-aspect">
			<properties>
				<!-- пользовательский токен авторизации в сервисе юниклауд, действует 15мин -->
				<property name="lecm-signed-docflow:auth-token">
					<type>d:text</type>
				</property>
				<!-- отпечаток сертификата, используемого для подписания -->
				<property name="lecm-signed-docflow:cert-thumbprint">
					<type>d:text</type>
				</property>
				<!-- способ аутентификации, с помощью локального сертификата, или через смс -->
				<property name="lecm-signed-docflow:auth-type">
					<type>d:text</type>
					<constraints>
						<constraint name="lecm-signed-docflow:auth-type-constraint" type="LIST">
							<parameter name="allowedValues">
								<list>
									<value>LOCAL_CERT</value> <!-- авторизация с локальным сертификатом -->
									<value>REMOTE_CERT</value> <!-- авторизация через смс -->
								</list>
							</parameter>
						</constraint>
					</constraints>
				</property>
			</properties>
		</aspect>
    </aspects>
</model>